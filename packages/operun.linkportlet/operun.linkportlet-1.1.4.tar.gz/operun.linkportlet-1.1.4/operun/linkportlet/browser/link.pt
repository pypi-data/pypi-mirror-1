<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                       templateId template/getId;">

        <div tal:replace="structure provider:plone.abovecontenttitle" />
        
        <h1>operun Link</h1>
        
        <table border="0">
            <tbody>
                <tr>
                    <td><strong>Title</strong></td>
                    <td>
                        <metal:field use-macro="python:here.widget('title', mode='view')">
			            Title
			            </metal:field>
			        </td>
                </tr>
                <tr>
                    <td><strong>Description</strong></td>
                    <td>
                        <metal:field use-macro="python:here.widget('description', mode='view')">
                        Description
                        </metal:field>
                    </td>
                </tr>
                <tr>
                    <td><strong>Link</strong></td>
                    <td>
                        <tal:internal condition="python:context.getLinkType() == 'internal'">
	                        <metal:field use-macro="python:here.widget('internalLink', mode='view')">
	                        Internal Link
	                        </metal:field>
	                    </tal:internal>
	                    <tal:external condition="python:context.getLinkType() != 'internal'">
	                        <metal:field use-macro="python:here.widget('externalLink', mode='view')">
	                        External Link
	                        </metal:field>
	                    </tal:external>
                    </td>
                </tr>
                <tr>
                    <td><strong>Link Target</strong></td>
                    <td>
                        <metal:field use-macro="python:here.widget('linkTarget', mode='view')">
                        Link Target
                        </metal:field>
                    </td>
                </tr>
            </tbody>
        </table>

        <div metal:use-macro="here/document_relateditems/macros/relatedItems">
            show related items if they exist
        </div>
    
        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>