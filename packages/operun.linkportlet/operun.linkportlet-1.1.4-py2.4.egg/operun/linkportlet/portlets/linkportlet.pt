<dl class="portlet portletOperunLinkPortlet"
    i18n:domain="operun.portlet.linkportlet"
    tal:define="portal_url context/@@plone_portal_state/portal_url;">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:content="view/portletTitle">
           Header
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <tal:links repeat="link view/getLinks">
	    <dd tal:define="oddrow repeat/link/odd;"
	        tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">
	        <img src="" alt="Link" tal:attributes="src string:${portal_url}/link_icon.gif" />
            <a href="" tal:attributes="href link/url;
                                       title link/desc;
                                       target link/target"
                tal:content="link/title"></a><br />
	    </dd>
    </tal:links>

</dl>