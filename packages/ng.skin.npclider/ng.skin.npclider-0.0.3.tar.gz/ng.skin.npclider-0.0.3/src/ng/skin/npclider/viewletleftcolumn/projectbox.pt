<script language="JavaScript">

function scrollUp() {
    var prj = document.getElementById('projects');
    prj.scrollTop = prj.scrollTop + 1;
}

function scrollDown() {
    var prj = document.getElementById('projects');
    prj.scrollTop = prj.scrollTop - 1;
}

</script>

<div id="projectblock">
  <img src="images/projectblocktop.gif" alt=""
      tal:attributes="src context/++resource++images/projectblocktop.gif"
      onmouseover="t=setInterval('scrollUp()', 30);"
      onmouseout="clearInterval(t)"
      />
    <div id="projects">
      <a href=""
          tal:repeat="item view/values"
          tal:attributes="href item/@@absolute_url;
                          title item/title">
        <img src="" alt="" class="projectimage"
            tal:attributes="src item/++attribute++logo/@@smartimagecontainer/small/url"
        />
      </a>
    </div>
  <img src="images/projectblockbottom.gif" alt=""
      tal:attributes="src context/++resource++images/projectblockbottom.gif"
      onmouseover="t=setInterval('scrollDown()', 30);"
      onmouseout="clearInterval(t)"
      />
</div>
