<html>

  <head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8"
      tal:define="charset context/management_page_charset | string:utf-8;"
      tal:attributes="content string:text/html;;charset=$charset;"/>

    <title>Add LDAP Connection</title>

    <link rel="stylesheet" type="text/css" href="/manage_page_style.css"/>

  </head>

  <body bgcolor="#ffffff" link="#000099" alink="#000099" vlink="#000099">

    <h1 class="form-title">
      Add LDAP Connection
    </h1>

    <div class="form-help">
      Add a new LDAP connection manager.
    </div>

    <form action="manage_addLDAPConnection" method="post">

      <table>

        <tr>
          <td>
            <label class="form-label" for="id">
              Id:
            </label>
          </td>
          <td>
            <input type="text" name="id" id="id" size="40" />
          </td>
        </tr>

        <tr>
          <td>
            <label class="form-label" for="title">
              Title:
            </label>
          </td>
          <td>
            <input type="text" id="title" name="title" size="40" />
          </td>
        <tr/>

        <tr>
          <td>
            <label class="form-label" for="url">
              URL:
            </label>
          </td>
          <td>
            <input type="text" id="url" name="url" size="40" />
          </td>
        <tr/>

        <tr>
          <td>
            <label class="form-label" for="base_dn">
              Base DN:
            </label>
          </td>
          <td>
            <input type="text" id="base_dn" name="base_dn" size="40" />
          </td>
        </tr>

        <tr>
          <td>
            <label class="form-label" for="bind_dn">
              Bind DN:
            </label>
          </td> 
          <td>
            <input type="text" id="bind_dn" name="bind_dn" size="40" />
          </td>
        <tr/>

        <tr>
          <td>
            <label class="form-label" for="bind_pwd">
              Bind password:
            </label>
          </td>
          <td>
            <input type="password" id="bind_pwd" name="bind_pwd" size="40" />
          </td>
        </tr>

        <tr>
          <td>
            <label class="form-label" for="read_only">
              Read only:
            </label>
          </td>
          <td>
            <input type="checkbox" id="read_only" name="read_only"/>
          </td>
        </tr>

        <tr>
          <td>
            <label class="form-label" for="network_timeout">
              Network timeout:
            </label>
          </td> 
          <td>
            <input type="text" id="network_timeout" name="" size="40"/>
          </td>
        <tr/>

        <tr>
          <td>
            <label class="form-label" for="op_timeout">
              Operation timeout:
            </label>
          </td> 
          <td>
            <input type="text" id="op_timeout" name="op_timeout" size="40"/>
          </td>
        <tr/>

      <tr>
        <td>
          <input class="form-element" type="submit" name="submit"
            value="Add LDAP Connection" />
        </td>
        <td></td>
      </tr>

    </form>

  </body>

</html>
