<?xml version="1.0"?>

<device>
    <make>Generic</make>
    <model>DVD Player</model>
    <description>DivX or MPEG2 for DVD players</description>
    <author>
        <name>Daniel G. Taylor</name>
        <email>dan@programmer-art.org</email>
    </author>
    <version>1.0</version>
    <icon>file://dvd.svg</icon>
    <default>DivX Home Theater</default>
    
    <preset>
        <name>PAL DVD</name>
        <container>ffmux_dvd</container>
        <extension>mpg</extension>
        <audio>
            <name>lame</name>
            <passes>
                <pass>bitrate=128</pass>
            </passes>
            <channels>1, 2</channels>
        </audio>
        <video>
            <name>mpeg2enc</name>
            <passes>
                <pass>format=9 bitrate=4000</pass>
            </passes> 
            <width>16, 4096</width>
            <height>16, 4096</height>
            <rate>25</rate>
        </video>
    </preset>
    <preset>
        <name>NTSC DVD</name>
        <container>ffmux_dvd</container>
        <extension>mpg</extension>
        <audio>
            <name>lame</name>
            <passes>
                <pass>bitrate=128</pass>
            </passes>
            <channels>1, 2</channels>
        </audio>
        <video>
            <name>mpeg2enc</name>
            <passes>
                <pass>format=9 bitrate=4000</pass>
            </passes> 
            <width>16, 4096</width>
            <height>16, 4096</height>
            <rate>24</rate>
        </video>
    </preset>
    <preset>
        <name>DivX Home Theater</name>
        <container>avimux</container>
        <extension>avi</extension>
        <audio>
            <name>lame</name>
            <passes>
                <pass>bitrate=160</pass>
            </passes>
            <channels>1, 2</channels>
        </audio>
        <video>
            <name>xvidenc</name>
            <passes>
                <pass>pass=quant quantizer=5 max-bframes=0 trellis=true</pass>
            </passes>
            <width>320, 720</width>
            <height>240, 480</height>
            <rate>1, 30</rate>
        </video>
    </preset>
</device>

