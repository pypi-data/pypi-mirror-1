<dl class="portlet portletAccuWeather"
    tal:define="portal_state context/@@plone_portal_state;
                root_url portal_state/navigation_root_url"
    i18n:domain="collective.portlet.accuweather">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        Current weather
        <span class="portletTopRight"></span>
    </dt>

    <tal:entry tal:repeat="entry view/entries">
        <dd class="portletItem"
            tal:define="oddrow repeat/entry/odd"
            tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd';
                            id entry/id">
            <img class="weather-icon"  
                tal:attributes="src string:${root_url}/++resource++collective.portlet.accuweather.icons/${entry/icon_number}.png;
                                alt entry/current;
                                title entry/current"
                />
            <span class="weather-city"
                tal:content="entry/city"
                />
            <span class="weather-temperature"
                tal:content="entry/temp"
                />
        </dd>
    </tal:entry>


</dl>
