<configure
    xmlns="http://namespaces.zope.org/browser">

  <!--
    Author: Andrey Orlov, 2008
    $Id: configure.zcml 49689 2008-01-23 14:39:53Z cray $ 
  -->

<multiform
    label="Edit"
    name="commonedit.html"
    permission="zope.View"
    layer="...interfaces.NeuralSkin"
    for="*"
    manager=".interfaces.IEditletManager"
    />

  <multiformitem
    name="abstract"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.article.interfaces.IDocShortLogo"
    layer="...interfaces.NeuralSkin"
    order="1"
    /> 

  <multiformitem
    name="abstract"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.article.interfaces.IDocShort"
    layer="...interfaces.NeuralSkin"
    order="1"
    /> 

  <multiformitem
    name="body"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.article.interfaces.IDocBody"
    layer="...interfaces.NeuralSkin"
    order="2"
    /> 

  <multiformitem
    name="body"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.remotearticle.remotearticle.interfaces.IRemoteBody"
    layer="...interfaces.NeuralSkin"
    order="2"
    >
    <widget field="body" class="ng.app.converter.propertysheetwidget.propertysheetwidget.PropertySheetDisplayWidget"/>        
    <widget field="body.body" class="ng.app.converter.propertysheetwidget.propertysheetwidget.PropertySheetDisplayWidget"/>        

   </multiformitem> 

  <multiformitem
    name="eventannotation"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.annotation.eventannotation.interfaces.IEventAnnotation"
    for="ng.content.annotation.eventannotation.interfaces.IEventAnnotationAble"
    layer="...interfaces.NeuralSkin"
    order="3"
    /> 

  <multiformitem
    name="dictannotation"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.annotation.dictannotation.interfaces.IDictAnnotation"
    for="ng.content.annotation.dictannotation.interfaces.IDictAnnotationAble"
    layer="...interfaces.NeuralSkin"
    order="3"
    /> 

  <multiformitem
    name="connection"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.app.remotefs.interfaces.IRemoteObject"
    layer="...interfaces.NeuralSkin"
    order="4"
    /> 
 
  <multiformitem
    name="annotationswitcher"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.annotation.annotationswitcher.interfaces.IAnnotationSwitcher"
    layer="...interfaces.NeuralSkin"
    order="10"
    /> 
                
</configure>
