<!-- This is searchpage template page: $Id: $ -->
<html metal:use-macro="views/standard_macros/view">
<title> Search result </title>
 <body metal:fill-slot="body">
    <table cellspacing="0" cellpadding="3" bgcolor="#CCDDFF" width="100%" border="1" bordercolor="black" bordercolordark="#CCDDFF">
      <tr><td colspan="2"> 
				<table cellspacing="0" cellpadding="0" border="0" width="100%">
					<tr>
						<td bgcolor="white"><p class="docttl" style="padding:5;"
						><tal:block condition="python:'common' in request.form">
						     Запрос:&nbsp;&nbsp;<tal:block content="request/form/common"/>&nbsp;в&nbsp;<tal:block content="context/++nsinterface++ng.adapter.path.interfaces.IPath/titledpath"/>,&nbsp;<a
						      tal:attributes="href python:path('context/@@root/root/@@absolute_url') +'/@@searchpage.html?' + path('context/@@requestext/query')"
						      >искать от корня</a
						></tal:block>
						<tal:block condition="python:'common' not in request.form">
						     Wiki:&nbsp;&nbsp;<tal:block content="view/nextkeyword"/>
						</tal:block></p>
						</td>
					</tr>
				</table>
      </td></tr>
    
    </table>
		<hr width="90%" noshade size="2" color="black" style="margin-top:15;margin-bottom:15;">

    <tal:block define="pager view/pager/@@pager">
      <tal:block define="q python:pager.setPagerParameters(context=context)"/>

      <tal:block condition="python:pager.len>0"> 
        <table cellspacing="0" cellpadding="3" bgcolor="#CCDDFF" width="100%" border="1" bordercolor="black" bordercolordark="#CCDDFF">
          <tr><td>
            <p class="docttl">Результаты поиска
          </td></tr>

          <tr tal:condition="pager/have_before"><td align="left">
              <a href="" tal:attributes="href pager/beforeURL"> &lt;&lt;&lt;&lt;&lt;&lt;</a>
            <tal:block repeat="item python:zip(range(1,10),pager.beforeURLs)">
              [<a href="" tal:attributes="href python:item[1]" tal:content="python:item[0]"/>]
            </tal:block>			    
          </td></tr>
			
          <div tal:repeat="item pager/chunk">
            <tal:block tal:on-error="structure python:'<tr><td>'+item.__name__+'</td></tr>'" tal:content="structure item/@@short"/>
          </div>

          <tr tal:condition="pager/have_after"><td align="right">
            <tal:block repeat="item python:zip(range(1,10),pager.afterURLs)">
              [<a href="" tal:attributes="href python:item[1]" tal:content="python:item[0]"/>]
            </tal:block>			    
              <a href="" tal:attributes="href pager/afterURL">  &gt;&gt;&gt;&gt;&gt; </a>
          </td></tr>

        </table>
      </tal:block>  

      <tal:block tal:condition="python:pager.len==0"> 
        <table cellspacing="0" cellpadding="3" bgcolor="#CCDDFF" width="100%" border="1" bordercolor="black" bordercolordark="#CCDDFF">
          <tr><td>
            <p class="docttl" color=red>Ничего не найдено по вашему запросу</p>
            <p>Искать на Google:   
            <form action="http://www.google.com/search"><input type="submit" value="Google"/>
            <input type="hidden" name="q" tal:attributes="value view/nextkeyword"></form> </p>
            <p>Искать на Wikipedia:
            <form action="http://ru.wikipedia.org/wiki/Special:Search"><input type="submit" value="Wikipedia"/><input type="hidden" name="search" tal:attributes="value view/nextkeyword"></form>
            </p>
          </td></tr>
        </table>
      </tal:block>       
    </tal:block> 
</body>
</html>
