from tw.api import Widget, JSLink, CSSLink, JSSource, js_function

__all__ = ["Map"]

# declare your static resources here

## JS dependencies can be listed at 'javascript' so they'll get included
## before
ol_js = JSLink(modname=__name__, 
                filename='static/OpenLayers.js', javascript=[])

# my_css = CSSLink(modname=__name__, filename='static/openlayers.css')

class Map(Widget):
    template = """<div id="map"></div>"""
    #params = ["id", "layer_name", "layer_url"]
    ## You can also define the template in a separate package and refer to it
    ## using Buffet style uris
    #template = "tw.openlayers.templates.openlayers"
    src = """
        var map = null;

        function showMap(options){

            map = new OpenLayers.Map(options.id);

            var ol_wms = new OpenLayers.Layer.WMS(
                options.layers[0].layer_name,
                options.layers[0].layer_url,
                options.layers[0].layer_opts
            );

            var jpl_wms = new OpenLayers.Layer.WMS(
                options.layers[1].layer_name,
                options.layers[1].layer_url,
                options.layers[1].layer_opts
            );

            var dm_wms = new OpenLayers.Layer.WMS(
                options.layers[2].layer_name,
                options.layers[2].layer_url,
                options.layers[2].layer_opts
            );

            map.addLayers([ol_wms, jpl_wms, dm_wms]);
            map.addControl(new OpenLayers.Control.LayerSwitcher());
            map.zoomToMaxExtent();
        }
    """
    map_js = JSSource(src=src)
    include_dynamic_js_calls = True

    javascript = [ol_js, map_js]
    #css = [my_css]

    def __init__(self, id=None, parent=None, children=[], **kw):
        """Initialize the widget here. The widget's initial state shall be
        determined solely by the arguments passed to this function; two
        widgets initialized with the same args. should behave in *exactly* the
        same way. You should *not* rely on any external source to determine
        initial state."""
        super(Map, self).__init__(id, parent, children, **kw)

    def update_params(self, d):
        """This method is called every time the widget is displayed. It's task
        is to prepare all variables that are sent to the template. Those
        variables can accessed as attributes of d."""
        super(Map, self).update_params(d)
        options = dict(id=d.id,
		       layers=self.layers)
        call = js_function('showMap')(options)
        self.add_call(call)
