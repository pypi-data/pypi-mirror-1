<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="collective.portlet.links">

    <five:registerPackage package="." initialize=".initialize" />
     
    <genericsetup:registerProfile
       name="default"
       title="Link Portlet"
       directory="profiles/default"
       description="a portlet showing Links as buttons"
       provides="Products.GenericSetup.interfaces.EXTENSION"
       />
 
     <!-- Register the portlet -->
     
     <!-- If the portlet has no configurable parameters, you can remove
          the EditForm declaration in linkportlet.py and delete
          the 'editview' attribute from this statement.
       -->

     <plone:portlet
         name="collective.portlet.links.LinkPortlet"
         interface=".linkportlet.ILinkPortlet"
         assignment=".linkportlet.Assignment"
         view_permission="zope2.View"
         edit_permission="cmf.ManagePortal"
         renderer=".linkportlet.Renderer"
         addview=".linkportlet.AddForm"
         editview=".linkportlet.EditForm"
         />
     <include package=".browser"/>
     
</configure>
