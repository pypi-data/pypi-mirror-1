#! /usr/bin/env python

import sys
import os
from os.path import abspath, dirname
pythondir=dirname(dirname(dirname(dirname(abspath(__file__)))))+os.sep+"python"
import site
site.addsitedir(pythondir)
sys.path.insert(0, dirname(dirname(abspath(__file__))))
sys.path.append(".")

from pyutilib_th.runtests import main

package="pyutilib"
subpackages = ['util', 'plugin']
filter = ['pyutilib.tpl', 'pyutilib._exceptions', 'pyutilib_th']
testdir = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))

main(sys.argv, package, subpackages, filter, testdir)

