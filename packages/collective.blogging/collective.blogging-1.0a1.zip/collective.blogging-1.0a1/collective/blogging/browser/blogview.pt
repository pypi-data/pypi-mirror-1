<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    lang="en"
    metal:use-macro="here/main_template/macros/master"
    i18n:domain="collective.blogging">
    <body>

        <div metal:fill-slot="main">
            <metal:body define-macro="body_macro"
                tal:define="kssClassesView context/@@kss_field_decorator_view;
                            getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                            templateId template/getId;
                            contents view/contents;
                            hiddableStyle python:contents and 'visibility:hidden;;height:1px;;padding:0;;' or None;
                            url_quote nocall:modules/Products.PythonScripts.standard/url_quote;
                            portal_discussion nocall:context/portal_discussion;
                            isDiscussionAllowedFor nocall:portal_discussion/isDiscussionAllowedFor;
                            getDiscussionFor nocall:portal_discussion/getDiscussionFor;">

                <div tal:replace="structure provider:plone.abovecontenttitle" />

                <h1 class="documentFirstHeading"
                    tal:attributes="style hiddableStyle"> 
                    <metal:field use-macro="python:here.widget('title', mode='view')">
                        Title
                    </metal:field>
                </h1>

                <tal:block condition="not:contents">
                    <div tal:replace="structure provider:plone.belowcontenttitle" />
                </tal:block>
                
                <p class="documentDescription"
                    tal:attributes="style hiddableStyle">
                    <metal:field use-macro="python:here.widget('description', mode='view')">
                        Description
                    </metal:field>
                </p>
                
                <dl id="blog-filter" class="collapsible inline collapsedOnLoad"
                    tal:define="filter_info view/filter_info">
                    
                    <dt class="collapsibleHeader" i18n:translate="label_filter_posts">Filter posts</dt>
                    <dd class="collapsibleContent">
                        <form id="filter-blog-form" name="filterBlogForm"
                            method="POST" action=""
                            tal:attributes="action context/absolute_url">

                            <tal:options repeat="criteria filter_info">
                                <select id="" name=""
                                    tal:attributes="id string:filter-blog-${criteria/id};
                                                    name criteria/id">
                                    <option value="" tal:content="criteria/title">Title</option>
                                    <tal:block tal:repeat="item criteria/options">
                                        <option
                                            tal:content="python:str(item)[:30]"
                                            tal:define="quotedItem python:url_quote(item)"
                                            tal:attributes="value item;
                                                            selected python:item == criteria['selected'] or None">
                                            Option
                                        </option>
                                    </tal:block>
                                </select>
                                <tal:separator condition="not:repeat/criteria/end"> | </tal:separator>
                            </tal:options>

                            <input type="submit" name="collective.blog.filter"
                                value="Filter" class="standalone"
                                i18n:attributes="value label_filter"/>
                        </form>
                    </dd>
                </dl>
                
                <tal:block condition="not:contents">
                    <div tal:replace="structure provider:plone.abovecontentbody" />
                </tal:block>
                
                <div metal:define-macro="text-field-view"
                    id="parent-fieldname-text" class="stx"
                    tal:define="kss_class python:getKssClasses('text',
                                templateId=templateId, macro='text-field-view');
                                text here/getText|nothing"
                    tal:condition="python:text and not contents"
                    tal:attributes="class python:context.Format() in ('text/structured',
                                    'text/x-rst', ) and 'stx' + kss_class or 'plain' + kss_class">
                    <div metal:define-slot="inside" tal:replace="structure text">The body</div>
                </div>
                
                <tal:contents define="batch contents">

                    <tal:listing condition="contents">
                        <tal:foldercontents define="show_about view/show_about;">
                            <tal:entries tal:repeat="item contents">
                                <tal:block tal:define="item_id item/getId;
                                                       item_url item/getURL;
                                                       item_title_or_id item/pretty_title_or_id;
                                                       item_description item/Description;
                                                       item_type item/portal_type;
                                                       item_type_title item/Type;
                                                       item_date python:toLocalizedTime(item.Date,long_format=1);
                                                       item_type_class python:'contenttype-' + normalizeString(item_type);
                                                       item_wf_state item/review_state;
                                                       item_wf_state_class python:'state-' + normalizeString(item_wf_state);
                                                       item_creator item/Creator;
                                                       item_start item/start/ISO;
                                                       item_end item/end/ISO;
                                                       item_categories item/Subject|nothing;
                                                       item_object item/getObject;
                                                       talkback python:isDiscussionAllowedFor(item_object) and getDiscussionFor(item_object);
                                                       reply_count python:talkback is not False and talkback.replyCount(item_object);
                                                       item_text item_object/getText|nothing;
                                                       item_is_link python:view.is_link(item_object);
                                                       item_is_file python:view.is_file(item_object);
                                                       item_is_image python:view.is_image(item_object);
                                                       item_is_newsitem python:view.is_newsitem(item_object)">

                                    <div class="blogListingEntry">
                                        <a name="" tal:attributes="name item_id"></a>
                                        <h2>
                                            <a href="#" class="summary url"
                                               tal:attributes="href item_url"
                                               tal:content="item_title_or_id">
                                               Item Title
                                            </a>
                                        </h2>
                                        
                                        <div class="newsImageContainer" tal:condition="item_is_newsitem">
                                            <tal:block condition="item_object/image_mini|nothing">
                                                
                                                <p>
                                                    <img src="" rel="" width=""
                                                        tal:attributes="src string:${item_url}/image_mini;
                                                                        rel string:#fancy_${item_object/UID}" />
                                                    <br/>
                                                    <span class="discreet" tal:content="item_object/imageCaption">
                                                        Caption
                                                    </span>
                                                </p>
                                                                                                
                                                <div class="fancybox visualNoPrint" tal:attributes="id string:fancy_${item_object/UID}"> 
                                                    <div class="close"/>

                                                    <!-- large image --> 
                                                    <img src=""
                                                        tal:attributes="src string:${item_url}/image_large" /> 

                                                    <!-- image details --> 
                                                    <div class="fancydetails"> 
                                                        <h3 tal:content="item_object/imageCaption">Caption</h3>

                                                        <p tal:content="item_description">Description</p> 

                                                    </div> 
                                                </div>
                                                
                                            </tal:block>
                                        </div>

                                        <div class="documentByLine" tal:condition="python: site_properties.allowAnonymousViewAbout or not isAnon">
                                            <tal:name tal:condition="item_creator"
                                                tal:define="author python:view.tools.membership().getMemberInfo(item_creator)">
                                                <span i18n:translate="label_posted_by">
                                                    Posted by
                                                    <a href="#"
                                                        tal:attributes="href string:${view/portal_state/navigation_root_url}/author/${item_creator}"
                                                        tal:content="python:author and author['fullname'] or item_creator"
                                                        tal:omit-tag="not:author"
                                                        i18n:name="author">
                                                        Bob Dobalina
                                                    </a>
                                                </span>
                                            </tal:name>

                                            <tal:block condition="item_categories">
                                                |
                                                <tal:filedunder i18n:translate="label_filed_under">filed under:</tal:filedunder>
                                                <span tal:repeat="category item_categories">
                                                    <a href=""
                                                        class="link-category"
                                                        rel="tag"
                                                        tal:content="category"
                                                        tal:define="quotedCat python:url_quote(category)"
                                                        tal:attributes="href string:${context/absolute_url}?Subject%3Alist=${quotedCat}">
                                                        Category
                                                    </a><tal:separator condition="not: repeat/category/end">,</tal:separator>
                                                </span>
                                            </tal:block>
                                        </div>

                                        <div class="tileDesc" tal:condition="item_description">
                                            <p class="description" tal:content="item_description">
                                                description
                                            </p>
                                        </div>
                                        
                                        <div class="tileBody">
                                            <tal:body tal:condition="item_text" replace="structure item_text">
                                                Text
                                            </tal:body>
                                        
                                            <tal:link condition="item_is_link" i18n:domain="plone">
                                                <p>
                                                    <span i18n:translate="link_address">The link address is:</span>
                                                    <a href="#" tal:attributes="href item_object/remote_url"
                                                                tal:content="item_object/remote_url">remote url</a>
                                                </p>

                                                <p tal:define="embed_code python:view.embed_code(item_object)"
                                                    tal:condition="embed_code">
                                                    <tal:block replace="structure embed_code"/>
                                                </p>
                                            </tal:link>
                                        
                                            <tal:file condition="item_is_file" i18n:domain="plone">
                                                <p>
                                                    <span tal:define="finfo python:view.file_info(item_object)">
                                                        <a href=""
                                                            tal:attributes="href string:${item_url}/at_download/file">
                                                            <img src=""
                                                                tal:condition="finfo/icon"
                                                                tal:attributes="src string:${item_url}/${finfo/icon}"/>
                                                            <tal:filename replace="finfo/filename|string:file"/>
                                                        </a>
                                                        <span class="discreet">
                                                            &mdash;
                                                            <span tal:replace="finfo/content_type"/>
                                                            <tal:size content="finfo/size"/>
                                                        </span>
                                                    </span>
                                                </p>

                                                <div tal:define="content_type item_object/get_content_type|item_object/Format;"
                                                    tal:condition="python: content_type.startswith('text')">
                                                    <h2 i18n:translate="heading_file_contents">File contents</h2>
                                                    <pre tal:content="item_object/get_data|item_object/data|nothing">
                                                    </pre>
                                                </div>
                                            </tal:file>
                                        
                                            <tal:image condition="item_is_image">
                                                <tal:block define="image_size python:view.image_size(item_object)"
                                                    tal:condition="image_size">
                                                    
                                                    <p>
                                                        <img src="" rel="" width=""
                                                            tal:attributes="src string:${item_url}/image_preview;
                                                                            rel string:#fancy_${item_object/UID}" />
                                                    </p>

                                                    <div class="fancybox visualNoPrint" tal:attributes="id string:fancy_${item_object/UID}"> 
                                                        <div class="close"/>

                                                        <!-- large image --> 
                                                        <img src=""
                                                            tal:attributes="src string:${item_url}/image_large" /> 

                                                        <!-- image details --> 
                                                        <div class="fancydetails"> 
                                                            <h3 tal:content="item_title_or_id">Title</h3>

                                                            <p tal:content="item_description">Description</p> 

                                                        </div> 
                                                    </div>
                                                </tal:block>
                                            </tal:image>
                                        </div>
                                        <div class="visualClear"><!-- --></div>
                                        
                                        <p class="tileFooter">
                                            <a href="" title="Permalink"
                                                class="actionPermalink"
                                                tal:attributes="href item_url"
                                                i18n:attributes="title label_permalink"
                                                i18n:translate="label_permalink">
                                                Permalink
                                            </a>
                                            <tal:block tal:condition="talkback">
                                                |
                                                <a title="Read comments on this entry."
                                                    class="actionComments"
                                                    tal:attributes="href string:${item_url}#comments"
                                                    i18n:translate="label_comments_with_count"
                                                    i18n:attributes="title label_read_comments_title"
                                                    >Comments
                                                    (<tal:count i18n:name="comments"
                                                        tal:content="python:reply_count or 0">
                                                        99
                                                    </tal:count>)
                                                </a>
                                            </tal:block>
                                            <tal:block tal:condition="python:item_date and item_date != None">
                                                |
                                                <span class="actionDate" tal:content="item_date">
                                                    August 16, 2001 at 23:35:59
                                                </span>
                                            </tal:block>
                                        </p>
                                        
                                    </div>
                                </tal:block>
                            </tal:entries>

                            <!-- Navigation -->
                            <tal:navigation define="batch_base_url context/absolute_url">
                                <div metal:use-macro="here/batch_macros/macros/navigation" />
                            </tal:navigation>

                        </tal:foldercontents>
                    </tal:listing>
                    
                    <p class="discreet"
                        tal:condition="not:contents"
                        i18n:translate="description_no_items_in_blog">
                        There are currently no contents in this blog.
                    </p>

                </tal:contents>
            </metal:body>
            
            <div tal:replace="structure provider:plone.belowcontentbody" />
        
        </div>
    </body>
</html>
