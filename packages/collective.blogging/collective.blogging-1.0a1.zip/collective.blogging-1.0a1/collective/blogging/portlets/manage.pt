<dl class="portlet manageBlogPortlet"
    i18n:domain="collective.blogging"
    tal:define="blog_url view/blog_url">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <a tal:attributes="href blog_url">
            <span tal:content="view/header" />
        </a>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd"
        tal:define="addable_types view/addable_types">
        <div class="discreet" i18n:translate="label_add_new_content">Add new content:</div>

        <!-- Page -->
        <tal:page condition="python:'Document' in addable_types">
            <a href="" title="Add a page article"
                i18n:attributes="title"
                tal:attributes="href string:${blog_url}/createObject?type_name=Document">
                <img tal:replace="structure context/document_icon.gif"/>
                <span tal:omit-tag="" i18n:translate="label_page">Page</span>
            </a><br/>
        </tal:page>
        
        <!-- News Item -->
        <tal:newsitem condition="python:'News Item' in addable_types">
            <a href="" title="Add a news item article (with title image)"
                i18n:attributes="title"
                tal:attributes="href string:${blog_url}/createObject?type_name=News+Item">
                <img tal:replace="structure context/newsitem_icon.gif"/>
                <span tal:omit-tag="" i18n:translate="label_news_item">News Item</span>
            </a><br/>
        </tal:newsitem>
        
        <!-- Link -->
        <tal:link condition="python:'Link' in addable_types">
            <a href="" title="Add a link or external content"
                i18n:attributes="title"
                tal:attributes="href string:${blog_url}/createObject?type_name=Link">
                <img tal:replace="structure context/link_icon.gif"/>
                <span tal:omit-tag="" i18n:translate="label_link_or_video">Link or Video</span>
            </a><br/>
        </tal:link>
        
        <!-- Image -->
        <tal:image condition="python:'Image' in addable_types">
            <a href="" title="Add an image item"
                i18n:attributes="title"
                tal:attributes="href string:${blog_url}/createObject?type_name=Image">
                <img tal:replace="structure context/image_icon.gif"/>
                <span tal:omit-tag="" i18n:translate="label_image">Image</span>
            </a><br/>
        </tal:image>
        
        <!-- File -->
        <tal:file condition="python:'File' in addable_types">
            <a href="" title="Add a file item"
                tal:condition="python:'File' in addable_types"
                i18n:attributes="title"
                tal:attributes="href string:${blog_url}/createObject?type_name=File">
                <img tal:replace="structure context/file_icon.gif"/>
                <span tal:omit-tag="" i18n:translate="label_file">File</span>
            </a><br/>
        </tal:file>
    </dd>
    
    <dd class="portletItem even">
        <a href="" title="User's help and documentation"
            tal:attributes="href string:${view/portal_url}/blogging-help">
            <img tal:replace="structure context/info_icon.gif"/>
            <span tal:omit-tag="" i18n:translate="label_help">Help</span>
        </a><br/>
    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <a tal:attributes="href blog_url"
            i18n:translate="label_go_to_blog">
            Go to blog&hellip;
        </a>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
