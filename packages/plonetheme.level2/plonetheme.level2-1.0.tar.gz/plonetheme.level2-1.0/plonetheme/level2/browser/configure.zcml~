<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="plonetheme.level2">

    <!-- 'level2' Zope 3 browser layer -->
    <interface
        interface=".interfaces.IThemeSpecific"
        type="zope.publisher.interfaces.browser.IBrowserSkinType"
        name="level2"
        />

    <!-- Viewlets registration -->
	<browser:viewlet
		for="*"
		manager="plone.app.layout.viewlets.interfaces.IAboveContent"
		name="borderAboveContent"
		template="borderAboveContent.pt"
		permission="zope.Public"
	/>

	<browser:viewlet
		for="*"
		manager="plone.app.layout.viewlets.interfaces.IBelowContent"
		name="borderBelowContent"
		template="borderBelowContent.pt"
		permission="zope.Public"
	/>



    <!-- Zope 3 browser resources -->

    <!-- Resource directory for images -->
    <browser:resourceDirectory
        name="plonetheme.level2.images"
        directory="images"
        layer=".interfaces.IThemeSpecific"
        />

    <!-- Resource directory for stylesheets -->
    <browser:resourceDirectory
        name="plonetheme.level2.stylesheets"
        directory="stylesheets"
        layer=".interfaces.IThemeSpecific"
        />

</configure>
