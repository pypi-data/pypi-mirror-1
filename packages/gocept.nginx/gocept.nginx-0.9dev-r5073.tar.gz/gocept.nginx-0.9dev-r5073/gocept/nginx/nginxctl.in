#!/bin/sh
ARGV="$@"
NGINX='%(location)s/sbin/nginx'
PIDFILE='%(location)s/logs/nginx.pid'

ERROR=0
if [ "x$ARGV" = "x" ] ; then 
    ARGV="-h"
fi

case $ARGV in
start)
    echo "Starting nginx "
    $NGINX
    error=$?
    ;;
stop)
    echo "Stopping nginx "
    kill `cat $PIDFILE`
    error=$?
    ;;
reload)
    echo "Reloading nginx "
    kill -HUP `cat $PIDFILE`
    error=$?
    ;;
configtest)
    echo "Testing nginx configuration "
    $NGINX -t
    ERROR=$?
    ;;
esac

exit $ERROR
