<dl class="portlet portletImagePortlet"
    i18n:domain="ely.portlets.image">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span class="img-title"
           tal:content="view/data/title">
           Header
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
      <tal:image tal:condition="view/image_tag">
        <a href="" tal:omit-tag="not: view/link_url"
           tal:attributes="href view/link_url">
          <img tal:replace="structure view/image_tag"/>
        </a>
      </tal:image>
    </dd>

    <dd class="portletFooter">
        <span class="portletBotomLeft"></span>
        <span class="img-caption"
              tal:content="view/data/caption">
           Footer
        </span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
