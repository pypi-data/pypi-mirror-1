<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>
    <div metal:fill-slot="main"
       tal:define="lt python:chr(60);
                   gt python:chr(62)">
        <div metal:use-macro="here/document_actions/macros/document_actions"/>
        <h1 tal:content="object_title" class="documentFirstHeading"/>
        <div metal:use-macro="here/document_byline/macros/byline"/>
        <p class="documentDescription"
           tal:content="here/Description"
           tal:condition="here/Description"/>

        <div id="container">
           <a href="http://www.macromedia.com/go/getflashplayer"
              i18n:translate="get_flash_player_link">Get the Flash Player to see this movie</a>.
        </div>

        <script type="text/javascript" src="swfobject.js"></script>
        <tal:block replace="structure string:${lt}script type='text/javascript'${gt}"/>
        <tal:block define="width     python:here.getMovieWidth();
                           height    python:here.getMovieHeight();
                           config    here/getConfigString;">

          var fo = new SWFObject("FlowPlayerDark.swf",
                                 "mediaplayer",
                                 <tal:block replace="python: test(width>320,'\'%d\''%(width),'320')"/>,
                                 <tal:block replace="python: test(height>240,'\'%d\''%(height),'240')"/>,
                                 "7");
          fo.addParam("allowFullScreen", "true");
          fo.addParam("allowScriptAccess", "always");
          fo.addVariable("config",<tal:block replace="python:'%s%s%s'%(chr(34),config,chr(34))"/>);
          setTimeout("fo.write('container');",1);
        </tal:block>
        <tal:block replace="structure string:${lt}/script${gt}"/>

        <div metal:use-macro="here/document_relateditems/macros/relatedItems"/>
        <tal:comment replace="nothing">
        Removing link below will break GPL license for FlowPlayer
        </tal:comment>
        <div class="discreet" style="text-align: right">
          Powered by <a href="http://flowplayer.org">FlowPlayer</a>
        </div>
    </div>

</body>
</html>