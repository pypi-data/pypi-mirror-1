<?xml version="1.0"?>
<object name="Flash Video Playlist"
   meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <property name="title">Flash Video Playlist</property>
  <property name="description">Playlist allows viewing multiple Flash videos in a row.</property>
  <property name="content_icon">flashvideoplaylist_icon.gif</property>
  <property name="content_meta_type">FlashVideoPlaylist</property>
  <property name="product">FlashVideo</property>
  <property name="factory">addFlashVideoPlaylist</property>
  <property name="immediate_view">flashvideoplaylist_view</property>
  <property name="global_allow">True</property>
  <property name="filter_content_types">False</property>
  <property name="allowed_content_types"/>
  <property name="allow_discussion">False</property>
  <property name="default_view">flashvideoplaylist_view</property>
  <property name="view_methods">
   <element value="flashvideoplaylist_view"/>
  </property>

  <alias from="(Default)" to="(dynamic view)"/>
  <alias from="edit" to="atct_edit"/>
  <alias from="index.html" to="(dynamic view)"/>
  <alias from="properties" to="base_metadata"/>
  <alias from="sharing" to="folder_localrole_form"/>
  <alias from="view" to="(selected layout)"/>
  
  <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/view" visible="True">
    <permission value="View"/>
  </action>
  <action title="Play" action_id="play" category="object" condition_expr=""
    url_expr="string:${object_url}/flashvideoplaylist_play" visible="True">
    <permission value="Modify portal content"/>
  </action>
  <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
    <permission value="Modify portal content"/>
  </action>
  <action title="Properties" action_id="metadata" category="object"
    condition_expr="" url_expr="string:${object_url}/properties"
    visible="True">
    <permission value="Modify portal content"/>
  </action>
  <action title="Sharing" action_id="local_roles" category="object"
    condition_expr="" url_expr="string:${object_url}/sharing" visible="True">
    <permission value="Manage properties"/>
  </action>

</object>
