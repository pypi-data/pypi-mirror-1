<metal:page use-macro="context/@@manage-platecom-settings-template/macros/admin"
	    i18n:domain="platecom">
  <metal:block fill-slot="up_to_parent">
	    <a href=""
	       class="link-parent"
	       tal:attributes="href string: $portal_url/plone_control_panel"
	       i18n:translate="label_up_to_plone_setup"
	       i18n:domain="plone">
              Up to Site Setup
	    </a>
  </metal:block>
  <metal:block fill-slot="admin_content">

	    <p>
	      <span i18n:translate="description_platecom_setup_documentation">
	      	Documentation on platecom can be found at
	      	<span i18n:name="label_plone_documentation">
	      		<a href="http://www.platecom.com">
	      			http://www.platecom.com
	      		</a>
	      	</span>
	      .</span>
	      <span i18n:translate="description_platecom_setup_overview">
	      	Use the links below to configure platecom.
	      </span>
	    </p>
<div id="platecom-admin-column-1" style="width:20em; margin:0 .5em; float: left;">
    <h3 i18n:translate="heading_configure">Configure</h3>
        <ul>
            <li tal:repeat="aview
			    context/@@view_get_menu/icCommunity_settings">
	      <a href="" tal:attributes="href aview/action"
		         tal:content="aview/title" i18n:translate=""> label </a>
	    </li>
	</ul>
</div>


<div id="platecom-admin-column-2" style="width:20em; margin:0 1em; float: left; border:1px solid #BBB; padding: .5em; background:#EEE;">
    <h3 i18n:translate="heading_general_information">General Information</h3>
    <dl>
        <dt i18n:translate="label_platecom_version">platecom Version: </dt>
        <dd tal:content="view/getVersion"></dd>
    </dl>
</div>
<div style="clear:both;"></div>

  </metal:block>
</metal:page>

