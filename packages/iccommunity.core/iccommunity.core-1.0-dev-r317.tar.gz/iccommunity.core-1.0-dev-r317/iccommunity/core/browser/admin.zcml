<configure xmlns="http://namespaces.zope.org/zope"
                     xmlns:browser="http://namespaces.zope.org/browser"
                     xmlns:five="http://namespaces.zope.org/five"
                     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
                     i18n_domain='icCommunity'>

    <!-- Admin Menus -->
    <browser:menu
         id="platecom_admin"
         title="icCommunity Administration"
         />

    <browser:menu
         id="icCommunity_settings"
         title="Settings"
         />

    <browser:menu
         id="platecom_user_admin"
         title="icCommunity User Administration"
         />

    <browser:menu
         id="icCommunity_user_settings"
         title="User Settings"
         />

    <!-- Settings Master Template -->
    <browser:page
        for="*"
        name="manage-platecom-settings-template"
        template="templates/settings-template.pt"
        permission="cmf.ManagePortal"
        />

    <!-- Management UI Overview -->
    <browser:page
        for="..interfaces.IicCommunitySite"
        name="manage-iccommunity-overview"
        class=".admin.Overview"
        template="templates/admin-overview.pt"
        permission="cmf.ManagePortal"
        menu="platecom_admin"
        title="Settings"
        />

    <!-- User Overview -->
    <browser:page
        for="*"
        name="user-iccommunity-overview"
        class=".admin.UserOverview"
        template="templates/user-overview.pt"
        permission="cmf.ManagePortal"
        menu="platecom_user_admin"
        title="Settings"
        />

</configure>
