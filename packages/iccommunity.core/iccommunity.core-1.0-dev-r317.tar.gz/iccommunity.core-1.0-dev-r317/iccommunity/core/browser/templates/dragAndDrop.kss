.open-concept:click {
    action-server:		openConcept;
    openConcept-cid:	kssAttr("cid");
    openConcept-openedConcepts: currentFormVar(openedConcepts);
}
.saveConcepts:click {
    action-server:		saveConcepts;
    saveConcepts-conceptsRelations: currentFormVar(conceptsRelations)
}
select#pageRange:change {
    action-server:			viewPage;
    viewPage-pageRange:		currentFormVar(pageRange);
    viewPage-context:		currentFormVar(context);
    viewPage-term:			currentFormVar(term);
    viewPage-search:		currentFormVar(search);
    viewPage-languages:		currentFormVar(languages);
    viewPage-format:		currentFormVar(format);
}
