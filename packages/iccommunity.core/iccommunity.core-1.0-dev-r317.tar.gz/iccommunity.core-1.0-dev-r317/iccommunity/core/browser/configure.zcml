<configure
    xmlns="http://namespaces.zope.org/zope"
	xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain='icCommunity'>

	<include file="admin.zcml" />

	<!-- Formlib Plone Goodness -->
	<browser:page
		for="*"
		name="iccommunity-form"
		template="templates/form.pt"
		permission="zope2.View"
		/>

	<browser:page
		for="*"
		name="iccommunity-user-form"
		template="templates/user-form.pt"
		permission="zope2.View"
		/>

	<browser:resourceDirectory
		name="iccommunity.core.images"
		directory="images"
		/>

</configure>
