                        <signal name="toggled" handler="on_autologin_radiobutton_toggled"/>
                      </object>
                      <packing>
                        <property name="expand">False</property>
                        <property name="fill">False</property>
                        <property name="position">0</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkComboBox" id="autologin_combobox">
                        <property name="visible">True</property>
                        <property name="model">userlist_ls</property>
                        <signal name="changed" handler="on_autologin_combobox_changed"/>
                        <child>
                          <object class="GtkCellRendererText" id="userlist_crt"/>
                          <attributes>
                            <attribute name="text">0</attribute>
                          </attributes>
                        </child>
                      </object>
                      <packing>
                        <property name="position">1</property>
                      </packing>
                    </child>
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="fill">False</property>
                    <property name="position">1</property>
                  </packing>
                </child>
                <child>
