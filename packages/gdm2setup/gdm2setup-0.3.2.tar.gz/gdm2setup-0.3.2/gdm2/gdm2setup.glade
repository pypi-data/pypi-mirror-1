                      </object>
                      <packing>
                        <property name="expand">False</property>
                        <property name="fill">False</property>
                        <property name="position">0</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="blur_checkbutton">
                        <property name="label" translatable="yes">_Blur</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">False</property>
                        <property name="tooltip_text" translatable="yes">Each sucessive click of this button will further blur the current login wallpaper - this action cannot be undone</property>
                        <property name="use_underline">True</property>
                        <property name="draw_indicator">False</property>
                        <signal name="toggled" handler="on_blur_checkbutton_toggled"/>
                      </object>
                      <packing>
                        <property name="expand">False</property>
                        <property name="fill">False</property>
                        <property name="position">1</property>
                      </packing>
                    </child>
                  </object>
                  <packing>
                    <property name="position">1</property>
                  </packing>
                </child>
              </object>
              <packing>
                <property name="position">1</property>
              </packing>
            </child>
            <child type="tab">
              <object class="GtkLabel" id="walpaper_tab">
                <property name="visible">True</property>
                <property name="tooltip_text" translatable="yes">Select a wallpaper for the login screen</property>
                <property name="label" translatable="yes">_Wallpaper</property>
                <property name="use_underline">True</property>
              </object>
              <packing>
                <property name="position">1</property>
                <property name="tab_fill">False</property>
              </packing>
            </child>
            <child>
              <object class="GtkTable" id="table1">
                <property name="visible">True</property>
                <property name="n_rows">2</property>
                <property name="n_columns">2</property>
                <child>
                  <object class="GtkLabel" id="label1">
                    <property name="visible">True</property>
                    <property name="label" translatable="yes">GT_K Theme</property>
                    <property name="use_underline">True</property>
                    <property name="mnemonic_widget">gtktheme_combobox</property>
                  </object>
                  <packing>
                    <property name="x_options"></property>
                    <property name="y_options"></property>
                  </packing>
                </child>
                <child>
                  <object class="GtkLabel" id="label2">
                    <property name="visible">True</property>
                    <property name="label" translatable="yes">_Icon Theme</property>
                    <property name="use_underline">True</property>
                    <property name="mnemonic_widget">icontheme_combobox</property>
                  </object>
                  <packing>
                    <property name="top_attach">1</property>
                    <property name="bottom_attach">2</property>
                    <property name="x_options"></property>
                    <property name="y_options"></property>
                  </packing>
                </child>
                <child>
                  <object class="GtkComboBox" id="gtktheme_combobox">
                    <property name="visible">True</property>
                    <property name="model">gtktheme_ls</property>
                    <signal name="changed" handler="on_gtktheme_combobox_changed"/>
                    <child>
                      <object class="GtkCellRendererText" id="gtktheme_crt"/>
                      <attributes>
                        <attribute name="text">0</attribute>
                      </attributes>
                    </child>
                  </object>
                  <packing>
                    <property name="left_attach">1</property>
                    <property name="right_attach">2</property>
                    <property name="y_options"></property>
                  </packing>
                </child>
                <child>
                  <object class="GtkComboBox" id="icontheme_combobox">
                    <property name="visible">True</property>
                    <property name="model">icontheme_ls</property>
                    <signal name="changed" handler="on_icontheme_combobox_changed"/>
                    <child>
                      <object class="GtkCellRendererText" id="icontheme_crt"/>
                      <attributes>
                        <attribute name="text">0</attribute>
                      </attributes>
                    </child>
                  </object>
                  <packing>
                    <property name="left_attach">1</property>
                    <property name="right_attach">2</property>
                    <property name="top_attach">1</property>
                    <property name="bottom_attach">2</property>
                    <property name="y_options"></property>
                  </packing>
                </child>
              </object>
              <packing>
                <property name="position">2</property>
              </packing>
            </child>
            <child type="tab">
              <object class="GtkLabel" id="theme_tab">
                <property name="visible">True</property>
                <property name="tooltip_text" translatable="yes">GTK and Icon theme settings</property>
                <property name="label" translatable="yes">_Theme</property>
                <property name="use_underline">True</property>
              </object>
              <packing>
                <property name="position">2</property>
                <property name="tab_fill">False</property>
              </packing>
            </child>
            <child>
              <object class="GtkVBox" id="vbox3">
                <property name="visible">True</property>
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkCheckButton" id="checkbutton1">
                    <property name="label" translatable="yes">ignored</property>
                    <property name="can_focus">True</property>
                    <property name="receives_default">False</property>
