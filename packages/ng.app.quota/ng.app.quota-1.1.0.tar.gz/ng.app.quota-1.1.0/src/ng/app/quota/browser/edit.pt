<html metal:use-macro="context/@@standard_macros/view"
    i18n:domain="zope">
  <head>
    <title>Quota</title>
  </head>
  <body>
 
 


    <div metal:fill-slot="body">
       <div metal:use-macro="view/generated_form/macros/body">
            <div class="row" metal:fill-slot="extra_info" >
              <span class="error" tal:condition="view/msg">
                Внимание, ОШИБКА ВЫПОЛНЕНИЯ: <tal:block tal:content="view/msg"/>
               </span> 
               <div tal:condition="view/isEnoughData">
               <FIELDSET title="Histograma of object size dispersions">
               <table width="100%" border="1" cellspacing="1" cellpadding="0" frame="border">
                <tr valign="middle" tal:repeat="item view/h">
                  <td style=" margin: 0em 3em 0em 3em;" valign="middle" align="right" width="10" nowrap tal:content="python:'%(size)u' % item">200</td>
                  <td valign="middle" style=" margin: 0 3 0 3; " width="10" align="right" nowrap tal:content="structure python:'&nbsp;%(count)u&nbsp;' % item">200</td>
                  <td valign="middle" style=" margin: 1 0 0 1; "><hr style=" margin: 0 0 0 0; " size="10" align="left" noshade="" tal:attributes="width python:'%(height)s%%' %item"/></td>                  
                </tr>
               </table> 
               </FIELDSET>
<!--               <tal:block tal:repeat="item view/h">
                  <tal:block tal:content="python:'%(size)u' % item">200</tal:block>
                  <tal:block tal:content="python:'%(count)u' % item">200</tal:block>
                  <hr size="10" align="left" noshade="" tal:attributes="width python:'%(height)s%%' %item"/>                  
               </tal:block> -->
               </div>                
 
            </div>
            
            <div class="row" metal:fill-slot="extra_buttons">
              <div class="controls">
                <input type="submit" value="Reindex" name="reindex" />
                <input type="submit" value="Show with Quantization" name="quantization" tal:condition="python:'quantization' not in request"/>
                <input type="submit" value="Show without Quantization" name="" tal:condition="python:'quantization' in request"/>
              </div>
            </div>
       </div>
    </div>
  </body>
</html>

