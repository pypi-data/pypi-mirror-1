#!/usr/bin/env python

import sys
import os.path as path

# pudge_devel.py sets up sys.path for working in a development environment
# it isn't installed by distutils
try:
    import pudge_devel
except ImportError:
    pudge_devel = None

from pkg_resources import require, DistributionNotFound

try:
    require('pudge')
except DistributionNotFound, e:
    if str(e) != 'pudge':
        raise

import kid

from pudge import cli
cli.main()
