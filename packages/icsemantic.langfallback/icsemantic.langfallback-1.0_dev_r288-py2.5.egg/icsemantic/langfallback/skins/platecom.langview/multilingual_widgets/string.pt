<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <!-- String Widgets -->
    <metal:view_macro define-macro="view"
                      tal:define="set_language request/set_language|nothing;
                      			  multilingual_accessor python:context.getMultilingualAccessor(field);">
		<!-- CustomStringWidget -->
		<span tal:replace="structure python:multilingual_accessor()"></span>
	</metal:view_macro>

    <metal:define define-macro="edit">
      <metal:use use-macro="here/widgets/string/macros/edit" />
    </metal:define>

    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/string/macros/edit">
      </div>
    </div>

  </body>

</html>
