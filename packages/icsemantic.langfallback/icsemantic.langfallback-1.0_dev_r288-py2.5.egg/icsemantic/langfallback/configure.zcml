<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:gs="http://namespaces.zope.org/genericsetup"
    i18n_domain='icSemantic'>

    <five:registerPackage package="." initialize=".initialize" />

	<gs:registerProfile
	    name="default"
	    title="icsemantic.langfallback"
	    directory="profiles/default"
	    description="icsemantic.langfallback"
	    provides="Products.GenericSetup.interfaces.EXTENSION"
	    for="Products.CMFPlone.interfaces.IPloneSiteRoot"
	    />

	<gs:registerProfile
	    name="uninstall"
	    title="icsemantic.langfallback"
	    directory="profiles/uninstall"
	    description="icsemantic.langfallback"
	    provides="Products.GenericSetup.interfaces.EXTENSION"
	    for="Products.CMFPlone.interfaces.IPloneSiteRoot"
	    />

	<gs:registerProfile
	    name="tests"
	    title="icsemantic.langfallback"
	    directory="profiles/tests"
	    description="icsemantic.langfallback"
	    provides="Products.GenericSetup.interfaces.EXTENSION"
	    for="Products.CMFPlone.interfaces.IPloneSiteRoot"
	    />

	<include package=".exportimport" />
	<include package=".browser" />

	<five:implements
		class="Products.CMFCore.MemberDataTool.MemberDataTool"
		interface=".interfaces.IMemberDataTool"
	/>

	<subscriber
		for="zope.app.publication.interfaces.IBeforeTraverseEvent"
	    handler=".events.site_patcher"
	    />

    <adapter
        for="*"
        provides=".interfaces.IManageUserLanguages"
        factory=".preferences.ManagementUserLanguagesFactory"
        />

    <include file="vocabularies.zcml" />

</configure>
