<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <!-- Lines Widgets -->

    <metal:view_macro define-macro="view"
                      tal:define="set_language request/set_language|nothing;
                      			  multilingual_accessor python:context.getMultilingualAccessor(field);"
                      tal:repeat="item python:multilingual_accessor()">
		<!-- CustomLinesWidget -->
      	<span tal:content="item"/><br />
    </metal:view_macro>

    <metal:define define-macro="edit">
      <metal:use use-macro="here/widgets/lines/macros/edit" />
    </metal:define>

    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/lines/macros/edit">
      </div>
    </div>

    <div metal:define-macro="hidden">
      <input type="hidden"
             name=""
             value=""
             tabindex="#"
             tal:attributes="name string:${fieldName}:lines;
                             value python:'\n'.join(value);
                             tabindex tabindex/next;" />

    </div>


  </body>

</html>

