<configure
    xmlns="http://namespaces.zope.org/zope">
  <!-- 
    Author: Ischenko Valera 2006-11-21
    $Id: configure.zcml 13147 2007-10-28 14:34:30Z cray $ 
  -->

  <class class=".mapperobject.MapperObject">
    <factory
        id="mapperobject.MapperObject"
        description="MapperObject"
        />

    <require
        permission="zope.View"
        interface=".interfaces.IMapperObject"
        />

    <require
        permission="zope.ManageContent"
        set_schema=".interfaces.IMapperObject"
        />

  </class>

  <adapter
      provides="zope.app.container.interfaces.INameChooser"
      for=".mapperobject.MapperObject"
      factory=".mapperobjectnamechooser.MapperObjectNameChooser"
      />

  <include package=".browser" />
</configure>
