<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="plone.app.customerize">

  <genericsetup:registerProfile
    name="testing"
    title="Tests for local browser layer support"
    directory="profiles/testing"
    description=""
    provides="Products.GenericSetup.interfaces.EXTENSION" />

  <browser:page
    name="standard-test-view"
    for="*"
    template="standard.pt"
    permission="zope.Public" />

  <browser:page
    name="layer-test-view"
    for="*"
    layer=".tests.interfaces.IMyLayer"
    template="local.pt"
    permission="zope.Public" />

  <browser:viewlet
    name="standard-test-viewlet"
    for="*"
    class=".tests.viewlets.StandardViewlet"
    permission="zope.Public" />

  <browser:viewlet
    name="layer-test-viewlet"
    for="*"
    class=".tests.viewlets.LayerViewlet"
    layer=".tests.interfaces.IMyLayer"
    permission="zope.Public" />

</configure>
