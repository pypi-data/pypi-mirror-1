<configure 
      xmlns="http://namespaces.zope.org/meta"> 

  <!--
    Author: Andrey Orlov
    $Id: meta.zcml 49596 2008-01-21 10:55:31Z cray $ 
  -->

    <directives namespace="http://namespaces.zope.org/browser"> 

      <directive
        name="multiform"
        schema=".metadirectives.IMultiFormDirective"
        handler=".metaconfigure.MultiFormDirective"
        />
      
      <complexDirective
        name="multiformitem"
        schema=".metadirectives.IFormDirective"
        handler=".metaconfigure.FormDirective">

        <subdirective
          name="widget"
          schema="zope.app.form.browser.metadirectives.IWidgetSubdirective"
          />

      </complexDirective>
    </directives> 
   
</configure>