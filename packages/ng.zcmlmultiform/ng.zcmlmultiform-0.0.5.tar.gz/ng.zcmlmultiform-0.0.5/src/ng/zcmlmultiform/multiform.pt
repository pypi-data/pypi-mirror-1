<html metal:use-macro="context/@@standard_macros/view"
    i18n:domain="zope">
  <body>
  <div metal:fill-slot="body">

  <div metal:define-macro="body">

    <form action="." tal:attributes="action request/URL" method="post"
          enctype="multipart/form-data">

      <div metal:define-macro="formbody">

        <h3 tal:condition="view/label"
            tal:content="view/label"
            metal:define-slot="heading"
            i18n:translate=""
            >Edit something</h3>

        <p tal:define="status view/update_form"
           tal:condition="status"
           i18n:translate=""/>  

        <span class="error" tal:condition="view/errors" i18n:translate="">
          There are  <strong tal:content="python:len(view.errors)"
                            i18n:name="num_errors">6</strong> input errors.
        </span>

        <div metal:define-slot="extra_info" tal:replace="nothing">
        </div>

        <div class="row"
             metal:define-slot="extra_top" tal:replace="nothing">
          <div class="label">Extra top</div>
          <div class="field"><input type="text" style="width:100%" /></div>
        </div>

        <tal:block tal:content="structure provider:${view/providername}">
          ViewLets
        </tal:block>

        <div class="separator"></div>


        <div class="row"
             metal:define-slot="extra_bottom" tal:replace="nothing">
          <div class="label">Extra bottom</div>
          <div class="field"><input type="text" style="width:100%" /></div>
        </div>
        <div class="separator"></div>
      </div>

        <div class="row">
          <div class="controls">
            <input type="submit" value="Refresh"
              i18n:attributes="value refresh-button" />
            <input type="submit" name="UPDATE_SUBMIT" value="Change"
              i18n:attributes="value submit-button"/>
          </div>
        </div>

      <div class="row" metal:define-slot="extra_buttons" tal:replace="nothing">
      </div>

      <div class="separator"></div>

    </form>

  </div>

  </div>
  </body>

</html>

