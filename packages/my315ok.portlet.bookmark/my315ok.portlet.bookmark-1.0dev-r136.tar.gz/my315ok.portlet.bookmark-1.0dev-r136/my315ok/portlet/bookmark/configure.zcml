<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:plone="http://namespaces.plone.org/plone"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="my315ok.portlet.bookmark">

    <five:registerPackage package="." initialize=".initialize" />
    <i18n:registerTranslations directory="locales"/>

    <genericsetup:registerProfile
       name="default"
       i18n:domain="plone"
       title="Bookmark portlet"
       directory="profiles/default"
       description="A bookmark portlet"
       i18n:attributes="title description"
       provides="Products.GenericSetup.interfaces.EXTENSION"
       />

     <!-- Register the portlet -->

     <!-- If the portlet has no configurable parameters, you can remove
          the EditForm declaration in bookmarkportlet.py and delete
          the 'editview' attribute from this statement.
       -->

     <plone:portlet
         name="my315ok.portlet.bookmark.BookmarkPortlet"
         interface=".bookmarkportlet.IBookmarkPortlet"
         assignment=".bookmarkportlet.Assignment"
         view_permission="zope2.View"
         edit_permission="cmf.ManagePortal"
         renderer=".bookmarkportlet.Renderer"
         addview=".bookmarkportlet.AddForm"
         editview=".bookmarkportlet.EditForm"
         />

</configure>
