<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<%
   from os.path import basename
   root = '../' * album.depth
%>
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <title>${album.title}</title>
  <link type="text/css" rel="stylesheet" href="${root}style.css">
</head>
<body background="${root}background.jpeg">

  <div align="center">
    <h2>Album: ${album.title}</h2>
    <table>
      <tbody>
        <tr>
          <td class="transparent" colspan="2">
            %if album.parent != None:
            <% depth = len(albums_path) %>
            %for alb in albums_path:
              <% path_str = '../' * (depth-alb.depth) + 'index.html' %>
              <a href="${txt2u(path_str)}" class="big">${txt2u(alb.title) | h}</a>
              &nbsp;::&nbsp
            %endfor
	    %endif
            <span class="big">${txt2u(album.title) | h}</span>
            <br/>
            <% total_images = album.total_images - album.num_images %>
            <span class="numbers">${album.num_images} images, ${album.num_albums} albums with ${total_images} images</span>
            &nbsp;&nbsp;-&nbsp;&nbsp;
            [ <a href="${root}view_tree.html">Tree view</a> ]
          </td>
        </tr>
        %if album.num_images > 0:
        <tr>
          <td class="transparent" align="center">
            <% img = album.images[0] %>
            <a href="view_thumbs.html">
              <% url = root + album.sample_photo_path %>
              <img src="${txt2u(url)}" alt="image" border="1">
            </a>
          </td>
          <td class="transparent" width="500px" valign="top">
            <a href="view_thumbs.html" class="big">
              ${txt2u(album.title) | h}
            </a><br/>
            <span class="numbers">${album.num_images} images</span><br/><br/>
            <span class="description">${album.description | h}</span>
          </td>
        </tr>
        %endif
        %if album.num_albums > 0:
        <tr><td class="transparent" colspan="2">
          <span class="big">Subalbums:</span>
        </td></tr>
	%for subalbum in album.albums:
        <tr>
          <td class="transparent" align="center">
            <a href="${txt2u(subalbum.dirname)}/index.html">
              <% url = root + subalbum.sample_photo_path %>
              <img src="${txt2u(url)}" alt="image" border="1">
            </a>
          </td>
          <td class="transparent" width="500px" valign="top">
            <a href="${txt2u(subalbum.dirname)}/index.html" class="big">
              ${txt2u(subalbum.title) | h}
            </a><br/>
            <span class="numbers">${subalbum.num_albums} albums, ${subalbum.num_images} images</span><br/><br/>
            <span class="description">${txt2u(subalbum.description) | h}</span>
          </td>
        </tr>
        %endfor
        %endif
      </tbody>
    </table>
  </div>

  <br/>
  <hr>Generated on ${timestamp}
  by <a href="http://inigo.katxi.org/devel/pynakotheka">pynakotheka</a> 
  v1.1, &copy;2005-7 I&ntilde;igo Serna

</body>
</html>
