<body>

  <div align="center">
    <h2>Gallery: $txt2html($gallery.title)</h2>
    <table width="50%">
      <tbody>
        <tr>
          <td>
            <span>$txt2html($gallery.title)</span>
            <br>
            #set $total_images = $gallery.total_images - $gallery.num_images
            <span>$gallery.num_images images, $gallery.num_albums albums with $total_images images</span>
          </td>
        </tr>
        <tr>
          <td>
	    <h3><u>Tree view of the albums:</u></h3>
                <a href="index.html">$txt2html($gallery.title)</a>
                <span>($gallery.num_images images)</span>
	    <ul style="padding-left: 20px;">
            #for $depth, $title, $url, $num_images in $tree
              #set $pad = 20 * $depth - 10
              <li style="padding-left: $(pad)px;">
                <a href="$txt2link($url)">$txt2html($title)</a>
                ($num_images images)
              </li>
             #end for
	     </ul>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

