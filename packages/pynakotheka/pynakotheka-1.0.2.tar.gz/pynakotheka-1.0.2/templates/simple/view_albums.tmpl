<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
#set $root = '../' * $album.depth
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <title>$txt2html($album.title)</title>
  <link type="text/css" rel="stylesheet" href="$(root)style.css">
</head>
<body>

  <div align="center">
    <h2>Album: $txt2html($album.title)</h2>
    <table>
      <tbody>
        <tr>
          <td colspan="2">
            #if $album.parent != None
            #set $depth = len($albums_path)
            #for $alb in $albums_path
              #set $path_str = '../' * ($depth-$alb.depth) + 'index.html'
              <a href="$txt2link($path_str)">$txt2html($alb.title)</a>
              &nbsp;::&nbsp
            #end for
	    #end if
            <span>$txt2html($album.title)</span>
            <br>
            #set $total_images = $album.total_images - $album.num_images
            <span>$album.num_images images, $album.num_albums albums with $total_images images</span>
            &nbsp;&nbsp;-&nbsp;&nbsp;
            [ <a href="$(root)view_tree.html">Tree view</a> ]
          </td>
        </tr>
        #if $album.num_images > 0
        <tr>
          <td align="center">
            #set $img = $album.images[0]
            <a href="view_thumbs.html">
              #set $url = $root + $album.sample_photo_path
              <img src="$txt2link($url)" alt="image" border="1">
            </a>
          </td>
          <td width="500px" valign="top">
            <a href="view_thumbs.html">
              $txt2html($album.title)
            </a><br>
            <span>$album.num_images images</span><br><br>
            $txt2html($album.description)
          </td>
        </tr>
        #end if
        #if $album.num_albums > 0
        <tr><td colspan="2">
          <span>Subalbums:</span>
        </td></tr>
	#for $subalbum in $album.albums
        <tr>
          <td align="center">
            <a href="$txt2link($subalbum.dirname)/index.html">
              #set $url = $root + $subalbum.sample_photo_path
              <img src="$txt2link($url)" alt="image" border="1">
            </a>
          </td>
          <td width="500px" valign="top">
            <a href="$txt2link($subalbum.dirname)/index.html">
              $txt2html($subalbum.title)
            </a><br>
            <span>$subalbum.num_albums albums, $subalbum.num_images images</span><br><br>
            $txt2html($subalbum.description)
          </td>
        </tr>
        #end for
        #end if
      </tbody>
    </table>
  </div>

  <br>
  <hr>Generated on $timestamp
  by <a href="http://inigo.katxi.org/devel/pynakotheka">pynakotheka</a> 
  v1.0, &copy;2005-6 I&ntilde;igo Serna

</body>
</html>
