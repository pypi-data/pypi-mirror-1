<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
#set $root = '../' * $album.depth
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <title>$txt2html($album.title)</title>
  <link type="text/css" rel="stylesheet" href="$(root)style.css">
</head>
<body background="$(root)background.jpeg">
  #from os.path import basename
  #set $num = $album.num_images
  <div align="center">
    <h2>Album: $txt2html($album.title)</h2> 
    <h3>
       $num images&nbsp;&nbsp;-&nbsp;&nbsp;
       <a href="$back_albums_path">Back to the albums list</a>
    </h3>
    <br>
    <table width="1%">
      <tbody>
      #for $i in xrange(0, $num, 3)
        <tr>
        #for $j in xrange(3)
	#set $k = $i + $j
        #if $k < $num
          <td class="transparent" align="center" valign="top">
            #set $image = $album.images[$k]
            #set $thumbname = $image.basename + '-%d.jpeg' % $tn_size
            #set $imagename = $image.basename + '-%d.jpeg' % $img_size
            <a href="$txt2link($basename($image.html_file))">
              <img src="$txt2link($basename($thumbname))" alt="image" border="1">
            </a>
            <div align="right">
              <span class="name">$txt2html($image.filename)</span>
              ::
              <span class="numbers">$(k+1)/$num</span>
            </div>
          </td>
        #end if
        #end for
        </tr>
      #end for
      </tbody>
    </table>
  </div>

  <br>
  <hr>Generated on $timestamp
  by <a href="http://inigo.katxi.org/devel/pynakotheka">pynakotheka</a> 
  v1.0, &copy;2005-6 I&ntilde;igo Serna

</body>
</html>
