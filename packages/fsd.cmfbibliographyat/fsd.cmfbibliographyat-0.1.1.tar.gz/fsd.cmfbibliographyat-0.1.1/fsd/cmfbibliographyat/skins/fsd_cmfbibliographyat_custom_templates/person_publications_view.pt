<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
       lang="en-US"
       metal:use-macro="here/main_template/macros/master"
       i18n:domain="plone">
    <body>
        <div metal:fill-slot="main" 
             id="contentWrapper"
             tal:define="results        context/person_publications;
                         firstname      context/getFirstName;
                         middlename     context/getMiddleName;
                         lastname       context/getLastName;
                        ">

            <h1>
                <span i18n:translate="label_publications_of">Publications of</span>
                <span tal:replace="string: $firstname $middlename $lastname" />
            </h1>

            <div class="contentContent">
                <p class="body" tal:repeat="result results">
                    <span tal:replace="structure python:result.Authors(withURL=1)"  >Authors</span>
                  (<span tal:replace="result/publication_year">1900</span>).
                    <br/>
                        <a href="/view" tal:attributes="href result/absolute_url">
                        <b tal:content="python: result.Title() or '(empty title)'">Title</b></a>
                        <br/>
                    <span tal:content="structure result/Source">Source</span>
                </p>
            </div>
        </div>
    </body>
</html>

