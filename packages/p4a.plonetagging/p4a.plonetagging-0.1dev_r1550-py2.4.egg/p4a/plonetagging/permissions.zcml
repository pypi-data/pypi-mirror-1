<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:meta="http://namespaces.zope.org/meta"
    i18n_domain="ContentTagging">

  <permission
      id="contenttagging.ViewContentTags"
      title="Content Tagging: View Tags"
      />

  <permission
      id="contenttagging.TagContent"
      title="Content Tagging: Add/Update Tags"
      />

  <meta:redefinePermission
      from="contenttagging.ViewContentTags"
      to="zope2.View"
      />

  <meta:redefinePermission
      from="contenttagging.TagContent"
      to="cmf.ModifyPortalContent"
      />

</configure>
