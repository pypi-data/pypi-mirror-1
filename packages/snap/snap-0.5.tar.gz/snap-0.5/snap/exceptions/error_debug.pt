<html metal:use-macro="context/@@standard_macros/master"
      i18n:domain="snap"
      xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <head><title></title></head>
  <body>
    <div metal:fill-slot="content">
      <br />
      <div class="formBody">
	<h1>An error has occurred.</h1>

	<h2 i18n:translate="">
	  Error type:
	  <tal:span tal:replace="view/error_type" i18n:name="error_type"/>
	</h2>

	<tal:html
	 tal:condition="view/tb_html|nothing"
	 tal:replace="structure view/tb_html"
	 />

	<pre class="alertBox"
	     tal:condition="not:view/tb_html|nothing">
	  <tal:line
	   tal:repeat="line view/tb_lines"
	   tal:condition="view/tb_lines|nothing"
	   tal:replace="line" />
	  <tal:text
	   tal:condition="view/tb_text|nothing"
	   tal:replace="view/tb_text|nothing"
	   />
	</pre>
      </div>
    </div>
  </body>
</html>

