<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      metal:define-macro="master">
  <head>
    <title>eJustice</title>
  </head>
  <body>
    <div id="content">
      <metal:block define-slot="content" />
    </div>
    <tal:block tal:condition="python:getattr(context, 'allowDiscussion', None)">
    <div id="discussion">
      <span tal:replace="structure context/@@discussion"/>
    </div>
    </tal:block>
    <tal:block tal:condition="python:getattr(context, 'right_column', None)">
      <div id="right-column">
        <metal:block define-slot="right_column">
          <tal:block tal:replace="structure context/right_column">
            Right Column
          </tal:block>
        </metal:block>
      </div>
    </tal:block>
  </body>
</html>
