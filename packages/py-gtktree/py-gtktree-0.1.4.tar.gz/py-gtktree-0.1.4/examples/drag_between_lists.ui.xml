<interface>
  <object class="GtkWindow" id="main">
    <property name="title">GTK+ Stock Items and Drag’n’Drop</property>
    <property name="default-width">800</property>
    <property name="default-height">560</property>
    <property name="border-width">12</property>
    <child>
      <object class="GtkVBox" id="vbox1">
        <property name="spacing">12</property>
        <child>
          <object class="GtkLabel" id="label1">
            <property name="label">&lt;b&gt;Drag stock items between the lists below&lt;/b&gt;</property>
            <property name="use-markup">true</property>
            <property name="xalign">0</property>
          </object>
          <packing>
            <property name="expand">false</property>
          </packing>
        </child>
        <child>
          <object class="GtkHBox" id="hbox1">
            <property name="spacing">12</property>
            <child>
              <object class="GtkVBox" id="vbox2">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel" id="label2">
                    <property name="label">Selected stock items:</property>
                    <property name="xalign">0</property>
                  </object>
                  <packing>
                    <property name="expand">false</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkScrolledWindow" id="scrolled1">
                    <property name="hscrollbar-policy">GTK_POLICY_AUTOMATIC</property>
                    <property name="vscrollbar-policy">GTK_POLICY_AUTOMATIC</property>
                    <property name="shadow-type">GTK_SHADOW_ETCHED_IN</property>
                    <child>
                      <object class="GtkTreeView" id="selected-items-view"/>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkVBox" id="vbox3">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel" id="label3">
                    <property name="label">All stock items:</property>
                    <property name="xalign">0</property>
                  </object>
                  <packing>
                    <property name="expand">false</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkScrolledWindow" id="scrolled2">
                    <property name="hscrollbar-policy">GTK_POLICY_AUTOMATIC</property>
                    <property name="vscrollbar-policy">GTK_POLICY_AUTOMATIC</property>
                    <property name="shadow-type">GTK_SHADOW_ETCHED_IN</property>
                    <child>
                      <object class="GtkTreeView" id="select-from-view"/>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
