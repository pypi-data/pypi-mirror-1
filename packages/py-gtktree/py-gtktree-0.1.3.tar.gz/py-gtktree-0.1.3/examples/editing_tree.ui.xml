<interface>
  <object class="GtkWindow" id="main">
    <property name="title">Simple Tree Editing</property>
    <property name="default-width">800</property>
    <property name="default-height">560</property>
    <property name="border-width">12</property>
    <child>
      <object class="GtkVBox" id="vbox1">
        <property name="spacing">6</property>
        <child>
          <object class="GtkScrolledWindow" id="scrolled1">
            <property name="hscrollbar-policy">GTK_POLICY_AUTOMATIC</property>
            <property name="vscrollbar-policy">GTK_POLICY_AUTOMATIC</property>
            <property name="shadow-type">GTK_SHADOW_ETCHED_IN</property>
            <child>
              <object class="GtkTreeView" id="tree-view"/>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkHButtonBox" id="button-box-1">
            <property name="layout-style">GTK_BUTTONBOX_START</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkButton" id="create-subtree">
                <property name="use-underline">true</property>
                <property name="label">_Create Random Subtree</property>
                <property name="image">create-subtree-icon</property>
                <signal name="clicked" handler="on_create_subtree"/>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="insert-new-node">
                <property name="use-underline">true</property>
                <property name="label">Insert _New Node</property>
                <property name="image">insert-new-node-icon</property>
                <signal name="clicked" handler="on_insert_new_node"/>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="delete-selected">
                <property name="use-underline">true</property>
                <property name="label">_Delete Selected</property>
                <property name="image">delete-selected-icon</property>
                <signal name="clicked" handler="on_delete_selected"/>
              </object>
            </child>
          </object>
          <packing>
            <property name="expand">false</property>
          </packing>
        </child>
        <child>
          <object class="GtkLabel" id="label1">
            <property name="label">In addition to using the buttons, you can edit text in individual cells, toggle the check boxes and use drag’n’drop to rearrange nodes.</property>
            <property name="xalign">0</property>
            <property name="wrap">true</property>
            <property name="width-chars">100</property>
          </object>
          <packing>
            <property name="expand">false</property>
          </packing>
        </child>
      </object>
    </child>
  </object>
  <object class="GtkImage" id="create-subtree-icon">
    <property name="stock">gtk-new</property>
  </object>
  <object class="GtkImage" id="insert-new-node-icon">
    <property name="stock">gtk-add</property>
  </object>
  <object class="GtkImage" id="delete-selected-icon">
    <property name="stock">gtk-delete</property>
  </object>
</interface>
