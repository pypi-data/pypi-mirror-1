<interface>
  <object class="GtkWindow" id="main">
    <property name="title">Drag’n’drop Between Tree and List</property>
    <property name="default-width">800</property>
    <property name="default-height">560</property>
    <property name="border-width">12</property>
    <child>
      <object class="GtkVBox" id="vbox1">
        <property name="spacing">12</property>
        <child>
          <object class="GtkLabel" id="label1">
            <property name="label">&lt;b&gt;Drag items between the tree and the list on the left&lt;/b&gt;</property>
            <property name="use-markup">true</property>
            <property name="xalign">0</property>
          </object>
          <packing>
            <property name="expand">false</property>
          </packing>
        </child>
        <child>
          <object class="GtkHBox" id="hbox1">
            <property name="spacing">12</property>
            <child>
              <object class="GtkVBox" id="vbox2">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel" id="label2">
                    <property name="label">Selected items:</property>
                    <property name="xalign">0</property>
                  </object>
                  <packing>
                    <property name="expand">false</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkScrolledWindow" id="scrolled1">
                    <property name="hscrollbar-policy">GTK_POLICY_AUTOMATIC</property>
                    <property name="vscrollbar-policy">GTK_POLICY_AUTOMATIC</property>
                    <property name="shadow-type">GTK_SHADOW_ETCHED_IN</property>
                    <child>
                      <object class="GtkTreeView" id="selected-items-view"/>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkVBox" id="vbox3">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel" id="label3">
                    <property name="label">Available items:</property>
                    <property name="xalign">0</property>
                  </object>
                  <packing>
                    <property name="expand">false</property>
                  </packing>
                </child>
                <child>
                  <object class="GtkScrolledWindow" id="scrolled2">
                    <property name="hscrollbar-policy">GTK_POLICY_AUTOMATIC</property>
                    <property name="vscrollbar-policy">GTK_POLICY_AUTOMATIC</property>
                    <property name="shadow-type">GTK_SHADOW_ETCHED_IN</property>
                    <child>
                      <object class="GtkTreeView" id="select-from-view"/>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="label4">
            <property name="label">Note that items in the lists can be dragged back into the tree, but only to the correct category. Likewise, you can rearrange items within a category, but not drag items from one category to another.</property>
            <property name="xalign">0</property>
            <property name="wrap">true</property>
            <property name="width-chars">100</property>
          </object>
          <packing>
            <property name="expand">false</property>
          </packing>
        </child>
      </object>
    </child>
  </object>
</interface>
