<?xml version="1.0"?>
<!-- Install our custom portal_actions. Plone's defaults are in CMFPlone/profiles/default/actions.xml -->
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">

<!-- PORTAL TABS -->
	  <object name="document_actions" meta_type="CMF Action Category">
<!-- Add a tab for the about section -->   
		  <object name="about" meta_type="CMF Action" i18n:domain="plone">
			   <property name="title" i18n:translate="">About</property>
			   <property name="description" i18n:translate=""></property>
			   <property name="url_expr">string:$portal_url/about</property>
			   <property name="icon_expr"></property>
			   <property name="available_expr"></property>
			   <property name="permissions">
					<element value="View"/>
			   </property>
			   <property name="visible">True</property>
		  </object> 
<!-- Add a tab for the site map -->   
		  <object name="sitemap" meta_type="CMF Action" i18n:domain="plone">
			   <property name="title" i18n:translate="">Site Map</property>
			   <property name="description" i18n:translate=""></property>
			   <property name="url_expr">string:$portal_url/sitemap</property>
			   <property name="icon_expr"></property>
			   <property name="available_expr"></property>
			   <property name="permissions">
					<element value="View"/>
			   </property>
			   <property name="visible">False</property>
		  </object> 
<!-- Add a tab for contact -->   
		  <object name="contact" meta_type="CMF Action" i18n:domain="plone">
			   <property name="title" i18n:translate="">Contact</property>
			   <property name="description" i18n:translate=""></property>
			   <property name="url_expr">string:$portal_url/about/contact-us</property>
			   <property name="icon_expr"></property>
			   <property name="available_expr"></property>
			   <property name="permissions">
					<element value="View"/>
			   </property>
			   <property name="visible">True</property>
		  </object> 
	 </object>
<!-- PERSONAL BAR -->
	  <object name="user" meta_type="CMF Action Category">
<!-- Add a tab for site setup -->   
		  <object name="plone_setup" meta_type="CMF Action" i18n:domain="plone">
			   <property name="title" i18n:translate="">Site Setup</property>
			   <property name="description" i18n:translate=""></property>
			   <property name="url_expr">string:$portal_url/plone_control_panel</property>
			   <property name="icon_expr"></property>
			   <property name="available_expr"></property>
			   <property name="permissions">
					<element value="Manage portal"/>
			   </property>
			   <property name="visible">True</property>
		  </object> 
	 </object>
</object>


