<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Tidyblog">

 <object name="plonetheme_tidyblog_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.tidyblog:skins/plonetheme_tidyblog_custom_images"/>
 <object name="plonetheme_tidyblog_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.tidyblog:skins/plonetheme_tidyblog_custom_templates"/>
 <object name="plonetheme_tidyblog_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.tidyblog:skins/plonetheme_tidyblog_styles"/>

 <skin-path name="Tidyblog" based-on="Plone Default">
  <layer name="plonetheme_tidyblog_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_tidyblog_custom_templates"
     insert-after="plonetheme_tidyblog_custom_images"/>
  <layer name="plonetheme_tidyblog_styles"
     insert-after="plonetheme_tidyblog_custom_templates"/>
 </skin-path>

</object>
