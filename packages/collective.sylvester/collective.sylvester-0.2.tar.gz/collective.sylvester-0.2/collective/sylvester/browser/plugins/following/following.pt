<metal:macro define-macro="main">
    <div id="collective-sylvester-dashboard-following">
      <tal:def define="li view/GetFollowingStatuses">
        <table width="100%">
          <tr>
            <td width="50%" valign="top">
              <tal:users repeat="di python:li[0::2]">
              <span tal:define="dummy python:request.set('friend', di['user']);
                                dummy python:request.set('statuses', di['statuses'])"
                    tal:replace="structure provider:collective.sylvester.friendletmanager"/>
              </tal:users>
            </td>
            <td width="50%" valign="top">
              <tal:users repeat="di python:li[1::2]">
              <span tal:define="dummy python:request.set('friend', di['user']);
                                dummy python:request.set('statuses', di['statuses'])"
                    tal:replace="structure provider:collective.sylvester.friendletmanager"/>
              </tal:users>
            </td>
          </tr>
        </table>
      </tal:def>
    </div>
</metal:macro>
