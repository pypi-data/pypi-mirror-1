<configure xmlns="http://namespaces.zope.org/browser">

  <page
      name="find_local_sites"
      for="zope.app.component.interfaces.IPossibleSite"
      permission="zope2.ViewManagementScreens"
      class=".localsites.FindLocalSites"
      template="find_local_sites.pt"
      />

  <page
      for="zope.app.component.interfaces.IPossibleSite"
      name="update_local_site"
      permission="five.ManageSite"
      class=".localsites.SiteFixer"
      template="managesite.pt"
      />

  <page
      name="factory_cleanup"
      for="zope.app.component.interfaces.IPossibleSite"
      permission="five.ManageSite"
      class=".portal_factory.FactoryCleaner"
      template="portal_factory.pt"
      />

</configure>
