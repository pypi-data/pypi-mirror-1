<form tal:define="form form | template.get_api('form')"
      i18n:domain="vudo.cmf"
      action="@@${template.get_action()}" method="post">

  <input type="hidden" name="type_id"
         value="${template.get_api('content').type_id}" />

  <div class="status"
       tal:condition="form.status"
       tal:content="form.status"
       i18n:translate="" />

  <div class="field">
    <div class="error">${form.errors.title}</div>
    <label for="title">Title</label>
    <span class="help">
      Give your content a title.
    </span>
    <input type="text" name="title" value="${form.data.title}" />
  </div>

  <div class="field">
    <div class="error">${form.errors.description}</div>
    <label for="description">Description</label>
    <span class="help">
      Provide a short description.
    </span>
    <textarea name="description" tal:content="form.data.description">
      <!-- Text -->
    </textarea>
  </div>

  <input type="submit" name="${form.prefix}" value="Save"
         i18n:attributes="value" />
  
</form>
