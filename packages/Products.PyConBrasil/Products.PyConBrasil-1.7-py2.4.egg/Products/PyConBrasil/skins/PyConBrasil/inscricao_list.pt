<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<head>
    <metal:block tal:condition="python:here.portal_membership.isAnonymousUser()" fill-slot="top_slot">
        <tal:border tal:define="dummy python:request.set('disable_border',1)" />
    </metal:block>
</head>

<metal:override fill-slot="column_two_slot" />

<body>

<div metal:fill-slot="main"
     tal:define="path python:'/'.join(here.getPhysicalPath());
                 results python:here.portal_catalog.searchResults(path=path,
                                                                  portal_type='Inscricao',
                                                                  review_state='registrado',
                                                                  sort_on='title_or_id');">

    <h1>Inscrições</h1>

    <div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
    </div>

    <p>Inscrições registradas de participantes do evento.</p>

    <table class="listing" id="sortable">

      <thead>

        <tr>
            <th>Nº</th>
            <th>Nome</th>
            <th>Data</th>
            <th>Local</th>
            <th>Tipo</th>
            <th>Paga?</th>
        </tr>

      </thead>

      <tbody>

        <tal:block repeat="objeto results">

            <tr tal:define="oddrow repeat/objeto/odd;
                            toLocalizedTime python:here.toLocalizedTime;"
                tal:attributes="class python:test(oddrow,'even','odd')">

                <td style="text-align: center">
                    <a tal:attributes="href objeto/getURL"
                       tal:content="repeat/objeto/number">
                        numero
                    </a>
                </td>

                <td tal:define="email objeto/getEmail">
                    <a tal:attributes="href string:mailto:${email}"
                       tal:content="objeto/Title">
                        nome
                    </a>
                </td>

                <td tal:content="python:toLocalizedTime(objeto.Date)">
                    data
                </td>

                <td>
                    <tal:local content="objeto/getEstado"/>/<tal:local content="objeto/getCidade" />
                </td>

                <td>
                    <tal:local content="objeto/getTipo"/>
                </td>

                <td style="text-align: center">
                    <img src="" width="16" height="16" alt="Pendente"
                         tal:attributes="src string:$utool/delete_icon.gif"
                         tal:condition="not:objeto/getPaga"
                         />
                    <img src="" width="16" height="16" alt="Confirmado"
                         tal:attributes="src string:$utool/inscricao_icon.gif"
                         tal:condition="objeto/getPaga"
                         />
                </td>

            </tr>

        </tal:block>

      </tbody>

    </table>

</div>

</body>
</html>
