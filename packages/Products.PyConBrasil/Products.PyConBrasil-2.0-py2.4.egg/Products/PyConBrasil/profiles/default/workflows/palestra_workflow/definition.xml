<?xml version="1.0"?>
<dc-workflow workflow_id="palestra_workflow"
             title="palestra_workflow"
             state_variable="review_state"
             initial_state="novo">
 <permission>Modify portal content</permission>
 <permission>Delete objects</permission>
 <permission>View</permission>
 <permission>Access contents information</permission>
 <state state_id="aprovado" title="Trabalho aprovado">
  <exit-transition transition_id="cancelar"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Member</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Member</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="cancelado" title="Apresentação cancelada">
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="novo" title="Sendo criado">
  <exit-transition transition_id="salvar"/>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Anonymous</permission-role>
   <permission-role>Owner</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="pendente" title="Aguardando avaliação">
  <exit-transition transition_id="aprovar"/>
  <exit-transition transition_id="reprovar"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Anonymous</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Owner</permission-role>
   <permission-role>Anonymous</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
 </state>
 <state state_id="reprovado" title="Trabalho reprovado">
  <exit-transition transition_id="re-submeter"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <transition transition_id="aprovar"
             title="Aprovar o trabalho" new_state="aprovado"
             trigger="USER" before_script="antesAprovar"
             after_script="depoisAprovar">
  <action url="" category="workflow">Aprovar o trabalho</action>
  <guard>
   <guard-role>Manager</guard-role>
   <guard-role>Reviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="cancelar"
             title="Cancelar este trabalho"
             new_state="cancelado" trigger="USER"
             before_script="" after_script="">
  <action url="" category="workflow">Cancelar este trabalho</action>
  <guard>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="re-submeter"
             title="Submeter novamente para avaliação"
             new_state="pendente" trigger="USER"
             before_script="antesResubmeter"
             after_script="depoisResubmeter">
  <action url="" category="workflow">Submeter novamente para avaliação</action>
  <guard>
   <guard-role>Manager</guard-role>
   <guard-role>Reviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="reprovar"
             title="Reprovar o trabalho"
             new_state="reprovado" trigger="USER"
             before_script="antesReprovar"
             after_script="depoisReprovar">
  <action url="" category="workflow">Reprovar o trabalho</action>
  <guard>
   <guard-role>Manager</guard-role>
   <guard-role>Reviewer</guard-role>
  </guard>
 </transition>
 <transition transition_id="salvar" title="Salvar inscrição"
             new_state="pendente" trigger="USER"
             before_script="antesSalvar"
             after_script="depoisSalvar">
  <action url="" category="workflow">Salvar inscrição</action>
  <guard>
  </guard>
 </transition>
 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
