<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
  <body>

    <metal:main fill-slot="main">

      <metal:define define-macro="body">

        <metal:use use-macro="here/edit_macros/macros/body">

          <metal:slot fill-slot="buttons">
              <input tal:condition="python:wf_state != 'em_confirmacao'"
                     class="standalone"
                     tabindex=""
                     type="submit"
                     name="form.button.cancel"
                     value="Cancel"
                     i18n:attributes="value label_cancel;"
                     tal:attributes="tabindex tabindex/next"
                     />
              <input tal:condition="python:wf_state != 'em_confirmacao'"
                     class="context"
                     tabindex=""
                     type="submit"
                     name="form_submit"
                     value="Save"
                     i18n:attributes="value label_save;"
                     tal:attributes="tabindex tabindex/next;
                                     disabled python:test(isLocked, 'disabled', None);"
                     />
              <input tal:condition="python:wf_state == 'em_confirmacao'"
                     class="standalone"
                     tabindex=""
                     type="submit"
                     name="form.button.cancelar_confirmacao"
                     value="Cancelar Confirmação"
                     tal:attributes="tabindex tabindex/next"
                     />
              <input tal:condition="python:wf_state == 'em_confirmacao'"
                     class="context"
                     tabindex=""
                     type="submit"
                     name="form.button.finalizar_confirmacao"
                     value="Confirmar Inscrição"
                     tal:attributes="tabindex tabindex/next;
                                     disabled python:test(isLocked, 'disabled', None);"
                     />
           </metal:slot>

        </metal:use>

      </metal:define>

    </metal:main>

  </body>

</html>
