<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="mlango_templates"
         meta_type="Filesystem Directory View"
         directory="Mlango/skins/mlango_templates"/>
 <object name="mlango_styles"
         meta_type="Filesystem Directory View"
         directory="Mlango/skins/mlango_styles"/>
 <object name="mlango_images"
         meta_type="Filesystem Directory View"
         directory="Mlango/skins/mlango_images"/>
 
 <skin-path name="Plone Default">
  <layer insert-after="custom" 
         name="mlango_templates"/>
  <layer insert-after="custom" 
         name="mlango_styles"/>
  <layer insert-after="custom" 
         name="mlango_images"/>
 </skin-path>

</object>