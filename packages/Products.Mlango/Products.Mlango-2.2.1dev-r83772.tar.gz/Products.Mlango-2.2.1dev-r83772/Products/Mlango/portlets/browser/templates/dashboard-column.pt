<div
    tal:define="cols view/getNumberOfColumns"
	tal:attributes="id python: '%s' % view.columnName.replace('.', '-');
	  class string:mlango-dashboard-col kssattr-viewname-${view/__parent__/__name__};
	  style python:'width: %s%%' % int(98/cols)">
	<ul tal:attributes="id python: 'col_%s' % view.columnName"
		class="sortable boxy mlango-col">
 		<tal:repeat repeat="portlet options/portlets">
			<tal:block tal:define="id string:${portlet/hash}"
			  tal:replace="structure python:view.safe_render(portlet['renderer'], id)" />
		</tal:repeat>
	</ul>
</div>
