<li
	tal:define="viewlet_id view/id;
	    fixed python:view.isFixed and 'nodrag' or '';
		minimized python:view.isMinimized and 'minimized' or '';"
	tal:attributes="id python: 'li_%s' % view.id;
		class python:'mlango-viewlet kssattr-portlethash-%s %s %s' % (view.id, fixed, minimized)">

	<span class="border-top-left"></span>
	<span class="border-top-right"></span>	
	<div>
		<div id="id" class="viewlet-container" tal:attributes="id view/id;">
			<div class="viewlet-toolbar">

				<div class="viewlet-title">
					<img src="MlangoTool.png" tal:on-error="nothing" tal:attributes="src view/icon"/>
					<span tal:replace="view/title"/>
				</div>

				<div class="toolbar">
					<div tal:condition="python: not view.isFixed"
						class="remove clickable-icon">
					</div>
					<div tal:condition="python: view.isFixed"
					  tal:attributes="class python: 'remove-locked clickable-icon'">
					</div>
					<div class="toggleicon">
						<div tal:attributes="id string:${viewlet_id}_tbtoggle;
						      name python:'li_%s' % view.id;
						      class python: 'toggle clickable-icon %s_toggleme' % (view.id)">
						</div>
					</div>
					<div tal:condition="python: view.hasHelp" class="help clickable-icon"
						 tal:attributes="id string:${viewlet_id}_tbinfo;
							 target string:${viewlet_id}_help;
							 class python: 'help clickable-icon %s_toggleme %s' % (view.id, minimized)">
					</div>
				</div>
			</div>
		   
			<!-- Main content -->
			<div tal:attributes="id string:${viewlet_id}_content;
				class python: 'viewlet-content visualIEFloatFix %s_toggleme' % (view.id)"> 
				<div class="viewlet-help-container" tal:condition="python: view.getHelp()">
					<div class="viewlet-help"
						tal:attributes="id string:${viewlet_id}_help"
						style="display:none">
						<div class="help">
							<span tal:replace="python: view.getHelp()"/>
						</div>
					</div>
				</div>
		
				<div tal:on-error="string: Error in viewletcontent!!!!"
					tal:replace="structure view/render_portlet">ViewletContent
				</div>
			</div>
		</div>
	</div>
	<span class="border-bottom-left"></span>
	<span class="border-bottom-right"></span>
</li>