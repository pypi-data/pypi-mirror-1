<configure xmlns="http://namespaces.zope.org/zope" 
           xmlns:browser="http://namespaces.zope.org/browser">

    <include package=".browser"/>           
           
    <!-- Mlango manager utility -->
    <utility
        factory=".mlangomanager.MlangoManager"
        provides=".interfaces.IMlangoManager"
    />

    <adapter
       for="Products.CMFPlone.Portal.PloneSite"
       provides=".interfaces.IMlangoManager"
       factory=".mlangomanager.form_adapter"
    />
    
    <class class=".mlangomanager.MlangoManager">
        <implements interface=".interfaces.IMlangoManager"/>
    </class>

    <class class=".manage.ManageGroupDashboard">
        <implements interface=".interfaces.IManageGroupDashboard"/>
    </class>

    <class class=".manage.ManageContextDashboard">
        <implements interface=".interfaces.IManageContextDashboard"/>
    </class>

    <adapter
        factory=".portletcontext.MlangoDashboardContext"
        for="Products.Mlango.content.interfaces.IMlangoDashboard"
        provides="plone.portlets.interfaces.IPortletContext"
    />

    <adapter
        factory=".retriever.ContextDashboardRetriever"
        for="Products.Mlango.content.interfaces.IMlangoDashboard
             plone.portlets.interfaces.IPlacelessPortletManager
        "
        provides="plone.portlets.interfaces.IPortletRetriever"
    />

</configure>