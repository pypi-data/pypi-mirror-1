<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone"
>

  <head>

    <metal:javascript_head fill-slot="javascript_head_slot">
      <div metal:use-macro="here/mlango_macros/macros/scripts"/>
    </metal:javascript_head>

    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1)" />
    <metal:block fill-slot="column_one_slot" />
    <metal:block fill-slot="column_two_slot" />
  </head>

  <body>

    <div metal:fill-slot="main"
      tal:define="cols here/cols;">
      <div class="portalMessage"
           tal:condition="isAnon"
           i18n:translate="mlango-dashboard_portalmessage_anonymous">
       settings for the anonymous user will not be stored
     </div>

      <div class="portalMessage"
           tal:condition="not: isAnon"
           i18n:translate="mlango-dashboard_portalmessage_loggedin">
        settings will be stored after drag and drop, viewlet closing and viewlet minimizing
      </div>

      <div metal:use-macro="here/mlango_macros/macros/mlango-dashboard">
      </div>

    </div>

  </body>
</html>
