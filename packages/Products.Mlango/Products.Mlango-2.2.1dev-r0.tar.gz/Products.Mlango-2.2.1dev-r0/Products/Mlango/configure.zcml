<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser"
           xmlns:five="http://namespaces.zope.org/five">
  
  <include file="profiles.zcml" />

  <!-- ##code-section configure.zcml -->
  <include package=".browser" />
    <subscriber
        for="   Products.Mlango.content.interfaces.IMlangoViewlet
                zope.app.container.interfaces.IObjectModifiedEvent"
        handler="Products.Mlango.tools.MlangoTool.registerAddedViewlet"
    />
    <subscriber
        for="   Products.Mlango.content.interfaces.IMlangoViewlet
                zope.app.container.interfaces.IObjectRemovedEvent"
        handler="Products.Mlango.tools.MlangoTool.unregisterDeletedViewlet"
    />
  <!-- ##/code-section configure.zcml -->

</configure>