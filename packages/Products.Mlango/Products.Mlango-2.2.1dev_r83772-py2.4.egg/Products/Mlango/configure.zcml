<configure xmlns="http://namespaces.zope.org/zope" 
           xmlns:browser="http://namespaces.zope.org/browser"> 

    <include file="profiles.zcml" />
    <include package=".portlets"/>
    <include package=".utils"/>
    <include package="zope.annotation"/>
    <!--include package=".mystuff"/-->

    <!-- Add group dashboard management -->
    <browser:page
        for="Products.CMFCore.interfaces.ISiteRoot"
        class=".utils.manage.ManageGroupDashboard"
        name="manage-group-dashboard"
        template="utils/templates/manage-group-dashboard.pt"
        permission="plone.app.portlets.ManagePortlets"
    />

    <!-- Enable view on Dashboard content type -->
    <browser:page
        for="Products.Mlango.content.interfaces.IMlangoDashboard"
        name="dashboard"
        permission="plone.app.portlets.ManageOwnPortlets"
        class=".utils.browser.context.ContextDashboardView"
        template="./portlets/browser/templates/contextmlangodashboard.pt"
    />

    <!-- Enable edit on Dashboard content type -->
    <browser:page
        for="Products.Mlango.content.interfaces.IMlangoDashboard"
        name="manage-dashboard"
        permission="plone.app.portlets.ManageOwnPortlets"
        class=".utils.manage.ManageContextDashboard"
        template="./portlets/browser/templates/manage-context-dashboard.pt"
    />

    <class class=".content.MlangoDashboard.MlangoDashboard">
        <implements interface="plone.portlets.interfaces.ILocalPortletAssignable"/>
    </class>
    
</configure>
