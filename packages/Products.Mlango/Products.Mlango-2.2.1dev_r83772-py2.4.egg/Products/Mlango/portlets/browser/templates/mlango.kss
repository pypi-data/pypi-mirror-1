#show-menu:click,
#show-menu:mouseover{ 
    action-client: menuSlideLeft;
    menuSlideLeft-speed: slow;
    menuSlideLeft-node: #menu;
}

#hide-menu:click { 
    action-client: menuSlideRight;
    menuSlideRight-speed: slow;
    menuSlideRight-node: #menu;
}

.help:click {
    action-client: menuSlideToggle;
    menuSlideToggle-node:nodeAttr('target');
    menuSlideToggle-speed: slow;
}

.toggle:click {
    evt-click-preventdefault: true;
    action-client:menuToggleContent;
    menuToggleContent-node:nodeAttr('name');
    menuToggleContent-content_class:minimized;
    action-server: mlangoTogglePortlet;
    mlangoTogglePortlet-portlethash: kssAttr('portlethash', true);
    mlangoTogglePortlet-viewname: kssAttr('viewname', true);
}

.remove:click {
    evt-click-preventdefault: true;
    action-server: mlangoDeletePortlet;
    mlangoDeletePortlet-portlethash: kssAttr('portlethash', true);
    mlangoDeletePortlet-viewname: kssAttr('viewname', true);
}

document:timeout {
    evt-timeout-delay: 5000;
    evt-timeout-repeat: False;
    action-client: toggleClass;
    toggleClass-kssSelector: css('#menuinfo');
    toggleClass-value: hiddenItem;
}
