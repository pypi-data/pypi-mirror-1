<html>
  <div tal:replace="structure here/manage_page_header"/>
    <body bgcolor="#ffffff" link="#000099" alink="#000099" 
      vlink="#000099">
      <div tal:replace="structure here/manage_tabs"/>
	<style type="text/css">
	  div.row {
	  padding-top: 2px;
	  }
	  
	  .cell {
	  margin-right:1em;
	  width: 33%;
	  }	    
	  
	  .content_type {
	  border: 1px solid black;
	  margin: 4px;
	  }
	    
	  .main td {
	    text-align: left;
	    }

	  th.title {
	    background-color: #ccf;
	    }

	  .detail {
	  background-color: #cdcdcd;
	  width:100%;
	  }

	</style>
	
    <table class="main" border="1" width="80%">
      <thead>
        <tr>
          <th>Title</th>
          <th>Icon</th>
          <th>Type</th>
          <th>Fixed</th>
        </tr>
      </thead>
      <tbody>
	    <tal:repeat repeat="vid python: here.listViewletIds()">
	      <tr tal:define="viewlet python: here.getViewlet(vid)">
     	    <td tal:content="viewlet/title"/>
	    <td><img tal:on-error="nothing" src ="" tal:attributes="src viewlet/viewleticon/absolute_url"/></td>
     	    <td tal:content="viewlet/portal_type"/>
     	    <td tal:content="viewlet/fixed"/>
     	  </tr>
	    </tal:repeat>
	  </tbody>
    </table>
      
    </body>
  </html>
