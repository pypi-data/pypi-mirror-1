<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.categorizing">
  <body>
    <metal:main fill-slot="main">
      <tal:main-macro metal:define-macro="main">
        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <h1 class="documentFirstHeading">
          <span metal:use-macro="python:context.widget('title', mode='view')" />
        </h1>
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <p metal:use-macro="python:context.widget('description', mode='view')" />
        <div tal:replace="structure provider:plone.abovecontentbody" />
        <div id="category-contents" tal:condition="view/contents">
          <h2 i18n:translate="">Items</h2>
          <ul>
            <li tal:repeat="item view/contents">
              <a tal:content="item/title"
                 tal:attributes="href item/url;
                                 title item/description" />
            </li>
          </ul>
        </div>
        <div id="category-subcategories" tal:condition="view/categories">
          <h2 i18n:translate="">Subcategories</h2>
          <ul>
            <li tal:repeat="item view/categories">
              <a tal:content="item/title"
                 tal:attributes="href item/url;
                                 title item/description" />
            </li>
          </ul>
        </div>
        <div tal:replace="structure provider:plone.belowcontentbody" />
      </tal:main-macro>
    </metal:main>
  </body>
</html>

