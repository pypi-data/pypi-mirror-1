<!-- portlet.Categorizing -->
<dl class="portlet portletCategorizing"
    i18n:domain="collective.categorizing">

  <dt class="portletHeader">
    <span class="portletTopLeft"></span>
    <a href="#"
       tal:attributes="href view/link_to_category_container"
       i18n:translate="">Categories</a>
    <span class="portletTopRight"></span>
  </dt>

  <dd class="portletItem">
    <div tal:replace="structure view/categories" />
  </dd>

  <dd class="portletFooter">
    <span class="portletBottomLeft"></span>
    <a href="#"
       tal:attributes="href view/link_to_category_container"
       i18n:translate="">
      Check More Categories
    </a>
    <span class="portletBottomRight"></span>
  </dd>

</dl>


