<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="collective.calameo">

  <include package="plone.app.contentmenu" />

  <browser:page
      name="calameo_macros"
      for="*"
      class=".calameoview.Macros"
      permission="zope.Public" />

  <browser:page
      name="calameo_view"
      for="..interfaces.ICalameoPDF"
      class=".calameoview.CalameoView"
      permission="zope2.View" />

</configure>
