<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="collective.calameo"
      tal:omit-tag="">
  <body>
  <metal:define define-macro="calameo_flash">
    <div id="calameo-wrapper"
         tal:condition="calameo_id | nothing"
         tal:define="calameo_link string:http://www.calameo.com/viewer.swf?bkcode=${calameo_id}">
     <object classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000"    
            codebase="http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=7,0,19,0"
             tal:attributes="width calameo_width;
                             height calameo_height">
        <param name="movie"
            tal:attributes="value calameo_link" />
        <param name="quality" value="high" />
        <param name="allowScriptAccess" value="always" />
        <param name="allowFullScreen" value="true" />
        <embed tal:attributes="src calameo_link;
                               width calameo_width;
                               height calameo_height" 
               quality="high" 
               pluginspage="http://www.macromedia.com/go/getflashplayer" 
               type="application/x-shockwave-flash" 
               allowscriptaccess="always" 
               allowfullscreen="true"></embed>
     </object>
    </div>
  </metal:define>
  </body>
</html>

