#from cgi import escape
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

    <title type="html">$title</title>
    <link rel="self" href="$feed"/>
    <updated>$updated.strftime('%Y-%m-%dT%H:%M:%SZ')</updated>
    <author>
        <name>Roberto De Almeida</name>
        <email>roberto@dealmeida.net</email>
        <uri>http://dealmeida.net</uri>
    </author>
    <id>$home</id>

#for $entry in $entries:
    <entry>
        <title>$entry.title</title>
        <link href="$entry.id"/>
        <id>$entry.id</id>
        <updated>$entry.updated.strftime('%Y-%m-%dT%H:%M:%SZ')</updated>
        <content type="html">$escape($entry.content.content)</content>
    </entry>

#end for
</feed>
