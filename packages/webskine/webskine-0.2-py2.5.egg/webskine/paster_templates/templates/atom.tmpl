#from cgi import escape
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

    <title type="html">$escape($title)</title>
    <link rel="self" href="${home}?t=atom"/>
    <updated>$entries[0].__updated__.strftime('%Y-%m-%dT%H:%M:%SZ')</updated>
    <author>
        <name>Roberto De Almeida</name>
        <email>roberto@dealmeida.net</email>
        <uri>http://dealmeida.net</uri>
    </author>
    <id>$home</id>

#for $entry in $entries:
    <entry>
        <title>$entry.title</title>
        <link href="$entry.__id__"/>
        <id>$entry.__id__</id>
        <updated>$entry.__updated__.strftime('%Y-%m-%dT%H:%M:%SZ')</updated>
        <content type="html">$escape($entry.content.content)</content>
    </entry>

#end for
</feed>
