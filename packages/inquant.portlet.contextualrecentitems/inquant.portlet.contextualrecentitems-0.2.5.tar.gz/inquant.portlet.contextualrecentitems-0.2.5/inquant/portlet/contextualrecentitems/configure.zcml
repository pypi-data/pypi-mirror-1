<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="inquant.portlet.contextualrecentitems">

    <five:registerPackage package="." initialize=".initialize" />

    <browser:page
        for="*"
        name="contextual_recent_modified"
        template="contextual_recent_modified.pt"
        permission="zope2.View"
        />

    <genericsetup:registerProfile
       name="default"
       title="Contextual Recent Items Portlet"
       directory="profiles/default"
       description="A Plone Portlet which displays recent items of a custom portal type"
       provides="Products.GenericSetup.interfaces.EXTENSION"
       />

     <plone:portlet
         name="inquant.portlet.contextualrecentitems.ContextualRecentItems"
         interface=".contextualrecentitems.IContextualRecentItems"
         assignment=".contextualrecentitems.Assignment"
         view_permission="zope2.View"
         edit_permission="cmf.ManagePortal"
         renderer=".contextualrecentitems.Renderer"
         addview=".contextualrecentitems.AddForm"
         editview=".contextualrecentitems.EditForm"
         />

</configure>

