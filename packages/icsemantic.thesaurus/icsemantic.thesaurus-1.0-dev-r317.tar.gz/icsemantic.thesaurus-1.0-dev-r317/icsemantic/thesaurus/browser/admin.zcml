<configure xmlns="http://namespaces.zope.org/zope"
                     xmlns:browser="http://namespaces.zope.org/browser"
                     xmlns:five="http://namespaces.zope.org/five"
                     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
		     i18n_domain="icsemantic.thesaurus">

    <!-- Management Thesaurus Upload -->
    <browser:page
        for="icsemantic.core.interfaces.IicSemanticSite"
        name="manage-icsemantic-thesaurus-upload"
        class=".admin.ThesaurusUpload"
        permission="cmf.ManagePortal"
        menu="icSemantic_settings"
        title="Thesaurus Upload"
        />

    <adapter
        for="icsemantic.core.interfaces.IicSemanticSite"
        provides="..interfaces.IicSemanticManagementThesaurusUpload"
        factory="..preferences.thesaurus_upload_adapter"
        />

    <!-- Thesaurus download and concepts queries -->
    <browser:page
        for="icsemantic.core.interfaces.IicSemanticSite"
        name="thesaurus"
        class=".admin.ThesaurusDownload"
        template="templates/thesaurus-download.pt"
        permission="cmf.ManagePortal"
        menu="icSemantic_settings"
        title="Thesaurus Download"
        />

    <!-- Thesaurus concepts queries -->
    <browser:page
        for="icsemantic.core.interfaces.IicSemanticSite"
        name="thesaurus-query"
        class=".admin.ThesaurusQuery"
        template="templates/thesaurus-query.pt"
        permission="cmf.ManagePortal"
        menu="icSemantic_settings"
        title="Thesaurus Administration"
        />

    <!-- Drag and drop resources -->
    <browser:resource
        file="templates/dragAndDrop.js"
        name="dragAndDrop.js"
    />
    <browser:resource
        file="templates/dragAndDrop.css"
        name="dragAndDrop.css"
    />
    <browser:resource
        file="templates/dragAndDrop.kss"
        name="dragAndDrop.kss"
    />
    <browser:page
        for="icsemantic.core.interfaces.IicSemanticSite"
        class=".azaxview.AzaxView"
        attribute="openConcept"
        name="openConcept"
        permission="cmf.ManagePortal"
    />
    <browser:page
        for="icsemantic.core.interfaces.IicSemanticSite"
        class=".azaxview.AzaxView"
        attribute="saveConcepts"
        name="saveConcepts"
        permission="cmf.ManagePortal"
    />
    <browser:page
        for="icsemantic.core.interfaces.IicSemanticSite"
        class=".azaxview.AzaxView"
        attribute="viewPage"
        name="viewPage"
        permission="cmf.ManagePortal"
    />
    <browser:page
        for="icsemantic.core.interfaces.IicSemanticSite"
        class=".azaxview.AzaxView"
        attribute="conceptsSearch"
        name="conceptsSearch"
        permission="cmf.ManagePortal"
    />
    <browser:page
        for="icsemantic.core.interfaces.IicSemanticSite"
        class=".azaxview.AzaxView"
        attribute="addTerm"
        name="addTerm"
        permission="cmf.ManagePortal"
    />

    <!-- Autocomplete concepts -->
    <browser:page
        for="icsemantic.core.interfaces.IicSemanticSite"
        name="thesaurus-autocomplete"
        template="templates/thesaurus-autocomplete.pt"
        permission="cmf.ManagePortal"
        menu="icSemantic_settings"
        title="Autocomplete Concepts"
        />
    <browser:page
        for="icsemantic.core.interfaces.IicSemanticSite"
        class=".autocomplete.AutoComplete"
        attribute="autocompleteConcepts"
        name="autocompleteConcepts"
        permission="cmf.ManagePortal"
    />
    <browser:resource
        file="templates/autocomplete.kss"
        name="autocomplete.kss"
    />
    <browser:page
        for="icsemantic.core.interfaces.IicSemanticSite"
        name="vertical-select-test"
	class=".admin.VerticalSelectTest"
        permission="cmf.ManagePortal"
        title="Vertical Select Test"
        menu="icSemantic_settings"
        />
    <adapter
        for="icsemantic.core.interfaces.IicSemanticSite"
        provides="..interfaces.IicSemanticVerticalSelectTest"
        factory="..preferences.vertical_select_test_adapter"
        />
</configure>
