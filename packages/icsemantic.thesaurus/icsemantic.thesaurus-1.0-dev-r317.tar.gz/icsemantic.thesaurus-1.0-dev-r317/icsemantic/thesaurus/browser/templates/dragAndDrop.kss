.open-concept:click {
    action-server:		openConcept;
    openConcept-cid:	kssAttr("cid");
    openConcept-openedConcepts: currentFormVar(openedConcepts);
}
.saveConcepts:click {
    action-server:		saveConcepts;
    saveConcepts-conceptsRelations:	currentFormVar(conceptsRelations);
    saveConcepts-openedConcepts:	currentFormVar(openedConcepts);
}
select#pageRange:change {
    action-server:			viewPage;
    viewPage-pageRange:		currentFormVar(pageRange);
    viewPage-context:		currentFormVar(context);
    viewPage-term:			currentFormVar(term);
    viewPage-search:		currentFormVar(currentSearchExpression);
    viewPage-languages:		currentFormVar(languages);
    viewPage-format:		currentFormVar(format);
}
input#search:click {
    action-server:					conceptsSearch;
    conceptsSearch-context:			currentFormVar(context);
    conceptsSearch-term:			currentFormVar(term);
    conceptsSearch-search:			currentFormVar(newSearchExpression);
    conceptsSearch-languages:		currentFormVar(languages);
    conceptsSearch-format:			currentFormVar(format);
    conceptsSearch-elementsByPage:	currentFormVar(elementsByPage);
    conceptsSearch-showall:			currentFormVar(showall);
}
input#addTerm:click {
    action-server:			addTerm;
    addTerm-term:			currentFormVar(newTerm);
    addTerm-language:		currentFormVar(newTermLanguage);
    addTerm-openedConcepts:	currentFormVar(openedConcepts);
}
