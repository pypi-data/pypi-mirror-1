<metal:page use-macro="context/@@manage-icsemantic-settings-template/macros/admin"
	    i18n:domain="icsemantic">
  <metal:cssslot fill-slot="css_slot">
    <link rel="kukit" type="text/css"
          tal:attributes="href string:${context/@@absolute_url}/++resource++dragAndDrop.kss"/>
	<style type="text/css" tal:content="string: @import url($portal_url/++resource++dragAndDrop.css);"></style>
  </metal:cssslot>
  
  <metal:javascriptslot fill-slot="javascript_head_slot">
	<script type="text/javascript" tal:attributes="src string:$portal_url/++resource++dragAndDrop.js">
	</script>
  </metal:javascriptslot>
  
  <metal:block fill-slot="up_to_parent">
	    <a href=""
	       class="link-parent"
	       tal:attributes="href string: $portal_url/@@manage-icsemantic-overview"
	       i18n:translate="label_up_to_platecom_setup"
	       i18n:domain="plone">
              Up to icSemantic Setup
	    </a>
  </metal:block>

  <metal:block fill-slot="admin_content">
		<form name="conceptsForm" action="aPage.html" method="post" onsubmit="return false;">
			<table cellspacing="0" cellpading="0" border="0" width="100%">
			<tr>
				<td><input type="text" name="newSearchExpression" id="newSearchExpression" tal:attributes="value request/search | nothing"> <input id="search" name="search" type="button" value="find"></td>
				<td>New concept: <input type="text" id="newTerm" name="newTerm" value="" size="20"> <span id="newTermLanguage" tal:replace="structure view/newTermLanguage">Language selection</span> <input id="addTerm" name="addTerm" type="button" value="add"></td>
				<td align="right"><span id="pagingHeader" tal:content="structure view/paging_header">Paging header</span></td>
			</tr>
			</table>

			<input type="hidden" name="context" id="context" tal:attributes="value request/context | nothing">
			<input type="hidden" name="term" id="term" tal:attributes="value request/term | nothing">
			<input type="hidden" name="languages" id="languages" tal:attributes="value request/languages | nothing">
			<input type="hidden" name="currentSearchExpression" id="currentSearchExpression" tal:attributes="value request/search | nothing">
			<input type="hidden" name="format" id="format" tal:attributes="value request/format | nothing">
			<input type="hidden" name="elementsByPage" id="elementsByPage" tal:attributes="value request/elementsByPage | nothing">
			<input type="hidden" name="showall" id="showall" tal:attributes="value request/showall | nothing">
		<div id="dhtmlgoodies_dragDropContainer">
			<div id="topBar">
				<img src="/images/heading3.gif">
			</div>

			<div id="dhtmlgoodies_listOfItems">
				<div>
					<p>Query result</p>		
				<ul id="allItems"><span tal:replace="structure view/query_result">Concepts from thesaurus query.</span>
				</ul>
				</div>
			</div>	
			<div id="dhtmlgoodies_mainContainer">
				<!-- ONE <ul> for each "room" -->
				<div>
					<p>Selected concepts</p>
				<ul id="selectedItems">
					<li id="all_selected"><img src="fullscreenexpand_icon.gif" border="0" id="dragimage_all_selected"> All</li>
				</ul>
				</div>
			</div>
		</div>
		<div id="footer">
			<input type="button" class="saveConcepts" value="Save"><input type="hidden" id="conceptsRelations" name="conceptsRelations" value=""><input type="hidden" id="openedConcepts" name="openedConcepts" value="x">
		</div>

		<!--div id="debug">Debug:<br><br></div-->

		<ul id="dragContent"></ul>
		<div id="dragDropIndicator"><img src="arrowRight.gif"></div>
		<div id="saveContent"><!-- THIS ID IS ONLY NEEDED FOR THE DEMO --></div>
		</form>
  </metal:block>
</metal:page>
