<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:gs="http://namespaces.zope.org/genericsetup"
    i18n_domain="icsemantic.thesaurus">

    <five:registerPackage package="." initialize=".initialize" />

    <include package=".browser" />
    <include file="vocabularies.zcml" />

    <gs:registerProfile
            name="default"
            title="icsemantic.thesaurus"
            directory="profiles/default"
            description="icsemantic.thesaurus"
            provides="Products.GenericSetup.interfaces.EXTENSION"
            for="Products.CMFPlone.interfaces.IPloneSiteRoot"
            />

    <adapter
        for="icsemantic.core.interfaces.IicSemanticSite"
        provides=".interfaces.IicSemanticThesaurusConfiguration"
        factory=".preferences.icSemanticThesaurusConfiguration_adapter"
        />

</configure>
