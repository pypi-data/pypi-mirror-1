<> rdfs:title "PC Classes" .
<> rdfs:comment "Reference for PC classes" .

:PCClass rdfs:subClassOf c:Characteristic .



:barbarian a :PCClass;
    :goodSaves c:fort;
    p:babTable :fighter!p:babTable;
.

:bard a :PCClass;
    :goodSaves c:ref, c:will;
    p:babTable :cleric!p:babTable;
.

:cleric a :PCClass;
    :goodSaves c:fort, c:will;
    p:babTable ("+0" "+1" "+2" "+3" "+3" "+4" "+5" "+6/+1" "+6/+1" "+7/+2" "+8/+3" 
               "+9/+4" "+9/+4" "+10/+5" "+11/+6/+1" "+12/+7/+2" "+12/+7/+2" 
               "+13/+8/+3" "+14/+9/+4" "+15/+10/+5");
.


:druid a :PCClass;
    :goodSaves c:fort, c:will;
    p:babTable :cleric!p:babTable;
.

:fighter a :PCClass;
    :goodSaves c:fort;
    p:babTable ("+1" "+2" "+3" "+4" "+5" "+6/+1" "+7/+2" "+8/+3" "+9/+4" "+10/+5"
              "+11/+6/+1" "+12/+7/+2" "+13/+8/+3" "+14/+9/+4" "+15/+10/+5"
