<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Lazy Days Free Theme">

 <object name="alterootheme_lazydays_custom_images"
    meta_type="Filesystem Directory View"
    directory="alterootheme.lazydays:skins/alterootheme_lazydays_custom_images"/>
 <object name="alterootheme_lazydays_custom_templates"
    meta_type="Filesystem Directory View"
    directory="alterootheme.lazydays:skins/alterootheme_lazydays_custom_templates"/>
 <object name="alterootheme_lazydays_styles"
    meta_type="Filesystem Directory View"
    directory="alterootheme.lazydays:skins/alterootheme_lazydays_styles"/>

 <skin-path name="Lazy Days Free Theme" based-on="Plone Default">
  <layer name="alterootheme_lazydays_custom_images"
     insert-after="custom"/>
  <layer name="alterootheme_lazydays_custom_templates"
     insert-after="alterootheme_lazydays_custom_images"/>
  <layer name="alterootheme_lazydays_styles"
     insert-after="alterootheme_lazydays_custom_templates"/>
 </skin-path>

</object>
