<?xml version="1.0"?>
<!-- the default skin is set back to the plone default skin -->
   <object name="portal_skins" meta_type="Plone Skins Tool" allow_any="False"
   cookie_persistence="False" default_skin="Plone Default"
   request_varname="plone_skin">

        <!-- Remove the Portal 2.0 skin layers -->
        <object name="plonetheme_portaltwodotoh_custom_images" meta_type="Filesystem Directory View" remove="True" />
        <object name="plonetheme_portaltwodotoh_styles" meta_type="Filesystem Directory View" remove="True" />
        <object name="plonetheme_portaltwodotoh_custom_templates" meta_type="Filesystem Directory View" remove="True" />

       <!-- Remove the Portal 2.0 skin path -->
       <skin-path name="Portal 2.0"  remove="True" />
   </object>
