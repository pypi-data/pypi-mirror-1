<?xml version="1.0"?>
<package name="XMLTools2" version="0.1" metadata-version="1.0" summary="An XML tools package for Python."
  description="A suite of tools which perform certain XML processing tasks, written in Python."
  home-page="http://www.boddie.org.uk/python/XMLTools2/" licence="GNU LGPL">
  <platforms>
    <platform name="Linux"/>
    <platform name="Windows"/>
  </platforms>
  <keywords>
    <keyword name="XML"/>
    <keyword name="SQL"/>
  </keywords>
  <authors>
    <author name="Paul Boddie" contact="Oslo, Norway" e-mail="paul@boddie.org.uk"/>
    <author name="The Badger" e-mail="badger@infukor.com"/>
  </authors>
  <dependencies>
    <dependency name="PyXML" version="0.7.1"/>
  </dependencies>
  <categories>
    <category>
      <category-enum value="Development Status :: 1 - Planning"/>
      <category-enum value="Development Status :: 2 - Pre-Alpha"/>
      <category-enum value="Development Status :: 3 - Alpha"/>
      <category-enum value="Development Status :: 4 - Beta"/>
      <category-enum value="Development Status :: 5 - Production/Stable"/>
      <category-enum value="Development Status :: 6 - Mature"/>
      <category-enum value="Development Status :: 7 - Inactive"/>
      <category-enum value="Programming Language :: Python" value-is-set="true"/>
      <category-enum value="Topic :: Text Processing :: Markup :: XML" value-is-set="true"/>
    </category>
  </categories>
  <!-- Errors must appear last in an element to avoid positioning issues. -->
  <error description-size="1000"/>
</package>
