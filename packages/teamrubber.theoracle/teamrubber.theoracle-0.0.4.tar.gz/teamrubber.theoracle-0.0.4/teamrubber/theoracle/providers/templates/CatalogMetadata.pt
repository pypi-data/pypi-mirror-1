<h2>Catalog Metadata for Context</h2>
<tal:catalogmetadata tal:define="catalog_info view/getCatalogMetadata">


<span tal:condition="catalog_info/has_error" class="message" tal:content="catalog_info/error_message" />

<tal:block tal:condition="not:catalog_info/has_error">

    <span tal:condition="python:len(catalog_info.value)==0" class="message">No catalog metadata for this object</span>
    <dl tal:condition="python:len(catalog_info())!=0">
    <tal:indexes tal:repeat="data python:catalog_info()">
    	<dt tal:content="data"></dt>
    	<dd tal:content="python:catalog_info()[data]"></dd>
    </tal:indexes>
    </dl>

</tal:block>


</tal:catalogmetadata>