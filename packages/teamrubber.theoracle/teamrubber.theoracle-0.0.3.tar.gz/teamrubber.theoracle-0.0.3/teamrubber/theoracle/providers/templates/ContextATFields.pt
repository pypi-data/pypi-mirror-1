	<h2>Context Fields</h2>
<tal:atfields tal:define="fields python:view.getATFields()">

<span tal:condition="fields/has_error" class="message" tal:content="fields/error_message" />
<span tal:condition="fields/truncated" class="message"> Warning: Failed to retrieve details on some fields </span>

<table tal:condition="not:fields/has_error" id="at_field_info" tal:define="show_extras request/extras | nothing;">
			<thead>
				<tr>
					<td>ID</td>
					<td>Type</td>
					<td tal:condition="show_extras">Searchable</td>
					<td>Required</td>					
					<td>Mode</td>
					<td>Accessor</td>
					<td tal:condition="show_extras">Index Accessor</td>
					<td tal:condition="show_extras">Edit Accessor</td>
					<td>Mutator</td> 
					<td tal:condition="show_extras">Vocabulary</td> 
				</tr>
			</thead>

			<tr tal:repeat="field python:fields()">
				<td tal:attributes="class field/id/getClass"><span tal:replace="field/id"/></td>
				<td tal:attributes="class field/type/getClass"><span tal:replace="field/type"/></td>
				<td tal:condition="show_extras"><span tal:replace="python:field['searchable']() and 'True' or '--'"/></td>
				<td><span tal:replace="python:field['required']() and 'True' or '--'"/> </td>


				<td tal:attributes="class field/mode/getClass"><span tal:replace="field/mode"/></td>
				<td tal:attributes="class field/accessor/getClass"><span tal:replace="field/accessor"/></td>
				<td tal:condition="show_extras" tal:attributes="class field/index_accessor/getClass"><span tal:replace="field/index_accessor"/></td>
				<td tal:condition="show_extras" tal:attributes="class field/edit_accessor/getClass"><span tal:replace="field/edit_accessor"/></td>
				<td tal:attributes="class field/mutator/getClass"><span tal:replace="field/mutator"/></td>				
				<td tal:condition="show_extras" tal:attributes="class field/vocabulary/getClass"><span tal:replace="field/vocabulary"/></td>
			</tr>
</table>
</tal:atfields>

