<h2>Context Workflow</h2>
<dl>
	<dt>Workflow</dt>
	<dd tal:define="workflow view/getWorkflow" tal:content="workflow" tal:attributes="class workflow/getClass"></dd>
	<dt>Review State</dt>
	<dd tal:define="review_state view/getReviewState" tal:content="review_state" tal:attributes="class review_state/getClass"></dd>	
	<dt>History</dt>
	<dd class="noborder">
<tal:workflow tal:define="workflow_history view/getWorkflowHistory;">
<span class="message" tal:condition="workflow_history/has_error" tal:content="workflow_history/error_message" />

	<table id="history_table" tal:condition="not:workflow_history/has_error">
	<thead>
		<tr>
			<td>Action</td>
			<td>State</td>
			<td>Actor</td>
			<td>Date</td>
		</tr>
	</thead>
	<tr tal:repeat="action python:workflow_history.value" tal:attributes="class python:list(workflow_history.value).index(action)%2 and 'even_row' or 'odd_row'">	
		<td><span tal:replace="action/action"/></td>
		<td><span tal:replace="action/review_state"/></td>
		<td><span tal:replace="action/actor"/></td>
		<td><span tal:replace="action/time"/></td>
	</tr>
	</table>
	
</tal:workflow>
</dd>
</dl>