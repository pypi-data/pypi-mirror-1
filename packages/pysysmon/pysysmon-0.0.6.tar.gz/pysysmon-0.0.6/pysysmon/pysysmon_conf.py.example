"""Example configuration"""

from pysysmon.services.proc_watch import ProcessWatcher
from pysysmon.services.iface import InterfaceUp
from pysysmon.bars.mem import MemoryBar
from pysysmon.bars.diskusage import DiskUsage
from pysysmon.loggers.tail import Tail
from pysysmon.loggers.lighttpd import LighttpdLog

services = (
    # arg1: name, arg2: options to pass to pgrep
    ProcessWatcher("lighttpd", ("lighttpd",)),
    ProcessWatcher("apache", ("apache2",)),
    ProcessWatcher("mysql", ("mysql",)),
    ProcessWatcher("test cat", ("cat",)),
    # arg1: interface, [arg2: name (default: interface)]
    InterfaceUp("eth0", "LAN"),
    InterfaceUp("eth1", "WAN"),
    InterfaceUp("tun0", "ericvpn"),
    InterfaceUp("tun1", "tjindar"),
)

bars = (
    MemoryBar(),
    # arg1: filesystem to be passed to df, [arg2: name (default basename of fs)]
    DiskUsage("/dev/hda2", "root"),
    DiskUsage("/dev/hda3", "home"),
)

loggers = (
    # arg1: filename
    Tail("/var/log/messages"),
    # arg1: log filename
    LighttpdLog("/var/log/lighttpd/access.log"),
)

# How many bars per line to display, no matter how many exist.
bars_per_line = 2

# Sets the maximum allowed deviation for a timer, when they get grouped.
# Leaving the default is recommended.
allowed_refresh_dev = 2.5  # sec.

