<dl class="portlet portletLightReviewList"
	xmlns:tal="http://xml.zope.org/namespaces/tal"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	i18n:domain="redturtle.portlet.lightreviewlist">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:omit-tag=""
		      i18n:translate="">Review list</span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
    	<a i18n:translate="show_reviewlist_message"
		   tal:attributes="href string:${view/portal_url}/full_review_list">
        Look for documents waiting for my review
		</a>
    </dd>

</dl>
