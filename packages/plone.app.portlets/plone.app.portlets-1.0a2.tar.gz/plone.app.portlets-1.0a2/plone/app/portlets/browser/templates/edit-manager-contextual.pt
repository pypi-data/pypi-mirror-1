<div>

  <h4>Add portlet</h4>
  
  <div tal:repeat="portlet view/addable_portlets">
    <a tal:attributes="href portlet/addview;
                       title portlet/description"
       tal:content="portlet/title" />
  </div>
  
  <hr />

  <h4>Block/unblock portlets</h4>

  <form method="post" tal:attributes="action view/blacklist_status_action">
    
    <input type="hidden" name="manager" tal:attributes="value view/manager_name" />
    
    <div tal:define="status view/user_blacklist_status">
      User: 
      <select name="user_status:int" size="1">
        <option value="0"
          tal:attributes="selected python:status == None and 'selected' or None">
            Acquire settings
        </option>
         <option value="1"
          tal:attributes="selected python:status == True and 'selected' or None">
            Block
        </option>
         <option 
          value="-1"
          tal:attributes="selected python:status == False and 'selected' or None">
            Always show
        </option>
      </select>
    </div>
    
    <div tal:define="status view/group_blacklist_status">
      Group: 
      <select name="group_status:int" size="1">
        <option value="0"
          tal:attributes="selected python:status == None and 'selected' or None">
            Acquire settings
        </option>
         <option value="1"
          tal:attributes="selected python:status == True and 'selected' or None">
            Block
        </option>
         <option 
          value="-1"
          tal:attributes="selected python:status == False and 'selected' or None">
            Always show
        </option>
      </select>
    </div>
    
    <div tal:define="status view/content_type_blacklist_status">
      Content type: 
      <select name="content_type_status:int" size="1">
        <option value="0"
          tal:attributes="selected python:status == None and 'selected' or None">
            Acquire settings
        </option>
         <option value="1"
          tal:attributes="selected python:status == True and 'selected' or None">
            Block
        </option>
         <option 
          value="-1"
          tal:attributes="selected python:status == False and 'selected' or None">
            Always show
        </option>
      </select>
    </div>
    
    <div tal:define="status view/context_blacklist_status">
      Contextual: 
      <select name="context_status:int" size="1">
        <option value="0"
          tal:attributes="selected python:status == None and 'selected' or None">
            Acquire settings
        </option>
         <option value="1"
          tal:attributes="selected python:status == True and 'selected' or None">
            Block
        </option>
         <option 
          value="-1"
          tal:attributes="selected python:status == False and 'selected' or None">
            Always show
        </option>
      </select>
    </div>
    
    <div>&nbsp;</div>
    <input class="context" type="submit" value="Save" />
    <hr />
    
  </form>
  
  <hr />

  <h4>Portlets assigned here</h4>

  <tal:block repeat="portlet view/portlets">
          
      <div>
        <a tal:omit-tag="not:portlet/editview"
           tal:attributes="href portlet/editview"
           tal:content="portlet/title" />
      </div>
      <div>
        <a tal:attributes="href portlet/up_url">Up</a>
        <a tal:attributes="href portlet/down_url">Down</a>
        <a tal:attributes="href portlet/delete_url">Delete</a>
      </div>
      
      <div tal:replace="structure portlet/html" />
          
      <hr />
  
  </tal:block>
  
</div>
