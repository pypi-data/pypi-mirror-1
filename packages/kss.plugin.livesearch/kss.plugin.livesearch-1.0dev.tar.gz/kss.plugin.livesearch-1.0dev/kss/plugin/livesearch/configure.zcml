<configure xmlns="http://namespaces.zope.org/zope"
     xmlns:browser="http://namespaces.zope.org/browser"
     xmlns:kss="http://namespaces.zope.org/kss"
     xmlns:zcml="http://namespaces.zope.org/zcml"
     >
     
    <!-- Including this configuration
         will activate this plugin inside zope.
    -->

    <!-- Include demo setup conditionally -->
    <include zcml:condition="installed kss.demo" package=".demo" />


    <browser:page
        for="*"
        class=".livesearchview.LiveSearchView"
        name="getLiveSearchResponse"
        permission="zope2.View"
        />

    <kss:eventtype
        name="livesearch-searchbox"
        jsfile="javascript/livesearch.js"
        />


    <!-- support for keyword autocomplete widget in Plone -->
    <browser:page
        for="*"
        class=".autocompleteview.AutoCompleteView"
        name="getAutoCompleteResponse"
        permission="zope2.View"
        />

</configure>
