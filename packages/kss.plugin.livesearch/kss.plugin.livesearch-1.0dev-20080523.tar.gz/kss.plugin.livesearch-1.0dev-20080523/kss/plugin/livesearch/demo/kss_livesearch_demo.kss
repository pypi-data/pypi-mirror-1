/* The keyword autocomplete widget */

/*
.ArchetypesKeywordAcWidget input.searchbox:livesearch-searchbox(kssWid(atfield)) {
*/


input.completebox:livesearch-searchbox(autocomplete) {
    evt-livesearch-searchbox-submit: true;
    evt-livesearch-searchbox-complete: true;
    evt-livesearch-searchbox-rowClass: KacRow;
    evt-livesearch-searchbox-highlightId: LSKacHighlight;
    evt-livesearch-searchbox-useSeparator: true;
    action-server: getDemoSearchResults;
    getDemoSearchResults-q: pass(q);
    getDemoSearchResults-limit: 5;
}


