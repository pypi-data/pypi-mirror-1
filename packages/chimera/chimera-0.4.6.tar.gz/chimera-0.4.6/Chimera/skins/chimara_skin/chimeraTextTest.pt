<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US" >
<head>

    <script type="text/javascript" tal:attributes="src string:${here/portal_url}/sarissa.js"></script>
    <script type="text/javascript" tal:attributes="src string:${here/portal_url}/chimeraLive.js"></script>
    <script type="text/javascript">
	// <!--
	function searchInit () { 
	   chimeraLiveInit('textStuff', 'fontSelect', 'sizeSelect', 'output');
	   }

        if (window.addEventListener) window.addEventListener("load", searchInit,false);
        else if (window.attachEvent) window.attachEvent("onload", searchInit);

    </script>	

</head>
<body>
	   
    <form method="GET"
          name="edit_form"
	  id="edit_form"
	  action=""
	  >
	  Text String <input id="textStuff" type="text" 
			     name="text:utf8:utext"/>
		
	<select name="font" id="fontSelect">
		<option tal:repeat="value here/chimera/listFontFamilies" tal:attributes="value value" tal:content="value"/>
	</select>

	<select name="font" id="sizeSelect">
		<option tal:repeat="value python: range(10, 96, 2) " tal:attributes="value value" tal:content="value"/>
	</select>

    </form>

<hr/>	
	<iframe name="output" id="output" style="width:620px">
	</iframe>

</body>
</html>
