<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <div class="field" metal:define-macro="view">
      <metal:block define-slot="widget_label">
      </metal:block>
      <tal:def define="text accessor;
      	        element string:${field/getName}_image;
      	       	img python: getattr(here.chimera, widget.recipe)(text=text).absolute_url();
		over python: getattr(here.chimera, widget.recipe_over)(text=text).absolute_url();
      		">
     <img class="chimeraImage" tal:attributes="id element; src img;title text;"/>
     <tal:ajax  define="ajax python:modules['Products.Bling.ajax'];"
      replace="structure python: ajax.rollover(element,	img, over)"
  	/>
      </tal:def>
    </div>



  </body>

</html>

