  This file is based on the ploneCustom.css.dtml shipped with Plone.

  <dtml-with base_properties> (do not remove this)
  <dtml-call "REQUEST.set('portal_url', portal_url())"> (not this either)
*/

/* base css */
body {
     background: #5a8095 url('&dtml-portal_url;/light_body.gif') repeat-y center 0px;
     font-size: 80%;
}

h1 {
    border-bottom:12px solid #DDD;
    font-family: arial,sans-serif;
    font-size:1.6em;
    padding-bottom: 0.2em;
    color: #536C71;
}

h2, h3, h4, h5, h6 {
    font-size: 1.2em;
    color: #353E47;
    border-bottom: none;
}

h2 {
    font-size: 1.2em;
}

h3 {
    font-size: 0.9em;
}

h4 {
    font-size: 0.85em;
}

h5 {
    font-size: 0.8em;
}

/* wrapper */
#visual-portal-wrapper {
    width: 776px;
    margin: 0 auto;
    background-color: &dtml-backgroundColor;;
    border: none;
}

/* portal top area */
#portal-logo img {
    border:0 none;
    margin:5px 0 1em 2em;
    padding:0;
    position:absolute;
    top:0px;
}
#portal-header {
    background:#94d4ed url('&dtml-portal_url;/portal_header.png') no-repeat 0px 0px;
}
#portal-siteactions {
    text-align: right;
    margin: 33px 0 0 0;
    padding: 0;
   
}

ul#portal-siteactions li {
    padding: 10px 0 0 0;
}

#portal-siteactions li a {
    color: #ccc;
    border: none;
    border-right: 1px solid #4D5760;
    font-family:arial,sans-serif;
    font-size:1.1em;
    font-size-adjust:none;
    font-stretch:normal;
    font-style:normal;
    font-variant:normal;
    font-weight:400;
    letter-spacing:0.1em;
    line-height:0.8em !important;
    padding:0 1em;
}

#portal-siteactions li a:hover {
    border: none;
    border-right: 1px solid #4D5760;
    
}
li#siteaction-contact a, li#siteaction-plone_setup a, li#siteaction-contact a:hover, li#siteaction-plone_setup a:hover {
    border: none;
}


/* Global Navigation */
#portal-globalnav {
    margin-top: 200px; 
    background-color: #4f6f8a;
    background-image: url('&dtml-portal_url;/menu.gif');
    background-repeat: repeat-x;
    height: 50px;
    border-bottom: none;
    border-top:7px solid #41637D;
}

#portal-globalnav li a {
    height: 4em;
    color: white;
    font-size: 1em;
    margin:  0px;
    line-height: 4em;
    padding: 1.3em;
    border: none;
}

#portal-globalnav li a:hover, #portal-globalnav li.selected a { 
    background-color: #4A5C6A; 
    color: white;
    border-top: 1px solid #4A5C6A;
    border-bottom: 1px solid #4A5C6A;
    border-right: none;
    border-left: none;
    }


/* personaltools */
#portal-personaltools {
    background-color: #4A5C6A;
    border-top: none;
}

#portal-personaltools li a {
    color: white;
}

/* breadcrumbs */
#portal-breadcrumbs {
    border: none;
}



/* columns */

#portal-column-one {
    background-color: white;
} 

#portal-column-one .visualPadding {
    padding: 0em 0em 1em 1em;
}

#portal-column-two .visualPadding {
    background-color: #EAF2F5;
    margin: 0em 1em 1em 0;
    padding: 0;
}



/* portlets */
.portlet { 
    background-color: transparent;
    border: 0;
}

.portletItem {
    border: 0;
}

.portletHeader {
    border: 0;
    background-color: transparent;
    font-size: 1.2em;
    color: #353E47;
    font-weight: 600;
}

.portletFooter {
    border: none;
}

/* portlet Navigation */
.navTreeItem a, dd.portletItem .navTreeItem a, .navTreeItem a:hover, dd.portletItem .navTreeItem a:hover {
    border: none;
}
/* content area */

.documentContent {
    padding:0em 0em 2em 0em !important
}

/* portal footer */
#portal-footer {
    background:#6287A0;
    border: none;
    color: white;
    font-size: 0.8em;
}

#portal-footer a {
    color: #ffc;
}

#portal-colophon {
    margin: 0;
}


/* </dtml-with> */

