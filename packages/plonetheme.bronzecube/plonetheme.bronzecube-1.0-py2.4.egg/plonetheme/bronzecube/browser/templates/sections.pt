<tal:tabs tal:condition="view/portal_tabs"
          i18n:domain="plone">
    <h5 class="hiddenStructure" i18n:translate="heading_sections">Sections</h5>

    <ul id="portal-globalnav">
        <tal:tabs tal:repeat="tab view/portal_tabs"><li tal:attributes="id string:portaltab-${tab/id};
                            class python:view.selected_portal_tab==tab['id'] and 'selected' or 'plain'"
            ><a href=""
               tal:content="tab/name"
               tal:attributes="href tab/url;
                               title tab/description|nothing;">
            Tab Name
            </a></li></tal:tabs>


            <li id="portaltab-search" class="plain">

    <form style="display:inline; white-space: nowrap;" id="livesearch"
          name="searchform" tal:attributes="action string:${context/portal_url}/search"
          onsubmit="if (this.SearchableText.value == 'Website search') {this.SearchableText.value = '';}">

        <input style="display:inline" type="text" autocomplete="off"
               name="SearchableText" size="18" value="Website search"
               title="Website doorzoeken" accesskey="4"
               class="inputLabelActive" id="searchGadget"
               onblur="if (this.value == '') {this.value = 'Website search';}"
               onfocus="if (this.value == 'Website search') {this.value = '';}"/>

        <input style="display:inline" type="submit" class="searchButton" value=""/>

        <input type="hidden" id="excluded" name="excluded" value="not"/>

        <div class="searchSection" style="display:inline">
        </div>

        <div style="display:inline" class="LSResult" id="LSResult" >
            <div style="display:inline" class="LSShadow" id="LSShadow"/>
        </div>

</form>





            </li>


    </ul>
</tal:tabs>
