<div id="portal-searchbox"
     i18n:domain="plone">
    <form name="searchform"
          action="search"
          tal:attributes="action string:${view/site_url}/search">

        <label for="searchGadget" class="hiddenStructure"
                    i18n:translate="text_search">Search Site</label>

        <div class="LSBox">
        <input name="SearchableText"
               type="text"
               size="18"
               value=""
               title="Type your search here"
               accesskey="4"
               i18n:attributes="title title_search_site;"
               tal:attributes="id view/search_input_id"
               class="inputLabel" />

        <input class="searchButton"
               type="submit"
               value="" />

        <input type="hidden" id="excluded" name="excluded" value="not" />

        <div class="searchSection">
        </div>

        <div class="LSResult" id="LSResult" style=""><div class="LSShadow" id="LSShadow"></div></div>
        </div>
    </form>

    <div id="portal-advanced-search"
         class="hiddenStructure">
        <a href="#"
           tal:attributes="href string:${view/site_url}/search_form"
           i18n:translate="label_advanced_search"
           accesskey="5">
            Advanced Search&hellip;
        </a>
    </div>

</div>
