<dl class="portlet portletGoogleAnalytics"
    i18n:domain="collective.googleanalytics">
    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:replace="view/getTitle">Google Analytics</span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
        <h2 tal:content="view/getDateRangeLabel">Last 30 Days</h2>
		<div metal:use-macro="context/analytics_macros/macros/reports_results"></div>
    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <a href="http://www.google.com/analytics/" target="_blank">More analytics</a>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
