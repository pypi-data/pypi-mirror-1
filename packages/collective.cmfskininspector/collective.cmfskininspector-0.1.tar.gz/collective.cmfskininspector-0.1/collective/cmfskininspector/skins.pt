<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en-US" lang="en-US"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n">

<head>
  <style type="text/css">
    tr.layer {
      background: #ddd;
    }
    .notfound {
      color: red;
    }
    tr td img {
      margin-left: 1em;
    }
    tr.odd {
      background: #eef;
    }
  </style>
</head>
<body>
  <tal:skins repeat="skin view/skininfo">
    <h1 tal:content="skin/name"></h1>
    <table>
      <tal:paths repeat="path skin/paths">
        <tal:content tal:condition="not:exists: path/content">
          <tr class="layer">
            <td colspan="3" class="notfound">
              <span tal:content="path/name"></span>
              (not found)
            </td>
          </tr>
        </tal:content>
        <tal:content tal:condition="exists: path/content">
          <tr class="layer">
            <td colspan="3" tal:content="path/name"></td>
          </tr>
          <tal:items tal:condition="python: len(path['content'])"
                     tal:repeat="item_id path/content">
            <tr tal:define="item python:path['content'].get(item_id)"
                tal:attributes="class repeat/item_id/parity">
              <td><img tal:attributes="src item/icon" /></td>
              <td tal:content="item/name"></td>
              <td tal:content="item/meta_type"></td>
            </tr>
          </tal:items>
        </tal:content>
      </tal:paths>
    </table>
  </tal:skins>
</body>
</html>
