from PyQt4 import QtCore, QtGui
import sys
from Pynagram.gui import gui
app = QtGui.QApplication(sys.argv)
pynagram = gui.App()
try:
    pynagram.pynagram.read_from_file(sys.path[0] + "/wordlist/wordlist.txt")
except:
    pynagram.pynagram.read_from_file(sys.prefix + \
		"/share/pynagram/wordlist.txt")
pynagram.init_game()
sys.exit(app.exec_())
