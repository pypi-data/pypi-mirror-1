<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.portlet.truereview">

<body>

    <div metal:fill-slot="main">
    <metal:main-macro define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" i18n:translate="heading_review_list">Review list</h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p class="documentDescription" i18n:translate="description_review_list">
            Items for review are shown below.
        </p>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <tal:foldercontents
            define="limit_display limit_display|request/limit_display|python:40;
                    batch python:view.review_list(batch=True, sort_limit=limit_display);
                    use_view_action portal/portal_properties/site_properties/typesUseViewActionInListings|python:();">
        <tal:listing condition="batch">

            <!-- Navigation -->
            <div metal:use-macro="context/batch_macros/macros/navigation" />

            <table class="listing"
                   summary="Content listing"
                   i18n:attributes="summary summary_content_listing;">
                <thead>
                    <tr>
                        <th class="nosort">&nbsp;<tal:title i18n:translate="listingheader_title"
                          >Title</tal:title>&nbsp;</th>
                        <th class="nosort">&nbsp;<tal:title i18n:translate="listingheader_author"
                          >Author</tal:title>&nbsp;</th>
                        <th class="nosort">&nbsp;<tal:title i18n:translate="listingheader_type"
                          >Type</tal:title>&nbsp;</th>
                        <th class="nosort">&nbsp;<tal:modified i18n:translate="listingheader_modified"
                          >Modified</tal:modified>&nbsp;</th>
                    </tr>
                </thead>

                <tbody>
                    <tal:items repeat="item batch">
                    <tr metal:define-macro="listitem"
                        tal:define="oddrow repeat/item/odd;"
                        tal:attributes="class python:oddrow and 'even' or 'odd'">

                        <tal:defs define="item_url item/url;
                                          item_title_or_id item/title;
                                          item_description item/description;
                                          item_type item/portal_type;
                                          item_type_class item/portal_type_class;
                                          item_type_title item/portal_type;
                                          item_modified item/mod_date;
                                          item_icon item/icon;
                                          item_wf_state item/review_state;
                                          item_wf_state_class item/review_state_class;
                                          item_creator item/creator;
                                          ">
                            <td>
                                <span class=""
                                      tal:attributes="class item_type_class">
                                    <img tal:replace="structure item_icon" />
                                    <a href="#"
                                       tal:attributes="href python:item_type in use_view_action and item_url+'/view' or item_url;
                                                       class item_wf_state_class;
                                                       title item_description;"
                                       tal:content="item_title_or_id">
                                        Item Title
                                    </a>
                                </span>
                            </td>

                            <td>
                                <tal:name tal:condition="item_creator"
                                  tal:define="author python:mtool.getMemberInfo(item_creator)">
                                <a href="#"
                                   tal:attributes="href string:${context/@@plone_portal_state/navigation_root_url}/author/${item_creator}"
                                   tal:content="python:author and author['fullname'] or item_creator"
                                   tal:omit-tag="not:author">
                                  Bob Dobalina
                                </a>
                                </tal:name>
                            </td>

                            <td tal:content="item_type_title"
                                i18n:translate="">
                                Page
                            </td>

                        <td tal:content="item_modified">
                          August 16, 2001 at 23:35:59
                        </td>

                        </tal:defs>
                    </tr>
                    </tal:items>
                </tbody>
            </table>

            <!-- Navigation -->
            <div metal:use-macro="context/batch_macros/macros/navigation" />

        </tal:listing>

        <p class="discreet"
           tal:condition="not: batch"
           i18n:translate="description_no_items_in_folder">
            There are currently no items in this folder.
        </p>

        </tal:foldercontents>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </metal:main-macro>
    </div>

</body>
</html>
