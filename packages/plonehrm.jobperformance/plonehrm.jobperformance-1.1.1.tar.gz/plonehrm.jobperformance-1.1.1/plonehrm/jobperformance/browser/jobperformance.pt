<div xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     i18n:domain="jobperformance"
     tal:omit-tag="">
  <dl class="module"
      id="viewlet-jobperformance">
    <dt class="moduleHeader">
      <a class="moduleButton"
         tal:attributes="href string:${here/absolute_url}/folder_contents?portal_type=JobPerformanceInterview&amp;sort_order=reverse&amp;sort_on=Date"
         >
        <img src="folder_icon.gif"
             alt="Show all performance interviews"
             title="Show all performance interviews"
             i18n:attributes="title show_all_interview;
                              alt show_all_interview;" />
      </a>
      <a class="moduleButton"
         tal:condition="python: context.portal_membership.checkPermission('plonehrm: Add performance interview', here)"
         tal:attributes="href string:${here/absolute_url}/createObject?type_name=JobPerformanceInterview"
         >
        <img src="add_icon.gif"
             alt="Add new interview"
             title="Add new interview"
             i18n:attributes="title add_new_interview;
                              alt add_new_interview;" />
      </a>
      <span tal:omit-tag=""
            i18n:translate="head_job_performance">Job performance</span>
    </dt>
    <dd class="moduleItem lastItem">
      <div tal:define="improvements view/improvementAreas"
           tal:condition="improvements"
           tal:omit-tag="">
        <h3 i18n:translate="latest-improvement-areas">
          Latest improvement areas
        </h3>
        <ul>
          <li tal:repeat="improvement improvements"
              tal:content="improvement">
            Improvement text.
          </li>
        </ul>
      </div>
      <div tal:define="interviews view/interviews;
                       toLocalizedTime nocall:context/@@plone/toLocalizedTime;"
           tal:condition="interviews"
           tal:omit-tag="">
        <ul>
          <li tal:repeat="interview interviews">
            <span class="jobperformance_date discreet"
                tal:content="python:toLocalizedTime(interview['date'])">
               2006-07-08
            </span>
            <a tal:attributes="href interview/url;
                               title interview/title"
               tal:content="interview/title"> link title </a>
          </li>
        </ul>

      </div>
    </dd>
  </dl>
</div>
