<div id="improvement-areas-edit"
     i18n:domain="jobperformance"
     tal:define="errors python:{};
                 portal nocall:context;">
  <h2 i18n:translate="label_improvementAreas">
    Improvement areas
  </h2>

  <form tal:attributes="class string:field inlineForm enableUnloadProtection;
                        id string:kss-inlineform-improvementAreas;">
    <metal:field use-macro="python:context.widget('improvementAreas', mode='edit')">
  
    Body text
    </metal:field>
    <div class="formControls"
         i18n:domain="plone">
      <input name="improvement-save"
             value="Save" type="button"
             i18n:attributes="value label_save;"
             class="context" />
      <input name="improvement-cancel"
             value="Cancel" type="button"
             i18n:attributes="value label_cancel;"
             class="standalone" />
    </div>
  </form>
</div>
