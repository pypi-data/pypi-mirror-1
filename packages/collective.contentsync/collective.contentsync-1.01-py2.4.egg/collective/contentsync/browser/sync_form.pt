<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.contentsync">

<body>

<metal:fill fill-slot="main">
  <script tal:attributes="src string:${view/context/absolute_url}/referencebrowser.js"></script>

  <h1 i18n:translate="select_target">
    Select Target
  </h1>

  <div class="formHelp"
       i18n:translate="select_target_help">
    The contents of this item can be synchronized to another item. Use the
    form to select an item to synchronize to.
  </div>

  <form tal:attributes="action string:${view/context/absolute_url}/@@${view/name}.handle"
        name="sync_form"
        method="POST">
    <tal:def define="errors options/errors|python:{};                     
                     field view/field;
                     fieldName field/getName;
                     widget nocall:field/widget;
                     accessor python:lambda:None;
                     mode string:edit;
                     at_url python:'/'.join(list(view.context.getPhysicalPath())+['@@%s.wrappedcontent' % view.name()])">
      <metal:use use-macro="context/referencebrowser/macros/edit"/>
    </tal:def>
    <input i18n:attributes="value label_synchronize"
           class="context" 
           type="submit" 
           name="submit" 
           value="Synchronize"/>
  </form>
</metal:fill>

</body>

</html>
