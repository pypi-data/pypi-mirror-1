<html metal:use-macro="context/@@standard_macros/view">
    <div metal:fill-slot="body" i18n:domain="videoengine">
        <h3>Stat</h3>
        <div class="row">
        <div class="label">
            <label title="">Amount of elements</label>
        </div>
            <div class="field" tal:content="context/elementsamount"/>
        </div>

        <div class="row">
        <div class="label">
            <label title="">Summary size of elements</label>
        </div>
            <div class="field" tal:content="python: str(context.elementssize) + ' kb'"/>
        </div>

        <div class="row">
        <div class="label">
            <label title="">Mean size of elements</label>
        </div>
            <div class="field" tal:content="python: str(context.meansize) + ' kb'"/>
        </div>
        <p>
        <form name="statViewForm" method="post" action="."
            tal:attributes="action string: ${context/@@absolute_url}/">

            <input type="submit" name="clear:method" value="Clear"
                i18n:attributes="value clear-button"
                i18n:domain="zope"
                />

            <input type="submit" name="reindex:method" value="Reindex"
                i18n:attributes="value reindex-button"
                i18n:domain="zope"
                />

            <input type="submit" name="reindexalternative:method" value="Alternative Reindex"
                i18n:attributes="value reindexalternative-button"
                i18n:domain="zope"
                />

        </form>
    </div>
</html>
