<body>
    <tal:macro metal:define-macro="header">
        <h1 class="documentFirstHeading">
            <tal:field metal:use-macro="python:here.widget('title', mode='view')">
            Title
            </tal:field>
        </h1>
        <div class="documentByLine">        
        Quellentext. Erstellungsdatum: 
            <span tal:replace="python:here.toLocalizedTime(context.CreationDate(), long_format=1)" />
        </div>
        <div>
            <span tal:replace="structure provider:plone.belowcontenttitle" />
        </div>
        <h4>Fundort:
            <tal:field metal:use-macro="python:here.widget('fundort', mode='view')">
            </tal:field>
        </h4>
        <h4>Druckort:
            <tal:field metal:use-macro="python:here.widget('druckort', mode='view')">
            </tal:field>
        </h4>
        <p/>
    </tal:macro>
    
    <tal:main-macro metal:define-macro="body">
        <h4>Regest: </h4>
            <tal:field metal:use-macro="python:here.widget('regest', mode='view')"/>
        <h4>Originaltext:</h4>
            <tal:field metal:use-macro="python:here.widget('originaltext', mode='view')"/>
        <h4>Kommentar:</h4>
            <tal:field metal:use-macro="python:here.widget('kommentar', mode='view')"/>    
    </tal:main-macro>
</body>
</html>
