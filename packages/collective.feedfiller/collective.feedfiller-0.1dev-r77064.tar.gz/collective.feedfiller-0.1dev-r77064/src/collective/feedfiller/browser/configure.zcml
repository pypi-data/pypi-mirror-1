<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="collective.feedfiller">

    <include package="plone.app.contentmenu" />

    <browser:resource
        name="feedfiller.css"
        file="feedfiller.css"
        />
        
    <browser:resource
        name="knewsticker.png"
        file="knewsticker.png"
        />
                        
    <browser:page
        for="Products.feedfeeder.interfaces.item.IFeedItem"
        name="raw_view"
        class=".raw.RawView"
        permission="zope2.View"
        />
        
    <browser:page
        name="is_feeditem"
        class="collective.feedfiller.browser.feed.IsFeedItem"
        for="*"
        attribute="is_feeditem"
        permission="zope2.View"
        />

   <browser:page
        name="refill_feed_items"
        class=".feed.RefillFeedItems"
        for="Products.feedfeeder.interfaces.container.IFeedsContainer"
        allowed_interface=".feed.IRefillFeedItems"
        permission="cmf.ManagePortal"
        />   
        
   <browser:page
        name="refill_feed_item"
        class=".feed.RefillFeedItem"
        for="Products.feedfeeder.interfaces.item.IFeedItem"
        allowed_interface=".feed.IRefillFeedItem"
        permission="cmf.ManagePortal"
        />   
        
   <browser:page
        name="update_all_feeds"
        class=".feed.FeedUpdater"
        for="*"
        allowed_interface=".feed.IUpdateAllFeeds"
        permission="cmf.ManagePortal"
        />   

   <browser:page
        name="refill_all_feeds"
        class=".feed.FeedRefiller"
        for="*"
        allowed_interface=".feed.IRefillAllFeeds"
        permission="cmf.ManagePortal"
        />   
         
</configure>
