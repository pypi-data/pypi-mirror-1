<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="collective.feedfiller">

    <five:registerPackage package="." initialize=".initialize" />
    
    <!-- Include the sub-packages that use their own configure.zcml files. -->
    <include package=".browser" />

    <adapter
       factory=".adapters.FeedItemExpanderAdapter"
       for="Products.feedfeeder.interfaces.item.IFeedItem"
       provides="collective.feedfiller.interfaces.IExpandedFeedItem"
       />
       
    <subscriber 
       for="Products.feedfeeder.events.FeedItemConsumedEvent"
       handler=".handlers.feedItemArrivedHandler"
       />
       
   <genericsetup:registerProfile
       name="default"
       title="Feedfiller"
       directory="profiles/default"
       description="Add automated filling of target content in Feed Items."
       provides="Products.GenericSetup.interfaces.EXTENSION"
       />

</configure>
