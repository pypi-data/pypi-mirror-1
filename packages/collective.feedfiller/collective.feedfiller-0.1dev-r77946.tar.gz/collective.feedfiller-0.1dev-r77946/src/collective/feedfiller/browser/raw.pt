<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.feedfiller">
<body>

<metal:css fill-slot="css_slot">
    <style type="text/css" media="all"
            tal:content="string: @import url(${context/++resource++feedfiller.css});"></style>
</metal:css>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="body view/body;
                       author view/author;
                       copyright view/copyright;
                       original_url view/original_url">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading">
            <span metal:use-macro="python:context.widget('title', mode='view')" />
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div class="documentDescription">
            <span metal:use-macro="python:context.widget('description', mode='view')" />
        </div>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div class="originalUrl">
            <a tal:attributes="href original_url" target='_blank'>Original page</a> 
        </div>
        
        <div class="author" tal:condition="author">
           Author: <span tal:content="structure author" /> 
        </div>
        
        <div class="copyright" tal:condition="copyright">
           Rights: <span tal:content="structure copyright"/>
        </div> 
        
        <div class="originalBody" tal:condition="body" tal:content="structure body" /> 
            
        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>

