<h1 tal:replace="structure context/manage_page_header">Header</h1>
<h1 tal:replace="structure python: here.manage_form_title( here
                                                         , form_title='Add Watermark Image'
                                                         )">
  Form title bar
</h1>

<br/>

<form action="manage_addWatermarkImage" method="post"
      enctype="multipart/form-data">

  <table>

    <tr>
      <td align="left" valign="top"><div class="form-label">
        Id
      </div></td>
      <td align="left" valign="top"><div class="form-element">
        <input type="text" name="id" size="40" />
      </div></td>
    </tr>

    <tr>
      <td align="left" valign="top"><div class="form-optional">
        Title
      </div></td>
      <td align="left" valign="top"><div class="form-element">
        <input type="text" name="title" size="40" />
      </div></td>
    </tr>

    <tr>
      <td align="left" valign="top"><div class="form-optional">
        Description
      </div></td>
      <td align="left" valign="top"><div class="form-element">
        <textarea cols="45" rows="10" name="description"></textarea>
      </div></td>
    </tr>

    <tr>
      <td align="left" valign="top"><div class="form-optional">
        Upload Image
      </div></td>
      <td align="left" valign="top">
        <input type="file" name="file" size="25" value="">
      </td>
    </tr>

    <tr>
      <td align="left" valign="top">&nbsp;</td>
      <td align="left" valign="top"><div class="form-element">
        <input class="form-element" type="submit" name="submit" 
               value=" Add " />
      </div></td>
    </tr>

  </table>

</form>

<h1 tal:replace="structure context/manage_page_footer">Footer</h1>
