<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="Products.PDFtoOCR">

    <browser:page
      for="*"
      name="do_pdf_ocr_index"
      permission="cmf.ManagePortal"
      class=".do_index.DoIndexView" 
      attribute="index"
      />     

    <browser:page
      for="*"
      name="do_pdf_ocr_reindex"
      permission="cmf.ManagePortal"
      class=".do_index.DoIndexView" 
      attribute="reindex"
      />     

    <browser:page
      for="*"
      name="pdf_ocr_status"
      permission="cmf.ManagePortal"
      class=".do_index.DoIndexView" 
      template="status.pt"
      />     


</configure>
