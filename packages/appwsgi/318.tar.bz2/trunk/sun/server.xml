<server>

  <!-- Copyright(c) gert.cuykens@gmail.com --!>
  <!-- download mysql-connector-java-5.0.7-bin.jar and put it in $INSTANCE/lib -->

  <jdbc-resource>
    <jndi-name>jdbc/mysql</jndi-name>
    <datasource-class>com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource</datasource-class>
    <min-connections>1</min-connections>
    <max-connections>5</max-connections>
    <wait-timeout>5</wait-timeout>
    <property>
      <name>user</name>
      <value>root</value>
    </property>
    <property>
      <name>password</name>
      <value>root</value>
    </property>
    <property>
      <name>url</name>
      <value>jdbc:mysql://localhost/www</value>
    </property>
  </jdbc-resource>

</server>
