<configure
    xmlns="http://namespaces.zope.org/zope">
  <!--
    Author: Andrey Orlov, 2008
    $Id: configure.zcml 51196 2008-06-26 14:16:21Z cray $ 
  -->

  <!-- Разрешаем IMain быть адаптивным корнем сайта -->
  <class class="ng.content.article.maincontainer.maincontainer.MainContainer">
    <implements interface="ng.adapter.adaptiveurl.interfaces.IAdaptiveURLRoot"/> 
    <require
        permission="zope.View"
        interface="ng.adapter.adaptiveurl.interfaces.IAdaptiveURLRoot"
        />

    <require
        permission="zope.ManageContent"
        set_schema="ng.adapter.adaptiveurl.interfaces.IAdaptiveURLRoot"
        /> 

  </class>

</configure>
