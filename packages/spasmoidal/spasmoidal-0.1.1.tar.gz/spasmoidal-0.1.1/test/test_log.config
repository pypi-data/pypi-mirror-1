[loggers]
keys=root

[handlers]
keys=console,diskfile

[formatters]
keys=terseformat,verboseformat

[logger_root]
level=DEBUG
handlers=console,diskfile

[handler_console]
class=StreamHandler
level=NOTSET
formatter=terseformat
args=(sys.stdout,)

[handler_diskfile]
class=FileHandler
level=NOTSET
formatter=verboseformat
args=(LOGFILE, 'w')

[formatter_terseformat]
format=%(asctime)s %(levelname)s:%(name)s:%(message)s

[formatter_verboseformat]
format=%(asctime)s %(levelname)s:%(name)s:%(message)s

