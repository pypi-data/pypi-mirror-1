<config>
	<modules> 
		<module 
		    name="periodic_logger" 
		    log_name="echo_server" 
		    log_format="%(bytes_received)5d bytes received %(bytes_sent)5d bytes sent" 
		    interval="60.0"
		>
		    spasmodic_periodic_logger
		    <log_items>
		        <log_item key="bytes_received" clear_to="0"/>
		        <log_item key="bytes_sent" clear_to="0"/>
		    </log_items>
		</module>
		<module name="pollster" interval="0.01" timeout="0.01">
			spasmodic_pollster
		</module>
		<module name="acceptor" ip_address="127.0.0.1" port="4444" timeout="0.01">
			spasmodic_socket_acceptor
			<handler name="echo">
				echo_handler
			</handler>
		</module>
	</modules>
</config>
