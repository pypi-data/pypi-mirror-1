<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="psj.content">
<body>

<metal:css fill-slot="css_slot">
    <style type="text/css" media="all"
            tal:content="string: @import url(${context/++resource++psj-content.css});"></style>
</metal:css>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
		    tal:define="text python:None;">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading">
            <span metal:use-macro="python:context.widget('title', mode='view')" />
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div class="documentDescription">
            <span metal:use-macro="python:context.widget('description', mode='view')" />
        </div>
        
        <div tal:replace="structure provider:plone.abovecontentbody" />

	<div tal:on-error="nothing"
	     tal:condition="python: 
			    context.portal_membership.checkPermission('PSJ: Add PSJ Document', context)">
	  <div metal:use-macro="python: 
				context.widget('document', mode='view')"/>
	</div>

	<div>
	  <div metal:use-macro="python: 
				context.widget('pdfdocument', mode='view')"/>
	</div>

	<div tal:condition="view/getDocLink"
	     tal:define="doclink view/getDocLink"
	     class="doclink">
	  <span i18n:translate="">BSB Digitale Bibliothek:</span>
	  <a href=""
	     tal:attributes="href doclink"
	     tal:content="doclink">http:example.org/foo</a>
	</div>

	<div class="metadatabox" 
	     tal:content="structure provider:psj.metadatadocument" />

        <div tal:replace="structure view/getDocument" />

        <div metal:use-macro="context/document_relateditems/macros/relatedItems">
            show related items if they exist
        </div>
    
        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>
