<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="freearch">

<body>

    <div metal:fill-slot="main">
    <metal:main-macro define-macro="main"
                      tal:define="kssClassesView context/@@kss_field_decorator_view;
                                  getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                                  templateId template/getId">
<!--
        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 metal:use-macro="here/kss_generic_macros/macros/generic_title_view">
            Title or id
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p metal:use-macro="here/kss_generic_macros/macros/generic_description_view">
            Description
        </p>
-->

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <table id="front_page">
          <tr>
            <td>
            <h2 id="es_ot01"
              i18n:translate="news">
              News
            </h2>
            <div id="es_field01" tal:define="news view/recently_published_news">
              <tal:dummy repeat="news_item news">
                <div class="news_field">
                  <a tal:condition="news_item/news_obj/getImage"
                      href="" tal:attributes="href string:${news_item/url};">
                      <img tal:replace="structure news_item/news_obj/image_thumb/tag" />
                        </a>
                        <div id="news_date">
                        <span tal:content="news_item/year" />&#45;<span tal:content="news_item/month" />&#45;<span tal:content="news_item/day" />&#58;
                        </div>
                        <h3>
                  <a id="news_field" href="" tal:attributes="href string:${news_item/url};
                          title news_item/description"
                          tal:content="news_item/title">
                  </a>
                  </h3>
                  <p>
                    <span tal:content="news_item/description">
                    Description of this news.
                    </span>&#32;
                    <a id="news_field" href=""
                      tal:attributes="href string:${news_item/url};"
                      i18n:translate="more">Read more&#32;&raquo;
                    </a>
                  </p>
                </div>
                <div class="news_visualclear"><!-- for IE --></div>
              </tal:dummy>
            </div>

            </td>
            <td>

            <tal:lang define="boundLanguages here/portal_languages/getLanguageBindings; prefLang python:boundLanguages[0];">
              <h2 id="es_ot02" i18n:translate="blog">Blogi</h2>
              <div id="es_field02">
                <tal:rep repeat="item python:view.get_blog_feed(prefLang)[0:5]">
                  <span class="discreet" tal:content="item/friendly_time" />:
                  <a style="display: block; margin-bottom: 0.5em" tal:attributes="href item/url">
                    <span tal:content="item/title" />&raquo;
                  </a>
                </tal:rep>
              </div>
            </tal:lang>


            </td>
            <td>
            <h2 id="es_ot03"
              i18n:translate="references">
              References
            </h2>
            <div id="es_field03" tal:define="news view/get_references">
              <div class="news_field" tal:repeat="news_item news">
                <a tal:condition="news_item/news_obj/getImage"
                    href="" tal:attributes="href string:${news_item/url};">
                    <img tal:replace="structure news_item/news_obj/image_thumb/tag" />
                      </a>
                      <h3>
                <a id="news_field" href="" tal:attributes="href string:${news_item/url};
                        title news_item/description"
                        tal:content="news_item/title">
                </a>
                </h3>
                <p>
                  <span tal:content="news_item/description">
                  Description of this news.
                  </span>&#32;
                  <a id="news_field" href=""
                    tal:attributes="href string:${news_item/url};"
                    i18n:translate="more">Read more&#32;&raquo;
                  </a>
                </p>
              </div>
            </div>
            </td>
          </tr>
        </table>


        <div tal:replace="structure provider:plone.belowcontentbody" />

    </metal:main-macro>
    </div>

</body>
</html>
