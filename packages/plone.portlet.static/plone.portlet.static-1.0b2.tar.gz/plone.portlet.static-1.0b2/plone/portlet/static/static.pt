<dl class="portlet portletStaticText"
    i18n:domain="plone.portlet.static">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span>
           <a tal:omit-tag="not:view/header_is_link"
              tal:attributes="href view/data/header_url"
              tal:content="view/data/header"
              />
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd" tal:content="structure view/data/text" />
    
    <dd class="portletFooter" tal:condition="view/has_footer">
        <span class="portletBotomLeft"></span>
        <span>
           <a tal:omit-tag="not:view/footer_is_link"
              tal:attributes="href view/data/footer_url"
              tal:content="view/data/footer"
              />
        </span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
