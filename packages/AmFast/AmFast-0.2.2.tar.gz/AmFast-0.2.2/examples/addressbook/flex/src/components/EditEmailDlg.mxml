<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"
	layout="vertical" title="Edit Email"
	creationComplete="creationCompleteHandler()">
	<mx:Form>
		<mx:FormItem label="Persistent:">
			<mx:Label text="{email.isPersistent()}" />
		</mx:FormItem>
	
		<mx:FormItem label="Label:">
			<mx:TextInput
				id="emailLabel"
				text="{email.label}" />
		</mx:FormItem>
		
		<mx:FormItem label="Email:">
			<mx:TextInput
				id="emailText"
				text="{email.email}" />
		</mx:FormItem>
	</mx:Form>

	<mx:HBox width="100%" horizontalAlign="center" verticalAlign="center">
		<mx:Button
			label="Close"
			click="close()"
			toolTip="Close window." />
	</mx:HBox>
	
	<mx:Script>
		<![CDATA[
			import mx.core.Application;
			import mx.managers.PopUpManager;
			
			import models.Email;
		
			[Bindable]
			public var email:Email;
			
			protected function creationCompleteHandler():void
			{
				PopUpManager.centerPopUp(this);
			}
			
			protected function close():void
			{
				email.label = emailLabel.text;
				email.email = emailText.text;
				PopUpManager.removePopUp(this);	
			}
		]]>
	</mx:Script>
</mx:TitleWindow>
