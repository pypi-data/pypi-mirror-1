<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <!-- Labeled Url Widget -->
    <metal:view_macro define-macro="view"
            tal:define="kssClassesView context/@@kss_field_decorator_view;
                        getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;">
        <span metal:define-macro="labeled-url-field-view"
            tal:define="kss_class python:getKssClasses(fieldName,
                            templateId='labeled_url_widget', macro='labeled-url-field-view');
                        data accessor"
            tal:attributes="class kss_class;
                            id string:parent-fieldname-$fieldName;">
            <a metal:define-slot="inside"
                 href=""
	         tal:attributes="href data/url"
                 tal:content="data/label">#</a>
        </span>
    </metal:view_macro>

  </body>

</html>
