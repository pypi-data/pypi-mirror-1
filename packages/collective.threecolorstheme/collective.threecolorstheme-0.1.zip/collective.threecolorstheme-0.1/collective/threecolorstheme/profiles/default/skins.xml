<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="3 Colors Theme">


 <object name="threecolorstheme_styles"
    meta_type="Filesystem Directory View"
    directory="collective.threecolorstheme:skins/threecolorstheme_styles"/>
 
 <object name="threecolorstheme_templates"
    meta_type="Filesystem Directory View"
    directory="collective.threecolorstheme:skins/threecolorstheme_templates"/>
    
 <object name="threecolorstheme_images"
    meta_type="Filesystem Directory View"
    directory="collective.threecolorstheme:skins/threecolorstheme_images"/>    

 <skin-path name="3 Colors Theme" based-on="Plone Default">
  <layer name="threecolorstheme_styles"
     insert-after="custom"/>
  <layer name="threecolorstheme_templates"
     insert-after="threecolorstheme_styles"/>
  <layer name="threecolorstheme_images"
     insert-after="threecolorstheme_templates"/>
 </skin-path>

</object>
