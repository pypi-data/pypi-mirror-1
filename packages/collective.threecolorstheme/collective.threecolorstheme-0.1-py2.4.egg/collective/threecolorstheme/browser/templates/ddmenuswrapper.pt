<tal:globalAndCacheHeaders define="isInHttpCaches view/headers_define">
<tal:noCache condition="not: isInHttpCaches">
<tal:block define="portaltabs view/portal_tabs">
  <tal:tabs tal:condition="portaltabs"
            i18n:domain="plone">

    <tal:tabs tal:repeat="tab portaltabs">       
      <li tal:define="sectionNumber repeat/tab/number"
          tal:attributes="id string:portaltab-${tab/id};
                          class string:sectionniv1 plain section-nb-$sectionNumber">
          <a href="" 
             tal:content="tab/name"
             class= "niv1link"
             tal:attributes="href tab/url;
                             title tab/description|nothing;">
              Tab Name
          </a>                  
          <metal:block use-macro="context/@@ddmenusmacros/macros/ddmenu-recurse" />
      </li>
    </tal:tabs>

  </tal:tabs>
</tal:block>
</tal:noCache>
</tal:globalAndCacheHeaders>

