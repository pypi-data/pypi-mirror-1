<dt tal:define="item_wf_state_class string:state-${options/brain/review_state};
                ploneview context/@@plone"
    tal:attributes="class python:'contenttype-' + options['utils'].normalizeString(options['brain'].portal_type)">
    <img tal:replace="structure python:ploneview.getIcon(options['brain']).html_tag()" />
    <a href="#" 
       tal:attributes="href string:${options/brain/getURL}/view;
                       class string:$item_wf_state_class"
       tal:content="options/brain/pretty_title_or_id" />
</dt>

<dd tal:define="ploneview context/@@plone">
    <span tal:replace="python:ploneview.cropText(options['brain'].Description, options['site_properties'].search_results_description_length, options['site_properties'].ellipsis)">
        Cropped description
    </span>

    <span class="documentByLine"
          tal:condition="python:not not view.portal_state.anonymous or options['site_properties'].allowAnonymousViewAbout">

        <span class="documentAuthor"
              i18n:translate="label_by_author">
            by
            <a href="#"
               tal:attributes="href string:${view/site_url}/author/${options/brain/Creator}"
               tal:content="options/brain/Creator"
               tal:omit-tag="not:options/brain/Creator"
               i18n:name="author">
                Bob Dobalina
            </a>
        </span>

        <span class="documentModified">
            &mdash;
            <span i18n:translate="box_last_modified">
                last modified
            </span>
            <span tal:replace="python:options['utils'].toLocalizedTime(options['brain'].ModificationDate, long_format=1)">
                August 16, 2001 at 23:35:59
            </span>
        </span>

        <span tal:define="categories options/brain/Subject|nothing"
              tal:condition="categories">
            &mdash;
            <tal:filedunder i18n:translate="label_filed_under">filed under:</tal:filedunder>
                <span tal:repeat="category categories">
                    <a href=""
                       class="link-category"
                       rel="tag"
                       tal:content="category"
                       tal:attributes="href string:${portal_url}/search?Subject%3Alist=${category}">
                       Category
                    </a><tal:separator condition="not: repeat/category/end">,</tal:separator>
                </span>
        </span>    

        <span class="relevance" 
              tal:condition="options/brain/data_record_normalized_score_">
            &mdash;
            <tal:relevance i18n:translate="label_relevance_percentage">
                Relevance:
                <span tal:content="options/brain/data_record_normalized_score_"
                       tal:omit-tag=""
                       i18n:name="percentage">23</span>%
            </tal:relevance>
        </span>
    </span>

</dd>
