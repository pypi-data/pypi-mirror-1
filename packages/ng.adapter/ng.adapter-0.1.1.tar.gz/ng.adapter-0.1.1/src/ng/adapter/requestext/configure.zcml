<configure
    xmlns="http://namespaces.zope.org/zope">

  <!--
    Author: Andrey Orlov, 2007
    $Id: configure.zcml 49195 2008-01-05 19:49:47Z cray $ 
  -->

    <adapter
        for="zope.interface.Interface zope.publisher.interfaces.http.IHTTPRequest"
        name="requestext"
        factory=".requestext.RequestExtView"
        permission="zope.Public"
        provides=".interfaces.IRequestExt"
    />

    <adapter 
        for="zope.publisher.interfaces.IRequest"
        provides=".interfaces.IRequestExt"
        factory=".requestext.RequestExt" 
        permission="zope.Public"
        trusted="False"
    />
    
</configure>
