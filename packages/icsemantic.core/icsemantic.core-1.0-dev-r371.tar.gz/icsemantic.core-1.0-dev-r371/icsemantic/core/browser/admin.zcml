<configure xmlns="http://namespaces.zope.org/zope"
                     xmlns:browser="http://namespaces.zope.org/browser"
                     xmlns:five="http://namespaces.zope.org/five"
                     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
                     i18n_domain='icSemantic'>

    <!-- Admin Menus -->
    <browser:menu
         id="icsemantic_admin"
         title="icsemantic Administration"
         />

    <browser:menu
         id="icSemantic_settings"
         title="Settings"
         />

    <browser:menu
         id="icsemantic_user_admin"
         title="icsemantic User Administration"
         />

    <browser:menu
         id="icsemantic_user_settings"
         title="User Settings"
         />

    <!-- Settings Master Template -->
    <browser:page
        for="*"
        name="manage-icsemantic-settings-template"
        template="templates/settings-template.pt"
        permission="cmf.ManagePortal"
        />

    <!-- Management UI Overview -->
    <browser:page
        for="..interfaces.IicSemanticSite"
        name="manage-icsemantic-overview"
        class=".admin.Overview"
        template="templates/admin-overview.pt"
        permission="cmf.ManagePortal"
        menu="icsemantic_admin"
        title="Settings"
        />

    <!-- User Overview -->
    <browser:page
        for="*"
        name="user-icsemantic-overview"
        class=".admin.UserOverview"
        template="templates/user-overview.pt"
        permission="cmf.ManagePortal"
        menu="icsemantic_user_admin"
        title="Settings"
        />

    <!-- Management Content Types Editing -->
    <browser:page
        for="..interfaces.IicSemanticSite"
        name="manage-icsemantic-content-types"
        class=".admin.ContentTypes"
        permission="cmf.ManagePortal"
        menu="icSemantic_settings"
        title="Content Types"
        />

    <!-- Manage user languages -->
    <browser:page
        for="*"
        name="manage-icsemantic-user-languages"
        class=".admin.ManageUserLanguages"
        permission="cmf.SetOwnProperties"
        menu="icsemantic_user_settings"
        title="User Languages"
        />

    <adapter
        factory=".base.settings_form_template"
        for="*"
        name="settings.form"
        />

</configure>
