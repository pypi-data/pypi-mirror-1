#!/usr/bin/make -f
DEB_PYTHON_SYSTEM := pysupport

# CDBS rules :)
include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/python-distutils.mk

install/cleverbox::

	# Project documentation is superceded by dedicated Debian docs
	rm -r debian/cleverbox/usr/share/doc
	
binary-install/cleverbox::
	
	# Enable mandatory apache modules
	a2enmod dav_fs
	a2enmod dav_svn

	# Reload apache
	/etc/init.d/apache2 reload