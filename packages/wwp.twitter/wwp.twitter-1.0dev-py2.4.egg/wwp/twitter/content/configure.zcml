<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    i18n_domain="wwp.twitter">

  <!-- configure your content components here -->
  
  <!-- -*- extra stuff goes here -*- -->
  <class class=".twittertrends.twittertrends">
    <require
        permission="zope2.View"
        interface="..interfaces.Itwittertrends"
        />
    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.Itwittertrends"
        />
  </class>
  <class class=".twitterpage.TwitterPage">
    <require
        permission="zope2.View"
        interface="..interfaces.ITwitterPage"
        />
    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.ITwitterPage"
        />
  </class>

</configure>
