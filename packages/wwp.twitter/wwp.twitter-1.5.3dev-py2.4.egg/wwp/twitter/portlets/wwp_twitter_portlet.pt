<dl class="portlet portletwwp_twitter_portlet"
    i18n:domain="wwp.twitter.portlets">

    <dt class="portletHeader">
        <span class="portletTopLeft" tal:define="username view/username"></span>
		<span tal:define="username view/username">
		<p> Follow us: <a tal:content="username" tal:attributes="href python:'http://twitter.com/'+ username"></a></p>
		</span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
        
        
		<table align="center" border="0" cellpadding="2" cellspacing="2">  
		
		<span tal:define="tweets view/get_tweets;">
			<span tal:repeat="tweet tweets">
				<tr>
					<td valign="top">
						<span tal:content="tweet/text" />
					</td>
				</tr>
			<tr><td><hr></td></tr>
			</span>
		</span>
		</table> 
    </dd>


</dl>
