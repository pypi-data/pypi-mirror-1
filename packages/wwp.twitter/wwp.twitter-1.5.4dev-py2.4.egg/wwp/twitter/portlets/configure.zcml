<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="wwp.twitter">

  <!-- Ensure Plone's portlets ZCML has already been processed;
       without this, we may get a permission lookup error -->
  <include package="plone.app.portlets" />

	<!-- -*- extra stuff goes here -*- -->

  <plone:portlet
      name="wwp.twitter.portlets.wwp_twitter_portlet"
      interface=".wwp_twitter_portlet.Iwwp_twitter_portlet"
      assignment=".wwp_twitter_portlet.Assignment"
      view_permission="zope2.View"
      edit_permission="cmf.ManagePortal"
      renderer=".wwp_twitter_portlet.Renderer"
      addview=".wwp_twitter_portlet.AddForm"
      editview=".wwp_twitter_portlet.EditForm"
      />


</configure>
