<dl class="portlet portletAmazonPortlet"
    i18n:domain="collective.portlet.amazon">

    <dt class="portletHeader">
        <span tal:content="view/data/amazon_title"></span>
    </dt>

    <dd class="portletItem odd">
        <div tal:define="asin  view/data/amazon_asin;
			 track view/data/amazon_track;
			 txt   view/data/amazon_txclr;
			 bg    view/data/amazon_bgclr;
			 lnk   view/data/amazon_lkclr;
			 t1    string:http://rcm.amazon.com/e/cm?t=;
			 t2    string:&o=1&p=8&l=as1&asins=;
                         t3    string:&fc1=;
                         t4    string:&IS2=1&lt1=_blank&lc1=;
                         t5    string:&bc1=;
                         t6    string:&bg1=;
                         t7    string:&f=ifr;"
	     style="text-align: center;">
		<iframe tal:condition="view/data/amazon_asin"
			tal:attributes="src python: t1 + track + t2 + asin + t3 + txt + t4 + lnk + t5 + bg + t6 + bg + t7" 
			style="width:120px; height:240px; margin-bottom: 7px;" 
			scrolling="no" 
			marginwidth="0" 
			marginheight="0" 
			frameborder="0">
		</iframe>
	</div>
    </dd>

</dl>
