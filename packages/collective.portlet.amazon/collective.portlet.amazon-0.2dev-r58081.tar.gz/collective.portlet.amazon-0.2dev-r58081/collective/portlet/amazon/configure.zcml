<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="collective.portlet.amazon">

    <five:registerPackage package="." initialize=".initialize" />
    
    <genericsetup:registerProfile
       name="default"
       title="Amazon portlet"
       directory="profiles/default"
       description="This ifor Plone 3 that allows you to display a product from Amazon.com and make money through your Amazon Affiliates account."
       provides="Products.GenericSetup.interfaces.EXTENSION"
       />
 
     <!-- Register the portlet -->
     
     <!-- If the portlet has no configurable parameters, you can remove
          the EditForm declaration in amazonportlet.py and delete
          the 'editview' attribute from this statement.
       -->

     <plone:portlet
         name="collective.portlet.amazon.AmazonPortlet"
         interface=".amazonportlet.IAmazonPortlet"
         assignment=".amazonportlet.Assignment"
         view_permission="zope2.View"
         edit_permission="cmf.ManagePortal"
         renderer=".amazonportlet.Renderer"
         addview=".amazonportlet.AddForm"
         editview=".amazonportlet.EditForm"
         />

</configure>
