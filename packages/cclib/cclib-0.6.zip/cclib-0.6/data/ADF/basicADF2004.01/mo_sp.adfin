#!/bin/bash
#PBS -l nodes=1:ppn=1,mem=600mb,walltime=72:00:00
#PBS -m ae -M adamlt@stanford.edu

cd $PBS_O_WORKDIR

export NSCM=1
export SCM_MACHINEFILE=$PWD/machine
export SCM_TMPDIR=$PBS_O_WORKDIR
sort $PBS_NODEFILE | uniq > $SCM_MACHINEFILE

$ADFBIN/adf  << eor > mo_sp.adfout
title Mo, triple zeta, large frozen core

Basis
  TYPE TZP
End

charge 0 0
atoms
Mo 0 0 0
end

XC
 GGA Blyp
end

PRINT Smat
EPRINT 
  SCF Eigvec
End
end input

eor

