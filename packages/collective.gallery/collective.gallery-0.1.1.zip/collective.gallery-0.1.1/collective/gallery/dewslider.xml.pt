<?xml version="1.0" ?>
  <album xmlns:tal="http://xml.zope.org/namespaces/tal"
    showbuttons="yes"
    showtitles="yes"
    randomstart="yes"
    timer="5"
    aligntitles="bottom"
    alignbuttons="bottom"
    transition="push"
    speed="20">
  <tal:imgs repeat="img python:view.imgs(imgmax='512u')">
    <img tal:attributes="src string:${img/src}; title string:${img/title}" />
  </tal:imgs>
</album>