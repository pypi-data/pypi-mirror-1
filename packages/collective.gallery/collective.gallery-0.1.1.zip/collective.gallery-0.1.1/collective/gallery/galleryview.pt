<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.gallery">

<metal:js fill-slot="javascript_head_slot">
  <script type="text/javascript" tal:attributes="src string:$portal_url/++resource++collective.js.galleryview.timers.js"></script>
  <script type="text/javascript" tal:attributes="src string:$portal_url/++resource++collective.js.galleryview.js"></script>
  <script type="text/javascript">jq(document).ready(function() {jq('#photos').galleryView({panel_width: 800, panel_height: 300, frame_width: 100, frame_height: 100,});})</script>
</metal:js>
<metal:css fill-slot="css_slot">
  <link rel="stylesheet" type="text/css" tal:attributes="href string:$portal_url/++resource++collective.js.galleryview/galleryview.css" />
</metal:css>
<body>
<metal:main fill-slot="main">
    <div tal:replace="structure provider:plone.abovecontenttitle" />

    <h1 tal:content="view/title"></h1>
        <div tal:replace="structure provider:plone.belowcontenttitle" />

	<div id="photos" class="gallery">
	  <div class="panel" tal:repeat="img python:view.imgs()">
	    <img tal:attributes="src string:${img/src}; title string:${img/title}" />
	    <div class="panel-overlay">
	        <h2 tal:content="img/title">Eden</h2>
	    </div>
	  </div>
	  <ul class="filmstrip">
	    <li class="frame" tal:repeat="img python:view.imgs()"><img tal:attributes="src string:${img/src}; title string:${img/title}; alt string:${img/title}" /></li>
	</ul>
	</div>
    <div tal:replace="structure provider:plone.abovecontentbody" />
</metal:main>
</body>
</html>