<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.gallery">

<metal:js fill-slot="javascript_head_slot">
  <script type="text/javascript" tal:attributes="src string:$portal_url/++resource++s3Slider.js"></script>
  <script type="text/javascript">jq(document).ready(function() {jq('#s3slider').s3Slider({timeOut: 4000});});</script>
</metal:js>
<metal:css fill-slot="css_slot">
  <link rel="stylesheet" type="text/css" tal:attributes="href string:$portal_url/++resource++s3Slider.css" />
</metal:css>
<body>
<metal:main fill-slot="main">
    <div tal:replace="structure provider:plone.abovecontenttitle" />

    <h1 tal:content="view/title"></h1>
        <div tal:replace="structure provider:plone.belowcontenttitle" />

   <div id="s3slider">
    <ul id="s3sliderContent">
      <li class="s3sliderImage" tal:repeat="img python:view.imgs(imgmax='512u')">
        <img tal:attributes="src string:${img/src}; title string:${img/title}" />
        <span tal:content="img/title"></span>
      </li>
      <div class="clear s3sliderImage"></div>
    </ul>
   </div>
          <div tal:replace="structure provider:plone.abovecontentbody" />
</metal:main>
</body>
</html>