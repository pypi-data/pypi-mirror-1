<div id="speedupui-portal-breadcrumbs"
     class="speedUpUiPathbar"
     i18n:domain="plone">

	<ul id="speedupuiPathBarMenus">
		<li>
		    <span id="breadcrumbs-you-are-here" i18n:translate="you_are_here">You are here:</span>
		</li>
		<li>
			<a i18n:translate="tabs_home"
			   tal:attributes="href view/navigation_root_url"
			   tal:condition="not:view/breadcrumbs">Home</a>
			<dl class="actionMenu" tal:condition="view/breadcrumbs">
				<dt class="actionMenuHeader">
					<a tal:attributes="href view/navigation_root_url">
						<span i18n:translate="tabs_home">Home</span>   
						<span tal:condition="view/breadcrumbs" class="breadcrumbSeparator speedupuiBreadcrumbSeparator">
					        <tal:ltr condition="not: view/is_rtl">&rarr;</tal:ltr>
					        <tal:rtl condition="view/is_rtl">&raquo;</tal:rtl>
					    </span>
					</a>

				</dt>
				<dd class="actionMenuContent" tal:condition="not:view/isAnon">
					<ul>
						<li>
							<a tal:attributes="href view/navigation_root_url">
								<span class="subMenuTitle" i18n:translate="">View</span></a>
						</li>
						<li>
							<a tal:attributes="href string:${view/navigation_root_url}/folder_contents">
								<span class="subMenuTitle" i18n:translate="">Contents</span></a>
						</li>
					</ul>
				</dd>
			</dl>
			
		</li>
	    <li tal:repeat="crumb view/breadcrumbs"
	          tal:attributes="dir python:view.is_rtl and 'rtl' or 'ltr'">
	        <tal:last tal:define="is_last repeat/crumb/end">
	        		
				<dl tal:condition="python:not is_last"
				    class="actionMenu">
					<dt class="actionMenuHeader">
			            <a href="#"
			               tal:omit-tag="not: crumb/absolute_url"
			               tal:condition="python:not is_last"
			               tal:attributes="href crumb/absolute_url">
							<span tal:replace="crumb/Title" />
				            <span class="breadcrumbSeparator speedupuiBreadcrumbSeparator" tal:condition="not: is_last">
				                <tal:ltr condition="not: view/is_rtl">&rarr;</tal:ltr>
				                <tal:rtl condition="view/is_rtl">&raquo;</tal:rtl>
				            </span>
			            </a>

					</dt>
					<dd class="actionMenuContent" tal:condition="not:view/isAnon">
						<ul>
							<li>
								<a tal:attributes="href string:${crumb/absolute_url}/view">
									<span class="subMenuTitle" i18n:translate="">View</span></a>
							</li>
							<li>
								<a tal:attributes="href string:${crumb/absolute_url}/edit">
									<span class="subMenuTitle" i18n:translate="">Edit</span></a>
							</li>
							<li tal:condition="crumb/is_folderish">
								<a tal:attributes="href string:${crumb/absolute_url}/folder_contents">
									<span class="subMenuTitle" i18n:translate="">Contents</span></a>
							</li>
						</ul>
					</dd>				
				</dl>
				
	            <span tal:condition="is_last"
	                  class="lastPathBarItem"
					  tal:content="crumb/Title">crumb</span>
	         </tal:last>
	    </li>
	</ul>
</div>
