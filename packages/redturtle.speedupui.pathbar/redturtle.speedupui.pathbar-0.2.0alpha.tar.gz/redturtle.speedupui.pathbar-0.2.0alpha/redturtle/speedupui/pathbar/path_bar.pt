<div id="speedupui-portal-breadcrumbs"
     class="speedUpUiPathbar"
     i18n:domain="plone">

	<ul id="speedupuiPathBarMenus">
		<li>
		    <span id="breadcrumbs-you-are-here" i18n:translate="you_are_here">You are here:</span>
		</li>
		<li>
			<a i18n:translate="tabs_home"
			   tal:attributes="href view/navigation_root_url"
			   tal:condition="not:view/breadcrumbs">Home</a>
			<dl class="actionMenu" tal:condition="view/breadcrumbs" id="root-actionmenu">
				<dt class="actionMenuHeader">
					<a tal:attributes="href view/navigation_root_url">
						<span i18n:translate="tabs_home">Home</span>   
						<span tal:condition="view/breadcrumbs"
						      class="arrowDownAlternative breadcrumbSeparator speedupuiBreadcrumbSeparator">&#9660;</span>
					</a>

				</dt>
				<dd class="actionMenuContent" tal:condition="not:view/isAnon">
					<ul>
						<li>
							<a tal:attributes="href view/navigation_root_url">
								<span class="subMenuTitle" i18n:translate="">View</span></a>
						</li>
						<li tal:condition="python:view.checkPermissionOnPortalObject('List folder contents')">
							<a tal:attributes="href string:${view/navigation_root_url}/folder_contents">
								<span class="subMenuTitle" i18n:translate="">Contents</span></a>
						</li>
						<tal:addabletypes condition="python: view.checkPermissionOnPortalObject('Add portal content') and len(view.addableTypes)>0">
							<li tal:define="addableTypes view/addableTypes"
								tal:repeat="t addableTypes">
									<a tal:attributes="href string:${view/portal/absolute_url}/createObject?type_name=${t/id};
									                   class python:first and 'speedupui-menu-first' or ''"
                                       tal:define="first repeat/t/start"
									   i18n:translate=""
									   tal:content="t/title">Document</a>
							</li>
						</tal:addabletypes>		
					</ul>
				</dd>
			</dl>
			
		</li>
	    <li tal:repeat="crumb view/breadcrumbs"
	          tal:attributes="dir python:view.is_rtl and 'rtl' or 'ltr'">
	        <tal:last tal:define="is_last repeat/crumb/end">
	        		
				<dl tal:condition="python:not is_last"
				    class="actionMenu"
					tal:attributes="id string:${crumb/id}-actionmenu">
					<dt class="actionMenuHeader">
			            <a href="#"
			               tal:omit-tag="not: crumb/absolute_url"
			               tal:condition="python:not is_last"
			               tal:attributes="href crumb/absolute_url">
							<span tal:replace="crumb/Title" />
				            <span class="arrowDownAlternative breadcrumbSeparator speedupuiBreadcrumbSeparator"
							      tal:condition="not: is_last">&#9660;</span>
			            </a>

					</dt>
					<dd class="actionMenuContent" tal:condition="not:view/isAnon">
						<ul>
							<li>
								<a tal:attributes="href string:${crumb/absolute_url}/view"
								   class="speedupui-menu-first">
									<span class="subMenuTitle" i18n:translate="">View</span></a>
							</li>
							<li tal:condition="crumb/edit_perm">
								<a tal:attributes="href string:${crumb/absolute_url}/edit">
									<span class="subMenuTitle" i18n:translate="">Edit</span></a>
							</li>
							<li tal:condition="python: crumb['is_folderish'] and crumb['contents_perm']">
								<a tal:attributes="href string:${crumb/absolute_url}/folder_contents">
									<span class="subMenuTitle" i18n:translate="">Contents</span></a>
							</li>
							<tal:addabletypes condition="python: crumb['add_perm'] and len(crumb['addableTypes'])>0">
								<li tal:define="addableTypes python:crumb['addableTypes']"
									tal:repeat="t addableTypes">
										<a tal:attributes="href string:${crumb/absolute_url}/createObject?type_name=${t/id};
										                   class python:first and 'speedupui-menu-first' or ''"
                                           tal:define="first repeat/t/start"
										   i18n:translate=""
										   tal:content="t/title">Document</a>
								</li>
							</tal:addabletypes>			
						</ul>
					</dd>
				</dl>
				
	            <span tal:condition="is_last"
	                  class="lastPathBarItem"
					  tal:content="crumb/Title">crumb</span>
	         </tal:last>
	    </li>
	</ul>
</div>
