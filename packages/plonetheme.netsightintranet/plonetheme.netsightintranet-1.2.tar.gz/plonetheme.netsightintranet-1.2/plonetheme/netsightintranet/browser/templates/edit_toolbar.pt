<div id="toolbar-holder"
     tal:define="canEdit context/@@plone/showEditableBorder;
		 editMode python: request.get('edit_mode', '')"
     tal:attributes="class python:canEdit and editMode and 'shown' or ''">
  <div id="edit-toolbar" tal:condition="python: canEdit"
	class="visualNoPrint">
    <div class="contentActions" tal:content="structure provider:plone.contentmenu" />
    <div tal:replace="structure provider:intranet.contentviews" />
  </div>
  <div id="hidden-toolbar" tal:condition="python: canEdit"
	class="visualNoPrint">
    <a href="toggle_edit_toolbar" class="showToolbar">Show toolbar</a>
  </div>
</div>
