<div id="portal-personaltools-wrapper"
  	class="visualNoPrint"
     i18n:domain="plone">
  <metal:block use-macro="here/global_defines/macros/defines" />
  
  <tal:iefixstart replace="structure string:&lt;!--[if IE]&gt;" />
  <style type="text/css" media="all"
	 tal:content="string:@import url($portal_url/++resource++netsightintranet.stylesheets/netsightintranet_IEFixes.css);">
  </style>
  <tal:iefixend replace="structure string:&lt;![endif]--&gt;" />
  
  
  <h5 class="hiddenStructure" 
      i18n:translate="heading_personal_tools">Personal tools</h5>
  <div id="users-name" class="" 
       tal:attributes="class python: (view.anonymous and 'anon') or 'loggedIn'">
    <tal:block condition="not: view/anonymous">
      <span class="visualCaseSensitive">
	<a tal:content="view/user_name"
	   tal:attributes="href view/member_url">
          John
	</a>
      </span>
    </tal:block>
    <tal:block condition="view/anonymous">
      not logged in
    </tal:block>
  </div>
  <ul id="portal-personaltools"
      tal:condition="python:view.user_actions or not view.anonymous"
      class="visualInline">
    <tal:block condition="not: view/anonymous">
      <li class="isFirst"><a 
			     id="user-name"
			     tal:attributes="href view/homelink_url">
	  Update profile
      </a></li>
    </tal:block>

    <tal:actions tal:repeat="action view/user_actions">
      <li tal:define="icon python:view.getIconFor(action['category'], action['id'], None);
                      class_name string:visualIcon actionicon-${action/category}-${action/id};
                      class_name python:icon is not None and class_name or nothing;
		      isFirst python: (not view.anonymous and 'notFirst') or 'isFirst'"
          tal:attributes="class string: ${class_name} ${isFirst}">
        <a href=""
           tal:attributes="href action/url;
                           class python:icon is not None and 'visualIconPadding' or nothing;"
           ><tal:actionname i18n:translate="" 
                            tal:content="action/title">dummy</tal:actionname
							       ></a>
      </li>
    </tal:actions>

  </ul>
</div>
