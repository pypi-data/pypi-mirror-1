<dl class="portlet portletNormativaSearchPortlet"
    i18n:domain="DigestoContentTypes">

  <dt class="portletHeader">
      <span class="portletTopLeft"></span>
      <a class="tile"
         tal:attributes="href view/search_action"
         i18n:translate="normativa_box_search">Search</a>
      <span class="portletTopRight"></span>
  </dt>

    <dd class="portletItem">
      <form name="searchform" action="normativa_search"
            tal:define="livesearch view/enable_livesearch;"
            tal:attributes="action view/search_action">
        <div class="field">
          <label for="SearchableText">Texto</label>
          <input class="searchField inputLabel"
              name="SearchableText"
              type="text"
              size="15"
              title=""
              i18n:attributes="title title_search_title;"
              tal:attributes="value request/SearchableText|nothing;
                              class python:livesearch and 'inputLabel searchField normativa-portlet-search-gadget' or 'inputLabel searchField portlet-search-gadget-nols'"
              />

<div class="field">
<label for="getDate">Área</label>
<select name="getArea" style="width: 130px;">
	<option selected="selected" value="">-cualquier área-</option>
    <tal:areas-loop tal:repeat="area view/areas">
    	<option tal:content="python: area.Title" tal:attributes="value python:area.id">Area1</option>
    </tal:areas-loop>
</select>
</div>

<div class="field">
<label for="getDate">Año</label>
<select name="getDate" style="width: 130px;">
	<option selected="selected" value="">-cualquier año-</option>
    <tal:years-loop tal:repeat="year view/years">
    	<option tal:content="year" tal:attributes="value year">2008</option>
    </tal:years-loop>
</select>
</div>
          <input class="searchButton"
              type="submit"
              value="Search"
              i18n:attributes="value label_search;"/>
  
          <div class="LSResult" style="" tal:condition="livesearch">
            <div class="LSShadow"></div>
          </div>
        </div>
      </form>
      <div class="visualClear"><!-- --></div>
    </dd>
    
    <dd class="portletFooter">
        <a href="#"
         class="tile"
         tal:attributes="href view/search_action"
         i18n:translate="label_advanced_search">
        Advanced Search&hellip;
        </a>
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
