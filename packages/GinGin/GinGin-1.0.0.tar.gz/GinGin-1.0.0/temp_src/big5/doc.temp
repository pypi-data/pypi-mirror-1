<div id="func_bar">
<input accesskey="E" value="編輯(E)" onclick="edit()" type="button"/>
<input accesskey="N" value="新編(N)" onclick="new_doc()" type="button"/>
<input accesskey="A" value="附加(A)" onclick="show_afiles()" type="button"/>
<input accesskey="C" value="留言(C)" onclick="show_edit_comment()" type="button"/>
<input value="所有關鍵字" onclick="all_kws()"
type="button"/>
查詢:<input value="關鍵字" onchange="query(this.value)" type="text"/>
</div>

<div id="comments">
COMMENTS:
<div class="comment" ezid="comment">
<div class="pdate">on ${pdate}</div>
<span class="name"><a href="${website}">${name}</a> said ..</span>
<div class="msg">
${msg}
</div>
</div>
</div>

<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
	xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:trackback="http://madskills.com/public/xml/rss/module/trackback/">
    <rdf:Description
        rdf:about="${gingin_url}/show_id_doc/${doc_id}"
        dc:identifier="${gingin_url}/show_id_doc/${doc_id}"
        dc:title="${site}: ${title}"
        trackback:ping="${gingin_url}/trackback/${doc_id}" />
</rdf:RDF>

</div>
