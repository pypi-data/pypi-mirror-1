<?xml version="1.0" encoding="utf-8"?>
<div id="content">
<div class="title">
${title}

<div class="creator">
by ${creator}
</div>

</div>
<div class="keyword" style="float: right">
<a href="javascript: init_mcol()">
2 Columns
</a>
</div>
<div class="keywords">
關鍵字:
<div class="keyword">
<a ezid="keywords" href="${gingin_url}/show_kw_docs/${keyword}">
${keyword}
</a>
</div>
</div>

<div class="rawtext" id="body">
<textarea id="rawbody">
${text}
</textarea>
</div>

<div class="utime">
最後更新時間:
${pdate} |
<a href="${base_url}GinGin_TB.py/trackback/${doc_id}?__mod=view"
onclick="open_trackback(this.href); return false;">
引用
</a>
</div>

<script type="text/javascript" language="javascript" src="${base_url}/js/mcol.js">
dummy = 1;
</script>
<script type="text/javascript" language="javascript" src="${base_url}/js/gindoc.js">
dummy = 1;
</script>
<script type="text/javascript" language="javascript" src="${base_url}/js/show_doc_body.js">
dummy = 1;
</script>
<script type="text/javascript" language="javascript" src="${base_url}/js/init_mcol.js">
dummy = 1;
</script>
