<dl class="portlet portletBilingualTextPortlet"
    i18n:domain="collective.portlet.bilingualtext"
    tal:define="language request/LANGUAGE | string: en">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:content="view/data/header" />
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
        <div tal:condition="python: language=='en'"
             tal:content="structure view/data/text_en" />
        <div tal:condition="python: language=='de'"
             tal:content="structure view/data/text_de" />
    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span tal:content="view/data/footer" />
        <span class="portletBottomRight"></span>
    </dd>

</dl>
