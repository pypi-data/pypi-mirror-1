<dl class="portlet portletBilingualTextPortlet"
    i18n:domain="collective.portlet.bilingualtext"
    tal:define="text python: view.data.getCurrentText(context);
                header python: view.data.getCurrentHeader(context);
                ">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:content="header" />
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
        <div tal:content="structure text" />
    </dd>

</dl>
