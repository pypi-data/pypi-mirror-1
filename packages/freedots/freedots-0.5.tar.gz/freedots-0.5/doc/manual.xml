      <refsynopsisdiv>
	<cmdsynopsis>
	  <command>&app;</command>
	  <arg><option>--gui</option></arg>
	  <group>
	    <arg><option>-p</option></arg>
	    <arg><option>--play</option></arg>
	  </group>
	  <group>
