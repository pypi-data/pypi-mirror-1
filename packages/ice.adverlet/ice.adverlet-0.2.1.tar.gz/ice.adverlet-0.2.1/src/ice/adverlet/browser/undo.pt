<div class="adverlets-list adverlets-undo"
     tal:define="formatter python:request.locale.dates.getFormatter('dateTime')">
  <table width="100%">
    <tr>
      <th i18n:translate="">Undo</th>
      <th i18n:translate="">Date, time</th>
    </tr>
    <tr tal:repeat="item view/transactions">
      <td class="centred">
	<a tal:attributes="href string:${request/URL}?undo=yes&id=${item/id}">
	  <tal:block condition="not:item/undo | nothing">
	    &laquo;&laquo;&laquo;&nbsp;&nbsp;&nbsp;&laquo;&laquo;&laquo;
	  </tal:block>
	  <tal:block condition="item/undo | nothing">
	    <span class="undo-undo">&raquo;&raquo;&raquo;&nbsp;&nbsp;&nbsp;&raquo;&raquo;&raquo;</span>
	  </tal:block>
	</a>
      </td>
      <td tal:content="python:formatter.format(item['datetime'])" />
    </tr>
  </table>
</div>
