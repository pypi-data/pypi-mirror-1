<configure xmlns="http://namespaces.zope.org/zope">
  
  <configure
     xmlns:zcml="http://namespaces.zope.org/zcml"
     zcml:condition="have devmode">

    <utility
       factory="ice.adverlet.tests.sampledata.SampleSourceStorage"
       provides="z3c.sampledata.interfaces.ISampleDataPlugin"
       name="ice.adverlet.sample.sourcestorage"
       />
    <utility
       factory="ice.adverlet.tests.sampledata.SampleFileStorage"
       provides="z3c.sampledata.interfaces.ISampleDataPlugin"
       name="ice.adverlet.sample.filestorage"
       />
    
    <SampleManager name="ice.adverlet.test">
      <generator
	 name="z3c.sampledata.site"
	 />
      <generator
	 name="ice.adverlet.sample.sourcestorage"
	 contextFrom="z3c.sampledata.site"
	 />
      <generator
	 name="ice.adverlet.sample.filestorage"
	 contextFrom="z3c.sampledata.site"
	 />
    </SampleManager>
    
  </configure>
  
</configure>

