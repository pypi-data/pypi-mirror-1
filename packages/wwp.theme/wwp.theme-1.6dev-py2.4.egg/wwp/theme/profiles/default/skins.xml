<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="WWP Theme">

 <object name="wwp_theme_custom_images"
    meta_type="Filesystem Directory View"
    directory="wwp.theme:skins/wwp_theme_custom_images"/>
 <object name="wwp_theme_custom_templates"
    meta_type="Filesystem Directory View"
    directory="wwp.theme:skins/wwp_theme_custom_templates"/>
 <object name="wwp_theme_styles"
    meta_type="Filesystem Directory View"
    directory="wwp.theme:skins/wwp_theme_styles"/>

 <skin-path name="WWP Theme" based-on="Plone Default">
  <layer name="wwp_theme_custom_images" insert-after="custom"/>
  <layer name="wwp_theme_custom_templates" insert-after="wwp_theme_custom_images"/>
  <layer name="wwp_theme_styles" insert-after="wwp_theme_custom_templates"/>
 </skin-path>

</object>
