<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="wwp.theme"
    xmlns:plone="http://namespaces.plone.org/plone">

  <!-- 'WWP Theme' Zope 3 browser layer -->
  <interface
      interface=".interfaces.IThemeSpecific"
      type="zope.publisher.interfaces.browser.IBrowserSkinType"
      name="WWP Theme"
      />
  
  <!-- Viewlets registration -->

  <!-- Zope 3 browser resources -->

  <!-- Resource directory for images -->
  <browser:resourceDirectory
      name="wwp.theme.images"
      directory="images"
      layer=".interfaces.IThemeSpecific"
      />

  <!-- Resource directory for stylesheets -->
  <browser:resourceDirectory
      name="wwp.theme.stylesheets"
      directory="stylesheets"
      layer=".interfaces.IThemeSpecific"
      />


    <!-- Render the document actions -->
        
    <browser:viewlet
        name="wwp.theme.documentactions"
        manager="plone.app.layout.viewlets.interfaces.IBelowContentBody"
        class=".wwpdocument_actions.wwpdocument_actions"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.View"
    />





    <!-- The footer viewlet --> 
    <browser:viewlet
        name="plone.footer"
        for="*"
        manager="plone.app.layout.viewlets.interfaces.IPortalFooter"
        layer=".interfaces.IThemeSpecific"
        class=".viewlets.wwpfooter"
        permission="zope2.Public" 
        />

    <!-- The personal bar -->
    <browser:viewlet
        name="plone.personal_bar"
        manager="plone.app.layout.viewlets.interfaces.IPortalFooter"
        class="plone.app.layout.viewlets.common.PersonalBarViewlet"
        permission="zope2.View" 
        layer=".interfaces.IThemeSpecific"
        />

<!-- WWP ADDITIONS -->




    <!-- Display the Date -->
    <browser:viewletManager
        name="plone.portalwwpdate"
        provides=".interfaces.IPortalWwpDate"
        permission="zope2.View"
        class="plone.app.viewletmanager.manager.OrderedViewletManager"
        />
    <browser:viewlet
        name="plone.wwp_date"
        manager=".interfaces.IPortalWwpDate"
        class=".viewlets.WwpDate"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.Public" 
        />


    <!-- The customized logo -->
    <browser:viewlet
        name="wwp.theme.logo"
        manager="plone.app.layout.viewlets.interfaces.IPortalHeader"
        class=".viewlets.WWPLogoViewlet"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.View"
        />

    <browser:viewlet
        name="wwp.theme.logo.footer"
        manager="plone.app.layout.viewlets.interfaces.IPortalFooter"
        template="templates/logo_footer.pt"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.View"
        />
        
    <!-- WWP adsense top -->
    <browser:viewletManager
        name="plone.portaladblocktop"
        provides=".interfaces.IPortalAdBlockTop"
        permission="zope2.View"
        class="plone.app.viewletmanager.manager.OrderedViewletManager"
        />
        
        
    <browser:viewlet
        name="wwp.theme.adblocktop"
        manager="plone.app.layout.viewlets.interfaces.IPortalTop"
        class=".viewlets.Wwpadsense"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.Public" 
        />





<!-- Customize the navigation portlet -->
‹include package="plone.app.portlets" /›
       <plone:portletRenderer
       portlet="plone.app.portlets.portlets.navigation.INavigationPortlet"
       layer=".interfaces.IThemeSpecific"
       class=".navigation.MyNavRenderer"
       />


<!-- the end -->







</configure>
