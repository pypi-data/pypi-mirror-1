.navTreeLevel2 a.navTreeCurrentItem { 
    margin-left: 0px !important; padding-left:30px; background-color:#CCFFFF;}
.navTreeLevel3 a.navTreeCurrentItem { 
    margin-left: 0px !important; padding-left:40px; background-color:#CCFFFF;}
.navTreeLevel4 a.navTreeCurrentItem { 
    margin-left: 0px !important; padding-left:50px; background-color:#CCFFFF;} 
.navTreeLevel5 a.navTreeCurrentItem { 
   margin-left: 0px !important; padding-left:60px; background-color:#CCFFFF;}

 

