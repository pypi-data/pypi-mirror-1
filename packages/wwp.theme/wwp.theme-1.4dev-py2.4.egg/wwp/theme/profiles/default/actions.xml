<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <object name="document_actions" meta_type="CMF Action">

    <object name="facebook" meta_type="CMF Action">
      <property name="title" i18n:translate="">FaceBook</property>
      <property name="description" i18n:translate="">Facebook this</property>
      <property name="url_expr" i18n:translate="">string:javascript:(function(){open('http://www.facebook.com/sharer.php?u='+encodeURIComponent(location.href)+'&amp;title='+encodeURIComponent(document.title),'Facebook','toolbar=no,width=700,height=400')})()</property>
      <property name="icon_expr">string:facebook.gif</property>
      <property name="available_expr"></property>
      <property name="permissions">
        <element value="View" />
      </property>
      <property name="visible">True</property>
    </object>    
    
    <object name="twitter" meta_type="CMF Action">
      <property name="title" i18n:translate="">Twitter</property>
      <property name="description" i18n:translate="">Tweet this</property>
      <property name="url_expr" i18n:translate="">string:javascript:(function(){open('http://twitter.com/home?status=Currently reading '+encodeURIComponent(location.href),'Twitter','toolbar=no,width=700,height=250')})()</property>
      <property name="icon_expr">string:twitter.gif</property>
      <property name="available_expr"></property>
      <property name="permissions">
        <element value="View" />
      </property>
      <property name="visible">True</property>
    </object> 
    
  </object>
  
</object> 
