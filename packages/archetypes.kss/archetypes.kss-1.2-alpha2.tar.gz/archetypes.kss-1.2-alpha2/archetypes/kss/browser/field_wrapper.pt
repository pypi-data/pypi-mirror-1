<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone"><metal:block use-macro="here/global_defines/macros/defines"
        /><tal:defines define="here nocall:options/instance;
                               field options/field;
                               fieldName field/getName;
                               widget nocall:field/widget;
                               mode options/mode;
                               n python:{};
                               errors options/state/getErrors | n;
                               accessor python:field.getAccessor(here)"
            ><form tal:attributes="class string:field azax-inline-field;
                                   id string:azax-inlineform-$fieldName;"
                   tal:omit-tag="python:mode=='view'"><metal:fieldMacro
                    use-macro="options/the_macro" />
               <div class="formControls"
                    tal:attributes="class string:form-element kukit-atfieldname-$fieldName"
                    tal:condition="python:mode=='edit'" ><br />
                 <input name="azax-save"
                        value="Save" type="button"
                        class="context"
                        tal:omit-tag="python:mode=='view'" />
                 <input name="azax-cancel"
                        value="Cancel" type="button"
                        class="standalone"
                        tal:omit-tag="python:mode=='view'" />
               </div>
             </form></tal:defines></tal:block>