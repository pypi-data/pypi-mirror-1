<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Theme Stylized">

 <object name="plonetheme_stylized_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.stylized:skins/plonetheme_stylized_custom_images"/>
 <object name="plonetheme_stylized_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.stylized:skins/plonetheme_stylized_custom_templates"/>
 <object name="plonetheme_stylized_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.stylized:skins/plonetheme_stylized_styles"/>

 <skin-path name="Theme Stylized" based-on="Plone Default">
  <layer name="plonetheme_stylized_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_stylized_custom_templates"
     insert-after="plonetheme_stylized_custom_images"/>
  <layer name="plonetheme_stylized_styles"
     insert-after="plonetheme_stylized_custom_templates"/>
 </skin-path>

</object>
