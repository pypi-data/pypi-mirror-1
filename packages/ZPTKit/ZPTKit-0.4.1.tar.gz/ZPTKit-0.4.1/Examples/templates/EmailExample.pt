<html metal:use-macro="here/standard_template.pt/macros/page">
<metal:slot fill-slot="body">

<h1 tal:content="options/title | servlet/title">title</h1>

<form tal:attributes="action options/formAction" method="POST">
  <input type="hidden" name="_action_" value="send">
  Send an email to 
  <tt tal:content="python: ', '.join(servlet.toAddresses())">
    addresses</tt>: <br>
  <table>
    <tr>
      <td>From:</td>
      <td>
        <input type="text" style="width: 100%" name="from">
      </td>
    </tr>

    <tr>
      <td>Subject:</td>
      <td>
        <input type="text" style="width: 100%" name="subject">
      </td>
    </tr>
  </table>    

  Message:<br>
  <textarea name="body" rows=7 cols=60 style="width: 100%"></textarea><br>
  <div align="center"><input type="submit" value="Send"></div>

</form>

</metal:slot>
</html>
