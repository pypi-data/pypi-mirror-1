body {
	position: relative;
	background: white url("background.png");
        background-attachment: fixed;
	background-position: bottom;
}

#visual-portal-wrapper {
	background: white;
	text-align: left;
	position: relative;
	width: &dtml-SubSkinsWidth1;;
	margin: 0px auto;
	border: 0;
}

#portal-column-one {
	width: &dtml-SubSkinsWidth2;;
	color: #ccc;
	background: white;
}

#portal-column-two {
	width: &dtml-SubSkinsWidth2;;
	color: #ccc;
	background: white;
}

#portal-column-content {
	padding: 10px 30px;
}

