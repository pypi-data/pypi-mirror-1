<metal:block i18n:domain="ks.pager" define-macro="pager">
 <tal:block condition="python:chunk.chunkCount > 1">
 <metal:block define-slot="body">
   <br/>
   <a href="" i18n:attributes="title" title="first page" tal:attributes="href chunk/firstChunkUrl" tal:condition="not:chunk/onFirstChunk">&laquo;&nbsp;</a>
   <a href="" i18n:attributes="title" title="previous page" tal:attributes="href chunk/prevChunkUrl" tal:condition="chunk/havePrevChunk"> &larr;</a>
   <tal:block tal:condition="chunk/onFirstChunk">&laquo;&nbsp;</tal:block>
   <tal:block tal:condition="not:chunk/havePrevChunk">&larr;</tal:block>
   <tal:block repeat="item python:chunk.chunkUrlList">
     <a href=""
       tal:define="itemstyle python:item.selected and 'black' or ''"
       tal:attributes="href item/url; title item/title;
                               style string:color:${itemstyle};" tal:content="item/title"> 1 </a>
   </tal:block>
   <a href="" i18n:attributes="title" title="next page" tal:attributes="href chunk/nextChunkUrl" tal:condition="chunk/haveNextChunk">&rarr;</a>
   <a href="" i18n:attributes="title" title="last page" tal:attributes="href chunk/lastChunkUrl" tal:condition="not:chunk/onLastChunk">&nbsp;&raquo;</a>
   <tal:block tal:condition="not:chunk/haveNextChunk">&rarr;</tal:block>
   <tal:block tal:condition="chunk/onLastChunk">&nbsp;&raquo;</tal:block>
  </metal:block>
  </tal:block>
</metal:block>
