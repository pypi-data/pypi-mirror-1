CREATE TABLE author ( id integer primary key autoincrement, name text);
CREATE TABLE blog_entry (id integer primary key autoincrement, author integer references author (id) on delete cascade, title text, content text, ts timestamp );
CREATE TABLE category (id integer primary key autoincrement, name text );
CREATE TABLE entry_category ( entry integer references blog_entry(id) on delete cascade, category integer references category(id) on delete cascade, primary key (entry, category) );
