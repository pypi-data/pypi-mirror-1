<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    i18n_domain="wwp.translate">

  <!-- configure your content components here -->
  
  <!-- -*- extra stuff goes here -*- -->
  <class class=".translatefolder.translatefolder">
    <require
        permission="zope2.View"
        interface="..interfaces.Itranslatefolder"
        />
    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.Itranslatefolder"
        />
  </class>
  <class class=".wwp_translate.wwp_translate">
    <require
        permission="zope2.View"
        interface="..interfaces.Iwwp_translate"
        />
    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.Iwwp_translate"
        />
  </class>

</configure>
