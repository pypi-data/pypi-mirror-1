<tal:page metal:use-macro="container/base_email/macros/plonehrm_mail"
	  i18n:domain="absence">

  <tal:block metal:fill-slot="title">
    <tal:block tal:content="options/title" />
  </tal:block>

  <tal:block metal:fill-slot="content">
    <tal:block metal:use-macro="container/base_email/macros/plonehrm_p">
      <tal:block metal:fill-slot="p_content">
	<tal:dummy i18n:translate="text_1week_email">
	  <tal:dummy i18n:name="name"
	  tal:replace="context/officialName" /> has been absent for 1 
	  week. If you didn't have contact with the employee yet,
	  please do so to ask how <tal:dummy i18n:name="name"
	  tal:replace="context/officialName" /> is doing and how long he
	  / she intends to stay absent.
	</tal:dummy>
      </tal:block>
    </tal:block>

    <tal:block tal:define="link_href options/absence/absolute_url;
			   link_text options/link_text ">
      <div metal:use-macro="container/base_email/macros/plonehrm_link" />
    </tal:block>

    <tal:block metal:use-macro="container/base_email/macros/plonehrm_p">
      <tal:block metal:fill-slot="p_content">
	<tal:dummy i18n:translate="text_absence_report_note">
	  Note! Report all your absences with your safety,health and
	  welfare service, if you are connected to one. 
	</tal:dummy>
      </tal:block>
    </tal:block>
  </tal:block>
</tal:page>
