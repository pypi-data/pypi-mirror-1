<?xml version="1.0"?>
<rolemap>
  <roles>
    <!--  We define two extra roles. -->
    <role name="HrmManager"/>
    <role name="WorklocationManager"/>
  </roles>
  <permissions>
    <permission name="plonehrm: Add absence" acquire="True">
      <role name="Manager"/>
      <role name="HrmManager"/>
      <role name="WorklocationManager"/>
    </permission>
    <permission name="plonehrm: Modify absence" acquire="True">
      <role name="Manager"/>
      <role name="HrmManager"/>
      <role name="WorklocationManager"/>
    </permission>
  </permissions>
</rolemap>
