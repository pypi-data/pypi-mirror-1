[buildout]
develop = .
parts = app test
find-links = http://download.zope.org/distribution/
eggs-directory = ${eggs_dir}
newest = ${newest}

[app]
recipe = zc.recipe.egg
eggs = ${egg}
       Paste
       PasteScript
       PasteDeploy

[test]
recipe = zc.recipe.testrunner
eggs = ${egg}
defaults = ['--tests-pattern', '^f?tests$$', '-v']
