<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:five="http://namespaces.zope.org/five"
  xmlns:browser="http://namespaces.zope.org/browser"
  xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
  i18n_domain="zgeo.plone.kml"
  >

  <include package="zgeo.plone.geographer"/>
  <include package="zgeo.kml"/>

  <five:implements
    class="Products.ATContentTypes.content.topic.ATTopic"
    interface="zope.dublincore.interfaces.ICMFDublinCore"
    />

  <adapter
    factory="zgeo.kml.browser.Placemark"
    for="Products.ATContentTypes.content.base.BaseContent
         zope.publisher.interfaces.browser.IBrowserRequest"
    provides="zgeo.kml.interfaces.IFeature"
    />

  <adapter
    factory="zgeo.kml.browser.Folder"
    for="Products.ATContentTypes.content.folder.ATFolder
         zope.publisher.interfaces.browser.IBrowserRequest"
    provides="zgeo.kml.interfaces.IFeature"
    />

  <browser:page
    for="Products.ATContentTypes.content.topic.ATTopic"
    name="kml-document"
    class=".browser.TopicDocument"
    permission="zope2.View"
    />

  <browser:page
    for="Products.ATContentTypes.content.folder.ATBTreeFolder"
    name="kml-document"
    class="zgeo.kml.browser.Document"
    permission="zope2.View"
    />

  <five:registerPackage package="." initialize=".initialize" />

  <genericsetup:registerProfile
    name="default"
    title="Plone KML"
    directory="profiles/default"
    description="Plone KML"
    provides="Products.GenericSetup.interfaces.EXTENSION"
    />

</configure>
