<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
"http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
<title>{% block title %}{{ title|escape|decode }}{% endblock %}
</title>
{% block feed %}
<link rel="alternate" type="application/atom+xml" title="{{ title|escape|decode }} - Feed" href="{{ top_dir }}feed.atom">
{% endblock %}
<meta http-equiv="Content-Type" content="text/html;charset=US-ASCII">
<meta name='generator' content='weblog'>
{{ html_head|decode|renderstring }}
{% block extra_head %}
{% endblock %}
</head>
<body>
{% block header %}
{{ html_header|decode|renderstring }}
{% endblock %}
<div id='main'>
{% block content %}{% endblock %}
</div>
{% block footer %}
{% if html_footer %}
        {{ html_footer|decode|renderstring }}
{% else %}
<div id='footer'>
<p>
<a href='{{ top_dir }}index.html' id='recents'>Recent</a> |
<a href='{{ top_dir }}archives.html' id='archives'>Archives</a>
</p>
<p id='weblog-ad'>
Published using <a href='http://henry.precheur.org/weblog/'>Weblog</a>
</p>
</div>
{% endif %}
{% endblock %}
</body>
</html>
{# vim:set ft=htmljinja: #}
