{% extends 'base.html.tmpl' %}

{% block content %}
<h1 class='post-title'>{{ title|escape|decode }}</h1>
<p class='post-header'>
<span class='date'>{{ date }}</span>
{%- if author %}
, <span class='author'>by {{ author.name()|decode }}
&lt;{{ author.email()|urlize }}&gt;</span>
{% endif %}
</p>
<div class='post-content'>
{{ content|decode }}</div>

<hr class='footer-ruler'>
<p class='post-footer'>
<a href='{{ top_dir }}index.html'>back to the blog</a>
</p>
{% endblock %}
{# vim:set ft=htmljinja: #}
