<html metal:use-macro="views/standard_macros/view">
	<body metal:fill-slot="body">
  <h1 tal:content="context/title"/>
	 <tal:block tal:condition="context/iscontent">
	  <hr>
	   <ol>
	    <li tal:repeat="item view/divisions"><a tal:attributes="href item/@@absolute_url" tal:content="item/title | item/__name__"/></li>
	   </ol>
	  <hr>
	 </tal:block>
	 <hr>
	 
   <div>
     <img src="" align="left" tal:on-error="python:''"  tal:attributes="src context/++attribute++logo/@@smartimagecontainer/big/url"/>
     <div tal:content="structure context/abstract"/>
   </div>
   <div tal:content="structure context/body"/>
	 <div tal:repeat="item view/articles">
	    <tal:block tal:content="structure item/@@short"/>
	 </div>
   
	</body>
</html>
