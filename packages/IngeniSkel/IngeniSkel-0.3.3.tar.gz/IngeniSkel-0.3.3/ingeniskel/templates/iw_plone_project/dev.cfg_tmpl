[buildout]

extends = base.cfg

parts =
    zope2
    ploneproducts
    zopepy
    zopeinstance
    deadlockdebugger
    enablesettrace
    zptdebugger
    zopeprofiler

[deadlockdebugger]
recipe = plone.recipe.bundlecheckout
url = http://svn.nuxeo.org/pub/Zope2/DeadlockDebugger/trunk
subfolder = DeadlockDebugger

[enablesettrace]
recipe = plone.recipe.bundlecheckout
url = svn://svn.zope.org/repos/main/Products.enablesettrace/trunk
subfolder = enablesettrace

[zptdebugger]
recipe = plone.recipe.bundlecheckout
url = https://svn.plone.org/svn/collective/ZPTDebugger/trunk
subfolder = ZPTDebugger

[zptdebugger]
recipe = plone.recipe.bundlecheckout
url = https://svn.plone.org/svn/collective/ZPTDebugger/trunk
subfolder = ZPTDebugger

[zopeprofiler]
recipe = plone.recipe.distros
urls = http://www.dieter.handshake.de/pyprojects/zope/ZopeProfiler.tgz

[zopeinstance]

eggs +=
    iw.debug
    Products.DocFinderTab
    Products.Clouseau
    plone.reload

zcml = 
    iw.debug
    plone.reload
    

products =
    \${plone:products}
    \${buildout:directory}/parts/deadlockdebugger
    \${buildout:directory}/parts/enablesettrace
    \${buildout:directory}/parts/zptdebugger
    \${buildout:directory}/parts/zopeprofiler

