<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="ploneboard">
<body>
<div metal:define-macro="portlet">

<tal:portlet tal:define="view here/@@ploneboard_recent_portlet_view | nothing"
             tal:condition="nocall:view">
<tal:recentlist define="results view/results">

<dl class="portlet" id="portlet-ploneboard-recent">
  
    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <a href="#" 
            tal:attributes="href string:${portal_url}/ploneboard_recent"
            i18n:translate="box_recent_conversations">Recent conversations</a>
        <span class="portletTopRight"></span>
    </dt>
    <tal:items tal:repeat="obj results">
    <dd class="portletItem"
        tal:define="oddrow repeat/obj/odd;
                    item_wf_state_class string:state-${obj/review_state_normalized};
                    item_type_class string:contenttype-${obj/portal_type_normalized}"
        tal:attributes="class python:test(oddrow, 
                                         'portletItem even', 
                                         'portletItem odd')">
        <div tal:attributes="class item_type_class">                
        <a href=""
           tal:attributes="href string:${obj/absolute_url}/view;
                           title obj/Description;
                           class string:$item_wf_state_class visualIconPadding tile">
            <tal:title content="obj/Title">
              Title
            </tal:title>
            <span class="portletItemDetails">
              <a tal:attributes="href obj/forum_url"
                  tal:content="obj/forum_title">Some forum</a>
            </span>
        </a>
        </div>
    </dd>
    </tal:items>

    <dd class="portletItem" 
        tal:condition="not: results"
        i18n:translate="box_recent_conversations_no_items">
        No conversations changed yet.
    </dd>

    <dd class="portletFooter">
        <a href="#"
           class="tile"
           tal:attributes="href string:${portal_url}/ploneboard_recent"
           i18n:translate="box_more_recent_conversations">
        More&hellip;
        </a>
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>
</dl>

</tal:recentlist>
</tal:portlet>
    
</div>
</body>
</html>
