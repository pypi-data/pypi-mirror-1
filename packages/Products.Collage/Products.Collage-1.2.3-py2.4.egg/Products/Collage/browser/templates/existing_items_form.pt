<div xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     i18n:domain="collage"
     tal:omit-tag="">

  <form class="collage-existing-items"
        onsubmit="return false"
        method="get"
	tal:define="here_url here/absolute_url"
	tal:attributes="action string:${here_url}/existing-items-form">
    <div class="field">
      <label i18n:translate="label_content_type"
	     for="portal_type">Content type</label>
      <select name="portal_type" style="font-size:80%"
	      tal:define="allowedTypes view/listEnabledTypes">
	<option i18n:translate="label_all_content_types"
		value="">All</option>
	<option tal:repeat="ctype allowedTypes"
		tal:attributes="value ctype/id;
				selected ctype/selected"
		tal:content="ctype/title">Type-name</option>
      </select>
    </div>
    <div class="field">
      <label i18n:domain="plone" i18n:translate="label_search_text"
	     for="portal_type">Search Text</label>
      <input type="text" name="SearchableText" tal:attributes="value request/SearchableText|nothing" />
    </div>
    <ul i18n:domain="plone" class="collage-content-menu"
        tal:define="focushint string:View this item in a new window;
                    portal_url view/portal_url">
      <li tal:repeat="item view/getItems" class="visualIcon">
         <img tal:attributes="src string:${portal_url}/${item/icon};
			      title item/type; alt item/type" i18n:attributes="title; alt" />
	    <a href="#" class="#"
	       tal:attributes="href string:${here_url}/insert-alias?uid=${item/UID};
		               title item/description;
                               class item/link_css_class">
	      <tal:title content="item/title">Title</tal:title>
	      <img tal:attributes="src string:${portal_url}/++resource++collage-resources/icon-insert.gif" alt="Insert" />
	    </a>
            &nbsp;
            <a href=""
               target="_blank"
               tal:attributes="href item/target_url;
                               title focushint;
                               alt focushint"
               i18n:attributes="title; alt">
              <img src=""
                   tal:attributes="src string:${portal_url}/search_icon.gif" />
            </a>
      </li>
    </ul>
  </form>
</div>
