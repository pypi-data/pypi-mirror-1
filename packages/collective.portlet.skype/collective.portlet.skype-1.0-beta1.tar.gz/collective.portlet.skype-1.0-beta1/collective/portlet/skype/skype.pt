<tal:block i18n:domain="collective.portlet.skype">

<dl class="portlet portletSkype"
    tal:condition="view/available">

    <dt class="portletHeader"
        tal:define="dummy view/initialize">
        <span class="portletTopLeft"></span>
        <span i18n:translate="label_skype">Skype</span>
        <span class="portletTopRight"></span>
    </dt>

    <tal:loop tal:repeat="item view/skypenames">
      <dd class="portletItem firstItem">
      <a href="#"
         tal:attributes="href string:skype:${item/name}?${view/actiontype}">
		<img src="#" 
		     tal:attributes="src string:http://mystatus.skype.com/${view/icontype}/${item/name}"/> 
		<tal tal:replace="item/fullname" />		     
	  </a>
      </dd>
    </tal:loop>
</dl>

</tal:block>