import aspsms.cmd
import optparse
import os
import string
import sys
from aspsms.api import ASPSMS

parser = aspsms.cmd.OptionParser()
parser.add_originator_option()
parser.add_recipient_option()
(options, args) = parser.parse_args()

text = sys.stdin.read()

sms = ASPSMS(user_key=options.userkey, password=options.password)
sms.send_text_sms(options.recipient, text, originator=options.originator)

aspsms.cmd.exit(sms, debug=options.debug)

