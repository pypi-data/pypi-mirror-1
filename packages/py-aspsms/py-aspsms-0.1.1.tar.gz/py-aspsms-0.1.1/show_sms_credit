from aspsms.api import ASPSMS
from optparse import OptionParser
from os import environ

def main():
    parser = OptionParser()
    parser.add_option("-u", "--userkey", dest="userkey",
        default=environ.get("SMS_USERKEY", None),
        help="user key",
    )
    parser.add_option("-p", "--password", dest="password",
        default=environ.get("SMS_PASSWORD", None),
        help="password",
    )

    (options, args) = parser.parse_args()
    sms = ASPSMS(user_key=options.userkey, password=options.password);
    credit = sms.show_credits()
    print "Remaining credit: %s units" % credit

if __name__ == "__main__":
    main()

