import optparse
import string
import os
import sys
from aspsms.api import ASPSMS

parser = optparse.OptionParser()
parser.add_option("-u", "--userkey", dest="userkey",
  default=os.environ.get("SMS_USERKEY", None))
parser.add_option("-p", "--password", dest="password",
  default=os.environ.get("SMS_PASSWORD", None))
parser.add_option("-o", "--originator", dest="originator",
  default=os.environ.get("SMS_ORIGINATOR", None))
parser.add_option("-r", "--recipient", dest="recipient",
  default=os.environ.get("SMS_RECIPIENT", None))

(options, args) = parser.parse_args()
text = sys.stdin.read()

sms = ASPSMS(user_key=options.userkey, password=options.password);
sms.send_text_sms(options.recipient, text, originator=options.originator)

print "%s: %s" % (sms.error_code, sms.error_description)

