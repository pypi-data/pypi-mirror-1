<dl class="portlet portletSlideshow">

  <dt class="portletHeader">
    <span class="portletTopLeft"></span>
    <a href="#"
       title="Slideshow Folder Title"
       tal:attributes="href view/slideshowfolder/absolute_url;
                       title view/slideshowfolder/Title"
       tal:content="view/slideshowfolder/Title">
      Slideshow Folder Title
    </a>
    <span class="portletTopRight"></span>
  </dt>

  <dd class="portletItem">
    <div id="myShow" class="slideshowfolder"
         tal:define="size view/getSlideshowSize;"
         tal:attributes="style string:width: ${size/width}px;;
                         height: ${size/height}px;;">
      <!-- this gets replaced by the slideshow javascript -->
    </div>
    <script type="text/javascript"
            tal:content="structure view/script">
    </script>
  </dd>

  <dd class="portletFooter">
    <span class="portletBottomLeft"></span>
    <span class="portletBottomRight"></span>
  </dd>

</dl>
