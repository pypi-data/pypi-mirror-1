# fail on first error and on unset variables
set -u -e

GENMAC=/usr/share/logilab-vm/tools/find_mac_address.py

#BEGINPARAM
#NAME= # Name of vm
#MEMORY=512000 # Memory allocated
#VCPU=2 # Number of virtual CPUs
#FILE= # Which template the system is based on
#NET_BRIDGE=br0
#ENDPARAM

NET_MAC=$($GENMAC)
logilab-vm-create \
    --type kvm \
    --sys name=$NAME,mem=$MEMORY,vcpu=$VCPU \
    --dev file=$FILE,device=disk,target=hda \
    --net method=bridge,bridge=$NET_BRIDGE,mac=$NET_MAC \
    --other vnc=-1
