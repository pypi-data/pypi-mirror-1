<dl tal:condition="view/available"
    class="portalMessage info" i18n:domain="inquant.contentmirror.plone">
    <dt i18n:translate="">
        Mirrored Content
    </dt>
    <dd>
        <div i18n:translate="info_mirrored">
          <strong>this content is a mirror of the object
            located <a href="#" tal:attributes="href view/original_url">here</a></strong>
        </div>
        <form method="get" tal:attributes="action string:${context/absolute_url}/view">
            <div i18n:translate="remove_mirror">
                Klick to remove this mirror
                <input
                    type="submit"
                    name="inquant.contentmirror.plone.remove"
                    value="Remove"
                    i18n:attributes="value"
                    />
            </div>
        </form>
    </dd>
</dl>
