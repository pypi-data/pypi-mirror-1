/* Generic portlets */

.portlet
{
	color: #6B6B6B;
	background: #eee url('&dtml-portal_url;/lijevo.gif') repeat-x;
	border-top: 1px solid #DDD;
	border-bottom: 1px solid #DDD;
	margin-top: 0 !important;
}

/* Navigation tree */
.portletNavigationTree {
	background: #fff none;
	border: none;
	margin: 4px 0 13px 0;
	padding: 0;
	font-size: 0.9em;
	list-style: none;
}

.portletNavigationTree .portletItem
{
	margin: 0;
}

.portletNavigationTree .portletHeader { display: none; }

li.navTreeItem img { float: left; }

li.navTreeItem a,
li.navTreeItem a:hover {
	font-size: 120%;
	text-align: right;
	text-decoration: none;
	line-height: 1.25;
	padding: 6px 8px 0 10px !important;
	height: 1.7em !important;
	display: block;
	border: none;
}

a.navTreeCurrentItem {
	border: solid 2px #A9CAEB;
}

a.navTreeCurrentItem:hover {
	border: solid 2px #2489DB;
}

li.navTreeItem a {
	background-color: #2489DB !important;
	color: #fff !important;
	border: none !important;
}

li.navTreeItem a:hover {
	background-color: #A9CAEB !important;
	color: #286ea0 !important;
	border: none !important;
}

li.navTreeItem
{
	margin-bottom: 4px;
}

