/* Sonia Template */

body {
	margin: 0 auto;
	padding: 0;
	
	width: 760px;
	font: 9pt Arial, Verdana, Sans-Serif;
	background: #fff;
}

#visual-portal-wrapper {
	color: #303030;
	width: 736px;
	
	margin: 0;
	padding: 5px 12px 10px 12px;
	background: url('bg_top.gif') top left no-repeat;
}

#portal-columns
{
	background: url('clanak.gif') repeat-x bottom left;
}

#portal-columns td
{
	padding-bottom: 10px;
}

a {
	text-decoration: none;
	color: #2489DB;
}

a:hover {
	color: #808080;
}

a img {
	border: 0;
}

h1, h2, h3, h4, h5, h6
{
	color: #2489DB;
	margin: 0;
}

#portal-siteactions {
	margin: 10px 0 0 0;
	height: 20px;
	background: #2489DB;
	text-align: right;
	padding-right: 10px;
	padding-top: 5px;
}

#portal-siteactions li {
	display: inline;
	padding-left: 8px;
	padding-right: 5px;
	background: url('strelica.gif') left no-repeat;
	padding-bottom: 3px;
	margin-right: 5px;
}

#portal-siteactions a {
	font-size: 8pt;
	color: #fff;
}

#portal-siteactions a:hover {
	border-bottom: 2px solid #fff;	
}

#portal-top {
	margin: 0;
	height: 125px;
	background: url('header.gif') left 35px repeat-x;
}

#portal-logo {	position: relative;
	top: 5px;
	left: 5px;
}

#portal-breadcrumbs
{
	margin: 12px 0 0 0;
}

#portal-personaltools
{
	margin: 5px 0 0 0;
}

#portal-personaltools li {
	display: inline;
	padding-left: 8px;
	padding-right: 5px;
	background: url('strelica2.gif') left no-repeat;
	padding-bottom: 3px;
	margin-right: 5px;
}

#portal-personaltools li img { vertical-align: middle; }

#portal-personaltools-wrapper
{
	width: 50%;
	text-align: right;
	clear: right;
	float: right;
}

#portal-searchbox {
	float: right;
	height: auto;
	padding: 8px;
	width: 310px;
	height: 39px;
	margin: 5px 3px 0 0;
	border: 2px solid #fff;	
	background: #FFF5D9;
	color: #808080;
}

#portal-column-one
{
	width: 150px !important;
	max-width: 150px !important;
}

.datum {
	padding-top: 2px;
	height: 30px;
	margin: 5px 0 6px 0;
	border-top: 1px solid #eee;
	font-size: 80%;
	text-transform: uppercase;	
	color: #808080;
}

#portal-footer {
	margin: 0;
	border-top: 1px solid #AFCEED;
	border-right: 1px solid #AFCEED;
	border-left: 1px solid #AFCEED;
	
	background: #E5EFF9 url('plavo.gif') repeat-x;
	padding: 5px 6px 5px 6px;
	line-height: 1.6em;
	text-align: left;
	color: #70C256;
}

.colophonWrapper {
	margin: 0;
	border-right: 1px solid #AFCEED;
	border-left: 1px solid #AFCEED;
	border-bottom: 1px solid #AFCEED;

	background: #E5EFF9;
	text-align: center;
	padding: 3px 3px 3px 6px;
}

.colophonWrapper li {
	display: inline;
	padding-left: 8px;
	padding-right: 5px;
	background: url('strelica2.gif') left no-repeat;
	padding-bottom: 3px;
	margin-right: 5px;
}

