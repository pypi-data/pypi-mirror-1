<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Sonia Theme">

 <object name="soniatheme_theme_custom_images"
    meta_type="Filesystem Directory View"
    directory="soniatheme.theme:skins/soniatheme_theme_custom_images"/>
 <object name="soniatheme_theme_custom_templates"
    meta_type="Filesystem Directory View"
    directory="soniatheme.theme:skins/soniatheme_theme_custom_templates"/>
 <object name="soniatheme_theme_styles"
    meta_type="Filesystem Directory View"
    directory="soniatheme.theme:skins/soniatheme_theme_styles"/>

 <skin-path name="Sonia Theme" based-on="Plone Default">
  <layer name="soniatheme_theme_custom_images"
     insert-after="custom"/>
  <layer name="soniatheme_theme_custom_templates"
     insert-after="soniatheme_theme_custom_images"/>
  <layer name="soniatheme_theme_styles"
     insert-after="soniatheme_theme_custom_templates"/>
 </skin-path>

</object>
