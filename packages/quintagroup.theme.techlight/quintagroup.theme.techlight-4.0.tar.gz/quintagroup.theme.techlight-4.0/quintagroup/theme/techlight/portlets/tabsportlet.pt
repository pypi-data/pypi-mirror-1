<dl id="portlet-tabs" class="portlet portletTabsPortlet"
    i18n_domain="quintagroup.theme.techlight"
    tal:define="portal_tabs view/portal_tabs;
                selected_tabs python:here.selectedTabs('index_html', here, portal_tabs);
                selected_portal_tab selected_tabs/portal;">
  <tal:tabs tal:repeat="tab view/portal_tabs">
    <dd tal:attributes="id string:portaltab-${tab/id};
                        class python: selected_portal_tab==tab['id'] and 'selected' or 'plain';">
      <a href="" 
         tal:content="tab/name"
         tal:attributes="href tab/url;
                         title tab/description|nothing">
         Tab Name
      </a>
    </dd>
  </tal:tabs>
</dl>
