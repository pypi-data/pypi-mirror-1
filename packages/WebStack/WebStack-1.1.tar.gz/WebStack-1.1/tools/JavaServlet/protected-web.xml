<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>WebStack application</display-name>
    <description>
        An application based on WebStack
    </description>

    <servlet>
        <servlet-name>pyservlet</servlet-name>
        <servlet-class>uk.org.boddie.webstack.util.PyServlet</servlet-class>
        <init-param>
            <param-name>python.home</param-name>
            <param-value>%s</param-value>
        </init-param>
        <init-param>
            <param-name>servlet.file</param-name>
            <param-value>%s</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>pyservlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <display-name>WebStack Security Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Protected Resources</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>webstack</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>WebStack Realm</realm-name>
    </login-config>

    <security-role>
        <description>
            The role that is required to log in to this application
        </description>
        <role-name>webstack</role-name>
    </security-role>

</web-app>
