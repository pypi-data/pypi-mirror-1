<?xml version="1.0" encoding="UTF-8"?>
<rules 
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xmlns="http://www.plone.org/deliverance" >

  <xi:include href="standardrules.xml" />

  <replace
      theme="//div[@id='main']"
      content="//*[@id='main']"
      />

  <!-- Standard Trac items -->
  <replace
      theme="//div[@id='mainnav']"
      content="//*[@id='mainnav']"
      nocontent="ignore"
      />
  <replace
      theme="//div[@id='metanav']"
      content="//*[@id='metanav']" 
      nocontent="ignore"
      />
  <replace 
      theme="//div[@id='search']"
      content="//*[@id='search']"
      nocontent="ignore"
      />

</rules>
