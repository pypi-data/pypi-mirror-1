<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    i18n_domain="plone.app.z3cform">

  <include package="plone.z3cform" />
  <include package=".wysiwyg" />
  <include package="collective.z3cform.datetimewidget" />

  <configure zcml:condition="installed kss.core">
  <include zcml:condition="installed Products.Archetypes"
    package=".kss" />
  </configure>

  <include file="profiles.zcml" />

  <browser:page
      name="ploneform-macros"
      for="*"
      class=".templates.Macros"
      layer="Products.CMFDefault.interfaces.ICMFDefaultSkin"
      allowed_interface="zope.interface.common.mapping.IItemMapping"
      permission="zope.Public" />
      
  <adapter factory=".templates.layout_factory" />

</configure>
