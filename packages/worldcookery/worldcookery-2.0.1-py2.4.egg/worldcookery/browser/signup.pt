<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/@@standard_macros/dialog"
      i18n:domain="worldcookery">
<head>
  <title metal:fill-slot="title" i18n:translate="">Sign up</title>
</head>
<body>
<div metal:fill-slot="body">

  <h1 i18n:translate="">Sign up</h1>

  <form action="@@signup" method="post">
    <div class="row">
      <div class="label">
        <label for="login" i18n:translate="">Login name:</label>
      </div>
      <div class="field">
        <input type="text" name="login" id="login" />
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="title" i18n:translate="">Full name:</label>
      </div>
      <div class="field">
        <input type="text" name="title" id="title" />
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="password" i18n:translate="">Password:</label>
      </div>
      <div class="field">
        <input type="password" name="password" id="password" />
      </div>
    </div>
    <div class="row">
      <div class="label">
        <label for="confimration" i18n:translate="">Confirm password:</label>
      </div>
      <div class="field">
        <input type="password" name="confirmation" id="confirmation" />
      </div>
    </div>

    <div class="row">
      <input type="submit" name="worldcookery.SignUp" value="Sign up"
             i18n:attributes="value button-signup" />
    </div>
  </form>

</div>
</body>
</html>