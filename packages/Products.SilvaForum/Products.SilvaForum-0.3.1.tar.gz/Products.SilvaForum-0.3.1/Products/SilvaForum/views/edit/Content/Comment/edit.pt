<html tal:omit-tag=""
  lang="en"
  xml:lang="en"
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:notal="http://www.infrae.com/silva/notal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="silva"
  tal:define="
    view here;
    model request/model;
    editable model/get_editable;
    root_url model/get_root_url;
    vein string:edit;
">

<script type="text/javascript" 
  tal:content="structure python:here.focus_editor('text')">
  focus cursor
</script>

<table class="columns columns3">
  <tbody>
    <tr>
      <tal:block replace="nothing">
        _____________________ sidebar _____________________
      </tal:block>
      <td class="left"
        tal:define="template_id string:tab_edit">
        <metal:block use-macro="view/macro_vein_navigation/macros/vein" />
      </td>

      <tal:block replace="nothing">
        _____________________ main _____________________
      </tal:block>
      <td class="main">

<form action="submit"
  method="POST">
  <table class="listing" tal:define="form here/form">
    <thead>
      <tal:block replace="nothing">
        ______________ vein + title row ______________
      </tal:block>
      <tr>
        <td class="top"
          colspan="2">
          <h2>
            <img tal:replace="structure python:view.render_icon(model)" />
            <span style="text-transform:lowercase;"
              tal:content="model/meta_type">meta_type</span> 
            &#xab;<tal:block content="editable/get_title" />&#xbb;
          </h2>
        </td>
      </tr>
    </thead>

    <tbody>
      <tr>
        <th class="align-right"
          width="12%"
          i18n:translate="">
          attributes
        </th>
        <th i18n:translate="">
          content
        </th>
      </tr>

      <tal:block tal:repeat="field form/get_fields">
      <tr class="even" tal:attributes="class python:repeat['field'].odd() and 'odd' or 'even'">
        <td class="align-right" i18n:translate="" tal:content="field/title">
        <!-- <td class="align-right" i18n:translate=""> -->
          Subject
        </td>
        <td>
          <input tal:replace="structure field/render" />
        </td>
      </tr>
      </tal:block>

    </tbody>

    <tfoot>
      <tr class="controls">
        <td class="align-right"
          colspan="2">
          <input class="button"
            type="submit"
            value="apply changes"
            title="access key: alt-c"
            accesskey="c"
            i18n:attributes="value;title"
           />
        </td>
      </tr>

    </tfoot>
  </table>
</form>

      </td>
      <tal:block replace="nothing">
        _____________________ right column _____________________ 
      </tal:block>
      <td class="right">
        &nbsp;
      </td>
    </tr>
  </tbody>
</table>

</html>
