<tal:block xmlns:i18n="http://xml.zope.org/namespaces/i18n"
           i18n:domain="silvaforum">
  <div class="forum">
    <p><a href="."><span i18n:translate="">Up to topic...</span></a></p>
    <div id="comment">
      <tal:block content="python:view.format_datetime(context.get_creation_datetime())" />,
      by <tal:block content="python:context.sec_get_creator_info().fullname()" />
      <h5 tal:content="context/get_title">
        Subject, if it exists
      </h5>
      <p tal:content="structure python:view.format_text(context.get_text())">
        Comment content
      </p>
    </div>
  </div>
</tal:block>