<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="cmfbibliographyat">

  <body>

    <!-- Authors Widgets -->
    <div class="field" metal:define-macro="view">
      <metal:block define-slot="widget_label"></metal:block>
      <metal:block use-macro="here/widgets/field/macros/view">
        <metal:block fill-slot="widget_view">
          <span tal:replace="structure accessor"/>
        </metal:block>
      </metal:block>
    </div>

    <metal:define define-macro="edit">
      <metal:use use-macro="field_macro | here/widgets/field/macros/edit">
        <div metal:fill-slot="widget_body">
        <table>
          <tr class="formHelp">
            <th i18n:translate="header_first_name">First Name</th>
            <th i18n:translate="header_middle_name">Middle Name(s)</th>
            <th i18n:translate="header_last_name">Last Name</th>
            <th i18n:translate="header_homepage">Homepage</th>
          </tr>
          <div tal:condition="python:here.getAuthorList()"
               tal:repeat="author python:request.get('authors',here.getAuthorList())">
          <div tal:define="fname python:author.get('firstname','');
                           mname python:author.get('middlename','');
                           lname python:author.get('lastname','');
                           homepage python:here.getAuthorURL(author);">
          <tr>
            <td><input name="authors.firstname:records:ignore_empty" size="10"
                       tal:attributes="value fname;
                                       tabindex tabindex/next" /></td>
            <td><input name="authors.middlename:records:ignore_empty" size="10"
                       tal:attributes="value mname;
                                       tabindex tabindex/next" /></td>
            <td><input name="authors.lastname:records:ignore_empty" size="15"
                       tal:attributes="value lname;
                                       tabindex tabindex/next" /></td>
            <td><input name="authors.homepage:records:ignore_empty" size="35"
                       tal:attributes="value homepage;
                                       tabindex tabindex/next" /></td>
          </tr>              
          </div>
          </div>
          <div>
          <tr tal:define="author python:request.form.get('nextauthor', {});
                          fname python:author.get('firstname','');
                          mname python:author.get('middlename','');
                          lname python:author.get('lastname','');
                          homepage python:author.get('homepage','');">
            <td><input name="nextauthor.firstname:record:ignore_empty" size="10"
                       tal:attributes="value fname;
                                       tabindex tabindex/next" /></td>
            <td><input name="nextauthor.middlename:record:ignore_empty" size="10"
                       tal:attributes="value mname;
                                       tabindex tabindex/next" /></td>
            <td><input name="nextauthor.lastname:record:ignore_empty" size="15"
                       tal:attributes="value lname;
                                       tabindex tabindex/next" /></td>
            <td><input name="nextauthor.homepage:record:ignore_empty" size="35"
                       tal:attributes="value homepage;
                                       tabindex tabindex/next" /></td>
          </tr>
          </div>
        </table>

        <div class="formControls">
          <input class="context"
                 type="submit"
                 tabindex=""
                 name="more_authors"
                 value="More Authors"
                 i18n:attributes="value"
                 tal:attributes="tabindex tabindex/next;" />
        </div>
        </div>  
      </metal:use>
    </metal:define>

    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/string/macros/edit"></div>
    </div>

  </body>

</html>

