<?xml version="1.0"?>
<!-- This file holds the setup configuration of the viewlet managers
     for the "beyondskins_ploneday" skin.
     -->

<object>
   

   <!-- Personal bar -->
    <order manager="plone.portaltop" skinname="beyondskins_ploneday"
           based-on="Plone Default">
      <viewlet name="plone.personal_bar" insert-before="*" />
    </order>
	<!-- Search -->
	<hidden manager="plone.portalheader" skinname="beyondskins_ploneday">
      <viewlet name="plone.searchbox" />
    </hidden>
    <!-- Footer Viewlet -->
    <order manager="plone.portalfooter" skinname="beyondskins_ploneday"
           based-on="Plone Default">
      <viewlet name="beyondskins.ploneday.site.footer" insert-before="plone.footer" />
    </order>
    <hidden manager="plone.portalfooter" skinname="beyondskins_ploneday">
      <viewlet name="plone.footer" />
    </hidden>
	<!-- Colophon Viewlet -->
	<hidden manager="plone.portalfooter" skinname="beyondskins_ploneday">
      <viewlet name="plone.colophon" />
    </hidden>
    
</object>
