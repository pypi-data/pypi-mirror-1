<script language="JavaScript">

function scrollUp() {
    var prj = document.getElementById('projects');
    prj.scrollTop = prj.scrollTop + 1;
}

function scrollDown() {
    var prj = document.getElementById('projects');
    prj.scrollTop = prj.scrollTop - 1;
}

</script>

<div id="projectblock">
  <div tal:content="string: вверх"
      style="background-color: #f6ce18; color: #ffffff; font-weight: bold;"
      onmouseover="t=setInterval('scrollUp()', 30);"
      onmouseout="clearInterval(t)"
      />
    <div id="projects">
      <a href=""
          tal:repeat="item view/values"
          tal:attributes="href item/@@absolute_url;
                          title item/title">
        <img src="" alt="" class="projectimage"
            tal:attributes="src item/++attribute++logo/@@smartimagecontainer/small/url"
        />
        <tal:block on-error="string:" tal:define="flat item/++nsinterface++ng.site.rentaday.flatannotation.interfaces.IFlatAnnotation"> 
		<font size="-2"><div> <tal:block content="flat/room"/> комнатная </div>
		<div> <tal:block content="flat/price_min"/> - <tal:block content="flat/price_max"/>Р </div>
		<div> <tal:block content="python:', '.join(flat.station)"/> </div></font>
	</tal:block>		
      </a>
    </div>
  <div tal:content="string: вниз"
      style="background-color: #f6ce18; color: #ffffff; font-weight: bold;"
      onmouseover="t=setInterval('scrollDown()', 30);"
      onmouseout="clearInterval(t)"
      />
</div>
