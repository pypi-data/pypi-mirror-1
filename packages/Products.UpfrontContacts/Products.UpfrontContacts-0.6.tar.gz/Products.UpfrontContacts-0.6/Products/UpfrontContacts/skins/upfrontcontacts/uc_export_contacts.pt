<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="upfrontcontacts">

<body>

<metal:block
    fill-slot="top_slot"
    tal:define="dummy python:request.set('disable_border', 1)" />

<div metal:fill-slot="main">
<div metal:define-macro="main" tal:omit-tag="">


<h1 i18n:translate="heading_export_contacts">Export contacts</h1>

<h4 i18n:translate="heading_import_contacts_step_one"
    >Step 1: Select export settings</h4>

<form name="form" action="uc_export_contacts_fields" method="post">
    
<div class="field">
<div i18n:translate="export_this">Export this type:</div>
    <select name="export_type">
        <option value="Person" i18n:translate="">Person</option>
        <option value="Organisation" i18n:translate="">Organisation</option>
    </select>
</div>
            
<div class="field">
<div i18n:translate="field_seperator">Field seperator/delimiter:</div>
    <select name="delimiter">
        <option value="comma" i18n:translate="">Comma</option>
        <option value="tabulator" i18n:translate="">Tabulator</option>
        <option value="semicolon" i18n:translate="">Semicolon</option>
        <option value="colon" i18n:translate="">Colon</option>
        <option value="space" i18n:translate="">Space</option>
    </select>
</div>

<div class="field">
<div i18n:translate="text_seperator">Text seperator/quote character:</div>
    <select name="quote_char">
        <option value="double_quote">"</option>
        <option value="single_quote">'</option>
    </select>
</div>

<div class="field">
<div i18n:translate="charset">Coding/charset:</div>
    <input name="coding" value="utf-8">
</div>

<input class="context"
        type="submit"
        value="Next"
        i18n:attributes="value"
        tabindex=""
        tal:attributes="tabindex tabindex/next;"
        />
    
</form>

</div>
</div>
</body>
</html>
