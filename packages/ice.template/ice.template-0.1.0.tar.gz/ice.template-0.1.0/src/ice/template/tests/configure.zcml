<configure
   xmlns="http://namespaces.zope.org/zope"
   xmlns:z3c="http://namespaces.zope.org/z3c"
   xmlns:ice="http://namespaces.zope.org/ice"
   i18n_domain="ice.template">
  
  <!-- layout -->
  <interface
     interface="ice.template.tests.interfaces.ISkin"
     type="zope.publisher.interfaces.browser.IBrowserSkinType"
     name="testlayer"
     />
  <z3c:layout
     template="layout.pt"
     layer="ice.template.tests.interfaces.ILayer"
     />

  <!--in ``mail-templates`` storage -->
  <ice:template
     name="welcome"
     title="Welcome Mail"
     storage="templates.mail"
     source="tmpl/welcome.tmpl"
     variables="user_name
		site_name"
     />
  <ice:template
     name="registration"
     title="Registration Mail"
     storage="templates.mail"
     source="tmpl/registration.tmpl"
     variables="user_name"
     />

  <!-- in ``skin-templates`` storage -->
  <ice:template
     name="footer"
     title="Site Footer"
     storage="templates.skin"
     source="tmpl/footer.html"
     variables="name"
     />

  <!-- storages listing -->
  <z3c:pagelet
     for="zope.interface.Interface"
     name="manageTemplates.html"
     class="ice.template.browser.storages.Pagelet"
     permission="zope.ManageContent"
     layer="ice.template.tests.interfaces.ILayer"
     />

</configure>
