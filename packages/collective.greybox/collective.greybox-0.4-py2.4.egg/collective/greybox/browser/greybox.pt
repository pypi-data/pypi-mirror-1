<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

<div metal:fill-slot="main">

<metal:main_macro define-macro="main"
                  tal:define="images view/getImages">

    <div tal:replace="structure provider:plone.abovecontenttitle" />
    <h1 tal:content="here/pretty_title_or_id" class="documentFirstHeading">Title or id</h1>
    <div tal:replace="structure provider:plone.belowcontenttitle" />

    <div tal:content="here/Description" tal:condition="here/Description" class="documentDescription">
        Description
    </div>
    <div tal:replace="structure provider:plone.abovecontentbody" />

		<div id="#" tal:attributes="id here/id">
			<div class="galery" tal:condition="images">			
				<div class="box" tal:repeat="image images">
					<div class="frame">
						<a 
							tal:attributes="rel string:gb_imageset[${context/UID}];
											title image/Title;
											href string:${image/absolute_url}/image_large
											">
						<img src="" alt="" tal:replace="structure python:image.tag(scale='thumb', title=image.Description())" />
						</a>
					</div>
				</div>
			</div>
			<div class="visualClear" />

		</div>


    <p class="discreet"
       i18n:domain="atcontenttypes"
       i18n:translate="text_no_albums_uploaded"
       tal:condition="python:not images">
        No albums or photos uploaded yet.
    </p>

    <tal:listing condition="folderContents"
                 define="folderContents view/getOtherObjs">
        <metal:listing metal:use-macro="here/folder_listing/macros/listing">
            <metal:empty metal:fill-slot="no_items_in_listing"></metal:empty>
        </metal:listing>

    </tal:listing>

    <metal:subtopics use-macro="here/atct_topic_view/macros/folderlisting_macro" />
    <div metal:use-macro="here/document_relateditems/macros/relatedItems"></div>
    <div tal:replace="structure provider:plone.belowcontentbody" />



</metal:main_macro>
</div>

</body>

</html>
