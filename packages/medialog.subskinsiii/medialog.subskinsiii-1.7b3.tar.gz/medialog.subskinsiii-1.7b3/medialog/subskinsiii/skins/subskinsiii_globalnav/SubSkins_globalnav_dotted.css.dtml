#portal-globalnav {
	clear: both;
	margin: 5px auto;
	padding: 0 20px 0 0;
	height: 30px;
	display: block;
}

#portal-globalnav li {
	display: block;
	margin: 0 2px;
	float: left;
	padding: 5px 0;
	text-align: center;
	border: 1px dashed #ddd;
}

#portal-globalnav li a {
	display: block;
	font: bold 1.1em Helvetica, Arial, "Helvetica Neue", Verdana, Geneva, sans-serif;
	display: block;
	padding: 3px 10px;
	text-transform: uppercase;
	letter-spacing: 1px;
	color: gray;
	text-decoration: none;
}

#portal-globalnav li:hover a,
#portal-globalnav .selected a {
	color: &dtml-SubSkinsColor5;;
}

#portal-globalnav li:hover  {
	border-style:  solid;
	background: url(000forlopv.jpg) repeat-x 0 -131px;
}


