<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:monkey="http://namespaces.plone.org/monkey"
    i18n_domain="ely.tinymce_kupu_useragent_patch">

    <include package="collective.monkeypatcher" />

    <monkey:patch
        description="This works around issue http://plone.org/products/tinymce/issues/95/view"
        class="Products.TinyMCE.utility.TinyMCE"
        original="isTinyMCEEnabled"
        replacement=".patches.patchedIsTinyMCEEnabled"
        docstringWarning="False"
        />

    <monkey:patch
        description="This works around issue http://plone.org/products/tinymce/issues/95/view"
        class="Products.kupu.plone.plonelibrarytool.PloneKupuLibraryTool"
        original="isKupuEnabled"
        replacement=".patches.patchedIsKupuEnabled"
        docstringWarning="False"
        />

</configure>
