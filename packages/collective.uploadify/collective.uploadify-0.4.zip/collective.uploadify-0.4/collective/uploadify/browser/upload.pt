<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xml:lang="en" lang="en"
      i18n:domain="plone"
      metal:use-macro="here/main_template/macros/master">

  <head>
    <metal:javascript fill-slot="javascript_head_slot">
      <script src="jquery.js"
              type="text/javascript"
              tal:attributes="src string:$portal_url/++resource++jquery.js">
      </script>
      <script src="jquery.uploadify.js"
              type="text/javascript"
              tal:attributes="src string:$portal_url/++resource++jquery.uploadify.js">
      </script>
    </metal:javascript>
    <metal:css fill-slot="css_slot">
      <link href="uploadify.css"
            rel="stylesheet"
            type="text/css"
            tal:attributes="href string:$portal_url/++resource++uploadify.css" />
    </metal:css>
  </head>

  <body>
    <div metal:fill-slot="main">

      <metal:header metal:use-macro="here/base/macros/header" />

      <fieldset id="uploadify">
        <legend>Upload</legend>

        <!-- uploadify comes here -->
        <div id="uploader"></div>

        <hr />

        <!-- upload button -->
        <a id="uploadify-upload"
           class="context"
           href="javascript:$('#uploader').fileUploadStart();">Upload Files</a>
        <!-- clear button -->
        <a id="uploadify-clear"
           class="context"
           href="javascript:$('#uploader').fileUploadClearQueue();">Clear all</a>
        <!-- cancel button -->
        <a id="uploadify-cancel"
           class="context"
           href="javascript:$('#uploader').fileUploadCancel();">Cancel</a>
      </fieldset>

      <!-- folder listing -->
      <div class="upload-folder-listing">
        <metal:block use-macro="context/folder_listing/macros/listing">
        </metal:block>
      </div>

      <!-- uploadify javascript -->
      <script type="text/javascript"
              tal:content="structure context/@@upload_init">
      </script>

      <div class="visualClear"><!-- --></div>
      <metal:footer metal:use-macro="here/base/macros/footer" />
    </div>

  </body>
</html>

