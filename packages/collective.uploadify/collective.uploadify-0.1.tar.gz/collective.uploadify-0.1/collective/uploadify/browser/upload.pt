<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xml:lang="en" lang="en"
      i18n:domain="plone"
      metal:use-macro="here/main_template/macros/master">
  <head>
    <metal:javascript fill-slot="javascript_head_slot">
      <script type="text/javascript" src="++resource++jquery.js"></script>
      <script type="text/javascript" src="++resource++jquery.uploadify.js"></script>
    </metal:javascript>
    <metal:css fill-slot="css_slot">
      <link rel="stylesheet" type="text/css" href="++resource++uploadify.css" />
    </metal:css>
  </head>
  <body>
    <div metal:fill-slot="main">
      <script type="text/javascript">
      $(document).ready(function() {
       $('#uploader').fileUpload({
        'uploader':  '++resource++uploader.swf',
        'script':    'upload',
        'folder':    '.',
        'cancelImg': '++resource++cancel.png',
        'multi':     true,
      });
      });
      </script>
      <div id="uploader"></div>
      <a href="javascript:$('#uploader').fileUploadStart();">Upload Files</a>
      <a href="javascript:$('#uploader').fileUploadClearQueue();">Clear all</a>
    </div>

  </body>
</html>

