<table class="listing"
       tal:define="rows view/rows"
       tal:condition="rows">
  <thead>
    <tr tal:define="first python:rows[0]">
      <th tal:repeat="col first"
          tal:content="col/header"
          i18n:translate=""
          i18n:domain="plone"> Header </th>
    </tr>
  </thead>
  <tbody>
    <tal:rows tal:repeat="row view/rows">
      <tr tal:define="oddrow repeat/row/odd;"
          tal:attributes="class python:oddrow and 'odd' or 'even'">
	<td tal:repeat="col row">
          <tal:block replace="structure col/render" />
	</td>
      </tr>
    </tal:rows>
  </tbody>
</table>
