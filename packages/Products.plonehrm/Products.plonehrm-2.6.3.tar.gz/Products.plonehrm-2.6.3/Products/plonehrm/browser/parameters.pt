<dl class="portlet"
    id="portlet-parameters"
    i18n:domain="plonehrm"
    tal:define="params view/keys;
                show view/available"
    tal:condition="show">

  <dt class="portletHeader"
      i18n:translate="label_portlet_parameters">
    Available parameters
