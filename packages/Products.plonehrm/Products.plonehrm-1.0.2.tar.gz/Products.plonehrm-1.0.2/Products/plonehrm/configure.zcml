<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="plonehrm">

  <include file="permissions.zcml"/>
  <include file="deprecation.zcml"/>

  <!-- Include the zcml of our dependencies -->
  <include package="plonehrm.checklist" />
  <include package="plonehrm.contracts" />
  <include package="plonehrm.jobperformance" />
  <include package="plonehrm.notes" />
  <include package="plonehrm.notifications" />
  <include package="plonehrm.personaldata" />


  <i18n:registerTranslations directory="locales" />

  <genericsetup:registerProfile
      name="default"
      title="Plone HRM"
      directory="profiles/default"
      description="Extension profile for Plone HRM."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      />

  <genericsetup:upgradeStep
      title="Placeful WorkLocations workflow"
      description="Give WorkLocations the plonehrm placeful workflow"
      source="1.0.1"
      destination="1.0.2"
      handler="Products.plonehrm.migration.update_worklocations"
      sortkey="1"
      profile="Products.plonehrm:default" />


  <include package=".browser" />

  <subscriber
      for="Products.plonehrm.interfaces.IEmployee
           zope.app.event.interfaces.IObjectModifiedEvent"
      handler=".events.employeeModified"
      />

  <subscriber
      for="Products.plonehrm.interfaces.IWorkLocation
           Products.Archetypes.interfaces.IObjectInitializedEvent"
      handler=".events.worklocationCreated"
      />

  <!-- Include some packages to make sure their zcml is loaded before
       we make use us them.  (Package load order differs per computer.) -->
  <include package="plone.portlets" />
  <include package="plone.app.portlets" />

  <utility factory=".setuphandlers.HiddenProducts"
           name="Products.plonehrm" />

  <!-- Extra local roles managed in the @@sharing view -->
  <utility
      name="HrmManager"
      factory=".localroles.HrmManagerRole"
      />
  <utility
      name="WorklocationManager"
      factory=".localroles.WorklocationManagerRole"
      />

  <!-- Allow assigning of local portlets to some tools. -->
  <class class="plonehrm.contracts.content.tool.ContractTool">
    <implements interface="plone.portlets.interfaces.ILocalPortletAssignable" />
  </class>
  <class class="plonehrm.jobperformance.tool.JobPerformanceTool">
    <implements interface="plone.portlets.interfaces.ILocalPortletAssignable" />
  </class>


  <!-- Control panel -->
  <adapter factory=".controlpanel.HRMNotificationsPanelAdapter" />

  <browser:page
      name="plonehrm-notifications-controlpanel"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      class=".controlpanel.HRMNotificationsPanel"
      permission="cmf.ManagePortal"
      />

</configure>
