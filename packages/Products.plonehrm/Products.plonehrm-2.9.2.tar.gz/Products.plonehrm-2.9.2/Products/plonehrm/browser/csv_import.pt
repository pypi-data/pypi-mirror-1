<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      xml:lang="en"
      lang="en"
      i18n:domain="plonehrm">
  <body>
    <div metal:fill-slot="main">

      <h1 class="documentFirstHeading">
        <metal:field use-macro="python:here.widget('title', mode='view')">
          Title
        </metal:field>
      </h1>
      <p class="documentDescription">
        <metal:field use-macro="python:here.widget('description', mode='view')">
          Description
        </metal:field>
      </p>
      <div tal:replace="structure context/@@alternative_views" />

      <h2 tal:condition="view/created_employees"
	  i18n:translate="label_created_employees">
	Created employees</h2>
      <ul>
	<li tal:repeat="emp view/created_employees">
	  <a tal:attributes="href emp/absolute_url"
	     tal:content="emp/officialName" />
	</li>
      </ul>

      <h2 i18n:translate="label_import_employees">
	Import employees in this worklocation</h2>
      <form name="import_employee_form"
	    method="POST"
	    enctype="multipart/form-data"
	    tal:attributes="action python: view.context.absolute_url() + '/import_csv/'">
	<p class="errormsg"
	   tal:condition="view/no_file"
	   i18n:translate="error_no_file_to_import">
	  You must submit a file.</p>
	<p class="errormsg"
	   tal:condition="view/invalid_file"
	   i18n:translate="error_invalid_import_file">
	  The file you submitted is not a valid CSV file.</p>

	<label for="file">File</label>
	<input type="file" name="file" />

	<input type="submit" class="context"
	       i18n:domain="plone"
	       i18n:attributes="value label_save" />	       
      </form>

      <div style="clear: both;">
        &nbsp;
      </div>
      <div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
      </div>
    </div>
  </body>
</html>
