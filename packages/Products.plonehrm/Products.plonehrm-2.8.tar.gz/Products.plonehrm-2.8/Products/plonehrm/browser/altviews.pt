<div class="alternative-views">
  <p>
    <tal:alt repeat="alt view/alternative_views">
      <a href=""
         tal:condition="alt/url"
         tal:attributes="href alt/url"
         tal:content="alt/title">
        Title of alternative view
      </a>
      <span tal:condition="not:alt/url"
            tal:content="alt/title">
        Title of alternative view
      </span>
      <tal:divider tal:condition="not:repeat/alt/end">|</tal:divider>
    </tal:alt>
  </p>
</div>
