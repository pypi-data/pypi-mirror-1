<div i18n:domain="plonehrm">
  <div tal:condition="context/getAddress|nothing"
       tal:content="context/getAddress"/>
  <div tal:condition="context/getPostalCode|context/getCity|nothing">
    <span tal:condition="context/getPostalCode|nothing"
          tal:content="context/getPostalCode"/>
    <span tal:condition="context/getCity|nothing"
          tal:content="context/getCity"/>
  </div>
  <div tal:condition="context/getState|nothing"
       tal:content="context/getState"/>
  <div tal:condition="context/getCountry|nothing"
       tal:content="context/getCountry"/>
  <div tal:condition="context/getTelephone|nothing"
       tal:content="context/getTelephone"/>
  <div tal:condition="context/getMobilePhone|nothing">
    <span tal:content="context/getMobilePhone"/>
    <span i18n:translate="">
      (mobile)
    </span>
  </div>
  <div tal:condition="context/getEmail|nothing">
    <a href=""
       tal:attributes="href string:mailto:${context/getEmail}"
       tal:content="context/getEmail">
      reinout@vanrees.org
    </a>
  </div>
  <div tal:condition="context/getBirthdate|nothing">
    <b i18n:translate="birthdate">Birthdate: </b>
    <span tal:content="context/getBirthdate"/>
  </div>

</div>