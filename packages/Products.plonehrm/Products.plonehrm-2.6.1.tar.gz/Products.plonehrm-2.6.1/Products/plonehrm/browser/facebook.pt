<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      xml:lang="en"
      lang="en"
      i18n:domain="plonehrm">
  <body>
    <div metal:fill-slot="main">

      <h1 class="documentFirstHeading">
        <metal:field use-macro="python:here.widget('title', mode='view')">
          Title
        </metal:field>
      </h1>
      <p class="documentDescription">
        <metal:field use-macro="python:here.widget('description', mode='view')">
          Description
        </metal:field>
      </p>

      <div tal:replace="structure context/@@alternative_views" />
      <tal:block tal:repeat="employee view/active_employees">
	<div class="photoAlbumEntry"
	     tal:define="portrait_url python: employee.getURL() + '/portrait'">
	  <span class="photoAlbumEntryWrapper">
	    <a tal:attributes="href employee/getURL">
	      <img alt=""
		   tal:condition="employee/hasPortrait"
		   tal:attributes="src portrait_url"/>
	      <img alt=""
		   tal:condition="not:employee/hasPortrait"
		   src="defaultUser.gif"/>
	    <span class="photoAlbumEntryTitle"
		  tal:content="employee/officialName">
	      Name</span>
	    </a>
	  </span>
	</div>
      </tal:block>

      <div style="clear: both;">
        &nbsp;
      </div>
      <div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
      </div>
    </div>
  </body>
</html>
