<div i18n:domain="plonehrm"
     tal:define="data nocall:context"
     tal:omit-tag="">

  <dl class="module">
    <dt class="moduleHeader">
      <a class="moduleButton"
         tal:attributes="href string:${here/absolute_url}/edit"
         ><img src="edit.gif"
               alt="Edit personal details"
               title="Edit personal details"
               i18n:attributes="title edit_personaldata;
                                alt edit_personaldata;" /></a>
      <span tal:omit-tag=""
            i18n:translate="head_personal_data">Personal data</span>
    </dt>
    <dd class="moduleItem lastItem">
      
      <div tal:condition="data/getPortrait"
	   class="employee_portrait">
	<img tal:attributes="src python:context.absolute_url() + '/portrait'"
	     alt="Portrait" />
      </div>
    
      <div tal:condition="data/address|nothing"
           tal:content="data/address"/>
      <div tal:condition="data/postalCode|data/City|nothing">
        <span tal:condition="data/postalCode|nothing"
              tal:content="data/postalCode"/>
        <span tal:condition="data/city|nothing"
              tal:content="data/city"/>
      </div>
      <div tal:condition="view/age|nothing">
        <span tal:replace="view/age"/>
        <span i18n:translate="label_years">years</span>
      </div> 
      <div tal:condition="data/state|nothing"
           tal:content="data/state"/>   
      <div tal:condition="data/country|nothing"
           tal:content="data/country"/>
      <div tal:condition="data/telephone|nothing"
           tal:content="data/telephone"/>
      <div tal:condition="data/mobilePhone|nothing">
        <span tal:content="data/mobilePhone"/>
        <span i18n:translate="(mobile)">
          (mobile)
        </span>
      </div>
      <div tal:condition="data/email|nothing">
        <a href=""
           tal:attributes="href string:mailto:${data/email}"
           tal:content="data/email">
          reinout@vanrees.org
        </a>
      </div>
      <div tal:condition="data/birthdate|nothing">
        <b i18n:translate="birthdate">Birthdate: </b>
        <span tal:content="data/birthdate"/>
      </div>
      <span class="clear"></span>
    </dd>
  </dl>
</div>
