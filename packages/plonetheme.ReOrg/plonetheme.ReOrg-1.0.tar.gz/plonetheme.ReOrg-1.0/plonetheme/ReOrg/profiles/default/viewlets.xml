<?xml version="1.0"?>
<!-- This file holds the setup configuration of the viewlet managers
     for the "ReOrg Theme" skin.
 -->

<object>
  <order manager="plone.portalfooter" skinname="ReOrg Theme" based-on="Plone Default">
    <viewlet name="ReOrg.site_actions" insert-before="*" />
    <viewlet name="ReOrg.personal_bar" insert-after="ReOrg.site_actions" />  
  </order>

  <order manager="plone.portalheader" skinname="ReOrg Theme" based-on="Plone Default">
    <viewlet name="plone.logo" insert-before="*" />
    <viewlet name="plone.global_sections" insert-after="plone.logo" />
  </order>

  <hidden manager="plone.portalheader" skinname="ReOrg Theme">
    <viewlet name="plone.site_actions" />
  </hidden>

  <hidden manager="plone.portaltop" skinname="ReOrg Theme">
    <viewlet name="plone.personal_bar" />
    <viewlet name="plone.path_bar" />
  </hidden>

</object>
