<div i18n:domain="notesmodule">

  <dl class="module">
    <dt class="moduleHeader">
      <span tal:omit-tag=""
            i18n:translate="">Notes</span>
    </dt>
    <dd class="portletItem lastItem">
      <div tal:define="notes view/getNotes"
           tal:condition="notes">
        <ul>
          <li tal:repeat="note notes"
              tal:content="note">
            Note text.
          </li>
        </ul>
      </div>
      <form name="add_note"
            method="post"
            id="addnoteform"
            action=""
            tal:attributes="action view/formAction"
            tal:condition="view/canAddSmallnotes">
            <input name="titlesmallnote" value="" type="text" size="30" />
            <input name="notesform.submitted" value="1" type="hidden" />
            <input i18n:attributes="value label_add_smallnote;"
                   type="submit" value="Add note" />
      </form>      
    </dd>
  </dl>
</div>
