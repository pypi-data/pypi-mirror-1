<?xml version="1.0"?>
<rolemap>
  <roles>
    <role name="Customer"/>
    <role name="Employee"/>
    <role name="Projectmanager"/>
  </roles>
  <permissions>
    <!-- Extra permissions for our new roles. -->
    <permission name="Review portal content"
                acquire="True">
      <role name="Projectmanager"/>
    </permission>
    <permission name="Add portal content"
                acquire="True">
      <role name="Projectmanager"/>
      <role name="Employee"/>
      <role name="Customer"/>
    </permission>
    <permission name="Access contents information"
                acquire="True">
      <role name="Projectmanager"/>
      <role name="Employee"/>
      <role name="Customer"/>
    </permission>
    <permission name="Add portal folders"
                acquire="True">
      <role name="Projectmanager"/>
      <role name="Employee"/>
    </permission>
    <permission name="List folder contents"
                acquire="True">
      <role name="Projectmanager"/>
      <role name="Employee"/>
      <role name="Customer"/>
    </permission>
    <permission name="View"
                acquire="True">
      <role name="Projectmanager"/>
      <role name="Employee"/>
      <role name="Customer"/>
    </permission>
    <permission name="Delete objects"
                acquire="True">
      <role name="Projectmanager"/>
      <role name="Employee"/>
    </permission>
    <permission name="Manage properties"
                acquire="True">
      <role name="Projectmanager"/>
      <role name="Employee"/>
    </permission>
    <permission name="Modify portal content"
                acquire="True">
      <role name="Projectmanager"/>
      <role name="Employee"/>
      <role name="Customer"/>
    </permission>
    <permission name="Request review"
                acquire="True">
      <role name="Projectmanager"/>
      <role name="Employee"/>
      <role name="Customer"/>
    </permission>
    <!-- Our own permissions. Most of it is handled by workflow, though. -->
    <permission name="eXtremeManagement: Add Project"
                acquire="True">
      <role name="Manager"/>
      <role name="Projectmanager"/>
    </permission>
    <permission name="eXtremeManagement: Add Iteration"
                acquire="True">
      <role name="Manager"/>
      <role name="Projectmanager"/>
    </permission>
    <permission name="eXtremeManagement: Add Story"
                acquire="True">
      <role name="Manager"/>
      <role name="Projectmanager"/>
    </permission>
    <permission name="eXtremeManagement: Add Task"
                acquire="True">
      <role name="Manager"/>
      <role name="Projectmanager"/>
    </permission>
    <permission name="eXtremeManagement: Add ProjectMember"
                acquire="True">
      <role name="Manager"/>
      <role name="Projectmanager"/>
    </permission>
    <permission name="eXtremeManagement: Add Customer"
                acquire="True">
      <role name="Manager"/>
      <role name="Projectmanager"/>
    </permission>
    <permission name="eXtremeManagement: Add CustomerFolder"
                acquire="True">
      <role name="Manager"/>
      <role name="Projectmanager"/>
    </permission>
    <permission name="eXtremeManagement: Add ProjectFolder"
                acquire="True">
      <role name="Manager"/>
      <role name="Projectmanager"/>
    </permission>
    <permission name="eXtremeManagement: Add Booking"
                acquire="True">
      <role name="Manager"/>
      <role name="Projectmanager"/>
      <role name="Employee"/>
    </permission>
    <permission name="eXtremeManagement: Add Offer"
                acquire="True">
      <role name="Manager"/>
      <role name="Projectmanager"/>
    </permission>
  </permissions>
</rolemap>
