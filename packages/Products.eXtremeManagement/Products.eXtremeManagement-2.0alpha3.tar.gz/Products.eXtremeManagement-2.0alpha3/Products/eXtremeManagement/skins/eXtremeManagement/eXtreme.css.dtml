.header_iteration_project_overview {
    font-size: 120%;
}

.header_iteration {
    border-right: none;
}

.storyTitle_project_overview {
    font-weight: bold;
    text-decoration: underline;
}

.storyTitle_iteration_overview {
    font-weight: bold;
}

.progress_details {
    text-align: center;
    padding: 5px;
}

.progress_bar {
  width: 100px;
  height: 10px;
  text-align: left;
  margin-top: 2px;
  background-color: #ccc;
}

.listStories {
    padding-bottom: 5px;
}

#totalTasks, #task_header {
    font-weight: bold !important;
    text-align: right;
}

#task_header {
    width: 40%;
}

#new-task-description {
    width: 47.5%;
}

.position-quick-task {
  margin-top: 10px;
}

.td-story-title, .td-memberid {
  text-align: left !important;
  cursor: pointer;
}

.td-story-title {
}

.td-story-title .story-title {
