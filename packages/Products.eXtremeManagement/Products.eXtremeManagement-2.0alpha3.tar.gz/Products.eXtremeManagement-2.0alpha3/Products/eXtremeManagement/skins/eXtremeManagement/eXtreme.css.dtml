}

.clear-bottom .story-title {
    background: transparent url(&dtml-portal_url;/arrow_blue_active.gif) no-repeat scroll 2px 0;
}

/* LS- css for the remaining budget - start */

.remaining_budget_table {
    /* LS - table margin-bottom fix */
    margin: -5px 0 0 0;
}

.totalOfProject {
    font-size: 90%;
    font-weight: bold;
    color: #5f861e;
    background: transparent url(&dtml-portal_url;/background_budgetLeft.gif) no-repeat scroll 0 0;
    border-right: 1px solid #ccc;
    height: 18px;
    margin: 0 0 5px;
    padding: 0 0 0 13px;
    float: right;
}

.totalOfProject span {
    background: #cef48b url(&dtml-portal_url;/background_budgetRepeat.gif) repeat-x scroll 0 0;
    height: 16px;
    padding: 2px 20px 0 18px;
    float: left;
}   

.totalOfProject .remaining_budget {
    padding: 2px 32px 0 18px !important;
}

/* LS- remaining budget - end */    

.clear-bottom {
    border-bottom: 1px solid #FFFFFF;
}

.list_iterations div {
    line-height: 1.5em;
    margin: 0.5em 0 0 1.5em;
    padding: 0;
}

.iteration-description {
    color: &dtml-discreetColor;;
    font-weight: normal;
}

#iteration-item {
    padding: 0 0 0 40px;
}

.iteration-table {
