}

.xm-details, .xm-details table {
    width: 300px; /*fixed with for xm-details div and table*/
}

.xm-details table td {
    border: 0;
}

.xm-details .inlineEditable {
    white-space: nowrap;
}

.formControls {
    padding-top: 2px;
}

.xm-details table th {
  border: 0;
  white-space: nowrap;
}

.xm-bookings {
    width: 100%;
}

UL.xm-assignees {
    margin: 0;
    padding: 0;
}

UL.xm-assignees LI {
    list-style: none none inside;
    margin: 0;
    padding: 0 0 0 1.5em;
    background: transparent url(&dtml-portal_url;/user.gif) no-repeat;
}

.hours-per-employee {
    width: 100%;
}

/* Offer view */

