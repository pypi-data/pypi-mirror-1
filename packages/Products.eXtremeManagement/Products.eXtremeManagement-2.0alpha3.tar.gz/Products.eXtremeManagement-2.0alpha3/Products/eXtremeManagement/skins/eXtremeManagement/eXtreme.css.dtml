}

.add-task {
    font-size: 90%;
    cursor: pointer;
    margin: 0;
    padding: 4px 4px 4px 18px;
    background: transparent url(&dtml-portal_url;/arrow_blue_inactive.gif) no-repeat scroll 0 5px;
    border: 0;
    float: left;
}

/* styling expanded add-task form*/ 
#add-task legend {
    padding: 4px 4px 4px 22px;
    background: transparent url(&dtml-portal_url;/arrow_blue_active.gif) no-repeat scroll 4px 7px;
}

