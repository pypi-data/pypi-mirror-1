  margin-bottom: 10px;
}

#offerView td, #offerView th {
    padding: 10px 10px;
}

#offerView th {
    text-align: left;
    font-size: 120%;
}

#offerView th.alignRight {
    text-align: right;
}

.storyTitle-storyEstimate th {
  background-color: #EEF3F5;
}

.totalTasks th {
}

#bookingTotal, #booking-details-total {
  font-weight: bold;
  font-size: 110%;
}

#bookingTotal th, #booking-details-total th {
  background: #ebebe9 url(&dtml-portal_url;/background_tableFooter.gif) repeat-x scroll 0 0;
  font-weight: bold;
  white-space:nowrap;
}

/* booking_month  */

.greyed {
    color: Grey;
    background: #f3f3f1 url(&dtml-portal_url;/background_tableFix.gif) 0 0 repeat-x;
}

.good {
    color: Black;
}

.not-enough {
    color: Red;
    background-color: #FFDDCC;
}

.story-details-empty {
  display: none;
}

/* LS - ugly little fix.. to overlap the tablerow backgroundimage*/
#story-details-td {
    background: #FDFDFC;
}

/* gantt chart look and feel */

.gantt-chart .bar,
.gantt-chart .space {
    height: 20px;
    color: #fff;
    overflow: hide;
}

.gantt-chart .time-row th {
    border-bottom: 1px solid black;
}

.gantt-chart td.left-col {
    border-right: 1px solid black;
    padding: 0.2em;
}

.gantt-chart td {
    border-bottom: 1px solid #ccc;
}

.gantt-chart .bar {
    background-color: #ccc;
    color: white;
    text-align: center;
    font-size: 0.8em;
    border-right: 1px #999 dotted;
    border-left: 1px #999 dotted;
    overflow: hidden;
}

.gantt-chart .bar.new,
.gantt-chart .bar.start {
    background-color: #cff;
}

.gantt-chart .bar.in-progress {
    background-color: #cfc;
}

.gantt-chart .bar.invalid-date {
    background-color: #ffcc66;
}

.gantt-chart .last td {
    border-bottom: 1px black solid;
}

.gantt-chart th .timeline div.week {
    font-size: 0.8em;
    font-weight: normal;
    text-align: left;
    background-color: #eee;
    border-left: 1px dashed black;
    padding-left: 4px;
}


/* story drag/drop start */

/*
    TODO Do we want a min-height (which is ignored by IE) or a default value like
    'no stories' (which explains the gap in the interface) ?
*/
ul.iteration-droptarget {
    min-height: 2em;
    padding: 0;
    margin: 0;
}

ul.iteration-droptarget li, .kss-dragdrop-dragging {
    list-style: none;
    margin: 0;
    padding: 0 0.3em 0 0.3em;
    background-color: white;
}

ul.iteration-droptarget li {
    border: 2px solid white;
}

.kss-dragdrop-dragging {
    border: 2px dashed #ccc;
    font-size: 110%;
}

ul.iteration-droptarget li.story-draggable {
    cursor: pointer;
}

ul.iteration-droptarget li.story-draggable:hover {
    border: 2px dotted black;
}

.kss-dragdrop-ghost {
    /* The original location of the currently-dragged item. */
    color: #ccc;
}

.kss-dragdrop-clone-border {
    /* The dragged item shown where it will turn up. */
    font-weight: bold;
}

/* story drag/drop end*/

/* actionMenu clone START */
.tasklist_table .actionMenu a:hover {
    text-decoration: none;
}
.tasklist_table .actionMenu .actionMenuContent ul {
    padding: 0 !important;
}
.tasklist_table .actionMenu .actionMenuContent li a {
    padding: 0 5px;
    text-decoration: none;
}
.tasklist_table .actionMenu .actionMenuContent li a:hover {
    text-decoration: none;
}

table.listing .actionMenu .actionMenuHeader a {
    background-position: 0 0; /*LS-  display fix image ie7*/
	z-index: 0;
}

table.listing .actionMenu {
    width: 77px; /* LS this width ensures that the actionMenu is wide enough. The previous method caused displacement problems in IE7 */
}


.td-center a:hover {
    text-decoration: none;
}

.booking-per-month tr {
    background-color: #fff;
}

/* actionMenu clone END */


/* Management project listings START */

td.right {
    text-align: right;
}
/* Management project listings END */

