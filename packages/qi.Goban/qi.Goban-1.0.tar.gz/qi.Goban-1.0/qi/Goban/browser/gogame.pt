<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
xmlns:tal="http://xml.zope.org/namespaces/tal"
xmlns:metal="http://xml.zope.org/namespaces/metal"
xmlns:i18n="http://xml.zope.org/namespaces/i18n" lang="en"
metal:use-macro="here/main_template/macros/master"
i18n:domain="qi.Goban">
  <body>
    <metal:main metal:fill-slot="main">
      <tal:main-macro metal:define-macro="main"
      tal:define="kssClassesView context/@@kss_field_decorator_view; getKssClasses nocall:kssClassesView/getKssClassesInlineEditable; templateId template/getId;">

        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <h1 class="documentFirstHeading"> 
            <metal:field use-macro="python:here.widget('title', mode='view')">
            Title
            </metal:field>
        </h1>
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <p class="documentDescription">
            <metal:field use-macro="python:here.widget('description', mode='view')">
            Description
            </metal:field>
        </p>
        <blockquote id="gameInfo"
        tal:define="EV context/event | nothing; RO context/round | nothing; PB context/blackPlayer | nothing; PW context/whitePlayer | nothing; BR context/blackRating | nothing; WR context/whiteRating | nothing; KM context/komi | nothing; DT context/datePlayed | nothing; DF context/dateFinished | nothing; PC context/place | nothing; RE context/result | nothing; HA context/handicap | nothing; bSize context/boardSize; noViews view/getNoViews | nothing;">

          <div>
            <label i18n:translate="label_blackPlayer"
            tal:condition="PB | BR">Black</label>
            <em tal:condition="PB" tal:content="PB" />
            <em tal:condition="BR" tal:content="BR" />
          </div>
          <div>
            <label i18n:translate="label_whitePlayer"
            tal:condition="PW | WR">White</label>
            <em tal:condition="PW" tal:content="PW" />
            <em tal:condition="WR" tal:content="WR" />
          </div>
          <div>
            <label i18n:translate="label_event"
            tal:condition="EV">Event</label>
            <em tal:condition="EV" tal:content="EV" />
            <label i18n:translate="label_round"
            tal:condition="RO">Round</label>
            <em tal:condition="RO" tal:content="RO" />
          </div>
          <div>
            <label i18n:translate="label_place"
            tal:condition="PC">Place</label>
            <em tal:condition="PC" tal:content="PC" />
          </div>
          <div>
            <label i18n:translate="label_datePlayed"
            tal:condition="DT">Played on</label>
            <em tal:condition="DT" tal:content="DT" />
            <label i18n:translate="label_dateFinished"
            tal:condition="DF">until</label>
            <em tal:condition="DF" tal:content="DF" />
          </div>
          <div>
            <label i18n:translate="label_komi"
            tal:condition="KM">Komi</label>
            <em tal:condition="KM" tal:content="KM" />
            <label i18n:translate="label_result"
            tal:condition="RE">Result</label>
            <em tal:condition="RE" tal:content="RE" />
          </div>
          <div>
            <label i18n:translate="label_handicap"
            tal:condition="HA">Handicap</label>
            <em tal:condition="HA" tal:content="HA" />
          </div>
          <div>
            <label i18n:translate="label_moves">
            Moves</label>
            <em tal:content="context/noMoves" />
          </div>
        </blockquote>
        <legend i18n:translate="legend_downloadSgf">You can
        download the original sgf file by clicking the link
        below:</legend>
        <div>
        <a tal:attributes=" href string:${here/absolute_url}/at_download/sgf"
        tal:content="here/sgf/filename"></a>
        </div>
        <div tal:replace="structure provider:plone.abovecontentbody" />
       	<div metal:use-macro="here/document_relateditems/macros/relatedItems">
        show related items if they exist</div>

        <div tal:replace="structure provider:plone.belowcontentbody" />
      
      </tal:main-macro>
    </metal:main>
  </body>
</html>
