<tal:block condition="view/available"
           i18n:domain="qi.Goban">
<dl class="portlet portletRecentGames">
    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <a href="#" 
           class="tile"
           tal:attributes="href view/recent_link"
           tal:content="view/title">Recently modified games</a>
        <span class="portletTopRight"></span>
    </dt>
    <tal:items tal:repeat="obj view/games" tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">
        <dd class="portletItem"
            tal:define="oddrow repeat/obj/odd;
                        item_wf_state_class string:state-${obj/review_state};
                        item_type_class string:contenttype-${obj/portal_type};"
            tal:attributes="class python:oddrow and  'portletItem odd' or 'portletItem even'">
            <div tal:attributes="class item_type_class">
                <a href=""
                    tal:attributes="href obj/url;
                                    title obj/title;
                                    class string:$item_wf_state_class tile">
                    <img tal:condition="obj/icon" tal:attributes="src obj/icon"/>
                    <span tal:replace="obj/title">
                        Title
                    </span>
                </a>
                <span class="portletItemDetails" tal:content="python:toLocalizedTime(obj['date'])">
                </span>
            </div>
        </dd>
    </tal:items>


    <dd class="portletFooter">
        <a class="title"
           tal:attributes="href view/recent_link"
           i18n:translate="box_recentGames">
            More&hellip;
        </a>
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
</tal:block>
