<dl class="portlet portletCollection"
    i18n:domain="plone.portlet.collection"
    tal:define="collection view/getCollection">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <a tal:attributes="href collection/absolute_url">
        <span tal:content="view/data/header">
        </span>
        </a>  
        <span class="portletTopRight"></span>
    </dt>

    
    <tal:events tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime"
                tal:repeat="obj view/results">
    <dd class="portletItem"
        tal:define="oddrow repeat/obj/odd;
                    plone_view context/@@plone;
                    getIcon nocall:plone_view/getIcon;
                    item_icon python:getIcon(obj);"
        tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">
        <a href="#"
           class="tile"
           tal:attributes="href obj/getURL;
                           title obj/Description">
            <img tal:replace="structure item_icon/html_tag" />
            <span tal:replace="obj/pretty_title_or_id">
             Some Event 
            </span>
            <span class="portletItemDetails">
                <tal:condition condition="obj/location">
                    <tal:location content="obj/location">Location</tal:location>, <br />
                </tal:condition>
                <tal:date content="python:toLocalizedTime(obj.start)">
                May 5
                </tal:date>
            </span>
        </a>
    </dd>
    </tal:events>
    
    
    
    
    <dd class="portletFooter">
        <span class="portletBotomLeft"></span>
        <span>
        <a tal:attributes="href collection/absolute_url">
             More&hellip;
             </a>
        </span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
