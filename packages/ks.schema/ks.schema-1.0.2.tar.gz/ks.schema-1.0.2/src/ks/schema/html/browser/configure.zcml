    All right reserved, 2006-2007
  -->

  <!--
    Author: Anatoly Zaretsky
    $Id: configure.zcml 35330 2008-01-13 09:03:40Z cray $
  -->

  <view
      type="zope.publisher.interfaces.browser.IBrowserRequest"
      for="ks.schema.html.interfaces.IHTML"
      provides="zope.app.form.interfaces.IInputWidget"
      factory=".htmlinputwidget.HTMLInputWidget"
      permission="zope.Public"
      />

  <browser:page
      for="*"
      name="htmlimagelist.js"
      permission="zope.Public"
      class=".htmlinputwidget.HTMLImageListJS"
      />

  <view
      type="zope.publisher.interfaces.browser.IBrowserRequest"
      for="ks.schema.html.interfaces.IHTML"
      provides="zope.app.form.interfaces.IDisplayWidget"
      factory=".htmldisplaywidget.HTMLDisplayWidget"
      permission="zope.Public"
      />

</configure>
