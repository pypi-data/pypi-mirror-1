  <!--
    Author: Anatoly Bubenkov
    $Id: configure.zcml 35330 2008-01-13 09:03:40Z cray $
  -->

  <view
      type="zope.publisher.interfaces.browser.IBrowserRequest"
      for="ks.schema.smarturi.interfaces.ISmartURI"
      provides="zope.app.form.interfaces.IInputWidget"
      factory=".smarturiwidget.SmartURIWidget"
      permission="zope.Public"
      />

  <view
      type="zope.publisher.interfaces.browser.IBrowserRequest"
      for="zope.schema.interfaces.ISet
           ks.schema.smarturi.interfaces.ISmartURI"
      provides="zope.app.form.interfaces.IDisplayWidget"
      factory="zope.app.form.browser.SequenceDisplayWidget"
      permission="zope.Public"
      />

  <view
      type="zope.publisher.interfaces.browser.IBrowserRequest"
      for="ks.schema.smarturi.interfaces.ISmartURI"
      provides="zope.app.form.interfaces.IDisplayWidget"
      factory=".smarturiwidget.SmartURIDisplayWidget"
      permission="zope.Public"
      />

</configure>
