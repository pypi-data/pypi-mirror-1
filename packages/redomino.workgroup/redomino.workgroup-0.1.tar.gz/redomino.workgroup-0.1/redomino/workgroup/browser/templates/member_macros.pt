<html metal:use-macro="context/@@standard_macros/view">
    <head>
    </head>

    <body>
        <div metal:fill-slot="body">
            <metal:def_macro define-macro="main">

                <h3 i18n:domain="redomino.workgroup" i18n:translate="memberarea_menus">MemberArea Menu</h3>
                <div id="memberarea_menu">
                    <ul>
                        <tal:loop tal:repeat="cview context/@@view_get_menu/memberarea_menu|nothing">
                            <li>
                                <a href=""
                                   tal:attributes="href cview/action"
                                   tal:content="cview/title" i18n:translate=""> label </a>
                            </li>
                         </tal:loop>
                    </ul>
                </div>

                <metal:def_slot define-slot="content"/>
            </metal:def_macro>

        </div>
    </body>
</html>

