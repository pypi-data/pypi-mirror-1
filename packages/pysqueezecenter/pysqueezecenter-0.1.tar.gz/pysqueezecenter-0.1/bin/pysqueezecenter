#!/usr/bin/env python

from pysqueezecenter.server import Server
from pysqueezecenter.player import Player

SC_HOST="10.0.2.10"
SC_PORT="9090"
SC_USERNAME="user"
SC_PASSWORD="password"

sc = Server(hostname=SC_HOST, port=SC_PORT, username=SC_USERNAME, password=SC_PASSWORD)
sc.connect()

print "Logged in: %s" % sc.logged_in
print "Version: %s" % sc.get_version()

sq = sc.get_player("00:04:20:12:6e:57")

print "Name: %s | Mode: %s | Time: %s | Connected: %s | WiFi: %s" % (sq.name, sq.get_mode(), sq.get_time_elapsed(), sq.is_connected, sq.get_wifi_signal_strength())

print sq.get_track_path()
print sq.get_time_remaining()

