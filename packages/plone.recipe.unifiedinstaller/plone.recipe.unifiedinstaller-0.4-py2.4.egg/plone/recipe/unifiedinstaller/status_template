#!%(shell_cmd)s
# Cluster Status Discovery

if [ ! -w %(file_storage)s ]; then
    echo "You lack the rights necessary to run this script; Try sudo $0"
    exit 1
fi

echo "ZEO Server:"
%(bin_dir)s/%(zeoserver)s status
for client in %(clients)s
do
    sleep 1
    echo ${client}:
    %(bin_dir)s/$client status
done
