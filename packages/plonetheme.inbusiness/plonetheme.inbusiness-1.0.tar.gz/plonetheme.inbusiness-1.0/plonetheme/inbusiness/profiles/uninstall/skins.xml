<?xml version="1.0"?>
<!-- the default skin is set back to the plone default skin -->
<object name="portal_skins" meta_type="Plone Skins Tool" allow_any="False"
   cookie_persistence="False" default_skin="Plone Default"
   request_varname="plone_skin">

 <object name="plonetheme_inbusiness_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.inbusiness:skins/plonetheme_inbusiness_custom_images" remove="True"/>
 <object name="plonetheme_inbusiness_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.inbusiness:skins/plonetheme_inbusiness_custom_templates" remove="True"/>
 <object name="plonetheme_inbusiness_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.inbusiness:skins/plonetheme_inbusiness_styles" remove="True"/>

 <skin-path name="In Business Theme" based-on="Plone Default" remove="True">
  <layer name="plonetheme_inbusiness_custom_images"
     insert-after="custom" remove="True"/>
  <layer name="plonetheme_inbusiness_custom_templates"
     insert-after="plonetheme_inbusiness_custom_images" remove="True"/>
  <layer name="plonetheme_inbusiness_styles"
     insert-after="plonetheme_inbusiness_custom_templates" remove="True"/>
 </skin-path>

</object>
