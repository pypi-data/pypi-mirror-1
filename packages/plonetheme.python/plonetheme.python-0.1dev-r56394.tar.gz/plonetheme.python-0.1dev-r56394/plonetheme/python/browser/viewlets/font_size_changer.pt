<html xmlns:tal="http://xml.zope.org/namespaces/tal" i18n:domain="plone">
	<body>
		<div id="portal-font-size-changer-wrapper">
			Screen styles
			
			<ul>
				<li>
					<a id="portal-font-size-changer-normal" onclick="
						setFontSize(100);
						
						document.getElementById('portal-font-size-changer-normal').className='selected';
						document.getElementById('portal-font-size-changer-large').className='';
						
						document.getElementById('portal-font-size-changer-normal').innerHTML='normal*';
						document.getElementById('portal-font-size-changer-large').innerHTML='large';
					">
						normal
					</a>
				</li>
				<li>
					<a id="portal-font-size-changer-large" onclick="
						setFontSize(120);
						
						document.getElementById('portal-font-size-changer-normal').className='';
						document.getElementById('portal-font-size-changer-large').className='selected';
						
						document.getElementById('portal-font-size-changer-normal').innerHTML='normal';
						document.getElementById('portal-font-size-changer-large').innerHTML='large*';
					">
						large
					</a>
				</li>
			</ul>
			
			<script type="text/javascript">
				function setFontSize(percent) {
					document.body.style.fontSize = percent + '%';
					
					var expirationDate = new Date();
					expirationDate.setTime(expirationDate.getTime() + 864000000000);
					document.cookie = "plonetheme.python.fontsizechanger=" + percent + "; expires=" + expirationDate.toGMTString() + "; path=/";
				}
				
				var ploneCookies = document.cookie.split(";");
				var id;
				
				for (id in ploneCookies) {
					var ploneCookie = "";
					ploneCookie = ploneCookies[id];
					
					while (ploneCookie.charAt(0) == ' ') {
						ploneCookie = ploneCookie.substring(1, ploneCookie.length);
					}
					
					if (ploneCookie.indexOf("plonetheme.python.fontsizechanger=") == 0) {
						var finalSize = ploneCookie.substring("plonetheme.python.fontsizechanger=".length, ploneCookie.length);
						
						if (finalSize == 120) {
							setFontSize(finalSize);
							
							document.getElementById('portal-font-size-changer-normal').className='';
							document.getElementById('portal-font-size-changer-large').className='selected';
							
							document.getElementById('portal-font-size-changer-normal').innerHTML='normal';
							document.getElementById('portal-font-size-changer-large').innerHTML='large*';
						} else if (finalSize == 100) {
							setFontSize(finalSize);
							
							document.getElementById('portal-font-size-changer-normal').className='selected';
							document.getElementById('portal-font-size-changer-large').className='';
							
							document.getElementById('portal-font-size-changer-normal').innerHTML='normal*';
							document.getElementById('portal-font-size-changer-large').innerHTML='large';
						} else {
							setFinalSize(100);
							
							document.getElementById('portal-font-size-changer-normal').className='selected';
							document.getElementById('portal-font-size-changer-large').className='';
							
							document.getElementById('portal-font-size-changer-normal').innerHTML='normal*';
							document.getElementById('portal-font-size-changer-large').innerHTML='large';
						}
					}
				}
			</script>
		</div>
	</body>
</html>