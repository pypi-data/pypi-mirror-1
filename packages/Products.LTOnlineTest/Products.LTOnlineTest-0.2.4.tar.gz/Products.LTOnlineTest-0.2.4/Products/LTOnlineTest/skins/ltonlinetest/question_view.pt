<html metal:use-macro="here/main_template/macros/master">
  <head>
    <title tal:content="template/title">The title</title>
  </head>
  <body>
  
<div metal:fill-slot="main">

 <h1 tal:content="structure here/title_or_id" class="documentFirstHeading">
          Title or id
        </h1>
    
        <div class="documentDescription"
             tal:content="structure here/Description">
            description
        </div>

	  <div>
        <form>
            <ol>
              <li  tal:define="cindex python:here.getAnswer()-1;
                               correct python:here.getChoices()[cindex];">
       
                   <b tal:content="here/Title" />
                   <br /><br />
                     <span tal:replace="structure here/getQuestion-text" />

                   <blockquote>
                     <div tal:omit-tag="" tal:repeat="choice here/getChoices">
                         <img src="onlinetest_correct.gif" 
                                   tal:condition="python:choice == correct" />
                         <img src="onlinetest_wrong.gif"
                                   tal:condition="python:choice != correct" />
                         <span tal:omit-tag=""
                               tal:content="choice" />
                       <br />
                     </div>
                   </blockquote>
                     <b>Explanation:<b><i tal:content="structure here/getExplanation" />
                 </li>
               </ol>

          </form>

	  </div>

</div><!-- main slot -->

  </body>
</html>