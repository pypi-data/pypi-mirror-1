<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

<div metal:fill-slot="main">
<metal:main_macro define-macro="main">
    <metal:body define-macro="body_macro"
                tal:define="kssClassesView context/@@kss_field_decorator_view;
                            getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                            templateId template/getId">


        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading"> 
            <metal:field use-macro="python:here.widget('title', mode='view')">
            Title
            </metal:field>
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p class="documentDescription">
            <metal:field use-macro="python:here.widget('description', mode='view')">
            Description
            </metal:field>
        </p>

        <div tal:replace="structure provider:plone.abovecontentbody" />
<!--
		  <div class="alphabet-container topic-alphabets">
	          <div tal:omit-tag="" tal:repeat="alphabet view/alphabets">

		          <a tal:condition="python:alphabet['has_contents'] and not alphabet['selected']" 
		          tal:attributes="href alphabet/url_bit" tal:content="alphabet/alphabet" />

		          <span tal:condition="python:alphabet['has_contents'] and alphabet['selected']" 
   		              class="selected"
			          tal:attributes="href alphabet/url_bit" tal:content="alphabet/alphabet" />


			      <span tal:condition="not:alphabet/has_contents" 
			            class="unavailable"
			      	    tal:content="alphabet/alphabet" />
	          </div>
	      </div>
-->
		  <div class="alphabet-container topic-alphabets">
	          <div tal:omit-tag="" tal:repeat="character view/characters">

		          <a tal:condition="python:character['has_contents'] and not character['selected']" 
		          tal:attributes="href character/url_bit" tal:content="character/character" />

		          <span tal:condition="python:character['has_contents'] and character['selected']" 
   		              class="selected"
			          tal:attributes="href character/url_bit" tal:content="character/character" />


			      <span tal:condition="not:character/has_contents" 
			            class="unavailable"
			      	    tal:content="character/character" />
	          </div>
	      </div>


        <ul class="alphabet-results" tal:repeat="item view/title_url_dictionary_lists">
          <li class="alphabet_word">
            <a tal:attributes="href item/url;
                               title item/title">
            <span tal:replace="item/title" />
            </a>
          </li>
		  <li class="terminator" style="display: none; clear:both; float: none">
		  	<!-- Clear floats for IE - workaround BUGS !"#!"# microsoft -->
		  </li>
        </ul>

    </metal:body>

    <metal:body define-macro="folderlisting_macro">
        <tal:subtopics condition="here/hasSubtopics|nothing"
                       define="folderContents here/getFolderContents">
            <h2 i18n:domain="atcontenttypes"
                i18n:translate="heading_contained_collections">
                Contained Collections:
            </h2>
            <metal:list metal:use-macro="here/base/macros/folderlisting"/>
        </tal:subtopics>
    </metal:body>

    <div tal:replace="structure provider:plone.belowcontentbody" />

</metal:main_macro>

</div>

</body>
</html>
