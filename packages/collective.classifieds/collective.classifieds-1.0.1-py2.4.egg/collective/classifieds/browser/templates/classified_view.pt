<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>
        <div metal:fill-slot="main" id="classifieds">
                <div tal:replace="structure provider:plone.abovecontenttitle" />
                <div metal:use-macro="here/global_statusmessage/macros/portal_message">
                        Portal status message
                </div>
                <div class="classified_options">
                        <tal:block tal:define="modificationDate here/Date;
                                             creator here/Creator;
                                             author python:mtool.getMemberInfo(creator);
                                             authorName python:author and author['fullname'] or creator;
                                             modificationDate python:here.toLocalizedTime(modificationDate)">

                                <tal:block i18n:translate="classified_label_placedby">
                                        Classified placed by
                                </tal:block>:
                                <a tal:attributes="href string:${here/absolute_url}/author/${here/Creator}">
                                        <tal:block tal:content="string:${authorName}">author</tal:block></a>


                                <tal:block i18n:translate="classifieds_classifiedsclassified_label_placed_at">
                                        on
                                </tal:block>:

                                <b tal:content="string:$modificationDate">date</b>

                                <br />
                                <a i18n:translate="classifieds_classifieds_view" tal:attributes="href string:${here/absolute_url}/classifiedsclassified_by_author_view?author=${here/Creator}">View</a>
                                <tal:block i18n:translate="classifieds_classifieds_all_created_by">all classifieds created by</tal:block>
                                <tal:block tal:content="authorName">authorName</tal:block>
                                <tal:block tal:condition="here/check_delete_permission">
                                        <br />
                                        <a href="delete" i18n:translate="classifieds_classified_delete" tal:attributes="href string:${here/absolute_url}/delete">Delete classified</a>
                                </tal:block>
                        </tal:block>
                </div>

                <tal:block i18n:translate="classifieds_goto">Go to</tal:block>
                <a tal:attributes="href python: context.getParentNode().absolute_url()" tal:content="context/getClassifiedsCategory">Content</a>
                <br />

                <h1 class="classified_title">
                      <span tal:content="context/title">Title</span>
                      <span tal:condition="python:portal.isExpired(here)" i18n:translate="classifieds_classified_expired">(classified expired)</span>
                </h1>

                <br />

                <table cellpadding="0" cellspacing="0">
                    <tr>
                        <td class="classified_image">
                                <tal:block tal:condition="context/hasImage">
                                        <a tal:attributes="href python:here.image_large.absolute_url()" target="_blank">
                                            <img tal:attributes="src python:here.image_mini.absolute_url()" />
                                        </a>
                                </tal:block>
                        </td>
                        <td>
                                <tal:block tal:content="structure here/getDescription" />

                                <tal:block tal:condition="exists: context/price">
                                        <h3 i18n:translate="classifieds_classifiedsclassified_label_price">Price</h3>
                                        <tal:block tal:content="python:'%0.2f' % context.price" />
                                </tal:block>
                                <br />
                        </td>
                    </tr>
                </table>
                <h3 i18n:translate="classifieds_label_classifiedscategory">Classifieds Category</h3>
                        <a tal:attributes="href python: context.getParentNode().absolute_url()" tal:content="context/getClassifiedsCategory">Content</a>
                <br />
        </div>
</body>
</html>
