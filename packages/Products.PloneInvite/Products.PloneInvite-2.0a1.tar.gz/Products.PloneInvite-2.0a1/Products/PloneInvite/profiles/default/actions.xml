<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <object name="user" meta_type="CMF Action Category">
    <object 
        name="invite" 
        meta_type="CMF Action" 
        i18n:domain="PloneInvite">
      <property 
          name="title" 
          i18n:translate="heading_invite_a_person">Invite someone</property>
      <property 
          name="description" 
          i18n:translate="">Send someone else an invitation to join the portal
      </property>
      <property name="url_expr">
        string:${globals_view/navigationRootUrl}/invite_form
      </property>
      <property name="icon_expr"></property>
      <property name="available_expr">python:member is not None</property>
      <property name="permissions">
      <element value="Add portal member"/>
      </property>
      <property name="visible">True</property>
    </object>
  </object>
</object>
