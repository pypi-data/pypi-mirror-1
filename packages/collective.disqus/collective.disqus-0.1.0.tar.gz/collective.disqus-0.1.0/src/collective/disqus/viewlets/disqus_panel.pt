<tal:block define="forum_id view/settings/forum_id"
           condition="python: view.is_discussion_allowed and forum_id">
	<div id="disqus_thread"></div>
	<script type="text/javascript" tal:content="view/render_js_settings"></script>
	<script type="text/javascript" 
	        src="http://disqus.com/forums/ID/embed.js"
			tal:attributes="src string:http://disqus.com/forums/${forum_id}/embed.js">
	</script>
	<noscript>
		<a href="http://ID.disqus.com/?url=ref"
		   tal:attributes="href string:http://${forum_id}.disqus.com/?url=ref">
			View the discussion thread.
		</a>
	</noscript>
	<a href="http://disqus.com" class="dsq-brlink">Powered by <span class="logo-disqus">DISQUS</span> comment system</a>
</tal:block>



