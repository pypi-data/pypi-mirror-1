<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html id="region-content" xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
	<title>{#advanced_dlg.code_title}</title>
	<script type="text/javascript" src="../../tiny_mce_popup.js"></script>
	<script type="text/javascript" src="js/source_editor.js"></script>
	<base target="_self" />
</head>
<body onresize="resizeInputs();" style="display:none; overflow:hidden;">
	<div class="dialog-wrapper">
		<form name="source" onsubmit="saveContent();return false;" action="#">
			<fieldset>
				<legend>{#advanced_dlg.code_title}</legend>
				<div class="field">
					<label for="htmlSource">{#advanced_dlg.code_title}</label>
					<div class="widget">
						<textarea name="htmlSource" id="htmlSource" rows="18" cols="100" style="" wrap="off" class="mceFocus"></textarea>
					</div>
				</div>

				<div class="field">
					<div class="widget">
						<input name="wraped" id="wraped" onclick="toggleWordWrap(this);" checked="checked" type="checkbox">
						<label for="wraped">{#advanced_dlg.code_wordwrap}</label>
					</div>
				</div>
			</fieldset>

			<div class="visualClear"><!-- --></div>

			<div class="mceActionPanel formControls">
				<span class="actionButtons">
					<input type="submit" id="insert" class="context" name="insert" value="{#update}" />
					<input type="button" id="cancel" class="context" name="cancel" value="{#cancel}" onclick="tinyMCEPopup.close();" />
				</span>
			</div>
		</form>
	</div>
</body>
</html>
