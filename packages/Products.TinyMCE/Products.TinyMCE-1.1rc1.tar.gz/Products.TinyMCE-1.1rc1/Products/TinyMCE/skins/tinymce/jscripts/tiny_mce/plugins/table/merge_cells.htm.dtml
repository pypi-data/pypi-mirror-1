<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html id="region-content" xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>{#table_dlg.merge_cells_title}</title>
	<script type="text/javascript" src="../../tiny_mce_popup.js"></script>
	<script type="text/javascript" src="../../utils/validate.js"></script>
	<script type="text/javascript" src="js/merge_cells.js"></script>
</head>
<body>
	<div class="dialog-wrapper">
		<form onsubmit="mergeCells();return false;" action="#">
			<fieldset>
				<legend>{#table_dlg.merge_cells_title}</legend>
				<div class="field">
					<label for="numcols">{#table_dlg.cols}</label>
					<div class="widget">
						<input type="text" id="numcols" name="numcols" value="" class="number min1 mceFocus" size="3" maxlength="3" />
					</div>
				</div>
				
				<div class="field">
					<label for="numrows">{#table_dlg.rows}</label>
					<div class="widget">
						<input type="text" id="numrows" name="numrows" value="" class="number min1" size="3" maxlength="3" />
					</div>
				</div>
			</fieldset>
		
			<div class="visualClear"><!-- --></div>
		
			<div class="mceActionPanel formControls">
				<span class="actionButtons">
					<input type="submit" id="insert" class="context" name="insert" value="{#update}" />
					<input type="button" id="cancel" class="context" name="cancel" value="{#cancel}" onclick="tinyMCEPopup.close();" />
				</span>
			</div>
		</form>
	</div>
</body>
</html>
