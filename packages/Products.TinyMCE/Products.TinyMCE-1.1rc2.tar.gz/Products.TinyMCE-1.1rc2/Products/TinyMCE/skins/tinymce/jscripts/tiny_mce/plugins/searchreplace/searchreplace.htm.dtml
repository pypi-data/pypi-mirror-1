<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html id="region-content" xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>{#searchreplace_dlg.replace_title}</title>
	<script type="text/javascript" src="../../tiny_mce_popup.js"></script>
	<script type="text/javascript" src="../../utils/mctabs.js"></script>
	<script type="text/javascript" src="../../utils/form_utils.js"></script>
	<script type="text/javascript" src="js/searchreplace.js"></script>
</head>
<body style="display:none;">
	<div class="dialog-wrapper">
		<form onsubmit="SearchReplaceDialog.searchNext('none');return false;" action="#">
			<ul class="formTabs"><li id="search_tab" class="formTab firstFormTab"><a href="javascript:SearchReplaceDialog.switchMode('search');" onmousedown="return false;" class="selected"><span>{#searchreplace.search_desc}</span></a></li><li id="replace_tab" class="formTab lastFormTab"><a href="javascript:SearchReplaceDialog.switchMode('replace');" onmousedown="return false;"><span>{#searchreplace_dlg.replace}</span></a></li></ul>

			<fieldset id="search_panel" class="formPanel">
				<div class="field">
					<label for="search_panel_searchstring">{#searchreplace_dlg.findwhat}</label>
					<div class="widget">
						<input id="search_panel_searchstring" name="search_panel_searchstring" type="text" value="" size="30"/>
					</div>
				</div>

				<div class="field">
					<label>{#searchreplace_dlg.direction}</label>
					<div class="widget">
						<input type="radio" id="search_panel_backwardsu" name="search_panel_backwards" class="noborder blurrable"/>
						<label for="search_panel_backwardsu">{#searchreplace_dlg.up}</label>
						<br/>
				
						<input type="radio" id="search_panel_backwardsd" name="search_panel_backwards" checked="checked" class="noborder blurrable"/>
						<label for="search_panel_backwardsd">{#searchreplace_dlg.down}</label>
						<br/>
					</div>
				</div>
		
				<div class="field">
					<div class="widget">
						<input id="search_panel_casesensitivebox" name="search_panel_casesensitivebox" type="checkbox" />
						<label for="search_panel_casesensitivebox">{#searchreplace_dlg.mcase}</label>
					</div>
				</div>
			</fieldset>

			<fieldset id="replace_panel" class="formPanel" style="display: none;">
				<div class="field">
					<label for="replace_panel_searchstring">{#searchreplace_dlg.findwhat}</label>
					<div class="widget">
						<input id="replace_panel_searchstring" name="replace_panel_searchstring" type="text" value="" size="30"/>
					</div>
				</div>

				<div class="field">
					<label for="replace_panel_replacestring">{#searchreplace_dlg.replacewith}</label>
					<div class="widget">
						<input id="replace_panel_replacestring" name="replace_panel_replacestring" type="text" value="" size="30"/>
					</div>
				</div>
	
				<div class="field">
					<label>{#searchreplace_dlg.direction}</label>
					<div class="widget">
						<input type="radio" id="replace_panel_backwardsu" name="replace_panel_backwards" class="noborder blurrable"/>
						<label for="replace_panel_backwardsu">{#searchreplace_dlg.up}</label>
						<br/>
				
						<input type="radio" id="replace_panel_backwardsd" name="replace_panel_backwards" checked="checked" class="noborder blurrable"/>
						<label for="replace_panel_backwardsd">{#searchreplace_dlg.down}</label>
						<br/>
					</div>
				</div>
		
				<div class="field">
					<div class="widget">
						<input id="replace_panel_casesensitivebox" name="replace_panel_casesensitivebox" type="checkbox" />
						<label for="replace_panel_casesensitivebox">{#searchreplace_dlg.mcase}</label>
					</div>
				</div>
			</fieldset>

			<div class="visualClear"><!-- --></div>

			<div class="mceActionPanel formControls">
				<span class="actionButtons">
					<input type="submit" class="context" id="insert" name="insert" value="{#searchreplace_dlg.findnext}" />
					<input type="button" class="context" id="replaceBtn" name="replaceBtn" value="{#searchreplace_dlg.replace}" onclick="SearchReplaceDialog.searchNext('current');" />
					<input type="button" class="context" id="replaceAllBtn" name="replaceAllBtn" value="{#searchreplace_dlg.replaceall}" onclick="SearchReplaceDialog.searchNext('all');" />
					<input type="button" class="context" id="cancel" name="cancel" value="{#cancel}" onclick="tinyMCEPopup.close();" />
				</span>
			</div>
		</form>
	</div>
</body>
</html>
