<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>{#xhtmlxtras_dlg.attribs_title}</title>
	<script type="text/javascript" src="../../tiny_mce_popup.js"></script>
	<script type="text/javascript" src="../../utils/mctabs.js"></script>
	<script type="text/javascript" src="../../utils/editable_selects.js"></script>
	<script type="text/javascript" src="../../utils/form_utils.js"></script>
	<script type="text/javascript" src="js/attributes.js"></script>
	<link rel="stylesheet" type="text/css" href="css/attributes.css" />
</head>
<body style="display: none">
	<div class="dialog-wrapper">
		<form onsubmit="insertAction();return false;" action="#">
			<fieldset>
				<legend>{#xhtmlxtras_dlg.attribute_attrib_tab}</legend>
				<div class="field">
					<label for="dir">{#xhtmlxtras_dlg.attribute_label_langdir}</label>
					<div class="widget">
						<select id="dir" name="dir"> 
							<option value="">{#not_set}</option> 
							<option value="ltr">{#xhtmlxtras_dlg.option_ltr}</option> 
							<option value="rtl">{#xhtmlxtras_dlg.option_rtl}</option> 
						</select>
					</div> 
				</div>
				<div class="field">
					<label for="lang">{#xhtmlxtras_dlg.attribute_label_langcode}</label>
					<div class="widget">
						<input id="lang" name="lang" type="text" value="" size="30"/>
					</div> 
				</div>
			</fieldset>

			<div class="visualClear"><!-- --></div>

			<div class="mceActionPanel formControls">
				<span class="actionButtons">
					<input type="submit" id="insert" class="context" name="insert" value="{#update}" />
					<input type="button" id="cancel" class="context" name="cancel" value="{#cancel}" onclick="tinyMCEPopup.close();" />
				</span>
			</div>
		</form>
	</div>
</body>
</html>