<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
  <body>
    <h1 tal:replace="structure here/manage_page_header">Header</h1>

    <h2 tal:define="manage_tabs_message options/manage_tabs_message | nothing"
        tal:replace="structure here/manage_tabs">Tabs</h2>

    <p class="form-help">Please input the configuration for the radius host</p>

    <form action="manage_editRadiusPlugin" method="POST">

      <table tal:define="host request/host|context/host|string:;
                         port request/port|context/port|string:;">
        <tr>
          <td class="form-label">Host</td>
          <td>
            <input type="text" name="host" value=""
                   tal:attributes="value host" />
          </td>
        </tr>
        <tr>
          <td class="form-label">Port</td>
          <td>
            <input type="text" name="port:int" value=""
                   tal:attributes="value port;" />
          </td>
        </tr>
        <tr>
          <td class="form-label">Password</td>
          <td> <input type="password" name="password" /> </td>
        </tr>
        <tr>
          <td colspan="2">
            <div class="form-element">
              <input type="submit" value="save"/>
            </div>
          </td>
        </tr>
      </table>
    </form>
  </body>
</html>
