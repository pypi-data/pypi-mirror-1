<tal:no_result condition='not:view/results'>
  <fieldset class="livesearchContainer">
    <legend id="livesearchLegend" tal:content='view/legend_livesearch'> live search legend </legend>  
    <div class="LSIEFix">
      <div id="LSNothingFound" tal:content='view/label_no_results_found'> label no results found </div> 
      <ul>
	<li class="LSRow">
	  <a href="search_form" style="font-weight:normal">Advanced Search&hellip;</a>
	</li>
      </ul>
    </div>
  </fieldset>
</tal:no_result>
<tal:result condition='view/results'>
  <fieldset class="livesearchContainer">
    <legend id="livesearchLegend" tal:content='view/legend_livesearch'> live search legend </legend>  
    <div class="LSIEFix">
      <ul class="LSTable">
	<tal:print_result repeat='result view/results'>
	  <tal:res define='res python:view.getResData(result)'>
            <li class="LSRow">
	      <img tal:attributes='src res/icon'/> 
	      <a tal:attributes='href res/itemURL;
				 title res/full_title' 
		 tal:content='res/display_title'>Title</a> 
	      <span class="discreet" tal:content='res/score'>100%</span> 
	      <div class="discreet" tal:content='res/display_description' style="margin-left: 2.5em;">Description</div> 
            </li>
	  </tal:res>
	</tal:print_result>
	<li class="LSRow">
	  <a href="search_form" style="font-weight:normal">Advanced Search&hellip;</a>
	</li>

	<tal:more condition='view/more'>
          <li class="LSRow">
            <a tal:attributes='href string:search?SearchableText=${view/searchterms}' style="font-weight:normal">Show all</a>
          </li>
	</tal:more>
      </ul>
    </div>
    </fieldset>
</tal:result>
