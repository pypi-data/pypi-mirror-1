<configure xmlns="http://namespaces.zope.org/zope"
   xmlns:browser="http://namespaces.zope.org/browser"
   xmlns:five="http://namespaces.zope.org/five">

  <!-- macros -->
  <browser:page
     class="opencore.nui.base.BaseView"
     for="opencore.interfaces.IOpenPage"
     name="wiki_macros"
     permission="zope.Public"
     template="wiki_macros.pt"
     />

  <browser:view
    allowed_interface="zope.interface.common.mapping.IItemMapping"
    class=".macros.WikiMacros"
    for="*"
    name="wiki_macros"
    permission="zope.Public"
    />
     
  <browser:page
    class=".view.WikiView"
    for="opencore.interfaces.IOpenPage"
    name="view"
    permission="zope2.View"
    template="wiki-view.pt"
    />

  <browser:page
    class="opencore.nui.wiki.view.WikiEdit"
    for="opencore.interfaces.IOpenPage"
    name="update"
    permission="cmf.ModifyPortalContent"
    />

  <browser:page
    class="opencore.nui.wiki.view.WikiEdit"
    for="opencore.interfaces.IOpenPage"
    name="edit"
    permission="cmf.ModifyPortalContent"
    />

  <browser:page
     class=".historyview.WikiVersionView"
     for="opencore.interfaces.IOpenPage"
     name="history"
     permission="zope2.View"
     template="wiki-history.pt"
     />

  <browser:page
     class=".historyview.WikiVersionView"
     for="opencore.interfaces.IOpenPage"
     name="version"
     permission="zope2.View"
     template="wiki-previous-version.pt"
     />

  <browser:page
     class=".historyview.WikiVersionCompare"
     for="opencore.interfaces.IOpenPage"
     name="version_compare"
     permission="zope2.View"
     template="wiki-version-compare.pt"
     />

  <browser:page
     class=".historyview.WikiVersionRevert"
     for="opencore.interfaces.IOpenPage"
     name="revert"
     permission="cmf.ModifyPortalContent"
     />

  <!-- attachments -->
  <browser:page
     attribute="updateAtt"
     class=".view.AttachmentView"
     for="opencore.interfaces.IOpenPage"
     name="updateAtt"
     permission="cmf.ModifyPortalContent"
     />

  <browser:page
     attribute="createAtt"
     class=".view.AttachmentView"
     for="opencore.interfaces.IOpenPage"
     name="createAtt"
     permission="cmf.ModifyPortalContent"
     />

  <browser:page
     attribute="attachmentSnippet"
     class=".view.AttachmentView"
     for="opencore.interfaces.IOpenPage"
     name="attachmentSnippet"
     permission="cmf.ModifyPortalContent"
     />

  <browser:page
     attribute="deleteAtt"
     class=".view.AttachmentView"
     for="opencore.interfaces.IOpenPage"
     name="deleteAtt"
     permission="cmf.ModifyPortalContent"
     />

</configure>
