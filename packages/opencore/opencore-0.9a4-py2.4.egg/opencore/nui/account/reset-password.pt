<tal:handle define="global isreset view/handle_reset" replace="nothing"/>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
  lang="en-US"
  metal:use-macro="here/@@standard_macros/master"
  i18n:domain="plone">
  <body>
    <div metal:fill-slot="content">

      <div id="oc-content-main">
        
        <form id="oc-join-form" class="oc-boxy"
          name="pwreset_action" 
          method="post"
          tal:attributes="action string:${context/absolute_url}/${view/name}">
          <fieldset>
            <h1
              i18n:domain="passwordresettool" 
              i18n:translate="legend_new_password">
              Enter a new password
            </h1>
            <input type="hidden" 
            name="key" 
            tal:attributes="value request/key | view/key" />
            <table class="oc-form">
              <tbody>
                <tr class="oc-fieldBlock">
                  <th class="oc-form-label" scope="row">
                    <label for="userid" i18n:translate="label_my_user_name_is">Username</label>
                  </th>
                  <td class="oc-form-value">
                    <input name="userid"
                    size="15"
                    tal:attributes="value request/userid|nothing;
                    tabindex tabindex/next | nothing;" />
                  </td>
                  <td class="oc-form-help">
                  </td>
                </tr>
                <tr class="oc-fieldBlock">
                  <th class="oc-form-label" scope="row">
                    <label for="password"
                      i18n:translate="label_new_password">New password</label>
                  </th>
                  <td class="oc-form-value">
                    <input type="password"
                      id="password"
                      name="password"
                      size="15"
                      tabindex=""
                      tal:attributes="tabindex tabindex/next | nothing;" />
                  </td>
                  <td class="oc-form-help">
                  </td>
                </tr>
                <tr class="oc-fieldBlock">
                  <th class="oc-form-label" scope="row">
                    <label for="confirm"
                      i18n:translate="label_confirm_password">Confirm password</label>
                  </th>
                  <td class="oc-form-value">
                    <input type="password"
                      id="password2"
                      name="password2"
                      size="15"
                      tabindex=""
                      tal:attributes="tabindex tabindex/next | nothing;" />
                  </td>
                  <td class="oc-form-help">
                  </td>
                </tr>
                <tr class="oc-actions">
                  <th></th>
                  <td class="oc-form-value">
                  <button class="context" type="submit" name="set:boolean" value="True">Reset password</button>
                  </td>
                </tr>
              </tbody>
            </table>
            <input type="hidden" name="form.submitted" value="1" />
          </fieldset>
        </form>
      </div>
    </div><!-- end content slot -->
  </body>
</html>
