<html metal:use-macro="here/@@standard_macros/master">
  <body>
    <div metal:fill-slot="content">
      
      <div id="oc-content-main" class="oc-content-main">
        
        <div class="oc-clearAfter">
        
        <div id="oc-home-content">
            <div class="oc-headingBlock">
              <h1>Welcome to OpenPlans!</h1>
            </div>
            <div tal:replace="structure view/intro" />
          </div><!-- oc-home-content -->
        </div>
        
        <div class="oc-home-columnGroup oc-clearAfter">
          <div class="oc-widget oc-widget-feed oc-home-column">
            <h2 class="oc-feed-title">Newest projects</h2>
            <ul class="oc-feed-list">
              <li class="oc-feed-item oc-clearAfter" tal:repeat="project view/recently_created_projects">
                <!--<img class="oc-avatar" src="" tal:attributes="src project/image_src | nothing" />-->
                <h3 class="oc-feed-item-title">
                  <a href="" tal:attributes="href python:view.project_url(project)" tal:content="project/Title">Project title</a>
                </h3>
                <p class="oc-feed-item-data oc-discreetText">
                  created
                  <span tal:replace="python: view.pretty_date(project.CreationDate)">Jan 1937</span>
                </p>
                <p class="oc-feed-item-description" tal:content="project/Description | nothing">
                  Project Mission
                </p>
              </li>
            </ul>
          </div>
          
          <div class="oc-widget oc-widget-feed oc-home-column">
            <h2 class="oc-feed-title">Updated projects</h2>
            <ul class="oc-feed-list">
              <li class="oc-feed-item oc-clearAfter" tal:repeat="project view/recently_updated_projects">
              <!-- FIXME optimization potential -->
                <!--<img class="oc-avatar" src="" tal:attributes="src project/image_src | nothing" /> -->
                <h3 class="oc-feed-item-title">
                  <a href="" tal:attributes="href python:view.project_url(project)" tal:content="project/Title">Project title</a>
                </h3>
                <p class="oc-feed-item-data oc-discreetText" tal:define="nmembers python: view.n_project_members(project)">
                  <span tal:replace="nmembers">YY</span> member<span tal:condition="python: nmembers != 1" tal:replace="string:s" />
                </p>
                <p class="oc-feed-item-data oc-discreetText">
                  last updated <span tal:replace="python: view.pretty_date(project.ModificationDate)">Jan 1937</span>
                </p>
              </li>
            </ul>
          </div>
          
        </div>
      </div><!-- content-main -->
      
      <div id="oc-content-sidebar">
        <div id="oc-home-getstarted" class="oc-getstarted">
            <h2>Get started!</h2>
            <ul class="oc-getstarted-list">
                <li tal:condition="not: view/loggedin">
                  <h3><a tal:attributes="href string:${context/portal_url}/join">Become a member</a></h3>
                  <p class="oc-discreetText">or <a tal:attributes="href string:${context/portal_url}/login">login</a>.</p>
                </li>
                <li>
                  <h3><a tal:attributes="href string:${context/portal_url}/projects">Find projects</a></h3>
                  <p class="oc-discreetText">There is always plenty to do.</p>
  
                </li>
                <li>
                  <h3><a tal:attributes="href string:${context/portal_url}/people">Find people</a></h3>
                </li>
            </ul>
          </div>
        <div id="oc-home-news" class="oc-widget oc-widget-feed">
            <h2 class="oc-feed-title">OpenPlans News</h2>
            <ul class="oc-feed-list">
              <li tal:repeat="item view/news" class="oc-feed-item oc-clearAfter">
                <h3 class="oc-feed-item-title">
                  <a tal:content="item/Title" 
                     tal:attributes="href string:${context/portal_url}/news#${item/getId}">News item</a>
                </h3>
                <div class="oc-feed-item-data oc-discreetText">
                  by 
                  <a tal:define="userid item/Creator" tal:attributes="href string:${context/portal_url}/people/${userid}" tal:content="userid" />,
                  <span tal:replace="python: view.pretty_date(item.CreationDate)">Jan 1937</span>
                </div>
                <p class="oc-feed-item-description" tal:content="item/lastModifiedComment">This should be the text from the revision note, however long it is.</p>
              </li>
              <li>
                <a class="oc-paginator" tal:attributes="href string:${context/portal_url}/news">more news&hellip;</a>
              </li>
            </ul>
          </div><!-- OpenPlans News --> 
      </div>
      
    </div><!-- content-fill-slot -->
  </body>
</html>
