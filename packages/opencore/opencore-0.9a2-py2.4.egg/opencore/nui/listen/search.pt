<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  metal:use-macro="here/@@standard_macros/master">
  <body>
    <div metal:fill-slot="content">
      <div metal:use-macro="here/@@listen_macros/bcrumb"/>
      <div metal:use-macro="here/@@listen_macros/tabs"/>
      <div id="oc-content-main">
        <tal:threads define="results view/searchArchive;
                             batch results;">

          <div class="oc-widget-search oc-boxy">
            <form action="./search_archive" method="post">
                <label class="oc-label-heading oc-biggerText" for="text" i18n:translate="label_search_text" tal:content="view/Title">
                  Search:
                </label>

                <input name="search_text" type="text"
                       tal:attributes="value request/search_text|nothing" />

              <span class="oc-actions">
                <input class="context" type="submit" name="submit" value="Search" />
              </span>
              
            </form>
          </div>

          <table class="oc-dataTable" id="forum-topics" tal:condition="results"
                 summary="Search results" i18n:attributes="summary" cellspacing="0">
            <thead>
              <tr>
                <th  scope="col">&nbsp;<tal:title i18n:translate="list_archive_thread_subject"
                >Subject</tal:title>&nbsp;</th>
                <th  scope="col">&nbsp;<tal:title i18n:translate="list_archive_thread_originator"
                >Started by</tal:title>&nbsp;</th>
              </tr>
            </thead>

            <tbody>
              <tal:items repeat="item results">
                <tr tal:define="oddrow repeat/item/odd;"
                    tal:attributes="class python:oddrow and 'even' or 'odd'">

                  <td>
                    <a href="#"
                       tal:content="item/brief_subject"
                       tal:attributes="href item/url" i18n:translate="" >
                    Subject</a>
                  </td>
                  <td>
                    <a href="." tal:omit-tag="not:item/from_id"
                      tal:attributes="href string:${here/portal_url}/author/${item/from_id}">
                      <span tal:replace="item/mail_from">test@example.com</span>
                    </a>
                  </td>
                </tr>
              </tal:items>
            </tbody>
          </table>

          <div metal:use-macro="here/batch_macros/macros/navigation" />

          <p tal:condition="python: not results and 'seach_text' in request"
             i18n:translate="description_no_search_results">
            Your search did not yield any results.
          </p>
        </tal:threads>
      </div><!-- content-main -->
      <div id="oc-content-sidebar">
        <div class="oc-boxy">
          <h2>About &ldquo;<span tal:replace="context/Title" />&rdquo;</h2>
          <dl class="oc-plainList">
          <dt>Address</dt>
          <dd id="listaddress" tal:content="view/listAddress" tal:condition="view/listAddress" />
          <dt>Description</dt>
          <dd tal:content="view/listDescription" tal:condition="view/listDescription" />
          </dl>
        </div>
      </div><!-- content-sidebar -->
    </div><!-- content-container -->
  </body>
</html>
