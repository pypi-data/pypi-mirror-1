<!-- PyIrcServer Configuration //-->
<config backup="config.bak">
	<!-- Server section - Master configuration //-->
	<server type="hub">
		<!-- Listen for connections, default port is 6667 //-->
		<listen>0.0.0.0</listen>
		<listen port="6668">0.0.0.0</listen>
		<!-- The name of your IRCd //-->
		<name>Irc.Lethalman.Org</name>
		<!-- The name of you Network //-->
		<netname>Lethalman</netname>
		<!-- Max number of connections at the same time //-->
		<maxconnections>10000</maxconnections>
		<!-- Set a password to access IRC. Leave it blank to make your IRCd public //-->
		<password/>
		<!-- Message Of The Day - Don't specify any file if you don't want to show a MOTD //-->
		<motd>motd.txt</motd>
	</server>
	<!-- Load user dynamic modules. They are stored into the modules directory //-->
	<module>commands</module>
	<module>oper</module>
	<!-- Admin section - Admin's informations. Only the first three lines will be used! //-->
	<admin>
		First information line
		Second information line
		Admin's email address
	</admin>
	<!-- Client section - Settings for clients //-->
	<client>
		<!-- Do not set anything if you don't want a PING/PONG timeout //-->
		<timeout>60</timeout>
		<!-- Specify nicks that can't be used (Python RegExp style) //-->
		<badformats>
			.*['\+@%\.].*
		</badformats>
		<!-- User mode hierarchy //-->
		<hierarchy value="No">
			<!-- List of available modes //-->
			<allmodes>NoriGk</allmodes>
			<mode name="N">
				<modes>Nork</modes>
				<commands>engine</commands>
			</mode>
			<mode name="r">
				<commands>rehash restart</commands>
			</mode>
			<mode name="k">
				<commands>kill</commands>
			</mode>
			<mode name="o">
				<commands>kline</commands>
			</mode>
			<!-- Default user mode actions //-->
			<modes>iG</modes>
			<!-- Commands which can be used by normal users with default modes //-->
			<commands>quit whowas part user nick join privmsg pong kick mode oper invite topic who notice motd ison ping list pass whois names away whowas lusers admin version time info userhost</commands>
		</hierarchy>
		<!-- Perform commands on client connection. %nick will be substituted by the real nick. //-->
		<perform>
			lusers
			motd
			mode %nick +iG
			join #asd
		</perform>
		<!-- Max options for special IRC commands /-->
		<maxoptions>15</maxoptions>
		<!-- If one of these commands will be performed, then the idle time will be updated. //-->
		<idle>privmsg notice join part mode</idle>
		<!-- Nickname max length //-->
		<maxlength>15</maxlength>
		<!-- Badwords replacing //-->
		<badwords replace="*spam*">
			(?i)irc\.(?!iosn)
		</badwords>
		<badwords replace="*censured*">
			bastard
			idiot
		</badwords>
		<!-- Set the virtualhost for any new client. Replace %N% with an ip-based fakehost with a length of N //-->
		<virtualhost>pyis-%7%</virtualhost>
	</client>
	<!-- Channel section - Settings for channels //-->
	<channel>
		<!-- Specify channel names that can't be used (Python RegExp style) //-->
		<badformats>
			.*['\+@%\.].*
			^#$
		</badformats>
		<!-- Channel mode hierarchy //-->
		<hierarchy value="ohv">
			<allmodes>ohvikntbemlscQVG</allmodes>
			<mode prefix="@" name="o">
				<modes>oktivhnQVG</modes>
				<commands>invite</commands>
			</mode>
			<mode prefix="%" name="h">
				<modes>bemlsc</modes>
				<commands>kick topic</commands>
			</mode>
			<mode prefix="+" name="v">
				<commands>privmsg</commands>
			</mode>
			<!-- Modes that requires other arguments //-->
			<requirearg>ohvkbel</requirearg>
		</hierarchy>
		<!-- Perform these commands when a client joins for the first time a channel //-->
		<perform>
			mode %chan +tn
		</perform>
		<!-- Max length for channel names //-->
		<maxlength>20</maxlength>
		<badwords replace="*spam*">
			(?i)irc\.(?!iosn)
		</badwords>
		<badwords replace="*censured*">
			bastard
			(?i)idiot
		</badwords>
		<!-- Limit the topic length of channels //-->
		<topiclength>50</topiclength>
	</channel>
	<!-- Oper section - IRC operators settings //-->
	<oper user="asd" name="NetAdmin">
		<password crypt="yes">7815696ecbf1c96e6894b779456d330e</password>
		<modes>Nrko</modes>
		<!-- Write down here the hosts as regular expression which are allowed to be authenticated //-->
		<userhosts>
			.*
		</userhosts>
		<virtualhost>Coder.pyIS.Org</virtualhost>
	</oper>
	<!-- Link section - Link the server to other servers //-->
	<link name="services.localhost.net">
		<password crypt="no">mypass</password>
		<!-- The protocol to be used for this link //-->
		<protocol>pyisp</protocol>
	</link>
	<!-- Log section - Settings for the logging system //-->
	<log file="ircd.log">
		<!-- Log format //-->
		<format>$year $month $day [$hours:$minutes:$seconds] $event *** $log</format>
		<!-- Internal special logging //-->
		<internals>connect register rehash</internals>
		<!-- Log every time one of these IRC commands are performed //-->
		<commands>oper</commands>
	</log>
	<!-- Alias section - Each command can have multiple aliases //-->
	<alias cmd="WHO">w</alias>
	<alias cmd="PRIVMSG NickServ">ns</alias>
	<alias cmd="PRIVMSG ChanServ">cs</alias>
	<alias cmd="PRIVMSG MemoServ">ms</alias>
	<alias cmd="PRIVMSG BotServ">bs</alias>
	<alias cmd="PRIVMSG OperServ">os</alias>
	<!-- Database section - PostgreSQL directives //-->
	<database>
		<!-- Missing hostname means localhost with default port //-->
		<host port="5432">localhost</host>
		<!-- Database name //-->
		<dbname>pyis</dbname>
		<!-- Database username //-->
		<username>postgres</username>
		<!-- Password to accesso the database with the given username //-->
		<password/>
		<!-- Idle time before checking notifies (in seconds) //-->
		<idle>20</idle>
	</database>
	<!-- pyIS classes. They resides into the classes directory //-->
	<class name="MainServer">mainserver</class>
	<class name="Connection">connection</class>
	<class name="Client">client</class>
	<class name="SClient">sclient</class>
	<class name="Server">server</class>
	<class name="Channel">channel</class>
	<class name="Log">log</class>
	<class name="Database">database</class>
	<!-- Utilities for developers. They resides into the utils directory //-->
	<util>generic</util>
	<util>msg</util>
	<util>crypt</util>
	<util>vhost</util>
</config>
