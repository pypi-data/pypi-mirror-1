import optparse
import lyricwiki

def main():
	parser = optparse.OptionParser(usage = """%prog action args
	
actions:
	track artist title
	search keywords
	
example: %prog track "iron maiden" "fear of the dark"
example: %prog search iron maiden fear of the dark
""")
	
	(options, args) = parser.parse_args()
	
	if len(args) == 3 and args[0] == "track":
		lyrics = lyricwiki.get_lyrics(args[1], args[2])
	elif len(args) > 0 and args[0] == "search":
		lyrics = lyricwiki.search_for_lyrics(*args[1:])
	else:
		parser.print_help()
		return
	
	if lyrics:
		print lyrics
	else:
		print "[No Lyrics Found]"

if __name__ == "__main__": main()
