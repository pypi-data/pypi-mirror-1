import optparse
import lyricwiki

def main():
	parser = optparse.OptionParser(usage = """%prog artist title
example: %prog "iron maiden" "fear of the dark"
""")
	
	(options, args) = parser.parse_args()
	
	if len(args) == 2:
		lyrics = lyricwiki.get_lyrics(*args)
	else:
		parser.print_help()
		return
	
	if lyrics:
		print lyrics
	else:
		print "[No Lyrics Found]"
		parser.print_help()

if __name__ == "__main__": main()
