<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Minimalist Theme">

 <object name="plonetheme_minimalist_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.minimalist:skins/plonetheme_minimalist_custom_images"/>
 <object name="plonetheme_minimalist_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.minimalist:skins/plonetheme_minimalist_custom_templates"/>
 <object name="plonetheme_minimalist_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.minimalist:skins/plonetheme_minimalist_styles"/>

 <skin-path name="Minimalist Theme" based-on="Plone Default">
  <layer name="plonetheme_minimalist_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_minimalist_custom_templates"
     insert-after="plonetheme_minimalist_custom_images"/>
  <layer name="plonetheme_minimalist_styles"
     insert-after="plonetheme_minimalist_custom_templates"/>
 </skin-path>

</object>
