<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="ItalianSkin">

 <object name="italianskin_images"
    meta_type="Filesystem Directory View"
    directory="italianskin.templates:skins/italianskin_images"/>
 <object name="italianskin_templates"
    meta_type="Filesystem Directory View"
    directory="italianskin.templates:skins/italianskin_templates"/>
 <object name="italianskin_styles"
    meta_type="Filesystem Directory View"
    directory="italianskin.templates:skins/italianskin_styles"/>
 <object name="italianskin_tableless"
    meta_type="Filesystem Directory View"
    directory="italianskin.templates:skins/italianskin_tableless"/>

 <skin-path name="ItalianSkin" based-on="Plone Default">
  <layer name="italianskin_images"
     insert-after="custom"/>
  <layer name="italianskin_templates"
     insert-after="italianskin_images"/>
  <layer name="italianskin_styles"
     insert-after="italianskin_templates"/>
 </skin-path>

<!--
Abilitiamo il nuovo skin quando saranno disponibili i template
 <skin-path name="ItalianSkin Tableless" based-on="ItalianSkin">
  <layer name="italianskin_tableless"
     insert-after="custom"/>
 </skin-path>
-->

</object>
