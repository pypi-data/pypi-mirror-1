<!-- 
  Set volume options for a volume on a NetApp filer
-->

<changetemplate name="netapp_set_volume_option" module='modipy.change_command' type="CommandChange">

  <preimpl>
    <command>
      <send>vol status %(volname)s</send>
    </command>

    <condition>results.cmdoutput.find("online") >= 0</condition>

  </preimpl>

  <impl>
    <command>
      <send>vol options %(volname)s %(option)s</send>
    </command>

  </impl>

</changetemplate>

