<html>
<body>
<div metal:define-macro="edit">
    <div class="field" tal:define="properties field/getProperties">
        <label tal:content="properties/name"></label>
        <div class="formHelp"
            tal:condition="properties/description|nothing"
            tal:content="structure properties/description">Description
        </div>
        <select tal:attributes="name properties/id">
            <span tal:omit-tag=""
                tal:repeat="id_val field/getVocabulary">
                <span tal:define="id python: id_val[0];val python: id_val[1]">
                    <option tal:condition="python: field.getValue()==id or field.getValue()==val"
                        tal:attributes="value id"
                        selected=""
                        tal:content="val"></option>
                    <option tal:condition="not: python: field.getValue()==id or field.getValue()==val"
                        tal:attributes="value id"
                        tal:content="val"></option>
                </span>
            </span>
        </select>
    </div>
</div>
</body>
</html>
