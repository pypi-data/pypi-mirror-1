<html>
<body>
<div metal:define-macro="edit">
    <div class="field" tal:define="properties field/getProperties;
                                   error field/error"
         tal:attributes="class python: error and 'field error' or 'field'">
        <label tal:content="properties/name"></label>

        <div class="formHelp"
            tal:condition="properties/description|nothing"
            tal:content="structure properties/description">Description
        </div>
        <input type="password"
            tal:define="name properties/id"
            tal:attributes="
                name name;
                value python: request['query'].get(name, field.getValue())"                />
        <div class="fieldRequired" tal:condition="error" tal:content="error">Error</div>
        <input type="hidden"
           tal:attributes="value field/getValue; name string:${properties/id}_old">

    </div>
</div>
</body>
</html>
