<html>
<body>
<div metal:define-macro="edit" tal:define="type field/getType">

<div tal:condition="python: type == 'text'">
    <div metal:use-macro="macros/text/macros/edit"></div>
</div>
<div tal:condition="python: type == 'text_lines'">
    <div metal:use-macro="macros/text_lines/macros/edit"></div>
</div>
<div tal:condition="python: type == 'boolean'">
    <div metal:use-macro="macros/boolean/macros/edit"></div>
</div>
<div tal:condition="python: type == 'choice'">
    <div metal:use-macro="macros/choice/macros/edit"></div>
</div>
<div tal:condition="python: type == 'password'">
    <div metal:use-macro="macros/password/macros/edit"></div>
</div>

<div tal:condition="python: type == ''">

</div>

</div>
</body>
</html>
