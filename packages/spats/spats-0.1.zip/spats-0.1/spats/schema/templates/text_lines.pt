<html>
<body>
<div metal:define-macro="edit">
    <div class="field" tal:define="properties field/getProperties">
        <label tal:content="properties/name">Label</label>
        <div class="formHelp"
            tal:condition="properties/description|nothing"
            tal:content="structure properties/description">Description
        </div>
        <textarea
            rows="5"
            width="60"
            tal:attributes="name properties/id|nothing" tal:content="field/getValue">
        </textarea>
               <input type="hidden"
           tal:attributes="value field/getValue; name string:${properties/id}_old">

    </div>
</div>
</body>
</html>
