<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="blueblog">

 <object name="plonetheme_blueblog_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.blueblog:skins/plonetheme_blueblog_custom_images"/>
 <object name="plonetheme_blueblog_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.blueblog:skins/plonetheme_blueblog_custom_templates"/>
 <object name="plonetheme_blueblog_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.blueblog:skins/plonetheme_blueblog_styles"/>

 <skin-path name="blueblog" based-on="Plone Default">
  <layer name="plonetheme_blueblog_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_blueblog_custom_templates"
     insert-after="plonetheme_blueblog_custom_images"/>
  <layer name="plonetheme_blueblog_styles"
     insert-after="plonetheme_blueblog_custom_templates"/>
 </skin-path>
 <configure xmlns="http://namespaces.zope.org/zope"
xmlns:cmf="http://namespaces.zope.org/cmf"
i18n_domain="plonetheme.blueblog">
 <cmf:registerDirectory
	name="plonetheme_blueblog_custom_images"/>
 <cmf:registerDirectory
	name="plonetheme_blueblog_custom_templates"/>
 <cmf:registerDirectory
        name="plonetheme_blue_blo_styles"/>
 </configure>
</object>
