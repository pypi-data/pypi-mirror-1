<?xml version="1.0"?>

<!DOCTYPE ruleset SYSTEM "../dtd.d/daxfifw_0.5.dtd">

<!-- Reject connections for the identd daemon. -->

<append>
  <rule
	direction="in"
	source-ip="%REMOTE_IP"
	destination-ip="%LOCAL_IP">
    <tcp destination-port="auth"/>
    <reject />
    <limit rate="1/s" burst="10" />
    <log />
  </rule>
</append>

