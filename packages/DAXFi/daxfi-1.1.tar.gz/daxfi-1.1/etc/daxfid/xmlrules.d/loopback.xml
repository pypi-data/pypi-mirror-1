<?xml version="1.0"?>

<!DOCTYPE append SYSTEM "../dtd.d/daxfifw_0.5.dtd">

<!-- Accept traffic generated from the local interface. -->

<append>
  <rule
	direction="in"
	interface="lo"
	source-ip="0.0.0.0/0.0.0.0"
	destination-ip="0.0.0.0/0.0.0.0">
    <accept />
  </rule>

  <rule
	direction="out"
	interface="lo"
	source-ip="0.0.0.0/0.0.0.0"
	destination-ip="0.0.0.0/0.0.0.0">
    <accept />
  </rule>
</append>

