<?xml version="1.0"?>

<!DOCTYPE ruleset SYSTEM "../dtd.d/daxfifw_0.5.dtd">

<?daxfi-process not-for="iptables,ipfilter"?>

<!-- Rules for firewalls without stateful inspection. -->

  <!-- Accept tcp packets with only the SYN flag not set. -->
<append>
  <rule
	direction="in"
	source-ip="%REMOTE_IP"
	destination-ip="%LOCAL_IP">
    <tcp syn-only="no" destination-port="1024:65535" />
    <accept />
  </rule>

  <!-- Accept any udp packets. -->
  <rule
	direction="in"
	source-ip="%REMOTE_IP"
	destination-ip="%LOCAL_IP">
    <udp destination-port="1024:65535" />
    <accept />
  </rule>
</append>

