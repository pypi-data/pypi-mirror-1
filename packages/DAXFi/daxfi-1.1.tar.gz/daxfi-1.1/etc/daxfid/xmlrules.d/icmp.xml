<?xml version="1.0"?>

<!DOCTYPE append SYSTEM "http://localhost/daxfifw_0.5.dtd">

<!-- Block some kinds of icmp packets. -->

<append>
  <rule
	direction="in"
	source-ip="0.0.0.0/0.0.0.0"
	destination-ip="0.0.0.0/0.0.0.0">
    <icmp icmp-type="echo-reply" state="new" />
    <drop />
  </rule>

  <rule
	direction="in"
	source-ip="0.0.0.0/0.0.0.0"
	destination-ip="0.0.0.0/0.0.0.0">
    <icmp icmp-type="echo-request" state="new" />
    <drop />
  </rule>

  <rule
	direction="in"
	source-ip="0.0.0.0/0.0.0.0"
	destination-ip="0.0.0.0/0.0.0.0">
    <icmp icmp-type="redirect" />
    <drop />
  </rule>

  <rule
	direction="in"
	source-ip="0.0.0.0/0.0.0.0"
	destination-ip="0.0.0.0/0.0.0.0">
    <icmp icmp-type="router-advertisement" />
    <drop />
  </rule>

  <rule
	direction="in"
	source-ip="0.0.0.0/0.0.0.0"
	destination-ip="0.0.0.0/0.0.0.0">
    <icmp icmp-type="router-solicitation" />
    <drop />
  </rule>

  <rule
	direction="in"
	source-ip="0.0.0.0/0.0.0.0"
	destination-ip="0.0.0.0/0.0.0.0">
    <icmp />
    <accept />
  </rule>

  <rule
	direction="out"
	source-ip="0.0.0.0/0.0.0.0"
	destination-ip="0.0.0.0/0.0.0.0">
    <icmp />
    <accept />
  </rule>
</append>

