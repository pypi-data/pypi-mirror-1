<?xml version="1.0"?>

<!DOCTYPE append SYSTEM "../dtd.d/daxfifw_0.5.dtd">

<!-- Block some martian packets.  -->

<append>
  <rule
	direction="in"
	interface="%INTERFACE"
	source-ip="127.0.0.0/8"
	destination-ip="0.0.0.0/0.0.0.0">
    <drop />
    <limit rate="1/s" burst="10" />
    <log />
  </rule>

  <rule
	direction="in"
	interface="%INTERFACE"
	source-ip="%LOCAL_IP">
    <drop />
    <limit rate="1/s" burst="10" />
    <log />
  </rule>
</append>

