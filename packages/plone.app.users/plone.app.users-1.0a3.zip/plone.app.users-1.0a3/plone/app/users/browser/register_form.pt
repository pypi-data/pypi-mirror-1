<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<head>
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1);
                             disable_column_one python:request.set('plone.leftcolumn',1);
                             disable_column_two python:request.set('plone.rightcolumn',1);" />
</head>

<body>
    <div metal:fill-slot="body" id="content">
    
        <tal:mailhost tal:condition="view/showForm">
            <div metal:use-macro="context/base-pageform.html/form" />
        </tal:mailhost>

        <tal:nomailhost tal:condition="not:view/showForm">
            <div metal:use-macro="context/base-pageform.html/form" >
                <div metal:fill-slot="viewspace">
                    <h1 class="documentFirstHeading"
                        i18n:translate=""
                        tal:content="view/label" />

                    <p class="documentDescription">
                        This site doesn't have a valid email setup, so you
                        cannot register at this time.
                    </p>                
                </div>
            </div>
        </tal:nomailhost>


    </div>
</body>
</html>
