<?xml version="1.0"?>
<feed
  xmlns="http://www.w3.org/2005/Atom"
  xmlns:media="http://search.yahoo.com/mrss/" 
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
 >

<metal:block 
    define-macro="master" 
    tal:define="    objects view/getRSSObjects;
                   " >

<metal:block tal:define="dummy python:request.RESPONSE.setHeader('Content-Type', 'text/xml;;charset='+context.plone_utils.getSiteEncoding())" />

  <title type="text" tal:content="context/pretty_title_or_id">The title</title>
  <link rel="self" type="application/atom+xml" tal:attributes="href request/URL" />
  <rights type="text">Copyright EngageMedia 2007. Covered by the GNU GPL v.2 or later</rights>
  <id><tal:block content="string:${request/URL}">url here</tal:block></id>
  <updated tal:content="python:syn.getHTML4UpdateBase(context) or default">2000-01-01T12:00+00:00</updated>

  <tal:comment replace="nothing">
  yeah nothing
  </tal:comment>
  
<tal:block repeat="obj objects">    
  <entry 
        tal:define="
                    objcreators  obj/isPublishableATEngageVideoObj/item_creator_email;
                    objsubjects obj/isPublishableATEngageVideoObj/subject;
		            thumb_url string:${obj/isPublishableATEngageVideoObj/item_url}/thumbnailImage_small;
		            item_size obj/isPublishableATEngageVideoObj/file_length;
		            content_type obj/isPublishableATEngageVideoObj/file_type;
		            item_path obj/isPublishableATEngageVideoObj/file_url;
			    item_html_url string:${obj/isPublishableATEngageVideoObj/item_url}/view;
		            ">        

    <title tal:content="obj/isPublishableATEngageVideoObj/item_title">Title</title>        
    <content type="text" tal:content="obj/Description">Description</content>        
    <updated tal:content="obj/isPublishableATEngageVideoObj/item_rfc3339_datetime">2000-01-01T12:00+00:00</updated>

    <published tal:content="obj/isPublishableATEngageVideoObj/item_rfc3339_datetime">2000-01-01T12:00+00:00</published>

    <link rel="alternate" tal:attributes="href item_html_url"/>        
    <id tal:content="item_html_url">Identifier</id>        
    <link rel="enclosure" tal:attributes="length item_size; type content_type; href item_path;" />
    <media:thumbnail tal:attributes="url thumb_url" />

    	<author>
      		<name tal:content="python: objcreators">name</name>
        </author>


	<!-- TODO turn into categories -->
    <tal:block tal:condition="python: len(objsubjects) > 1" tal:repeat="item objsubjects" >
          <category tal:attributes="term item; label item"/>
    </tal:block>
    <tal:block tal:condition="python: 1 == len(objsubjects)">
      	<category tal:attributes="item python:objsubjects[0]; label python:objsubjects[0]"/>
    </tal:block>

   <!-- license details of the work referenced in this entry -->
   <rights tal:content="obj/isPublishableATEngageVideoObj/license_text"> human readable license details. this getObject call is bad news. </rights>
   <link rel="license" type="text/html" tal:attributes="href obj/isPublishableATEngageVideoObj/license_url"
		tal:condition="obj/isPublishableATEngageVideoObj/license_url"/>

  </entry>
</tal:block>

</metal:block>
</feed>
