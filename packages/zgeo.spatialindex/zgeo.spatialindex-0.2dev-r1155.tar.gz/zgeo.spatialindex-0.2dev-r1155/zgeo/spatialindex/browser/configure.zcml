<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:browser="http://namespaces.zope.org/browser"
  xmlns:zcml="http://namespaces.zope.org/zcml"
  >

  <browser:page
    zcml:condition="not-installed Products.Five"
    for="zgeo.spatialindex.interfaces.ISpatiallyIndexable"
    name="manage-index"
    class=".manage.IndexManage"
    template="manage_index_form.pt"
    permission="zope.ManageContent"
    menu="zmi_views"
    title="Spatial Index"
    />

  <browser:view
    for="zgeo.spatialindex.interfaces.ISpatiallyIndexable"
    name="query-index"
    class=".index.IndexQuery"
    permission="zope.Public"
    allowed_interface=".index.IIndexQueryView"
    />

</configure>

