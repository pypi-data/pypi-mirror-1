<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="context/@@standard_macros/view"
  >
  <body>
    <div metal:fill-slot="body">
    <h1>Search Spatial Catalog</h1>
    <form
      method="GET"
      >
      <div>Bounding box (min longitude (or x), min latitude (or y), max longitude (x), max latitude (or y)</div>
      <div>
        <input type="text" name="bbox"
          tal:attributes="value request/bbox|string:-180,-90,180.0,90.0"
          />
      </div>
      <div>
        <input type="submit" name="submit" value="Search"/>
      </div>
    </form>
    <div
      tal:condition="exists:request/bbox"
      >
      <h2>Results</h2>
      <div tal:define="bounds view/parse_bbox;
                       query nocall:view/searchResults"
        >
      <ol>
        <li
          tal:repeat="result python:query(bounds=bounds)"
          tal:content="result/@@absolute_url"
          />
      </ol>
      </div>
    </div>
    </div>
  </body>
</html>
