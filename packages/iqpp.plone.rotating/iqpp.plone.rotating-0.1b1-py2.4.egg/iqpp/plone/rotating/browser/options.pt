<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="iqpp.plone.rotationg">
    <body>

        <metal:main fill-slot="main">
            <tal:main-macro metal:define-macro="main">
                
                <h1 class="documentFirstHeading"
                    i18n:translate="local_rotating_options_label">
                    Rotating Options
                </h1>
            
                <p i18n:translate="local_rotating_options_description">
                    Here you can set rotating options.
                </p>
                        
                <fieldset>
                    <legend>
                        Rotating Options
                    </legend>    

                    <form action="."
                          tal:attributes="action request/URL"
                          method="post"
                          enctype="multipart/form-data"
                          id="zc.page.browser_form">

                        <div class="field"
                             tal:repeat="widget view/widgets">
                
                            <div class="widget">
                                <label tal:content="widget/label">
                                    Label
                                </label>    
                    
                                <span tal:condition="widget/required"
                                      title='Required' 
                                      class='fieldRequired'>
                                      (required)
                                </span> 

                                <div tal:condition="widget/error"
                                     tal:content="widget/error"
                                     i18n:translate="">
                                     Error
                                </div>

                                <div tal:condition="widget/hint"
                                     tal:content="widget/hint"
                                     i18n:translate="" 
                                     class="formHelp"> 
                                     Hint 
                                </div>
                                        
                                <input class="widget"
                                       tal:replace="structure widget" />
                            </div>
                    
                       </div>
               
                       <input type="submit"          
                              id="form.actions.add" 
                              name="form.actions.add" 
                              value="save"
                              class="context" 
                              i18n:attributes="value" />

                    </form>      
                </fieldset>

            </tal:main-macro>
        </metal:main>    
    </body>
</html>