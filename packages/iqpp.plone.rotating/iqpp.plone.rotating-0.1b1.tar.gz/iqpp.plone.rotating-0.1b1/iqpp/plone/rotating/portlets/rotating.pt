<dl class="portlet" 
    tal:define="objects view/getRotatingObjects"
    tal:condition="objects"
    id="portlet-random">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
           <a href="."
              tal:omit-tag="view/isNoManager"
              tal:attributes="href view/data/path"
              tal:content="view/title">
                 Rotating Portlet
           </a>
        <span class="portletTopRight"></span>
    </dt>

    <tal:items tal:repeat="item objects">

        <dd tal:define="oddrow repeat/item/odd;"
            tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">

<!-- 
            <a tal:condition="item/title"
               href="."
               tal:attributes="href item/url">
               <span tal:content="item/title">
                   Title
               </span> 
            </a>
-->                
            <div tal:condition="python:item['type'] != 'Image'"
                 tal:content="structure item/content">
                Body
            </div>

            <img tal:condition="python:item['type'] == 'Image'"
                 width="130px"
                 tal:attributes="src string:${item/url}/image_mini" />

        </dd>        
    </tal:items> 
</dl>
