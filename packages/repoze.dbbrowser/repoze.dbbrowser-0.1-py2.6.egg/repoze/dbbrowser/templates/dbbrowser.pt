<html>
<head>
<link type="text/css" rel="stylesheet" href="http://jqueryui.com/themes/base/jquery.ui.all.css" />
<link rel="stylesheet" type="text/css" media="screen" href="${static_url}/css/ui.jqgrid.css" />
<link rel="stylesheet" type="text/css" media="screen" href="${static_url}/js/jquery.themes/jquery.themes.css" />
<link rel="stylesheet" type="text/css" media="screen" href="${static_url}/css/dbbrowser.css" />
<script src="${static_url}/js/jquery-1.3.2.min.js" type="text/javascript"></script>
<script src="${static_url}/js/jquery-ui-1.7.2.custom.min.js" type="text/javascript"></script>
<script src="${static_url}/js/i18n/grid.locale-en.js" type="text/javascript"></script>
<script src="${static_url}/js/jquery.jqGrid.min.js" type="text/javascript"></script>
<script type="text/javascript" src="${static_url}/js/jquery.themes/jquery.themes.js"></script>
<script type="text/javascript">
        $(function() {
		$("#tabs").tabs().addClass('ui-tabs-vertical ui-helper-clearfix');
		$("#tabs li").removeClass('ui-corner-top').addClass('ui-corner-left');
                settings = {themeBase: 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/',
                            defaultTheme: '${theme}',
                            themeId: '${theme}',
                            previews: '${static_url}/js/jquery.themes/themes-preview.gif',
                            icons: '${static_url}/js/jquery.themes/themes.gif'};
	        $.themes.init(settings);
	});
</script>
<tal:themeswitcher condition="theme_switcher">
<script type="text/javascript">
        $(function() {
                $('#popupTheme').click(function() { 
                    var offset = $(this).offset(); 
                    $('#popupThemes').css('left', offset.left). 
                        css('top', offset.top + $(this).outerHeight()); 
                    $('#popupThemes,#popupClose').toggle(); 
                }); 
                $("#popupThemes").themes();
	});
</script>
</tal:themeswitcher>
</head>
<body>
<tal:themeswitcher condition="theme_switcher">
<span id="popupTheme">
    <span id="popupLabel">Select a theme...</span>
    <span id="popupThemes"></span>
</span>
</tal:themeswitcher>
<div id="tabs">
    <ul>
        <li tal:repeat="table tables">
            <a tal:attributes="href string:#tab-${table.name}">
                ${table.name}
            </a>
        </li>
    </ul>
    <div tal:repeat="table tables"
         tal:attributes="id string:tab-${table.name}">
	<div>
          <table tal:attributes="id string:table_${table['name']}"></table>
          <table tal:attributes="id string:pager_${table['name']}"></table>
          <script>${table['javascript']}</script>
	</div>
    </div>
</div>
</body>
</html>
