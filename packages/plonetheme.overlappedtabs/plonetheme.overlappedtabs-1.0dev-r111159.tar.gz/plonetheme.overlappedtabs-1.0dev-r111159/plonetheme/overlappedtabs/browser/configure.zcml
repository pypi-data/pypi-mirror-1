<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="plonetheme.overlappedtabs">


  <!-- 'Overlapped Tabs' Zope 3 browser layer -->
  <interface
      interface=".interfaces.IThemeSpecific"
      type="zope.publisher.interfaces.browser.IBrowserSkinType"
      name="Overlapped Tabs"
      />

  <!-- Viewlets registration -->
  <!-- Zope 3 browser resources -->

  <!-- Resource directory for images -->
  <browser:resourceDirectory
      name="plonetheme.overlappedtabs.images"
      directory="images"
      layer=".interfaces.IThemeSpecific"
      />

  <!-- Resource directory for stylesheets -->
  <browser:resourceDirectory
      name="plonetheme.overlappedtabs.stylesheets"
      directory="stylesheets"
      layer=".interfaces.IThemeSpecific"
      />

    <!-- Colophon -->
    <browser:viewlet
        name="plone.colophon"
        for="*"
        manager="plone.app.layout.viewlets.interfaces.IPortalFooter"
        template="templates/colophon.pt"
        permission="zope.Public"
        layer=".interfaces.IThemeSpecific"
        />

    <!-- The global sections -->
    <browser:viewlet
        name="plone.global_sections"
        manager="plone.app.layout.viewlets.interfaces.IPortalHeader"
        class=".viewlets.GlobalSectionsViewlet"
        permission="zope2.View"
        layer=".interfaces.IThemeSpecific"
        />

    <!-- The global sections lines -->
    <!--<browser:viewlet-->
    <!--    name="plone.global_sections_line_below"-->
    <!--    manager="plone.app.layout.viewlets.interfaces.IPortalFooter"-->
    <!--    class=".viewlets.GlobalSectionsLineViewletBelow"-->
    <!--    permission="zope2.View"-->
    <!--    layer=".interfaces.IThemeSpecific"-->
    <!--    />-->
    <browser:viewlet
        name="plone.global_sections_line_below"
        manager="plone.app.layout.viewlets.interfaces.IBelowContent"
        class=".viewlets.GlobalSectionsLineViewletBelow"
        permission="zope2.View"
        layer=".interfaces.IThemeSpecific"
        />

    <browser:viewlet
        name="plone.global_sections_line_above"
        manager="plone.app.layout.viewlets.interfaces.IContentViews"
        class=".viewlets.GlobalSectionsLineViewletAbove"
        permission="zope2.View"
        layer=".interfaces.IThemeSpecific"
        />

    <plone:portletRenderer
        portlet="plone.app.portlets.portlets.navigation.INavigationPortlet"
        layer=".interfaces.IThemeSpecific"
        class=".portlets.navigation.Renderer"
        />


</configure>
