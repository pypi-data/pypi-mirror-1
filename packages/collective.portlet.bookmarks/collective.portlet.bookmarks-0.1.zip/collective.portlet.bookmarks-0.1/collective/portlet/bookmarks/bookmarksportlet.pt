<dl class="portlet portletBookmarksPortlet"
    i18n:domain="collective.portlet.bookmarks"
    id="portlet-bookmarks">

<metal:block use-macro="here/global_defines/macros/defines" />


<tal:recentlist tal:define="plone_view context/@@plone;
                            results view/getBookmarks;
                     ">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <a tal:attributes="href string:${view/getBookmarksFolderUrl}/folder_contents"
           i18n:translate="box_bookmarks">Bookmarks</a>
        <span class="portletTopRight"></span>
    </dt>
    <tal:items tal:define="getIcon nocall:plone_view/getIcon;
                           normalizeString nocall:plone_view/normalizeString;
                           toLocalizedTime nocall:plone_view/toLocalizedTime;"
               tal:repeat="obj results">
    <dd class="portletItem"
        tal:define="oddrow repeat/obj/odd"
        tal:attributes="class python:oddrow and  'portletItem even' or 'portletItem odd'">

        <div>
        <a href=""
           tal:attributes="href string:${obj/url};
                           title obj/description;
                           class string:visualIconPadding tile">
            <tal:title content="obj/title">
            Plone 2.1 released!
            </tal:title>
            <span class="portletItemDetails"
                  tal:condition="view/show_date"
                  tal:content="obj/date"
                  >May 5</span>
        </a>
        </div>
    </dd>
    </tal:items>

    <dd class="portletItem"
        tal:condition="not: results"
        i18n:translate="box_bookmarks_no_items">
        No items bookmarked yet.
    </dd>

    <dd class="portletItem">
        <a id="portlet-add-bookmark" href="#" i18n:translate="box_bookmark_this_page">Bookmark this page</a>
    </dd>
    <dd class="portletItem">
        <a href="#" tal:attributes="href string:${view/getBookmarksFolderUrl}/folder_contents"
           i18n:translate="box_manage_bookmarks">Manage Bookmarks</a>
    </dd>



    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</tal:recentlist>

</dl>
