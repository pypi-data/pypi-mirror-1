<html metal:use-macro="context/@@standard_macros/view"
    i18n:domain="zope">
  <head>
    <title>RemoteObject</title>
  </head>
  <body>
 
    <div metal:fill-slot="body">
       <div metal:use-macro="view/generated_form/macros/body">
            <div class="row" metal:fill-slot="extra_info" >
              <span class="error" tal:condition="view/msg">
                Внимание, ОШИБКА ВЫПОЛНЕНИЯ: <tal:block tal:content="view/msg"/>
               </span> 
            </div>
                            
                            
            <div class="row" metal:fill-slot="extra_buttons">
              <div class="controls">
                <input type="submit" value="Update Now!" name="update" />
              </div>
            </div>
       </div>
    </div>
  </body>
</html>
