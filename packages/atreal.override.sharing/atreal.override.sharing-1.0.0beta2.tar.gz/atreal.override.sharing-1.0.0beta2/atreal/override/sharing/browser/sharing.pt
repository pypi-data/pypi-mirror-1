<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="atreal.override.sharing">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
                    tal:define="blabla view/checkForm">
        
        <div tal:replace="structure provider:plone.abovecontenttitle" />
        
        <h1 class="documentFirstHeading" i18n:translate="label_overridesharing"> 
            Override Sharing
        </h1>
                
        <p class="documentDescription" i18n:translate="description_overridesharing">
            If you check the box and select group(s), only person(s) in these(s) group(s) will see your item.
        </p>
        
        <form method="post"
              tal:define="restrict_access view/restricted;"
              tal:attributes="action string:${here_url}/@@overridesharing;">
            
            <div class="field">
                <input type="checkbox"
                       name="restrict_access"
                       value="Restrict access"
                       tal:attributes="checked python:view.test(restrict_access, 'checked', None);
                                       tabindex tabindex/next;" />
                <span i18n:translate="">This item has to be confidential ?</span>
            </div>
            
            <fieldset>
                
                <legend i18n:translate="">
                    Groups
                </legend>
                
                <div class="field"
                     tal:define="portal_groups view/groups">
                    <tal:groupslist tal:repeat="portal_group portal_groups">
                        <tal:group tal:define="groupid portal_group">
                            <input type="checkbox"
                                   name="groups"
                                   tal:attributes="tabindex tabindex/next;
                                                   checked python:(groupid in view.existing_role_settings()) and 'checked' or None;
                                                   value groupid" />
                            <span tal:replace="groupid">group</span>
                        </tal:group>
                    </tal:groupslist>  
                </div>
                
            </fieldset>
                
            <div class="submit">
                <input class="context" type="submit"
                       name="form.button.apply"
                       value="Apply Changes"
                       i18n:attributes="value button_apply;"
                       tal:attributes="tabindex tabindex/next;" />
            </div>

        </form>

    </tal:main-macro>
</metal:main>

</body>
</html>
