<dl class="portlet portletCollection"
    i18n:domain="my315ok.portlet.rollitems"
    tal:define="collection_url view/collection_url;">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <a tal:attributes="href collection_url" tal:omit-tag="not:view/data/show_more">
             <span class="portletHeadImg"></span>
            <span tal:content="view/data/header" />
			<span class="moreurl"></span>
        </a>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
        <script type="text/javascript" src="dnmcdocument_javascript.js"
			tal:attributes="src context/++resource++my315ok.portlet.rollitems.jss/dnmcdocument_javascript.js">
		</script>
		
		<script type="text/javascript" tal:content="structure view/js_settings"></script>
  		
    </dd>

    <dd class="portletFooter" tal:condition="view/data/show_more">
        <span class="portletBottomLeft"></span>
        <span>
        <a tal:attributes="href collection_url" i18n:translate="more_url">
             More&hellip;
             </a>
        </span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
