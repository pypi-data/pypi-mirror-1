<?xml version="1.0"?>
<dc-workflow workflow_id="forum_workflow"
             title="Forum Workflow"
             description="Forum workflow that is used for Forum content types. "
             state_variable="review_state"
             initial_state="authorized">
 <permission>Access contents information</permission>
 <permission>List folder contents</permission>
 <permission>Modify portal content</permission>
 <permission>View</permission>
 <permission>Forum: Add ForumTopic</permission>
 <permission>Forum: Add ForumPost</permission>
 <state state_id="anonymous" title="Opened for anonymous">
  <exit-transition transition_id="to_authorized"/>
  <exit-transition transition_id="to_closed"/>
  <permission-map name="Access contents information"
                  acquired="True">
  </permission-map>
  <permission-map name="Change portal events"
                  acquired="True">
  </permission-map>
  <permission-map name="Forum: Add ForumPost"
                  acquired="False">
   <permission-role>Anonymous</permission-role>
  </permission-map>
  <permission-map name="Forum: Add ForumTopic"
                  acquired="False">
   <permission-role>Anonymous</permission-role>
  </permission-map>
  <permission-map name="List folder contents"
                  acquired="True">
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Anonymous</permission-role>
  </permission-map>
  <permission-map name="View" acquired="True">
  </permission-map>
 </state>
 <state state_id="authorized" title="Opened for submission">
  <exit-transition transition_id="to_anonymous"/>
  <exit-transition transition_id="to_closed"/>
  <permission-map name="Access contents information"
                  acquired="True">
  </permission-map>
  <permission-map name="Change portal events"
                  acquired="True">
  </permission-map>
  <permission-map name="Forum: Add ForumPost"
                  acquired="False">
   <permission-role>Authenticated</permission-role>
  </permission-map>
  <permission-map name="Forum: Add ForumTopic"
                  acquired="False">
   <permission-role>Authenticated</permission-role>
  </permission-map>
  <permission-map name="List folder contents"
                  acquired="True">
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Authenticated</permission-role>
  </permission-map>
  <permission-map name="View" acquired="True">
  </permission-map>
 </state>
 <state state_id="closed"
        title="Closed (no submission possible)">
  <exit-transition transition_id="to_anonymous"/>
  <exit-transition transition_id="to_authorized"/>
  <permission-map name="Access contents information"
                  acquired="True">
  </permission-map>
  <permission-map name="Change portal events"
                  acquired="True">
  </permission-map>
  <permission-map name="Forum: Add ForumPost"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Forum: Add ForumTopic"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="List folder contents"
                  acquired="True">
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="True">
  </permission-map>
 </state>
 <transition transition_id="to_anonymous"
             title="Open for anonymous"
             new_state="anonymous" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=to_anonymous"
          category="workflow">Open for anonymous</action>
  <guard>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="to_authorized"
             title="Open for submission"
             new_state="authorized" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=to_authorized"
          category="workflow">Open for submission</action>
  <guard>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <transition transition_id="to_closed"
             title="Close (no submission possible)"
             new_state="closed" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_status_modify?workflow_action=to_closed"
          category="workflow">Close (no submission possible)</action>
  <guard>
   <guard-role>Manager</guard-role>
  </guard>
 </transition>
 <worklist worklist_id="reviewer_queue" title="">
  <description>Reviewer tasks</description>
  <action url="%(portal_url)s/search?review_state=pending"
          category="global">Pending (%(count)d)</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
  <match name="review_state" values="pending"/>
 </worklist>
 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>Previous transition</description>
  <default>
   
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the previous transition</description>
  <default>
   
   <expression>user/getUserName</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comment about the last transition</description>
  <default>
   
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>When the previous transition was performed</description>
  <default>
   
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
