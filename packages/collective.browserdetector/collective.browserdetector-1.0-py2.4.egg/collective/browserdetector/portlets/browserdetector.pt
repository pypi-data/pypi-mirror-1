<dl class="portlet portletBrowserDetector"
    i18n:domain="collective.browserdetector"
    tal:define="detector view/detector">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span i18n:translate="label_browser_info">
           Browser Info
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
        <b i18n:translate="label_protocol">Protocol</b>
        <span class="portletItemDetails"
            tal:content="detector/protocol">value</span>
    </dd>
    
    <dd class="portletItem even">
        <b i18n:translate="label_platform">Platform</b>
        <span class="portletItemDetails"
            tal:content="detector/platform">value</span>
    </dd>
    
    <dd class="portletItem odd">
        <b i18n:translate="label_browser">Browser</b>
        <span class="portletItemDetails">
            <tal:block content="detector/browser">value</tal:block>
            <tal:block condition="detector/isWebKit"> (<tal:block i18n:translate="label_webkit">WebKit</tal:block>)</tal:block>
        </span>
    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span>
           <a href="browser-detector"
                i18n:translate="label_details">Details..</a>
        </span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
