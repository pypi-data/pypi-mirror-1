<?xml version="1.0"?>
    <object name="portal_actions" meta_type="Plone Actions Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n">
    <object name="object" meta_type="CMF Action Category">
        <object name="aggregation" meta_type="CMF Action" i18n:domain="plone">
            <property name="title" i18n:translate="">Aggregation</property>
            <property name="description" i18n:translate="">Manage this folder's aggregation settings</property>
            <property name="url_expr">string:@@aggregation-settings</property>
            <property name="available_expr">object/@@aggregator_view/is_subtyped_as_aggregator|nothing</property>
            <property name="permissions">
                <element value="Modify portal content"/>
            </property>
            <property name="visible">True</property>
        </object>
    </object>
</object>
