<tal:block i18n:domain="rating">
    <form action="#"  
          tal:attributes="action context/absolute_url"
          method="post"
          enctype="multipart/form-data"
          class="rating-form">

        <select name="rating_value">

            <option value="please_rate"
                    i18n:translate="please_rate_label">
                Please Rate
            </option>
        
            <tal:repeat tal:repeat="score view/scores">
            
                <option tal:attributes="value score/id;
                                        selected score/selected"
                        i18n:translate=""
                        tal:content="score/title">
                    Excellent, party time.
                </option>
            
            </tal:repeat>  
        </select>   

        <input type="hidden"
               name="rating_id"
               value="plone" />

        <input style="margin-top:10px"
               class="context"
               id="rate"
               name="rate:method" 
               value="Rate" 
               type="submit"
               i18n:attributes="value" />

    </form>
</tal:block>