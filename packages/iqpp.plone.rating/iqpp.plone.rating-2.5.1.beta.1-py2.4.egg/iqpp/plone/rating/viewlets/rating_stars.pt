<ul class="star-rating"
    i18n:domain="iqpp.plone.rating"
    
    tal:attributes="style view/total_width">
	<li class="current-rating" 
	    tal:attributes="style view/average_width">
	    Currently 3/5 Stars.
	</li>

    <tal:repeat tal:condition="view/has_rate_permission"
                tal:repeat="score view/scores">
	    <li>
	        <a href="#" 
	           class="rate star-1"
	           title="Excellent"
	           tal:attributes="href string:${context/absolute_url}/rate_with_stars?value=${score/id};
	                           title score/title;
	                           style score/style;
	                           class string:rate star-${repeat/score/number}"
	           tal:content="score/id">
		            excellent
	        </a>
	    </li>
	</tal:repeat>

</ul>
