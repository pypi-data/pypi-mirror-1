<tal:block i18n:domain="rating">
    <div class="average-rating">

        <div class="label">
            <tal:block i18n:translate="average_rating_label">
                Average Rating</tal:block>:
        </div>        
        
        <div tal:condition="not:view/available"
             i18n:translate="no_ratings_label">
            There are no ratings.
        </div>
        
        <div tal:condition="view/available">
            <span tal:content="view/average_rating">
                42.42
            </span>
            (<span class="votes" tal:content="view/amount_of_ratings">
                42
            </span>
            <span i18n:translate="votes_label">
                Votes
            </span>)
        </div>                        
    </div>      
</tal:block>