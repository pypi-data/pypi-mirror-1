<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="rating">
    <body>

        <metal:main fill-slot="main"
                    tal:define="ratings view/getRatings">

            <h1 tal:content="object_title" class="documentFirstHeading">
                Ratings
            </h1>

            <p class="documentDescription"
               i18n:translate="all_ratings_label">
                The table shows all ratings for this object.
            </p>

            <div tal:condition="not:ratings"
                 i18n:translate="no_ratings_label">
                 There are no ratings.
            </div>     

            <table tal:condition="ratings"
                   class="listing">
                <tr>
                    <th i18n:translate="name_label">
                        Name
                    </th>
                    <th i18n:translate="score_label">
                        Score
                    </th>
                    <th i18n:translate="timestamp_label">
                        Timestamp
                    </th>
                </tr>      
                <tr tal:repeat="rating ratings">
                    <td tal:content="rating/fullname">
                        John Dow
                    </td>
                    <td>
                        <span tal:condition="rating/title"
                              tal:content="rating/title"    
                              i18n:translate="">
                            Excellent
                        </span>                            
                        <span tal:content="rating/value">
                            42
                        </span>
                    </td>
                    <td tal:content="rating/timestamp">
                        July 23, 2006
                    </td>      
                </tr>
            </table>    

            <div metal:use-macro="here/document_actions/macros/document_actions">
                Document actions (print, sendto etc)
            </div>
                    
        </metal:main>    
        
  </body>
</html>