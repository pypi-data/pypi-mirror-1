<tal:block i18n:domain="rating"
           tal:condition="view/available">
    
    <div class="user-rating"
         tal:define="user_rating view/user_rating">

        <div class="label">
            <tal:block i18n:translate="current_rating_label">
                Your Current Rating</tal:block>:
        </div>
        
        <div tal:condition="not:user_rating/rated"
             i18n:translate="no_rating_label">
            You haven't rated yet.
        </div>            
        
        <div tal:condition="user_rating/rated">
            <span tal:content="user_rating/title"
                  i18n:translate="">
                Good
            </span>
            (<span tal:content="user_rating/value">
                42
            </span>)
        </div>
        
    </div>      
</tal:block>