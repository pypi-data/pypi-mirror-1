<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="iqpp.plone.rating">
    <body>

        <metal:main fill-slot="main">

            <h1 class="documentFirstHeading"
                i18n:translate="rating_options_label">
                Rating Options
            </h1>

            <div class="portalMessage"
                 tal:condition="view/status"
                 tal:content="view/status">
                Form status summary
            </div>
           
            <form action="."
                  tal:attributes="action request/URL" 
                  method="post"
                  enctype="multipart/form-data"
                  id="zc.page.browser_form">
    
                <tal:block tal:repeat="widget view/widgets">
    
                    <input type="checkbox"
                           name="is_active"
                           tal:attributes="checked view/isChecked" />
                    
                    <label i18n:translate="override_global_option_label"> 
                           Override global option</label> 

                    <span tal:condition="widget/required"
                          title='Required' 
                          class='fieldRequired'> (Required) </span> 

                    <div tal:content="widget/error"
                         i18n:translate="">Error</div>

                    <div tal:condition="widget/hint"
                         tal:content="widget/hint"
                         i18n:translate="" 
                         class="formHelp"> Hint </div>

                    <input class="widget" 
                           tal:replace="structure widget" />     
    
               </tal:block>
   
               <input type="submit"          
                      id="form.actions.add" 
                      name="form.actions.add" 
                      value="save" 
                      class="context" 
                      i18n:attributes="value" />

            </form>      
            
            <div metal:use-macro="here/document_actions/macros/document_actions">
                Document actions (print, sendto etc)
            </div>
            
        </metal:main>    
    </body>
</html>