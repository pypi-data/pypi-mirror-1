<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="iqpp.plone.rating">
    <body>
        <div metal:define-macro="portlet">

            <dl class="portlet" 
                id="portlet-rating">

                <dt class="portletHeader">
                    <span class="portletTopLeft"></span>
                        Rating
                    <span class="portletTopRight"></span>
                </dt>

                <dd class="portletItem">
                    <div tal:replace="structure provider:iqpp.plone.rating.rating-portlet" />
                </dd>
                
                <dd tal:condition="view/showFooter"
                    class="portletFooter">
                    <a href="."
                       tal:attributes="href string:${context/absolute_url}/rated-objects"
                       i18n:translate="rated_objects_label">
                        Rated objects
                    </a>
                    <span class="portletBottomLeft"></span>
                    <span class="portletBottomRight"></span>
                </dd>
            </dl>

        </div>
    </body>
</html>
