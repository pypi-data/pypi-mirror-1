<?xml version="1.0" ?>

<rdf:RDF xmlns="http://purl.org/rss/1.0/"
  xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
  xmlns:dc="http://purl.org/dc/elements/1.1/"
  xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  tal:define="feed view/feed"
  >

  <channel
   tal:attributes="rdf:about feed/context/@@absolute_url">
    <title tal:content="feed/title">[Feed Title]</title>
    <link tal:content="string:${feed/context/@@absolute_url}/rss-1/${feed/config/id}">
	  [Feed Link]
	</link>
    <description tal:content="feed/description">
	 [Description of feed information]
	</description>
	<image tal:attributes="rdf:resource 
	  python:feed.image.webURL(request)|nothing"
	  tal:condition="feed/image|nothing" />

	<i tal:replace="nothing">
	 One link here for each item in the feed
	</i>
    <items>
      <rdf:Seq>
        <rdf:li tal:repeat="feedentry feed"
		 tal:attributes="rdf:resource feedentry/context/@@absolute_url" />
      </rdf:Seq>
    </items>
  </channel>

  <image tal:attributes="rdf:about 
    python:feed.image.webURL(request)|nothing"
	tal:condition="feed/image|nothing">
	<title tal:content="feed/image/title">
	  [Image Title]
	</title>
	<link tal:content="feed/context/@@absolute_url">
	  [Site Link]
	</link>
	<url tal:content="python:feed.image.webURL(request)">
	  [Image URL]
	</url>	  
  </image>

  <item tal:repeat="feedentry feed"
   tal:attributes="rdf:about feedentry/context/@@absolute_url">
    <title tal:content="feedentry/title">
	 [Individual item title]
	</title>

    <link tal:content="feedentry/url">
	  [Item Link]
	</link>

    <description tal:content="feedentry/body">
	 [Item Description]
	</description>

	<dc:publisher tal:content="feedentry/publisher"
	  tal:condition="feedentry/publisher|nothing">
	 [Item Publisher]
	</dc:publisher>

    <dc:creator tal:content="feedentry/author">
	 [Item Creator]
	</dc:creator>

	<dc:rights tal:content="feedentry/rights">
	 [Item Rights]
	</dc:rights>

    <dc:date tal:content="feedentry/effectiveString">
	 [Item effective date]
	</dc:date>    

	<sy:updatePeriod tal:content="feedentry/updatePeriod"
	  tal:condition="feedentry/updatePeriod|nothing">
	  [Update Period]
	</sy:updatePeriod>

	<sy:updateFrequency tal:content="feedentry/updateFrequency"
	  tal:condition="feedentry/updateFrequency|nothing">
	  [Update Frequency]
	</sy:updateFrequency>

	<sy:updateBase tal:content="feedentry/updateBase"
	  tal:condition="feedentry/updateBase|nothing">
	  [Update Base]
	</sy:updateBase>

  </item>

</rdf:RDF>
