#messages:load {
	action-server: livechat_login;
}

#messages:timeout {
    evt-timeout-delay: 3000;
    action-server: livechat_ping;
}

#messages:lc-onbeforeunload {
action-server: livechat_logout;
}

#msgInput:keyup {
  evt-keyup-preventdefault: true;
  evt-keyup-keycodes: 13;
  action-server: livechat_ping;
  livechat_ping-message: currentFormVar();
}
