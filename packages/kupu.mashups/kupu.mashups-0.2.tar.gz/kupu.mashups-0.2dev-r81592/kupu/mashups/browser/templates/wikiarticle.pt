
<tal:block tal:condition="view/article_content">
    <h2 tal:content="view/article_title"></h2>
    <div class="wiki-status discreet">From Wikipedia, the free encyclopedia</div>
    <div class="wiki-content" tal:content="structure view/article_content"></div>
    <div class="wiki-status"><a target="_blank" tal:attributes="href view/getFullArticleUrl">Read full article</a></div>
</tal:block>

<tal:block tal:condition="not:view/article_content">
    <h2>There was an error</h2>
    Article not found.
</tal:block>
