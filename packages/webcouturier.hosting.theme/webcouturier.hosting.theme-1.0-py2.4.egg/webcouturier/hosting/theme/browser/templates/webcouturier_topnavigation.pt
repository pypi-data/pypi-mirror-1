<!-- THE TOP ACTIONS TABS DEFINITION -->
<div i18n:domain="webcouturier"
     tal:omit-tag=""
     tal:define="top_navigation view/top_navigation"
    tal:condition="top_navigation">
    <h5 class="hiddenStructure" 
        i18n:domain="webcouturier"
        i18n:translate="heading_sections">Top Sections</h5>

    <ul id="portal-topnavigation" 
        tal:define="width view/width">
        <li tal:repeat="taction top_navigation"
            tal:attributes="id string:portaltab-${taction/id};
                            style python:'width:%s' % str(width);
                            class python:(context.absolute_url() == taction['url']) and 'selected' or nothing"><a
            href=""
            tal:define="title taction/title;
                        id taction/id"
            i18n:attributes="title"
            i18n:translate=""
            tal:content="title"
            tal:attributes="href taction/url;
                            title title"
            >Site action</a></li>
    </ul>
    
</div>
