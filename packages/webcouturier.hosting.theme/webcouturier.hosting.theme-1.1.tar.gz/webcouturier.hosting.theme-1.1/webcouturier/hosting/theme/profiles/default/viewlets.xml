<?xml version="1.0"?>

<object>

  <order manager="plone.portaltop" skinname="Web Couturier Hosting Theme"
         based-on="Plone Default">
     <viewlet name="webcouturier.personal_bar" 
              insert-before="plone.personal_bar" />
  </order>
  <order manager="plone.portalheader" skinname="Web Couturier Hosting Theme"
         based-on="Plone Default">
     <viewlet name="webcouturier.top_navigation" 
              insert-after="plone.skip_links" />
     <viewlet name="webcouturier.searchbox" 
              insert-before="plone.searchbox" />    
     <viewlet name="webcouturier.global_sections" 
              insert-before="plone.global_sections" />                        
  </order>
  <order manager="plone.portalfooter" skinname="Web Couturier Hosting Theme"
         based-on="Plone Default">
     <viewlet name="webcouturier.footer" insert-before="*" />
  </order>  

  <hidden manager="plone.portaltop" skinname="Web Couturier Hosting Theme">
    <viewlet name="plone.path_bar" />
    <viewlet name="plone.personal_bar" />
  </hidden> 
  <hidden manager="plone.portalheader" skinname="Web Couturier Hosting Theme">
    <viewlet name="plone.searchbox" />
    <viewlet name="plone.global_sections" />    
  </hidden>  

</object>