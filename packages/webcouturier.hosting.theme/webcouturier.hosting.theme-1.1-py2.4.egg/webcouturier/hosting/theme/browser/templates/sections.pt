<tal:tabs tal:condition="view/portal_tabs"
          i18n:domain="plone">
    <h5 class="hiddenStructure" i18n:translate="heading_sections">Sections</h5>

    <ul id="portal-globalnav">
        <tal:tabs tal:repeat="tab view/portal_tabs"><li 
        tal:define="isLast python:repeat['tab'].end and True or None;
                    className python:isLast is not None and ' lastelement' or ''"
        tal:attributes="id string:portaltab-${tab/id};
                        class python:view.selected_portal_tab==tab['id'] and 'selected' + className or 'plain'">
            <a href="" 
               tal:content="tab/name"
               tal:attributes="href tab/url;
                               title tab/description|nothing">
            Tab Name
            </a></li></tal:tabs>
    </ul>
</tal:tabs>