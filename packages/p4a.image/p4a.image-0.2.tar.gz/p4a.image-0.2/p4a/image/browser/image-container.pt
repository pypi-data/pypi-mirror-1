<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="plone4artists"
      metal:use-macro="context/main_template/macros/master">
  <body>

<div metal:fill-slot="css_slot"
     tal:define="stylesdir string:$portal_url/++resource++imagestyles">
  <link rel="stylesheet" href="image.css"
        tal:attributes="href string:${stylesdir}/image.css" />
</div>

<div metal:fill-slot="main"
     tal:define="image_items view/image_items;
                 imagesdir string:$portal_url/++resource++imageimages"
     class="image-container">

  <div metal:use-macro="context/document_actions/macros/document_actions">
    Document actions (print, sendto etc)
  </div>

  <h1 tal:content="object_title" 
      class="documentFirstHeading">
    Image Folder Title
  </h1>

  <div id="summary_wrapper" tal:condition="view/should_display_summary">

    <div id="image_metadata">
      <dl>
        <dt i18n:translate="image_item_photographer">Photographer</dt>
        <dd tal:content="view/photographer|string:N/A"></dd>
        <dt i18n:translate="image_item_date">Date</dt>
        <dd tal:content="view/date|string:N/A"></dd>
<!-- XXX not sure about genre
        <dt i18n:translate="image_item_genre">Genre</dt>
        <dd tal:content="view/genre|string:N/A"></dd>
-->
      </dl>
    </div>

    <div id="objmetadata_pbwidgets_wrapper"
         tal:define="description context/Description">
      <div id="playback_widgets">
        <a href="" 
           class="widget_icon" 
           id="syndication_icon" 
           title="RSS Podcast Feed"
           tal:condition="view/has_syndication"
           tal:attributes="href string:${context/absolute_url}/rss.xml"
           ><img src="" 
                 tal:attributes="src string:${imagesdir}/feed-icon.png" /></a>

        <a href="#" 
           title="Play in popup window" 
           i18n:attributes=" title label_popup_widget" 
           id="imagecol_popup_widget" 
           class="widget_icon"
           tal:attributes="href string:javascript:void window.open('${context/absolute_url}/imagecol-popup.html', '', 'width=420, height=190, toolbar=no, location=no, directories=no, status=no, menubar=no')"
            ><img tal:attributes="src string:${imagesdir}/popup_play_icon.gif"/></a>
      </div>

      <div class="documentDescription"
           tal:content="description"
           tal:condition="description">
        Description
      </div>

      <div class="image-images">
        <img tal:replace="structure view/widgets/folder_image" />
        <div class="visualClear"><!-- --></div>
      </div>

    </div>
    <div class="visualClear"><!-- --></div>
  </div>


  <p tal:condition="not: image_items"
     i18n:translate="description_no_visible_items_add_paste">
    Image information unavailable because this folder contains no image items.
  </p>

  <table id="albumlisting"
         tal:condition="image_items"
         class="listing" 
         summary="Content listing"
         cellpadding="0" cellspacing="0">

    <thead>
      <tr>
        <th class="nosort">&nbsp;<span i18n:translate="listingheader_title">Image Title</span>&nbsp;</th>
        <th class="nosort">&nbsp;<span i18n:translate="listingheader_size">Size</span>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <tr tal:repeat="item image_items">

        <td>
          <a href="#" tal:attributes="href string:${item/url}/view; 
                                     title item/description"
             ><img tal:attributes="src item/icon"
                   />&nbsp;<span tal:replace="item/title">Title</span></a>
        </td>

        <td tal:content="item/size">5.5 MB</td>

      </tr>
    </tbody>
  </table>

</div>

  </body>
</html>
