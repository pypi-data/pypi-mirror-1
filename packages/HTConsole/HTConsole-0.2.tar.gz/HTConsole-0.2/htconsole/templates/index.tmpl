#implements body
#def extra_head()
<script type="text/javascript"
 src="$static_url('command.js')"></script>
#end def

<form action="" onsubmit="return submitForm()"
 id="input_form">

<div id="output" style="width: 100%; border: 1px solid black;
                        font-family: monospace;
                        background-color: #ddddff">
$saved_console
</div>

<table style="width: 100%">
<tr>
 <td valign="top" style="width: 1.5em"><code>&gt;&gt;&gt;</code></td>
 <td style="padding: 0"><input type="text" style="width: 100%" id="input"
  onkeypress="upArrow(event)" autocomplete="off"
  class="command-input"></td>
 <td valign="top" style="width: 1.5em; padding: 0"><a
  href="#" onclick="return expandInputEvent()"
  title="Expand size of input (or use Insert)"
  id="expand_input" style="display: block; width: 1.5em"
  class="button">+</a></span></td>
</tr></table>

<input type="submit" value="run command">
<button id="refresh-button"
 onclick="return refreshForm()">refresh</button>
<br>

<script type="text/javascript">
document.getElementById('input').focus();
</script>

<table style="width: 100%" id="objects">
<tr class="title-row">
 <th style="width: 15%">Name</th>
 <th>Object</th>
</tr>

#for name, obj in $namespace
<tr id="object-$name" class="py-object">
 <td class="py-name">${name}=</td>
 <td class="py-value">${obj}</td>
</tr>
#end for

</table>

