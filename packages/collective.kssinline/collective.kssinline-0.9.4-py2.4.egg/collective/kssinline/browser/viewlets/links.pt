<tal:if define="item python:request.get('item');
                editable python:view.editable(item=item)"
        condition="python:editable">
  <a class="prepare-and-show-popup" 
     tal:attributes="id context/generateUniqueId;
                     item_uid python:view.uid(item);
                     href python:view.url(item)">
     <img tal:attributes="id context/generateUniqueId;
                          item_uid python:view.uid(item);
                          src string:${context/absolute_url}/++resource++edit_icon.gif"/>
  </a>
</tal:if>
