<metal:block use-macro="here/global_defines/macros/defines" />

<tal:if condition="python:same_type(macro, 'str')">

  <tal:def define="template nocall:the_template">
    <div metal:use-macro="python:path('%s/macros/%s' % (the_template_path, macro))" />
  </tal:def>
</tal:if>

<tal:if condition="python:not same_type(macro, 'str')">
  <div metal:use-macro="macro" />
</tal:if>
