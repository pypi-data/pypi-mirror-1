<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="kssinline_templates"
         meta_type="Filesystem Directory View"
         directory="collective.kssinline:skins/kssinline_templates"/>
 <object name="kssinline_images"
         meta_type="Filesystem Directory View"
         directory="collective.kssinline:skins/kssinline_images"/>
 <object name="kssinline_styles"
         meta_type="Filesystem Directory View"
         directory="collective.kssinline:skins/kssinline_styles"/>
 
 <skin-path name="Plone Default">
  <layer insert-after="custom" 
         name="kssinline_templates"/>
  <layer insert-after="custom" 
         name="kssinline_images"/>
  <layer insert-after="custom" 
         name="kssinline_styles"/>
 </skin-path>

</object>
