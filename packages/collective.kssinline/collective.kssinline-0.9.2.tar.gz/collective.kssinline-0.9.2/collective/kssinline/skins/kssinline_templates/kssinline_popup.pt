<metal:main define-macro="main">
<div tal:attributes="id id"
     class="xcore-popup-hide">
  <div tal:attributes="id string:core-popup-${id}-messages">Errors here</div>
  <form tal:attributes="id string:core-popup-${id}-form" action="#" method="post">
    <metal:slot define-slot="body"/>
    <div class="actions">
      <metal:slot define-slot="actions">
        <button tal:attributes="id string:core-popup-${id}-submit" class="core-popup-submit">Submit</button>
        <button tal:attributes="onClick string:document.getElementById('$id').className='core-popup-hide';;return false;;" class="core-popup-submit">Close</button>
      </metal:slot>
    </div>
  </form>
</div>
</metal:main>
