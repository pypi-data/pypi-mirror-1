<div class="menublock">
<h1 class="menuheader">Новые участники</h1>
<div class="menubody">
  <div class="person" tal:repeat="profile python:reversed(view.values[-6:])">
    <a href="#" tal:attributes="href profile/@@adaptive_url" >
	  <tal:block
		on-error="structure python:'<img src=\'/++resource++images/nophoto-small.gif\'/>'">

        <div class="imagebox">
          <tal:block 
	          condition="python:path('profile/++attribute++logo').getSize() > 0"
    		  content="structure python:path('profile/++attribute++logo/@@smartimagecontainer/small').tag()">
 	      </tal:block>
	      <tal:block 
		      condition="python:path('profile/++attribute++logo').getSize() == 0">
		    <img src="/++resource++images/nophoto-small.gif" alt="NO PHOTO" />
	      </tal:block>
        </div>
        <br clear="all" />
	  </tal:block>
      <span tal:replace="profile/title">Степан Лондон</span>
    </a> 
  </div>

  <br clear="all" />
  <div align="right">
    <a href="#" tal:attributes="href view/folder/@@adaptive_url" class="more">ещё &gt;&gt;</a>
  </div>

</div>
</div>
