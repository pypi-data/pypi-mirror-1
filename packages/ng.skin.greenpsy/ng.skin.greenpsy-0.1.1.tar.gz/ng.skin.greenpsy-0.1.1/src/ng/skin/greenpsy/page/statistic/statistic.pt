<html metal:use-macro="context/@@standard_macros/view"
    i18n:domain="zope">
  <head>
    <title>Statistic</title>
  </head>
  <body metal:fill-slot="mainbody">
    <div style="font-size: 10pt;"
        tal:on-error="structure string: <!-- statistic -->"
        tal:define="fwm view/friendsWithMessages">
       <marquee>
         <nobr>
           <tal:block tal:define="len view/suggestlength" tal:condition="len">
             <a href="" target="_base" tal:attributes="href string: ${context/@@profile/@@absolute_url}/@@friendlistedit.html">
             Предложений дружбы: <tal:block tal:content="len"/></a>
           </tal:block>            
           <tal:block tal:define="len view/friendlistlength" tal:condition="len" on-error="structure string: <!-- old friendlist -->">
             <a href="" target="_base" tal:attributes="href string: ${context/@@profile/@@absolute_url}/@@friendblog.html">
             Новых статей: <tal:block tal:content="len"/></a>
           </tal:block>
           <tal:block tal:define="len view/messagelength" tal:condition="len">
             <a href="" target="_base" tal:attributes="href string: ${context/@@profile/@@absolute_url}/@@friendlistedit.html">
               Сообщения</a> от:
             <tal:block tal:repeat="friend fwm">
               <a href="" target="_blank"
                   tal:on-error="string:"
                   tal:attributes="href string:${friend/url}"
                   tal:content="string: ${friend/title} (${friend/count})">
	           </a><span tal:condition="not: repeat/friend/end"
                         tal:content="string:,"
                   /><span tal:condition="repeat/friend/end"
                           tal:content="string:."
                     />
             </tal:block>
           </tal:block>            

         </nobr>
       </marquee>
       <script>
          setTimeout('document.location.reload()',60000);
       </script>
    </div>
  </body>
</html>  