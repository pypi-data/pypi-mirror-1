<html metal:use-macro="context/@@standard_macros/view"
    i18n:domain="zope">
  <head>
    <title>FriendBlog</title>
  </head>
  <body>
    <div metal:fill-slot="body">
      	<tal:block
      	    repeat="key python:path('view/friendlist').keys()"
            >
            <tal:block 
            		on-error="structure python:'<p>' + key + 'not found </p>'" 
		            content="structure python:path('view/friendlist/%s/@@short' % key)" 
        		/>
	      </tal:block>
    </div>
  </body>
</html>  