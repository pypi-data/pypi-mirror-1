<metal:block use-macro="view/@@standard_macros/page">
  <metal:block fill-slot="body">
    <tal:block repeat="comment view/comments/values">
      <div class="commentheader">
        <tal:block content="structure python:path('context/@@nickname')[comment.author]"/> 
        <span 
		tal:define="datetimeformat context/++registry++datetimeformat:%Y-%m-%d"
		tal:content="python:context.created.strftime(str(datetimeformat))"
		/> 
      </div>

      <div class="commentabstract" tal:content="structure comment/++nsinterface++ng.app.converter.object2psadapter.interfaces.IPropertySheet/abstract"/>

    </tal:block>
    <div class="commentadd"><a href="@@addcomment.html">Добавить комментарий</a></div>
  </metal:block>
</metal:block>