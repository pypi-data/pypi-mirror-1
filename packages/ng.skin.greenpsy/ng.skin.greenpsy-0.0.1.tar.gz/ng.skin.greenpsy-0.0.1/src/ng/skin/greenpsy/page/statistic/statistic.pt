<html metal:use-macro="context/@@standard_macros/view"
    i18n:domain="zope">
  <head>
    <title>Statistic</title>
  </head>
  <body metal:fill-slot="mainbody">
    <div style="width: 300px; height: 20px; text-align: left;" tal:on-error="structure string: <!-- statistic -->">
       <marquee><nobr>
          <tal:block tal:define="len view/suggestlength" tal:condition="len">
            <a href="" target="_base" tal:attributes="href string: ${context/@@profile/@@absolute_url}/@@friendlistedit.html">
              <tal:block tal:content="len"/> предложений дружбы</a>
          </tal:block>            
          <tal:block tal:define="len view/messagelength" tal:condition="len">
            <a href="" target="_base" tal:attributes="href string: ${context/@@profile/@@absolute_url}/@@friendlistedit.html">
              <tal:block tal:content="len"/> новых сообщений</a>
          </tal:block>            
          <tal:block tal:define="len view/friendlistlength" tal:condition="len" on-error="structure string: <!-- old friendlist -->">
            <a href="" target="_base" tal:attributes="href string: ${context/@@profile/@@absolute_url}/@@friendblog.html">
              <tal:block tal:content="len"/> новых статей</a>
          </tal:block>            
       </nobr></marquee>
       <script>
          setTimeout('document.location.reload()',60000);
       </script>
    </div>
  </body>
</html>  