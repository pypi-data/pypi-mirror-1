<html metal:use-macro="context/@@standard_macros/view"
    i18n:domain="zope">
  <head>
    <title>FriendList</title>
  </head>
  <body>
    <div metal:fill-slot="body">
      <h1>Friendship suggest: </h1>
      <table>
	 <tal:block repeat="friend view/friends/suggests">
	   <tr>
		<td><a href="" tal:attributes="href friend/profile/@@absolute_url" tal:content="friend/profile/title">Ирко</a></td>
		<td><a href="" tal:attributes="href python:path('context/@@absolute_url') + '/?agree:method=&id=%s' % friend.id">agree</a></td>	
		<td><a href="" tal:attributes="href python:path('context/@@absolute_url') + '/?reject:method=&id=%s' % friend.id">reject</a></td>	
           </tr>
	 </tal:block>
      </table>
      <h1>Your Friends: </h1>
      <table>
        <tal:block repeat="friend view/friends/friends">
          <tr>
	    <td><a href="" tal:attributes="href friend/profile/@@absolute_url" tal:content="friend/profile/title">Ирко</a></td>
            <td tal:content="python:friend.status and 'accepted' or 'waited'"></td>
	    <td><a href="" tal:attributes="href python: path('context/@@absolute_url') + '/?remove:method=&id=%s' % friend.id">remove</a></td>	
          </tr>            
        </tal:block>            
      </table>      
      <form action="" tal:attributes="action string: ${context/@@absolute_url}/">
        <input type="submit" name="suggest:method" value="Suggest friendship" />
      </form>
    </div>
  </body>
</html>  