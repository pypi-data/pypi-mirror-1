<configure
    xmlns="http://namespaces.zope.org/zope">

  <!--
    Author: Elena Antusheva, 2007
    $Id: configure.zcml 50818 2008-02-21 22:37:53Z cray $ 
  -->

  <class class=".dictannotation.DictAnnotation">
    <require interface=".interfaces.IDictAnnotation" permission="zope.View" />
    <require set_schema=".interfaces.IDictAnnotation" permission="zope.ManageContent" />
  </class>

  <adapter
    factory=".dictannotationableadapter.IDictAnnotationAbleAdapter"
    provides=".interfaces.IDictAnnotation"
    for=".interfaces.IDictAnnotationAble"
    trusted="true"
   />

  <subscriber
    factory=".dictannotation2titlesubscriber.DictAnnotation2TitleSubscriber"
    for=".interfaces.IDictAnnotationAble"
    provides="ng.adapter.ianytitle.interfaces.IAnyTitle"
  />

  <include package=".browser" />

</configure>
