<html metal:use-macro="context/@@standard_macros/view"
    i18n:domain="zope">

  <head>
    <title>Article By Name</title>
  </head>
  <body>

    <div metal:fill-slot="body">

       <div metal:use-macro="view/generated_form/macros/addform">
      <div class="row" metal:fill-slot="extra_bottom">
        
          <div class="label">
            <label for="field.author" title="Article Author">Author</label>
          </div>
          
          <div class="field"><input class="textType" id="field.name" name="field.name" size="20" type="text" value="" tal:attributes="value request/form/field.name|nothing" /></div>
        
      </div>
       </div>
   </div>
  </body>

</html>
