<metal:page define-macro="master">
    <html>
        <head>
            <title tal:content="context/title" />
            <link rel="stylesheet" type="text/css"
                  tal:attributes="href static/styles.css"
            />

            <metal:slot define-slot="css_slot" />
            <metal:slot define-slot="js_slot" />
        </head>
        <body>
            <table width="100%">
                <tr>
                    <td width="100%">
                         <h1>
                            <a tal:attributes="href context/@@absolute_url"
                               tal:content="context/title" 
                            />
                         </h1>
                    </td>
                    <td>
                        <a href="http://grok.zope.org">
                            <img tal:attributes="src static/logo.gif" border="0" />
                        </a>
                    </td>
                </tr>
            </table>

            <metal:slot define-slot="main" />

            <hr>
            <div class="footer">
            haufe.testrunner.ui - written by Andreas Jung for Haufe Mediengruppe & ZOPYX Ltd. & Co. KG
            </div>
        </body>
    </html>    
</metal:page>
