<html metal:use-macro="context/@@master/macros/master">
    <metal:slot fill-slot="main" 
                tal:define="runners view/getTestrunners">

    <div tal:condition="not: runners">No testrunners found</div>

        <table class="result" tal:condition="runners" border="1">
            <thead>
                <tr>
                    <th>Testrunner</th>
                    <th>Last run</th>
                    <th>RSS</th>
                </tr>
            </thead>
            <tbody>
                <tr tal:repeat="tr runners">
                    <td class="description">
                        <a tal:attributes="href string:showruns?testrunner_id:int=${tr/id}"
                           tal:content="tr/name" 
                        />
                    </td>
                    <td class="time" tal:content="python: tr.last_run.strftime('%d.%m.%Y %H:%Mh')"/>
                    <td class="rss-logo">
                        <a tal:attributes="href string:rss?testrunner_id:int=${tr/id}">
                            <img tal:attributes="src static/rss.gif" border="0" />
                        </a>
                    </td>
                </tr>
            </tbody>

        </table>
    </metal:slot>
</html>
