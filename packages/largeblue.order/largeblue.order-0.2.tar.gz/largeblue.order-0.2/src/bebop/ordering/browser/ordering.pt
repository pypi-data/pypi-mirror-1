<html metal:use-macro="context/@@standard_macros/view"
    i18n:domain="zope">
<body>
<div metal:fill-slot="body">
  <div metal:define-macro="contents">

    <form name="containerContentsForm" method="post" action="."
          tal:attributes="action request/URL"
          tal:define="container_contents view/listContentInfo">
          
      <div class="page_error"
           tal:condition="view/error"
           tal:content="view/error"
           i18n:translate="">
        Error message
      </div>
      
      <table id="sortable" class="listing" summary="Content listing"
             i18n:attributes="summary">

        <thead>
          <tr>
            <th>&nbsp;</th>
            <th i18n:translate="">Name</th>
          </tr>
        </thead>

        <tbody>

        <metal:block tal:repeat="item container_contents">
          <tr tal:define="oddrow repeat/item/odd; url item/url;"
              tal:attributes="class python:oddrow and 'even' or 'odd'" >
            <td>
              <input type="checkbox" class="noborder" name="ids:list" id="#"
                     value="#"
                     tal:attributes="value item/cb_id;
                                     id item/cb_id;
                                     checked request/ids_checked|nothing;"/>
            </td>
            <td><a href="#"
                 tal:attributes="href
                                 string:${url}/@@SelectedManagementView.html"
                 tal:content="structure item/icon|default">
                </a>
                <span>
                  <a href="#"
                     tal:attributes="href
                                 string:${url}/@@SelectedManagementView.html"
                     tal:content="item/id"
                     i18n:translate=""
                     >foo</a></span
               ></td>
           
          </tr>
        </metal:block>

        </tbody>
      </table>
      <div>
        <input type="submit" name="orderable_up" value="Up"
               i18n:attributes="value orderable_up"
               
               />
        <input type="submit" name="orderable_top" value="Top"
               i18n:attributes="value orderable_top"
               
               />
        <input type="submit" name="orderable_down" value="Down"
               i18n:attributes="value orderable_down"
               
               />
        <input type="submit" name="orderable_bottom" value="Bottom"
               i18n:attributes="value orderable_bottom"
               /> 
      </div>
    </form>
  </div>

</div>
</body>
</html>
