<tal:show tal:condition="python: context.containsSubGalleries()">
<h3 class="centered-title">sub-galleries</h3>
<div class="plone-true-gallery-subgalleries" 
     >
    <tal:galleries tal:repeat="gallery context/galleries">
    <dl tal:define="adapted python:view.getAdaptedGallery(gallery)">
		<a tal:attributes="href gallery/absolute_url">
		<div class="subgallery" tal:define="image adapted/get_random_image">
	        <dt tal:content="gallery/Title"> </dt>
	        <dd tal:content="gallery/Description" />
			<img tal:condition="image" tal:attributes="src image/thumb_url" />
		</div>
		</a>
	</dl>
    </tal:galleries>
</div>
<div class="clear"></div>
</tal:show>