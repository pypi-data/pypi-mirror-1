<object name="collective.types.Citation"
		meta_type="Factory-based Type Information with dynamic views"
		i18n:domain="collective.types.citation"
		xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <property name="title" i18n:translate="">Citation</property>
  <property name="description"
			i18n:translate=""></property>
  <property name="content_icon">++resource++collective-types-citation_icon.gif</property>
  <property name="content_meta_type">collective.types.Citation</property>
  <property name="product">collective.types.citation</property>
  <property name="factory">addCitation</property>
  <property name="immediate_view">atct_edit</property>
  <property name="global_allow">True</property>

  <property name="default_view">article_page</property>
  <property name="view_methods">
	<element value="article_page" />
	<element value="book_page" />
	<element value="report_page" />
	<element value="other_page" />
  </property>

  <alias from="(Default)" to="(dynamic view)" />
  <alias from="edit" to="atct_edit" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="(selected layout)" />

  <action title="View" action_id="view" category="object"
		  condition_expr=""
		  url_expr="string:${object_url}" visible="True">
	<permission value="View" />
  </action>
  <action title="Edit" action_id="edit" category="object"
		  condition_expr=""
		  url_expr="string:${object_url}/edit"
		  visible="True">
	<permission value="Modify portal content" />
  </action>
</object>
