<metal:block define-macro="inline-contact-field">
  <tal:block condition="not:view/deleted|nothing">
    <form class="edit-form"
	  tal:attributes="method view/method;
			  enctype view/enctype;
			  acceptCharset view/acceptCharset;
			  accept view/accept;
			  action view/action;
			  name view/name;
			  id view/id">
      <input type="hidden"
	     tal:attributes="value request/URL;
			     name string:{view/prefix}.referrer" />
      <div metal:use-macro="macro:form-header" />
      <b tal:content="context/title"></b>
      <div tal:condition="view/editing">
	<div metal:use-macro="macro:widget-rows"/>
      </div>
      <div tal:repeat="action view/availableActions" tal:replace="structure action/render"/>
      <div metal:define-slot="field-contents">
	<div tal:replace="structure view/content|nothing" />
      </div>
    </form>
    <script type="text/javascript" tal:content="view/javascript">
    </script>
  </tal:block>
</metal:block>