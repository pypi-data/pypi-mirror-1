<script tal:replace="structure provider:IJavaScript" />
<div tal:attributes="id view/id">
  <div style="height: 20em; overflow: auto; border: 1px solid white;">
    <div tal:define="widget view/widgets/search"><div metal:use-macro="macro:widget-row" /></div>
    <tal:block repeat="widget view/selectWidgets/values">
      <div id="" class="row"
	   tal:attributes="id string:${widget/id}-row"
	   tal:condition="python:widget.mode != 'hidden'">
	<div class="widget" tal:content="structure widget/render">
	  <input type="text" size="24" value="" />
	</div>
	<div class="error"
	     tal:condition="widget/error">
	  <span tal:replace="structure widget/error/render">error</span>
	</div>
      </div>
      <input type="hidden" value=""
	     tal:condition="python:widget.mode == 'hidden'"
	     tal:replace="structure widget/render" />
    </tal:block>
  </div>
  <div metal:use-macro="macro:form-buttons"></div>
</div>