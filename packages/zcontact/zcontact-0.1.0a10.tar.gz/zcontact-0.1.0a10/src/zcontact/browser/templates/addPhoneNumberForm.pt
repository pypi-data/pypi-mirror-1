<div metal:use-macro="macro:inline-contact-field-add">
  <div metal:fill-slot="widget-rows"
       tal:define="widgets view/widgets">

    <div class="row" tal:define="widget widgets/title">
      <div metal:use-macro="macro:widget-row" />
    </div>

    <div class="row">
      <div class="label">
	<label>
	  <span>Number</span>
	</label>
      </div>
      <div class="widget">
	+<input tal:replace="structure widgets/countryCode/render" />
	(<input tal:replace="structure widgets/areaCode/render" />)
	<input tal:replace="structure widgets/number/render" />
      </div>
    </div>

    <div class="row" tal:define="widget widgets/alternate">
      <div metal:use-macro="macro:widget-row" />
    </div>

    <div tal:repeat="widget widgets/values">
      <div class="error"
	   tal:condition="widget/error"
	   tal:content="widget/error">some error</div>
    </div>
  </div>
</div>
