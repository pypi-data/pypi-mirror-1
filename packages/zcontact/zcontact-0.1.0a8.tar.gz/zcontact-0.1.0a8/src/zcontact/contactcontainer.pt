<html metal:use-macro="context/@@standard_macros/view">
<body metal:fill-slot="body">
  <h1>Z Contacts: <span tal:replace="context/title">Container Title</span></h1>
  <form tal:attributes="action request/URL" method="POST">
    <div tal:repeat="contact view/getSortedContacts">
      <input type="checkbox" tal:attributes="name string:${contact/__name__}.delete" />
      <a tal:attributes="href contact/@@absolute_url"
         tal:content="string:${contact/lastName}, ${contact/firstName}"
        >
          Contact's Name
      </a>
    </div>
    <input type="submit" value="Delete" name="DELETE_SUBMIT"/>
  </form>
</body>
</html>