<metal:block define-macro="inline-contact-field">
  <form tal:condition="not:view/deleted|nothing" class="edit-form"
	tal:attributes="method view/method;
			enctype view/enctype;
			acceptCharset view/acceptCharset;
			accept view/accept;
			action view/action;
			name view/name;
			id view/id">
    <b tal:content="context/title"></b>
    <div tal:repeat="action view/actions/values" tal:replace="structure action/render" />
    <div metal:define-slot="field-contents">
      <div tal:replace="structure view/content|nothing" />
    </div>
  </form>
  <script type="text/javascript" tal:content="view/javascript">
  </script>

</metal:block>