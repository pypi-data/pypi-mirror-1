<h1>ZContact Management</h1>

<form tal:attributes="action request/URL" method="post">
<h3>Existing Contact Lists</h3>
<ul>
  <tal:block tal:repeat="list context/values">
    <li tal:define="widgetName string:delete.${list/__name__}">
      <label tal:attributes="for widgetName">
	<input type="checkbox" tal:attributes="name widgetName" />
	<a tal:attributes="href list/@@absolute_url"
	   tal:define="size python: len(list)"
	   tal:content="string:${list/title} (${size} contacts)" />
      </label>
    </li>
  </tal:block>
</ul>
<div tal:repeat="action view/actions/values" tal:replace="structure action/render" />
</form>