<div id="result-wrapper">
  <tal:block tal:repeat="contact view/contacts">
    <div tal:define="color python:{True: 'evenRow', False: 'oddRow'}[repeat['contact'].even()]"
	 tal:attributes="name string:${contact/@@absolute_url}/@@inline.html;
			 id string:search-item-${repeat/contact/index};
			 class string:search-result-item ${color}">
      <a tal:attributes="href contact/@@absolute_url"
	 class="top-row"
	 tal:content="contact/title">Title</a>
    </div>
  </tal:block>
</div>