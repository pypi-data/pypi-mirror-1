<div metal:define-macro="analytics_macro">

        <form action="getReport" method="get">
        
        <div class="field">
        <label for="format">Report format:</label>
        <select name="format" id="format">
          <option value="0">PDF</option>
          <option value="2">CSV</option>
        </select>
        </div>
        
        <div class="field">
        <label for="type">Report type:</label>
        <select name="type" id="type">
          <option value="ReferringSourcesReport">Referring Sites</option>
          <option value="SearchEnginesReport">Search Engines</option>
          <option value="AllSourcesReport">All Traffic Sources</option>
          <option value="KeywordsReport">Keywords</option>
          <option value="TopContentReport">Top Content</option>
          <option value="ContentByTitleReport">Content by Title</option>
          <option value="ContentDrilldownReport">Content Drilldown</option>
          <option value="EntrancesReport">Top Landing Pages</option>
          <option value="ExitsReport">Top Exits</option>
          <option value="GeoMapReport">Map Overlay</option>
          <option value="LanguagesReport">Map Overlay</option>
          <option value="HostnamesReport">Hostnames</option>
          <option value="SpeedsReport">Connection Speeds</option>          
        </select>
        </div>
        
        <div class="field">
        <label for="daterange">Date range:</label>
        <select name="daterange" id="daterange">
          <option value="week">Last week</option>
          <option value="month">Last month</option>
          <option value="year">Last year</option>
          <option value="all">All</option>
        </select>
        </div>
        
        <div class="field">
        <label for="limit">Maximum number of results:</label>
        <select name="limit" id="limit">
          <option value="10">10</option>
          <option value="100">100</option>
          <option value="500">500</option>
        </select><br/>
        </div>
        
        <input type="submit" value="get report"/>      
                
        </form>

</div>
