<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="plonetheme.greencommunity">

    <!-- 'Green Community' Zope 3 browser layer -->
    <interface
        interface=".interfaces.IThemeSpecific"
        type="zope.publisher.interfaces.browser.IBrowserSkinType"
        name="Green Community"
        />
		
	<!-- Plone 3 viewlets -->
	<browser:viewlet
        name="plonetheme.greencommunity.community_title"
        manager="plone.app.layout.viewlets.interfaces.IAboveContent"
        layer=".interfaces.IThemeSpecific"
		template="viewlets/community_title.pt"
        permission="zope2.View"
        />
		
    <!-- Resource directory for images -->
    <browser:resourceDirectory
        name="plonetheme.greencommunity.images"
        directory="images"
        layer=".interfaces.IThemeSpecific"
        />

    <!-- Resource directory for stylesheets -->
    <browser:resourceDirectory
        name="plonetheme.greencommunity.stylesheets"
        directory="stylesheets"
        layer=".interfaces.IThemeSpecific"
        />

</configure>
