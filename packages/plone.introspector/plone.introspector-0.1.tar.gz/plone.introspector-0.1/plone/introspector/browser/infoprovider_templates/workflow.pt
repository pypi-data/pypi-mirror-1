<div>
    <tal:wf define="workflows context/getWorkflowHistory" >
        
        <span tal:condition="workflows" >
          <table width="100%">
              <thead>
                  <td>
                     Workflow: 
                  </td>
                  <td>
                      Actor:
                  </td>
                  <td>
                      Action:
                  </td>
                  <td>
                      State:
                  </td>
                  <td>
                      Comment:
                  </td>
                  <td>
                      Time:
                  </td>
              </thead>
              <tbody>
                  <tal:workflows repeat="flow workflows">
                      <tal:changes repeat="change python: workflows[flow]">
                          <tr>
                              <td tal:content="flow" />
                              <td tal:content="change/actor" />
                              <td tal:content="change/action" />
                              <td tal:content="change/review_state" />
                              <td tal:content="change/comments" />
                              <td tal:content="change/time" />
                          </tr>
                      </tal:changes>
                  </tal:workflows>
              </tbody>
          </table>
        </span>
        <span tal:condition="not: workflows">
            No workflow on this item
        </span>
    </tal:wf>

</div>