<ul i18n:domain="checklist"
    tal:condition="view/any_items_left"
    tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;">

  <li tal:repeat="item view/checklist/remainingAllItems">
    <span tal:content="structure python: item.text + ' ' + str(toLocalizedTime(item.date))"
	  tal:attributes="class python:'item-' + item.get_style()"
	  tal:condition="not:item/is_link"/>
    
    <a tal:content="structure python: item.text + ' ' + str(toLocalizedTime(item.date))"
       tal:attributes="href item/link_url;
		       class python:'item-' + item.get_style();
		       title item/link_title"
       tal:condition="item/is_link"/>
  </li>
</ul>
