<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="checklist">
  <head>
    <metal:block
        fill-slot="top_slot"
        tal:define="dummy python:request.set('disable_border',1)" />
  </head>
  <body>
    <div metal:fill-slot="main">
      <div metal:define-macro="body">
        <h3 i18n:translate="default-items">Default items</h3>
        <form name="items_form"
              method="post"
              id="itemsform"
              action=""
              tal:attributes="action view/form_action">
          <ul tal:define="items context/getDefaultItems">
            <li tal:repeat="item items"
                tal:content="item">normal item</li>
            <li>
              <input name="item_add"
                     value=""
                     type="text" />
              <input name="checklistform.submitted"
                     value="1"
                     type="hidden" />
              <input name="checklistform.config_normal"
                     value="1"
                     type="hidden" />
              <input type="submit"
                     value="Add"
                     i18n:attributes="value"/>
              <input type="checkbox"
                     name="apply_to_all"/>
              <span i18n:translate="to_all_existing">
                to all existing employees
              </span>
            </li>
          </ul>
        </form>
        <h3 i18n:translate="default-manager-items">
          Default manager items
        </h3>
        <form name="manager_items_form"
              method="post"
              id="manageritemsform"
              action=""
              tal:attributes="action view/form_action">
          <ul tal:define="items context/getDefaultManagerItems">
            <li tal:repeat="item items"
                tal:content="item">manager items</li>
            <li>
              <input name="manager_item_add"
                     value=""
                     type="text" />
              <input name="checklistform.submitted"
                     value="1"
                     type="hidden" />
              <input name="checklistform.config_manager"
                     value="1"
                     type="hidden" />
              <input type="submit"
                     value="Add"
                     i18n:attributes="value"/>
              <input type="checkbox"
                     name="apply_to_all"/>
              <span i18n:translate="to_all_existing">
                to all existing employees
              </span>
            </li>
          </ul>
        </form>
      </div>
    </div>
  </body>
</html>
