<tal:page metal:use-macro="container/base_email/macros/plonehrm_mail"
          i18n:domain="checklist">

  <tal:block metal:fill-slot="title">
    <tal:dummy replace="options/title" />
  </tal:block>

  <tal:block metal:fill-slot="content">

    <tal:block metal:use-macro="container/base_email/macros/plonehrm_p">
      <tal:block metal:fill-slot="p_content"><tal:description i18n:translate="help_checklist_is_due">
Today the task "<tal:dummy i18n:name="task" tal:replace="options/task/text" />" is due for <tak:dummy i18n:name="name" tal:replace="options/employee/Title" />.
      </tal:description></tal:block>
    </tal:block>

    <tal:block tal:define="link_href string:${options/employee/absolute_url}#checklist;
                           link_text options/link_text">
      <div metal:use-macro="container/base_email/macros/plonehrm_link" />
    </tal:block>
  </tal:block>
</tal:page>
