<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/prefs_main_template/macros/master"
      i18n:domain="checklist">

  <body>
    <div metal:fill-slot="prefs_configlet_main">
      <div metal:define-macro="body">
        <h2 i18n:translate="default-items">Default items</h2>
        <form name="items_form"
              method="post"
              id="itemsform"
              action=""
              tal:attributes="action view/form_action">
          <ul tal:define="items context/getDefaultItems">
            <li tal:repeat="item items"
                tal:content="item">normal item</li>
            <li>
              <input name="item_add"
                     value=""
                     type="text" />
              <input name="checklistform.submitted"
                     value="1"
                     type="hidden" />
              <input name="checklistform.config_normal"
                     value="1"
                     type="hidden" />
              <input type="submit"
                     value="Add"
                     i18n:attributes="value"/>
              <input type="checkbox"
                     name="apply_to_all"/>
              <span i18n:translate="to_all_existing">
                to all existing employees
              </span>
            </li>
          </ul>
        </form>
        <h2 i18n:translate="default-manager-items">
          Default manager items
        </h2>
        <form name="manager_items_form"
              method="post"
              id="manageritemsform"
              action=""
              tal:attributes="action view/form_action">
          <ul tal:define="items context/getDefaultManagerItems">
            <li tal:repeat="item items"
                tal:content="item">manager items</li>
            <li>
              <input name="manager_item_add"
                     value=""
                     type="text" />
              <input name="checklistform.submitted"
                     value="1"
                     type="hidden" />
              <input name="checklistform.config_manager"
                     value="1"
                     type="hidden" />
              <input type="submit"
                     value="Add"
                     i18n:attributes="value"/>
              <input type="checkbox"
                     name="apply_to_all"/>
              <span i18n:translate="to_all_existing">
                to all existing employees
              </span>
            </li>
          </ul>
        </form>
        <div class="discreet">
          <a href=""
             tal:attributes="href string:${context/absolute_url}/base_edit"
             i18n:translate="edit_all_checklist_items">
            Edit all checklist items
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
