<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="on.sales">
<body>

<metal:css fill-slot="css_slot">
    <style type="text/css" media="all"
	tal:content="string: @import url(${context/++resource++on-sales.css});"></style>
</metal:css>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="areaFirstHeading">
            <span metal:use-macro="python:context.widget('title', mode='view')" />
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div class="documentDescription"><pre>
            <span metal:use-macro="python:context.widget('description', mode='view')" /></pre>
        </div>

	<div tal:replace="structure provider:plone.abovecontentbody" />

	    <!-- Aus plone.users (Oliver Morgan) -->
	    <div class="portrait">
	      <span tal:content="structure python:here.getField('portrait').tag(here)" />
	    </div>
	<div id="info">
          <label tal:condition="here/department"
		class="label"
		for="parent-fieldname-department" i18n:translate="label_salesagent-department">
		Department:</label>
          <div metal:use-macro="python:context.widget('department', mode='view')" />
	<br />
          <label tal:condition="here/email"
	       class="label"
	       for="parent-fieldname-mail" i18n:translate="label_salesagent-mail">
		  Email address:</label>
          <div metal:use-macro="python:context.widget('email', mode='view')" />
	<br /><br />	
          <label tal:condition="here/phone"
	       class="label"
	       for="parent-fieldname-phone" i18n:translate="label_salesagent-phone">
		    Phone number:</label>
          <div metal:use-macro="python:context.widget('phone', mode='view')" />
        <br /><br />
          <label tal:condition="here/notes"
		class="label"
		for="parent-fieldname-notes" i18n:translate="label_salesagent-notes">
		  Additional Information:</label>
<!--          <div metal:use-macro="python:context.widget('notes', mode='view')" />-->
          <div tal:content="structure context/notes" class="remark" />
	</div>

        <div metal:use-macro="context/document_relateditems/macros/relatedItems">
            show related items if they exist
        </div>
    
        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>

