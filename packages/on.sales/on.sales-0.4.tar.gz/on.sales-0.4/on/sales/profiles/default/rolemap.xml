<?xml version="1.0"?>
<rolemap>
  <permissions>
    <!-- Map the "add" permissions for the various content types. Note that
         we let the "Contributor" role (in a folder) be allowed to add content
         when the "Owner" is, so that we can effectively delegate control
         over a folder.
      -->
    <permission name="on: Add SalesAgent" acquire="False">
        <role name="Manager" />
        <role name="Owner" />
        <role name="Contributor" />
    </permission>
    <permission name="on: Add Pointer to SalesAgent" acquire="False">
        <role name="Manager" />
        <role name="Owner" />
        <role name="Contributor" />
    </permission>
    <permission name="on: Add SalesArea" acquire="False">
        <role name="Manager" />
        <role name="Owner" />
        <role name="Contributor" />
    </permission>
  </permissions>
</rolemap>
