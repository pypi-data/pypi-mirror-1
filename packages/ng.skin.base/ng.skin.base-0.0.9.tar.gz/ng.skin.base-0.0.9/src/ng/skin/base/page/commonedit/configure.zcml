  <multiform
    label="Edit"
    name="commonedit.html"
    permission="zope.ManageContent"
    layer="...interfaces.BaseSkin"
    for="*"
    manager=".interfaces.IEditletManager"
    />

  <multiformitem
    name="abstract"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.article.interfaces.IDocShortLogo"
    layer="...interfaces.BaseSkin"
    order="1"
    /> 

  <multiformitem
    name="abstract"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.article.interfaces.IDocShort"
    layer="...interfaces.BaseSkin"
    order="1"
    /> 

  <multiformitem
    name="abstract"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.article.interfaces.IDocAbstract"
    layer="...interfaces.BaseSkin"
    order="1"
    /> 

  <multiformitem
    name="body"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.article.interfaces.IDocBody"
    layer="...interfaces.BaseSkin"
    order="2"
    /> 

  <multiformitem
    name="eventannotation"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.annotation.eventannotation.interfaces.IEventAnnotation"
    for="ng.content.annotation.eventannotation.interfaces.IEventAnnotationAble"
    layer="...interfaces.BaseSkin"
    order="3"
    /> 

  <multiformitem
    name="dictannotation"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.annotation.dictannotation.interfaces.IDictAnnotation"
