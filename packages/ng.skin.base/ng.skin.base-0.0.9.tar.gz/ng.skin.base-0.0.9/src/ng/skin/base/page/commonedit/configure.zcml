    layer="...interfaces.BaseSkin"
    order="3"
    /> 

  <multiformitem
    name="productannotation"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.annotation.productannotation.interfaces.IProductAnnotation"
    for="ng.content.annotation.productannotation.interfaces.IProductAnnotationAble"
    layer="...interfaces.BaseSkin"
    order="3"
    /> 

  <multiformitem
    name="annotationswitcher"
    permission="zope.View"
    manager=".interfaces.IEditletManager"
    schema="ng.content.annotation.annotationswitcher.interfaces.IAnnotationSwitcher"
    layer="...interfaces.BaseSkin"
    order="10"
    /> 
                
