<?xml version="1.0" encoding="UTF-8"?>
<gallery
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    
    frameColor="0xFFFFFF"
    frameWidth="15"
    imagePadding="20"
    displayTime="6"
    enableRightClickOpen="true"
    >
    
	<image tal:repeat="image view/getImagesInFolder">
	   <url tal:content="string:${image/getId}/image_preview">
	       images/wide.jpg
	   </url>
	   <caption tal:content="python: view.getImageCaption(image)">
	       image description
	   </caption>
	   <width tal:content="python: view.getImageWidth(image)">
	       768
	   </width>
	   <height tal:content="python: view.getImageHeight(image)">
	       768
	   </height>
	</image>

</gallery>