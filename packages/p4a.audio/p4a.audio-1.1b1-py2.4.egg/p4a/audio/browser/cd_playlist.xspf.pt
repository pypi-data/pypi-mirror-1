<?xml version="1.0" encoding="UTF-8"?>
<playlist version="0" xmlns="http://xspf.org/ns/0/"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="p4a.audio">
  <trackList tal:define="audio_items view/audio_items">
   <track tal:repeat="item audio_items">
    <location tal:content="string:${item/url}">song.mp3</location>
    <image tal:content="string:${item/imageurlwidget}">the image url</image>
    <annotation tal:content="string:${item/title} (${item/artist} - ${item/album} - ${item/year})">Text to be displayed</annotation>
   </track>
  </trackList>
</playlist>
