<metal:block metal:define-macro="listed_audio">
  <tr tal:define="audioobj audioobj|options/audioobj|nothing;
                   audio audio|options/audio|python:view.safe_audio(audioobj);
                   viewurl string:${audio/url}/view;
                   oddeven oddeven|audio/oddeven|string:;
                   portal_url portal_url|view/portal_url;
                   playerdir string:$portal_url/++resource++audioplayer"
       tal:attributes="class string:media-item ${audio/oddeven}">

         <td class="private audio_embedded_play">
           <span tal:replace="structure audio/playerwidget"></span>
         </td>

         <td tal:content="audio/idtrack"></td>

         <td>
           <a href="#" tal:attributes="href string:$viewurl; 
                                      title audio/description"
              ><img tal:attributes="src audio/icon" alt="Track icon"
                    />&nbsp;<span tal:replace="audio/title">Title</span></a>
         </td>

         <td tal:content="audio/size">5.5 MB</td>
         <td tal:content="audio/length">track length</td>

 </tr>
       
</metal:block>
