<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone4artists">

  <head>
    <div metal:fill-slot="css_slot"
         tal:define="stylesdir string:$portal_url/++resource++audiostyles">
      <link rel="stylesheet" href="audio.css"
            tal:attributes="href string:${stylesdir}/audio.css" />
    </div>

    <metal:jsslot fill-slot="javascript_head_slot"
         tal:define="playerdir string:$portal_url/++resource++audioplayer">
      <script src=""
              tal:attributes="src string:${playerdir}/audio-player.js"
              type="text/javascript" charset="utf-8">
      </script>
     </metal:jsslot>
      
  </head>
  <body>

    <div metal:fill-slot="main"
         tal:define="audio_items view/audio_items;
                     template_id string:audio-container.html;
                     Batch python:modules['Products.CMFPlone'].Batch;
                     b_size python:10;b_start python:0;b_start request/b_start | b_start;
                     batch python:Batch(audio_items, b_size, int(b_start), orphan=1);
                     imagesdir string:$portal_url/++resource++audioimages;">

      <div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
      </div>

      <h1 tal:content="here/pretty_title_or_id"
          class="documentFirstHeading">Title or id</h1>

      <div tal:content="here/Description"
           tal:condition="here/Description" class="documentDescription">
        Description
      </div>

      <div class="media-listing"
           tal:define="single nocall:context/@@audio_listed_single">

        <tal:block condition="audio_items"
                   repeat="audioobj batch">

          <div tal:replace="structure python:single.single(audioobj, repeat['audioobj'].index)" />

        </tal:block>

      <p class="discreet"
         i18n:domain="plone4artists"
         i18n:translate="text_no_albums_audio_uploaded"
         tal:condition="python:not audio_items">
        No audio uploaded yet.
      </p>

      <!-- Navigation -->
      <div metal:use-macro="here/batch_macros/macros/navigation" />
      </div>
    </div>
  </body>
</html>
