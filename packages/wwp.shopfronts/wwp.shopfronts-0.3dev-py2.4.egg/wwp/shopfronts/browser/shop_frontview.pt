<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="wwp.shopfronts">
<body>
    <div metal:fill-slot="main">
        <tal:main-macro metal:define-macro="main"
                        tal:define="testview view/test">

        <div metal:use-macro="here/document_actions/macros/document_actions">
              Document actions (print, sendto etc)
        </div>
        
      <!-- main item -->
      
      
      <span tal:define="stitle     here/title_or_id;
                        sdesc      here/description;
                        open_times python: here.opening_times.replace('\n','<br/>');
                        special    python: here.getSpecial_notices().replace('\n','<br/>');
                        long       python: here.getLong_desc().replace('\n','<br/>');
                        address    python: here.shopaddress.replace('\n','<br/>');
                        website    here/shopwebsite;
                        phoneno    here/shopphone;
                        ">


                        
      <!-- title, address and logo -->
      <div>
            <div style="width:100%; float:left"> 
                  <div tal:condition="exists:here/store_logo_mini">
                        <img tal:replace="structure here/store_logo_mini" />
                  </div>

                  <a tal:attributes="href here/aq_parent/absolute_url"> - back - </a>                   
                  
                  <div><h1 tal:content="stitle" /></div>
            </div>
      </div>
      
      <!-- image and address -->
      <div style="width:100%; clear:both">&nbsp;</div>
      <div>
            <div style="width:44%; float:left"> 
            <div><p tal:content="structure address"></p></div>
            <h3>Website: </h3>
            <a tal:attributes="href website" tal:content="structure website">website</a>
            <h3>Telephone: </h3>
            <span tal:content="structure phoneno">phone number</span>            
            </div>
            <div style="width:55%; float:right" tal:condition="exists:here/store_image_front">
                  <img tal:replace="structure here/store_image_front" />
            </div>
      </div>
      
      <!-- main body -->
      <div style="width:100%; clear:both">&nbsp;</div>
      <div>
            <div style="width:40%; float:right; background-color:white; border:1px solid black; padding:5px" tal:condition="python: open_times != ''">
                  <span tal:condition="open_times | nothing">   
                        <h3>Opening Times</h3>
                        <p tal:content="structure open_times"></p>
                  </span>
                  
                  <span tal:condition="special | nothing">    
                        <h3>Special Notices:</h3>
                        <p tal:content="structure special">Special </p>
                  </span> 
                  
            </div>
            <span tal:content="structure long">Long Description</span>
            
      </div>

      
      
      </span>
      
 
      <!-- end main item -->            

      <tal:has_document_byline tal:condition="exists:here/document_byline">
              <div metal:use-macro="here/document_byline/macros/byline">
                Get the byline - contains details about author and modification date.
              </div>
      </tal:has_document_byline>
            
      <div metal:use-macro="here/document_actions/macros/document_actions">
              Document actions (print, sendto etc)
      </div>        
        
        
        </tal:main-macro>
    </div>
</body>
</html>

