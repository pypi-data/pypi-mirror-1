<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="wwp.shopfronts">
<body>

	  
	  
	  
     <div metal:fill-slot="main" >
     <div class="contentHeader"
	      tal:define="ttitle here/title_or_id;
					  tdescr here/Description;
					  tbody here/bodytext">
         <h1 tal:content="ttitle">Title or id</h1>

     <b><div tal:content="structure tdescr"> description 
     </div></b><br>
	 <div tal:content="structure tbody"> body 
     </div>
     </div>
     <div tal:define="subfolders python:here.objectValues();">
	 
	 
<a tal:attributes="href here/aq_parent/absolute_url"> - back - </a> 
<br>
<br>


<table width=100% border=0px>
<tr><td valign=top>


<table border="0" width="100%" cellpadding=0px cellspacing=0px margin=0px>
<h2>Streets:</h2>

	 <span tal:repeat="item subfolders">
	 <span tal:condition="python:[x for x in item.permissionsOfRole('Anonymous') if x['name']=='View'][0]['selected'] == 'SELECTED'">
	 <tr tal:condition="python:item.portal_type == 'street_view'">
		  <td width=50px>
			   <a tal:attributes="href item/absolute_url">
					<p align=center>
					<img tal:condition="exists:item/street_image_mini"     tal:replace="structure item/street_image_mini" />
					<img tal:condition="not:exists:item/street_image_mini" tal:attributes="src portal/++resource++wwp.shopfronts.images/def_street.jpg" />
					</p>
			   </a>		
		  </td>
		  <td valign="top">
			   <a tal:attributes="href item/absolute_url"><p tal:content="item/title_or_id" /></a>	
			   <span tal:content="item/description" />
		  </td>
	</tr>
	</span>
	</span>
</table>

</td><td width=50% valign=top>

<h2>Stores:</h2>
<table border="0" width="100%" cellpadding=0px cellspacing=0px margin=0px>
	 <span tal:repeat="item subfolders">
	 <span tal:condition="python:[x for x in item.permissionsOfRole('Anonymous') if x['name']=='View'][0]['selected'] == 'SELECTED'">
	 <tr tal:condition="python:item.portal_type == 'shop_front'">
		  <td valign="top">
			   <a tal:attributes="href item/absolute_url"><p tal:content="item/title_or_id" /></a>	
			   <span tal:content="item/description" />
		  </td>
		  <td width=50px>
			   <a tal:attributes="href item/absolute_url">
					<p align=center>
					<img tal:condition="exists:item/store_image_icon"     tal:replace="structure item/store_image_icon" />
					<img tal:condition="not:exists:item/store_image_icon" tal:attributes="src portal/++resource++wwp.shopfronts.images/def_shop.jpg" />
					</p>
			   </a>		
		  </td>

	</tr>
	</span>
	</span>
</table>

</td></tr>
</table>




      <tal:has_document_byline tal:condition="exists:here/document_byline">
              <div metal:use-macro="here/document_byline/macros/byline">
                Get the byline - contains details about author and modification date.
              </div>
      </tal:has_document_byline>
            
      <div metal:use-macro="here/document_actions/macros/document_actions">
              Document actions (print, sendto etc)
      </div>   


 </div>

 </div>
</body>
</html>
