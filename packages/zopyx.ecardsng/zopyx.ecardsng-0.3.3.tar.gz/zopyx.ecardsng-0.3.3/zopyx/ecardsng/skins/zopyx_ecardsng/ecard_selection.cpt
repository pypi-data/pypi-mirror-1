<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="plone"
      metal:use-macro="here/main_template/macros/master">

  <body>

    <div metal:fill-slot="main" class="documentContent">
       <div class="header_ecard">
       <h1 i18n:translate="label_send_new_ecard">Send new ecard</h1>

      <tal:def define="image_id request/image_id | options/image_id;
                       image    python: context[image_id];">
          <img tal:attributes="src string:${image/absolute_url}/image" alt="" border="0" align="center">
      </tal:def>

      <form action="" method="post">

          <metal:div use-macro="context/ecard_macros/macros/showValidationErrors" />

          <input type="hidden" name="form.submitted" value="1" />
          <input type="hidden" name="image_id" tal:attributes="value request/image_id" />

          <table cellspacing="2" cellpadding="2" border="0" width="100%">
              <tr>
                  <td>
                      <div i18n:translate="label_your_name">Your name</div>
                      <input type="text" name="sender_name" value="" class="eingabe" tabindex="1" tal:attributes="value request/sender_name|nothing" />
                  </td>
                  <td rowspan="4">
                    <div i18n:translate="label_ecard_text" > eCard text</div>
                    <textarea cols="30" rows="9" name="email_body" class="eingabe2" tabindex="5" tal:content="request/email_body|nothing"></textarea>
                  </td>
              </tr>
              <tr>
                  <td>
                      <div i18n:translate="label_your_email_address"> Your email address</div>
                      <input type="text" name="sender_email" value="" class="eingabe" tabindex="2" tal:attributes="value request/sender_email|nothing">
                  </td>
              </tr>
              <tr>
                  <td>
                      <div i18n:translate="label_fullname_of_recipient">Fullname of recipient</div>
                      <input type="text" name="recipient_name" value="" class="eingabe" tabindex="3" tal:attributes="value request/recipient_name|nothing">
                  </td>
              </tr>
              <tr>
                  <td>
                      <div i18n:translate="label_email_of_recipient"> Email address of recipient</div>
                      <input type="text" name="recipient_email" value="" class="eingabe" tabindex="4" tal:attributes="value request/recipient_email|nothing">
                  </td>
              </tr>
              <tr>
                  <td rowspan="4" >
                    <input type="Submit" class="context" i18n:attributes="value" value="Send ecard">
                  </td>
              </tr>
          </table>

      </form>
    </div>
</div>
  </body>
</html>
