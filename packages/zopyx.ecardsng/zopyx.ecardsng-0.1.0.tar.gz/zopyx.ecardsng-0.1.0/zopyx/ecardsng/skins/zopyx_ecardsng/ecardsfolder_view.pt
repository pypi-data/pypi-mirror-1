<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="plone"
      metal:use-macro="here/main_template/macros/master">
  <body>
    <div metal:fill-slot="main">

        <h1 i18n:translate="label_ecards_folder">ECards Folder</h1>
        <p class="documentDescription" tal:content="context/Description" />

        <div tal:define="images       context/getAvailableImages;
                         cols         context/getColumns;
                         show_empty   python: 1; " >
            <div metal:use-macro="context/ecard_macros/macros/image_gallery" />
        </div>

        <div class="ecards-admin-actions" tal:condition="is_editable">
          &rarr; <a href="saved-ecards/folder_contents" i18n:translate="label_list_all_ecards">List all ecards</a>
          <br/>
          &rarr; <a href="deleteOlderThan?days:float=30.0" i18n:translate="label_remove_ecards_older_than_30_days">Remove ecards older than 30 days</a>
        </div>

        <div metal:use-macro="here/document_actions/macros/document_actions">
            Document actions (print, sendto etc)
        </div>
        <div metal:use-macro="here/document_byline/macros/byline" />
    </div>
  </body>
</html>
