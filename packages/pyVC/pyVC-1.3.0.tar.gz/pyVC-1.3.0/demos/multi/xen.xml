        <host type="xen" name="headnode" memory="64" kernel="/boot/vmlinuz-2.6.18-8.el5xen" initrd="/boot/initrd.img-xen"> 
            <disk name="headnode" /> 
        </host> 
        <host type="xen" name="node1" memory="64" kernel="/boot/vmlinuz-2.6.18-8.el5xen" initrd="/boot/initrd.img-xen"> 
            <disk name="node1" /> 
        </host> 
        <host type="xen" name="node2" memory="64" kernel="/boot/vmlinuz-2.6.18-8.el5xen" initrd="/boot/initrd.img-xen"> 
            <disk name="node2" /> 
        </host> 
    </network>
  <disk type="physical" name="headnode" path="/dev/vg0/headnode" />
  <disk type="physical" name="node1" path="/dev/vg0/node1" />
  <disk type="physical" name="node2" path="/dev/vg0/node2" />
  <helpers>
    <interface addrs="192.168.1.1" networks="lan1"/>
    <dhcp networks="lan1"/>
  </helpers>
</config>
