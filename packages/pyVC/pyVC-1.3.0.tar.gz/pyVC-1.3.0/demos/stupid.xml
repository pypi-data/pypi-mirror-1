<?xml version="1.0"?>
<config>
    <network type="tap" subnet="192.168.1.0/24" name="tap1"> 
        <host type="qemu" name="qemu1" addrs="192.168.1.2" memory="128"> 
            <disk name="shared_root" /> 
            <interface network="mcast1" />
        </host> 
    </network>
    <network type="multicast" subnet="" name="mcast1">
        <host type="uml" name="uml1" memory="128" kernel="linux-2.4.27-um24271-netfilter20041111">
            <disk name="uml_root"/>
        </host>
    </network>
  <disk type="image" name="shared_root" imagefile="image.img" />
  <disk type="image" name="uml_root" imagefile="uml.img" />
  <helpers>
      <interface networks="tap1" addrs="192.168.1.1"/>
      <dhcp networks="tap1"/>
  </helpers>
</config>
