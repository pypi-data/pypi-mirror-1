<?xml version="1.0"?>
<config>
    <network type='vde1' subnet="192.168.1.0/24" dns_servers="161.45.162.50,161.45.167.203" name="lan1"> 
        <host type='qemu' name="qemu1" addrs="192.168.1.2" memory="128"> 
            <interface network="lan2" /> 
            <disk name="shared_root" /> 
        </host> 
    </network>
    <network type='vde1' subnet="192.168.2.0/24" name="lan2">
        <host type='qemu' name="qemu2" addrs="192.168.2.2" memory="128">
            <disk name='shared_root' />
        </host>
    </network>
  <disk type='image' name="shared_root" imagefile="image.img" />
  <helpers>
    <interface addrs="192.168.1.1" networks="lan1"/>
    <interface addrs="192.168.2.1" networks="lan2"/>
    <dhcp networks="lan1,lan2"/>
    <router networks="lan1"/>
  </helpers>
</config>
