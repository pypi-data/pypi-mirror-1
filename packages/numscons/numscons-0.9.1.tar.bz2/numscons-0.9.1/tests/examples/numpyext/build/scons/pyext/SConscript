# vim:syntax=python
from numscons import GetNumpyEnvironment

env = GetNumpyEnvironment(ARGUMENTS)

config = env.NumpyConfigure()
if not config.CheckHeader("HopefullyNonExistingHeader.h"):
	for line in config.GetLastError():
		print "\t >> %s" % line.strip()

config.Finish()

#env.NumpyPythonExtension('spam', source = ['hellomodule.c'])
