<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="HedDex Tranquility Plone3 Theme">

 <object name="heddex_tranquility_custom_images"
    meta_type="Filesystem Directory View"
    directory="heddex.tranquility:skins/heddex_tranquility_custom_images"/>
 <object name="heddex_tranquility_custom_templates"
    meta_type="Filesystem Directory View"
    directory="heddex.tranquility:skins/heddex_tranquility_custom_templates"/>
 <object name="heddex_tranquility_styles"
    meta_type="Filesystem Directory View"
    directory="heddex.tranquility:skins/heddex_tranquility_styles"/>

 <skin-path name="HedDex Tranquility Plone3 Theme" based-on="Plone Default">
  <layer name="heddex_tranquility_custom_images"
     insert-after="custom"/>
  <layer name="heddex_tranquility_custom_templates"
     insert-after="heddex_tranquility_custom_images"/>
  <layer name="heddex_tranquility_styles"
     insert-after="heddex_tranquility_custom_templates"/>
 </skin-path>

</object>
