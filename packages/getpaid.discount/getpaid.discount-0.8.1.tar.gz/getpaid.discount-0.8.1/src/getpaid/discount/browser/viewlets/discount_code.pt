<br/>
<form action="@@apply-discount-code"
      id="getpaid.discount.code" 
      class="edit-form" 
      enctype="multipart/form-data"
      method="post">

<script type="text/javascript">
  function submitDonation() {
    /* 
       This will probably need work for international since I 
       remove ',' and assume '.' seperates the decimal
    */
    var discountCode = jq("#discount_code")[0].value;

    var url = window.location.toString();
    if (url.charAt(url.length - 1) != '/') {
      url += '/';
    }
//    window.location = url + "@@apply-discount-code?discount.code=" + discountCode;
    window.location = "@@apply-discount-code?discount.code=" + discountCode;
  }

  jq(document).ready(function(){
    jq("#discount_code").keypress(function (e) {
      if (e.which == 13) {
        submitDonation();
      }
    });
  });
</script>

  <div class="cart-discount-code-entry">
    <span>Discount Codes:</span>
    <input id="discount_code" class="textType" type="text" size="10" name="discount_code"/>
    <a href="javascript:submitDonation();" class="button context">Enter</a>
  </div>
</form>
