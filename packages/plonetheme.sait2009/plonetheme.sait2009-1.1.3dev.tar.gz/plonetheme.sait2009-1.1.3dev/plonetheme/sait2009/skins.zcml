<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:cmf="http://namespaces.zope.org/cmf"
    i18n_domain="sait">

   <!-- File System Directory Views registration -->
   <cmf:registerDirectory
       name="plonetheme_sait2009_custom_images"/>
   <cmf:registerDirectory
       name="plonetheme_sait2009_custom_templates"/>
   <cmf:registerDirectory
       name="plonetheme_sait2009_styles"/>

   <!-- Note: This could also be done for all folders at once
        by replacing the previous lines with this one:
   <cmf:registerDirectory name="skins" directory="skins" recursive="True" />
   -->

</configure>