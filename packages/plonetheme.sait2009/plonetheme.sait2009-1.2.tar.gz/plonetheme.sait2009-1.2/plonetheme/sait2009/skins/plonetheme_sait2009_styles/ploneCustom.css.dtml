/* <dtml-with base_properties> (do not remove this :) */
/* <dtml-call "REQUEST.set('portal_url', portal_url())"> (not this either :) */


#portal-header {
    background: transparent url(&dtml-portal_url;/&dtml-headerBackgroundName;);
}

#portal-logo {
    margin: 0 0 0 2em;
}
#portal-logo img {
    margin: 0 0 0 0;
    vertical-align: baseline;
}

#portal-searchbox .searchSection {
    display: none;
}
#portal-searchbox .LSBox input.searchButton {
    font-size: 0.9em;
    text-transform: none;
    padding: 1px 0 0 16px;
}

#portal-personaltools {
    background-color: &dtml-personalBarBackgroundColor;;
    border-bottom: &dtml-borderWidth; &dtml-borderStyle; &personalBarBorderColor;;
    border-top: &dtml-borderWidth; &dtml-borderStyle; &personalBarBorderColor;;
    padding: 0 2em;
}

#portal-languageselector {
    margin: 0 1.5em;
}

#portal-column-one .visualPadding {
    padding: 2em 0 1em 1em;
}
#portal-column-two .visualPadding {
    padding: 2em 1em 1em 0;
}

#portal-footer {
    padding: 0.5em 0 0.5em 0
}
#portal-footer p {
    margin: 0
}

/* General portlets' borders customization */
.portlet {
    border-bottom: &dtml-borderWidth; &dtml-borderStyle; &dtml-portletBorderColor;;
}
.portletHeader {
    background-color: &dtml-portletHeaderBackgroundColor;;
    border: &dtml-borderWidth; &dtml-borderStyle; &dtml-portletBorderColor;;
    text-transform: none;
}
.portletItem {
    border-left: &dtml-borderWidth; &dtml-borderStyle; &dtml-portletBorderColor;;
    border-right: &dtml-borderWidth; &dtml-borderStyle; &dtml-portletBorderColor;;
}
.portletFooter {
    border-color: &dtml-portletBorderColor;;
    border-style: dotted &dtml-borderStyle; none;
    border-width: &dtml-borderWidth;
}

/* Portlet "Calendar" customization */
.portletCalendar {
    width: 16em;
    border: &dtml-borderWidth; &dtml-borderStyle; &dtml-globalBorderColor;;
}
.portletCalendar .portletHeader {
    background-color: &dtml-personalBarBackgroundColor;;
    font-weight: bold;
    border-top: 0 none;
    border-left: 0 none;
    border-right: 0 none;
}
.portletCalendar a#calendar-previous,
.portletCalendar a#calendar-next {
    background-repeat: no-repeat;
    background-position: 50% 60%;
    color: transparent;
    padding-left: 0.5em;
    padding-right: 0.5em;
}
.portletCalendar a#calendar-previous {
    background-image: url(&dtml-portal_url;/arrowLeft2.gif);
}
.portletCalendar a#calendar-next {
    background-image: url(&dtml-portal_url;/arrowRight2.gif);
}
.portletCalendar .portletItem {
    line-height: 0;
    border: 0 none;
}
.ploneCalendar tr {
    line-height: 2ex;
}

/* Portlet "Document table of contents" customizations */
#document-toc {
    border: &dtml-borderWidth; &dtml-borderStyle; &dtml-globalBorderColor;;
}
#document-toc .portletHeader {
    background-color: &dtml-backgroundColor;;
    border-top: 0 none;
    border-left: 0 none;
    border-right: 0 none;
    border-bottom: &dtml-borderWidth; &dtml-borderStyle; &dtml-globalBorderColor;;
}
#document-toc .portletItem {
    border: 0 none;
    padding: 0.5em 0.5em 1em 1.5em;
    background-color: &dtml-backgroundColor;;
}
#document-toc .portletItem li {
    line-height: 1.7em;
    margin-bottom: 0;
}

/* Main site portlets costomization */
.portletNavigationTree .portletItem,
.portletNews .portletItem,
.portletEvents .portletItem {
    padding: 0.5em;
}
.portletNavigationTree ul {
    line-height: 1.3em;
}
.portletEvents .portletFooter {
    line-height: 1em;
}

/* Kupu content styles */
table.plain {
    margin: 0.5em 0 0.5em 0;
}
table.plain td {
    padding: 0.2em 0.5em 0.2em 0.5em;
}


