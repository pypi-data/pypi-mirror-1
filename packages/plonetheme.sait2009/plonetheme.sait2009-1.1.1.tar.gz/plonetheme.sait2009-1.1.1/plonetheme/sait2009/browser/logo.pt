<a metal:define-macro="portal_logo"
   id="portal-logo"
   accesskey="1"
   tal:attributes="href view/navigation_root_url"
   i18n:domain="plone"><img src="logo.jpg" alt=""
         tal:replace="structure view/logo_tag"
  /><img tal:replace="structure context/logo_text-en.gif"
         tal:condition="python: container.current_language()=='en'"
  /><img tal:replace="structure context/logo_text-ru.gif"
         tal:condition="python: container.current_language()=='ru'"
  /><img tal:replace="structure context/logo_text-uk.gif"
         tal:condition="python: container.current_language()=='uk'"/></a>
