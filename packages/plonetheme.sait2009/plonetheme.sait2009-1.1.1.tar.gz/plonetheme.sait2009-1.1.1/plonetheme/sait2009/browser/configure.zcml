<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="sait">

    <!-- 'SAIT-2009 Theme' Zope 3 browser layer
      Register views, viewlets and resources for this layer to make sure
      they only apply to the 'SAIT-2009 Theme' theme.
      You can also use this layer to override default Plone browser views
      and viewlets only within the 'SAIT-2009 Theme' theme.
      -->
    <interface
        interface=".interfaces.IThemeSpecific"
        type="zope.publisher.interfaces.browser.IBrowserSkinType"
        name="SAIT-2009 Theme"
        />

    <!-- Viewlets registration -->
<!-- EXAMPLE (UNCOMMENT TO MAKE AVAILABLE):
     <browser:viewlet
         name="plonetheme.someviewlet"
         manager="plone.app.layout.viewlets.interfaces.IPortalFooter"
         class=".viewlets.SomeViewlet"
         layer=".interfaces.IThemeSpecific"
         permission="zope2.View"
         />
-->
    <browser:viewlet
     name="sait.logo"
     manager="plone.app.layout.viewlets.interfaces.IPortalHeader"
     class="plone.app.layout.viewlets.common.LogoViewlet"
     template="logo.pt"
     layer=".interfaces.IThemeSpecific"
     permission="zope2.View"
     />

     <browser:viewlet
      name="sait.global_sections"
      manager="plone.app.layout.viewlets.interfaces.IPortalHeader"
      class="plone.app.layout.viewlets.common.GlobalSectionsViewlet"
      template="sections.pt"
      layer=".interfaces.IThemeSpecific"
      permission="zope2.View"
      />

     <browser:viewlet
      name="sait.footer"
      manager="plone.app.layout.viewlets.interfaces.IPortalFooter"
      template="footer.pt"
      layer=".interfaces.IThemeSpecific"
      permission="zope2.View"
      />

    <!-- Zope 3 browser resources -->

    <!-- Resource directory for images
      See plonetheme/sait2009/browser/images/README.txt
      for more information about registering images as Zope 3 browser
      resources.
      -->
    <browser:resourceDirectory
        name="plonetheme.sait2009.images"
        directory="images"
        layer=".interfaces.IThemeSpecific"
        />

    <!-- Resource directory for stylesheets
      See plonetheme/sait2009/browser/stylesheets/README.txt
      for more information about registering stylesheets as Zope 3 browser
      resources.
      -->
    <browser:resourceDirectory
        name="plonetheme.sait2009.stylesheets"
        directory="stylesheets"
        layer=".interfaces.IThemeSpecific"
        />

</configure>
