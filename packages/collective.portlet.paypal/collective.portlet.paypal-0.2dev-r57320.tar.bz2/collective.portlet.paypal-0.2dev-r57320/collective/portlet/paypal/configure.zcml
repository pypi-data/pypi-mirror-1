<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="collective.portlet.paypal">

    <five:registerPackage package="." initialize=".initialize" />
    
    <genericsetup:registerProfile
       name="default"
       title="PayPal portlet"
       directory="profiles/default"
       description="This portlet shows a button that allows a site owner to collect donations through PayPal."
       provides="Products.GenericSetup.interfaces.EXTENSION"
       />
 
     <!-- Register the portlet -->
     
     <!-- If the portlet has no configurable parameters, you can remove
          the EditForm declaration in paypalportlet.py and delete
          the 'editview' attribute from this statement.
       -->

     <plone:portlet
         name="collective.portlet.paypal.PayPalPortlet"
         interface=".paypalportlet.IPayPalPortlet"
         assignment=".paypalportlet.Assignment"
         view_permission="zope2.View"
         edit_permission="cmf.ManagePortal"
         renderer=".paypalportlet.Renderer"
         addview=".paypalportlet.AddForm"
         editview=".paypalportlet.EditForm"
         />

</configure>
