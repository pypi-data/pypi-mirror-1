#! /bin/sh 
# prerm script for WebOrganiser

set -e

PACKAGE=python2.4-weborganiser
VERSION=2.4
LIB="/usr/lib/python$VERSION"
DIRLIST="$LIB/site-packages/WebOrganiser $LIB/site-packages/WebCalendar $LIB/site-packages/WebCalendarPortal"

case "$1" in
    remove|upgrade|failed-upgrade)
        for i in $DIRLIST ; do
            find $i -name '*.py[co]' -exec rm \{\} \;
        done
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac



exit 0
