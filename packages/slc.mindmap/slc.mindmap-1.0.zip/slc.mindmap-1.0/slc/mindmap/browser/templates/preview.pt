<div class="row">
    <tal:get define="url view/construct_url">
        <a style="float: right;" 
        target="_blank"
        i18n:translate="full_screen"
        tal:attributes="href url"> 
            Full screen
        </a>
        <div>
        <iframe style="width:100%;" 
                height="600" 
                frameborder="0" 
                scrolling="auto"
                id="mindmeister_editor"
                name="mindmeister_editor"
                tal:attributes="src url"/>
            </div>
    </tal:get>
</div>   

