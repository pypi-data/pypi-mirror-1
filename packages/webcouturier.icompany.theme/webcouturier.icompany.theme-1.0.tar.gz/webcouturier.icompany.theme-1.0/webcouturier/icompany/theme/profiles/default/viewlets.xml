<?xml version="1.0"?>
<!-- This file holds the setup configuration of the viewlet managers
     for the "Web Couturier iCompany Theme" skin.
     -->

<object>

  <order manager="plone.portaltop" skinname="Web Couturier iCompany Theme"
         based-on="Plone Default">
     <viewlet name="webcouturier.global_sections" insert-after="plone.header" />
  </order>
    
  <order manager="plone.portalheader" skinname="Web Couturier iCompany Theme"
         based-on="Plone Default">
     <viewlet name="webcouturier.searchbox" insert-before="plone.site_actions" />
     <viewlet name="plone.app.i18n.locales.languageselector" insert-after="*" />     
     <viewlet name="plone.personal_bar" insert-before="webcouturier.searchbox" />     
  </order>
  
  <order manager="plone.contentviews" skinname="Plone Default">
    <viewlet name="plone.path_bar" insert-before="*" />
  </order>

  <hidden manager="plone.portalheader" skinname="Web Couturier iCompany Theme">
    <viewlet name="plone.searchbox" />
    <viewlet name="plone.global_sections" />
  </hidden>
  
  <hidden manager="plone.portaltop" skinname="Web Couturier iCompany Theme">
    <viewlet name="plone.personal_bar" />
    <viewlet name="plone.app.i18n.locales.languageselector" />
    <viewlet name="plone.path_bar" />
  </hidden>  

</object>