<VirtualHost *:%(PORT)s>
        ServerName %(SITENAME)s
        ServerAlias %(ALIASES)s
        ServerAdmin %(EMAIL)s

        DocumentRoot "%(WWWROOT)s"

        <Directory "%(WWWROOT)s">
                Options Indexes FollowSymLinks
                AllowOverride All

                Order allow,deny
                Allow from all
        </Directory>

        <IfModule alias_module>
                ScriptAlias /cgi-bin/ "%(CGIROOT)s/"
        </IfModule>

        <Directory "%(CGIROOT)s">
                AllowOverride None
                Options None
                Order allow,deny
                Allow from all
        </Directory>
        ErrorLog %(LOGROOT)s%(ERRORLOG)s
        CustomLog %(LOGROOT)s%(ACCESSLOG)s Combine
</VirtualHost>
