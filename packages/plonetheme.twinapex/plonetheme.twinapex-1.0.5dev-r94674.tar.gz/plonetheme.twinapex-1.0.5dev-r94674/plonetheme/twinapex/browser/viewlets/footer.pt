<div id="portal-footer"
    tal:define="
    	accesskeys python: {'sitemap' : '3', 'accessibility' : '0', 'contact' : '9'};    
	    getIconFor nocall:context/plone_utils/getIconFor;"
    tal:condition="view/footer_items"
    i18n:domain="plone"    
    >

    <span id="copyright">
	    &copy; <a href="http://www.twinapex.com">Twinapex Oy</a>
	    
	    <span 
               tal:omit-tag=""
               tal:define="now modules/DateTime/DateTime"
               tal:content="now/year" />
	</span>
		
    <tal:block
        tal:repeat="item view/footer_items">

		<span class="footer-item"
		           tal:define="title item/title;
	               			   id item/id;
	                           accesskey python: accesskeys.get(id, '');
	                           last_class python: repeat['item'].end and 'last' or ''
	                           "
			       tal:attributes="id string:footer_item-${item/id}; class string:footer-item ${last_class}"	                           
			>
			
			<!--
		    <a class="icon-link" href=""
	           tal:attributes="href item/url"
	           >
			   <img tal:condition="python:getIconFor('footer', item['id'], default='x') != 'x'" 
				    tal:attributes="src python:context.portal_url() + '/' + getIconFor('footer', item['id']);
			                        alt item/title;"
			        i18n:attributes="alt"
			     />           
	        </a>
	        -->
		                     
	        <a class="text-link" href=""
	
	           i18n:attributes="title"
	           i18n:translate=""
	           tal:content="title"
	           tal:attributes="href item/url;
	                           title title;
	                           accesskey accesskey;"
	           >Footer item</a>
	     </span>
    </tal:block>

</div>
