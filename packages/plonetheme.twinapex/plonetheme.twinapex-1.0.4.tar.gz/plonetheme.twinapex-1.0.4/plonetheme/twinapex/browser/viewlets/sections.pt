
<tal:tabs tal:condition="view/portal_tabs"
          i18n:domain="plone">

    <div style="clear: both"><!-- --></div>
    <h5 class="hiddenStructure" i18n:translate="heading_sections">Sections</h5>

    <ul id="portal-globalnav">
        <tal:tabs tal:repeat="tab view/portal_tabs">
        	
        
        	<li tal:attributes="id string:portaltab-${tab/id};
                            class python:view.selected_portal_tab==tab['id'] and 'selected top-menu' or 'plain top-menu'"
					        tal:define="subitems python:view.getTabObject(tabUrl = tab['url'], tabPath = tab.get('path'));">                                

	            <a tal:attributes="href tab/url; title tab/description" tal:content="tab/name" />
	            
	           <tal:block tal:condition="subitems">
	                <ul class="submenu">
	                    <tal:subitems tal:replace="structure subitems">
	                        Submenu
	                    </tal:subitems>
	                </ul>
	            </tal:block>		       
            </li>
                        
        </tal:tabs>
        <li style="clear: both; float: none; display: none"><!-- --></li>        
    </ul>
</tal:tabs>

