<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <action-provider name="portal_actions"/>
 
 <object name="footer" meta_type="CMF Action Category">
  <property name="title">Login</property>
  <object name="login" meta_type="CMF Action" i18n:domain="plone">
   <property name="title" i18n:translate="">Login</property>
   <property name="description" i18n:translate="">Managerial access to the site</property>
   <property name="url_expr">string:$portal_url/login_form</property>
   <property name="icon_expr"></property>
   <property name="permissions">
    <element value="View"/>
   </property>
   <property name="visible">True</property>
  </object>
 </object>
  
</object>