
<ul id="portal-siteactions"
    tal:define="accesskeys python: {'sitemap' : '3', 'accessibility' : '0', 'contact' : '9'};
    getIconFor nocall:context/plone_utils/getIconFor;"
    tal:condition="view/site_actions"
    i18n:domain="plone">

    <li tal:repeat="saction view/site_actions"
        tal:attributes="id string:siteaction-${saction/id}">
        <a
           href=""
           tal:define="title saction/title;
                       id saction/id;
                       accesskey python: accesskeys.get(id, '');"
           i18n:attributes="title"
           i18n:translate=""
           tal:attributes="href saction/url;
                           title title;
                           accesskey accesskey;"
           >
    
	        <img tal:condition="python:getIconFor('plone', saction['id'], default='x') != 'x'" 
			    tal:attributes="src python:view.url + '/' + getIconFor('plone', saction['id']);
		                        alt saction/title;"
		        i18n:attributes="alt"
		     />
		     
            <span tal:condition="python:getIconFor('plone', saction['id'], default='x') == 'x'" 
                tal:content="saction/title"
             />
		     		   		     
		</a>
    </li>

</ul>


