<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <object name="object_buttons" meta_type="CMF Action Category">
  <property name="title"></property>
  <object name="habla_enable_chat" meta_type="CMF Action"
     i18n:domain="collective.habla">
   <property name="title" i18n:translate="">Enable chat</property>
   <property name="description" i18n:translate="">Enable Hab.la chat for this item</property>

   <property
       name="url_expr">string:$object_url/habla_enable_chat</property>
   <property name="icon_expr"></property>
   <property name="available_expr">not: object/habla_chat_enabled/is_chat_enabled</property>
   <property name="permissions">
    <element value="Modify portal content"/>
   </property>
   <property name="visible">True</property>
  </object>

  <object name="habla_disable_chat" meta_type="CMF Action"
     i18n:domain="collective.habla">
   <property name="title" i18n:translate="">Disable chat</property>
   <property name="description" i18n:translate="">Disable Hab.la chat for this item</property>

   <property
       name="url_expr">string:$object_url/habla_disable_chat</property>
   <property name="icon_expr"></property>
   <property name="available_expr">object/habla_chat_enabled/is_chat_enabled</property>
   <property name="permissions">
    <element value="Modify portal content"/>
   </property>
   <property name="visible">True</property>
  </object>


 </object>
</object>

