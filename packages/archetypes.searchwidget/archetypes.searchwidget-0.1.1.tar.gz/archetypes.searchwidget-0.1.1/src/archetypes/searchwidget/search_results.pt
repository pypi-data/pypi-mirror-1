<tal:results condition="view/result_data">
    <h1 class="documentFirstHeading">
        <span i18n:translate="heading_search_results">
            Search results
        </span>
        <span class="discreet">
        &mdash;
        <span i18n:translate="batch_x_items_matching_your_criteria"
        ><span i18n:name="number" 
        tal:omit-tag="" 
        tal:content="python:len(view.result_data)">234</span> items matching your search terms</span>
    </h1>

    <dl class="searchResults"
        tal:condition="view/result_data">
        <tal:items repeat="item view/result_data">
            <div tal:replace="structure python:view.render_item(item)" />
        </tal:items>
    </dl>

</tal:results>

