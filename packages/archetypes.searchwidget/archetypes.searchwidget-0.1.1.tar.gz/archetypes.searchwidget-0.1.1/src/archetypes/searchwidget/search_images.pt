<form name="searchform" action="">
    <input class="searchPage"
           name="SearchableText"
           type="text"
           size="25"
           title="Search Site"
           i18n:attributes="title title_search_title;"
           tal:attributes="value request/SearchableText|nothing;"
           />
    <input class="searchPage searchButton"
           type="submit"
           value="Search"
           i18n:attributes="value labelmanage_search;"/>

    <p class="discreet"
       i18n:translate="search_results_advanced">
        Did you not find what you were looking for? Try the
        <span i18n:name="advanced_search">
            <a href=""
               i18n:translate="search_results_advanced_link"
               tal:attributes="href string:${view/site_url}/search_form?SearchableText=${request/SearchableText|python:''}">Advanced Search</a>
        </span>
        to refine your search.
    </p>
</form>

<tal:results condition="python:'SearchableText' in request">
    <h1 class="documentFirstHeading">
        <span i18n:translate="heading_search_results">
            Search results
        </span>
        <span class="discreet">
        &mdash;
        <span i18n:translate="batch_x_items_matching_your_criteria"
        ><span i18n:name="number" 
        tal:omit-tag="" 
        tal:content="python:len(view.results())">234</span> items matching your search terms</span>
    </h1>

    <p class="discreet"
       tal:condition="view/syndication/isSiteSyndicationAllowed">
        <a href=""
           class="link-feed"
           i18n:translate="title_rss_feed"
           tal:attributes="href string:${context/absolute_url}/search_rss?${request/QUERY_STRING}">
             Subscribe to an always-updated feed of these search terms</a>
    </p>

    <dl class="searchResults"
        tal:condition="view/has_results">
        <tal:items repeat="item view/results">
            <div tal:replace="structure python:view.render_item(item)" />
        </tal:items>
    </dl>

</tal:results>

