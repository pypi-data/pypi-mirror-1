<dl class="portlet portletProjectPortlet"
    i18n:domain="xm.portlets">
    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span i18n:translate="project_links">Project links</span>
        <span class="portletTopRight"></span>
    </dt>

    <dd tal:condition="view/links"
        tal:repeat="link view/links"
        tal:attributes="class link/class">
        <a tal:attributes="href link/url"
           tal:content="link/title">Title</a>
    </dd>
    <dd class="portletFooter">
        <span class="portletBotomLeft"></span>
        <a href=""
           tal:condition="view/has_single_project"
           tal:define="project python:view.my_projects()[0]"
           tal:attributes="href project/url;
                            title project/description"
           i18n:domain="xm.theme"
           i18n:translate="label_my_project">
           My Project
        </a>
        <dl id="my-projects-menu" class="actionMenu deactivated">
            <dt class="actionMenuHeader label-my-projects">
                <a id="" href="#">
                <span i18n:domain="xm.theme"
                     i18n:translate="label_my_projects">My Projects</span>
                <span class="arrowDownAlternative">&#9660;</span><a/>
            </dt>
            <dd class="actionMenuContent project-submenu">
                <ul>
                <tal:actions repeat="project view/my_projects">
                    <li>
                        <a href=""
                           tal:attributes="href project/url;
                                           title project/description"
                           tal:content="project/title">
                        </a>
                    </li>
                 </tal:actions>
                 </ul>
            </dd>
        </dl>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
