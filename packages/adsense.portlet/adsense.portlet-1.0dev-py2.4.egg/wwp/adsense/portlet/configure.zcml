<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="wwp.adsense.portlet">

    <five:registerPackage package="." initialize=".initialize" />

    <genericsetup:registerProfile
       name="default"
       title="WWP Adsense"
       directory="profiles/default"
       description=""
       provides="Products.GenericSetup.interfaces.EXTENSION"
       />

     <!-- Register the portlet -->

     <!-- If the portlet has no configurable parameters, you can remove
          the EditForm declaration in wwp_adsense.py and delete
          the 'editview' attribute from this statement.
       -->

     <plone:portlet
         name="wwp.adsense.portlet.wwp_adsense"
         interface=".wwp_adsense.Iwwp_adsense"
         assignment=".wwp_adsense.Assignment"
         view_permission="zope2.View"
         edit_permission="cmf.ManagePortal"
         renderer=".wwp_adsense.Renderer"
         addview=".wwp_adsense.AddForm"
         editview=".wwp_adsense.EditForm"
         />

</configure>
