<html
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="here/main_template/macros/master"
    i18n:domain="cmfquestionnaire">
<body>
  <tal:block metal:fill-slot="main">

  <table border="1"
         style="width: 17.8cm; font: 15pt Times New Roman, Times, serif;"
         tal:define="tickets here/getTickets;
                     ticketCount python:len(tickets)">
    <tal:block tal:repeat="row python:range((ticketCount-1)/3+1)">
    <tr style="height: 4.8cm">
      <td style="text-align: center;
                 padding: 15px;"
          tal:repeat="col python:range(3)">
        <tal:block tal:define="num python:row*3+col"
                   tal:condition="python:num<ticketCount">
        <span tal:replace="here/Title">Questionnaire title</span>
        <br/>
        <br/>
        <span tal:replace="python:tickets[num]">Ticket</span>
        </tal:block>
      </td>
    </tr>
    </tal:block>
  </table>

  </tal:block>
</body>
</html>
