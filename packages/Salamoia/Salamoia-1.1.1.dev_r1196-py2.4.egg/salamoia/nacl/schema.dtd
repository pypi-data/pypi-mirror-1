<!--
    DTD for schema definition of salamoia.
-->

<!ENTITY % declaration "(object | entity)">
<!ENTITY % declaration.attributes "name CDATA #REQUIRED container CDATA #IMPLIED">

<!ELEMENT schema ((%declaration;)*)>
<!ELEMENT entity (attribute*, ldap)>
<!ELEMENT object (ldap)>
<!ELEMENT ldap (objectClasses*, mapping*)>
<!ELEMENT objectClasses (objectClass*)>
<!ELEMENT mapping EMPTY>
<!ELEMENT objectClass EMPTY>
<!ELEMENT attribute EMPTY>

<!ATTLIST schema 
                 name CDATA #REQUIRED 
                 version CDATA #REQUIRED > 

<!ATTLIST entity  %declaration.attributes;
	         mixin CDATA #IMPLIED
                 keyAttribute CDATA #REQUIRED >

<!ATTLIST object %declaration.attributes;>

<!ATTLIST attribute 
                 name CDATA #REQUIRED  
                 check CDATA #IMPLIED  
                 default CDATA #IMPLIED  
                 fixed CDATA #IMPLIED  
                 initial CDATA #IMPLIED  
                 syntax CDATA #IMPLIED  
                 type CDATA #IMPLIED >

<!ATTLIST objectClasses 
                 structural CDATA #IMPLIED >

<!ATTLIST objectClass 
                 name CDATA #REQUIRED >

<!ATTLIST mapping
	         ldap CDATA #IMPLIED
                 name CDATA #REQUIRED >

<!ATTLIST ldap
                 dn CDATA #IMPLIED >

