<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                       templateId template/getId;">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 metal:use-macro="here/kss_generic_macros/macros/generic_title_view">
          Title or id
        </h1>

		<form tal:attributes="action python:view.context.absolute_url()+'/editgeometry'" method="POST">
			<input type="hidden" name="ACTION" value="STORE_GEOMETRY"/>
			Type: <input type="text" name="geo_type" tal:attributes="value python:view.getGeoInterface()['type']"/><br/>
			Coords: <input type="text" name="geo_coords" tal:attributes="value python:str(view.getGeoInterface()['coordinates'])"/><br/>
			<br/><input type="submit" class="context" value="Save"/>
		</form>


        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>

