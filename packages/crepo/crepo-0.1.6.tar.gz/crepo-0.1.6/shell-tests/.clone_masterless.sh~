#!/bin/bash -x

set -e

BINDIR=$(readlink -f $(dirname $0))
CREPO=$BINDIR/../crepo.py

TESTDIR=${TESTDIR:-/tmp/clone_masterless_test.$$}
mkdir -p $TESTDIR
cd $TESTDIR


################
# REPO A
################
mkdir repo_a
pushd repo_a
git init
echo "First commit" > file_a
git add . && git commit -a -m '1'

echo "Second commit" > file_b
git add . && git commit -a -m '2'
git tag commit_b

echo "Third commit" >> file_a
git add . && git commit -a -m '3'

git checkout -b not_master
git branch -D master

REPO_A=`pwd`

popd

##############
# Run crepo in a new dir
##############
mkdir tests
pushd tests

cat > manifest.json <<EOF
{
  "default-remote": "origin",
  "default-revision": "master",
  
  "remotes":
    {"origin": { "fetch": "$TESTDIR/%(name)s" }},
 
  "projects":
    {"repo_a": { "track-branch": "not_master" }}
}
EOF

$CREPO sync

## Check that the checkouts are correct
pushd repo_a
test $(git symbolic-ref HEAD) == "refs/heads/not_master"
test $(git remote) == "origin"
test -f file_a
popd

echo ALL GOOD
