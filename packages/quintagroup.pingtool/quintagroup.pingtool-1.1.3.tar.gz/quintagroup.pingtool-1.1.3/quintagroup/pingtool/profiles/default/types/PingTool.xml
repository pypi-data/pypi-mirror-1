<?xml version="1.0"?>
<object name="PingTool" meta_type="Factory-based Type Information with dynamic views"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="quintagroup.pingtool">
 <property name="title" i18n:translate="">PingTool</property>
 <property name="description"
      i18n:translate="">This tool serve for operation with ActionInfo objects.</property>
 <property name="content_icon">folder.gif</property>
 <property name="content_meta_type">PingTool</property>
 <property name="product">quintagroup.pingtool</property>
 <property name="factory">addPingTool</property>
 <property name="immediate_view">folder_listing</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
  <element value="PingInfo"/>
 </property>
 <property name="allow_discussion">False</property>
 <property name="default_view">folder_listing</property>
 <property name="view_methods">
  <element value="folder_summary_view"/>
  <element value="folder_tabular_view"/>
  <element value="atct_album_view"/>
  <element value="folder_listing"/>
 </property>
 <property name="default_view_fallback">False</property>
 
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="edit" to="atct_edit"/>
 <alias from="sharing" to="@@sharing"/>
 <alias from="view" to="(selected layout)"/>

 <action title="View"
         action_id="view"
         category="object"
         condition_expr=""
         url_expr="string:${object_url}/view"
         visible="True"
         i18n:attributes="title">
  <permission value="Manage portal"/>
 </action>
 <action title="Edit"
         action_id="edit"
         category="object"
         condition_expr=""
         url_expr="string:${object_url}/edit"
         visible="True"
         i18n:attributes="title">
  <permission value="Modify portal content"/>
 </action>

</object>
