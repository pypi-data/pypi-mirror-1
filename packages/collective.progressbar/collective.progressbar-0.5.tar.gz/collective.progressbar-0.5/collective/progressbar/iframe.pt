<html>
<head>
<script type="text/javascript"><!-- 
    var total = 0;
    var progress = 0;

    function _pop(source_element_name, default_value)
    {
        var arr = top.document.getElementsByName(source_element_name); 
        if (arr.length > 0)
        {
            var result = arr[arr.length-1].value;
            for (var i=0; i<arr.length; i++)
            {
                var input = arr[i];
            }
            for (var i=arr.length-1; i>=0; i--)
            {
                var input = arr[i];
                input.parentNode.removeChild(input);
            }
            return result;
        }
        return default_value;
    };

    function updateProgressBar()
    { 
        setTimeout("updateProgressBar()", 1000);

        total = 100;
        var result = _pop('_progress', false);
        if (result)
        {
            progress = result * 1;
          
            // Progress bar
            top.document.getElementById('progress-bar').style.width = progress*1.0/total*300 + 'px';
            top.document.getElementById('progress-bar-message').innerHTML = '&nbsp; (' + (Math.floor(progress*100.0/total)) + '%)';
        }
    };
//--></script>
</head>

<body onLoad="updateProgressBar()">
</body>

</html>
