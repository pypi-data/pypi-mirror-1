<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="upfrontaccounting">

<body>

<metal:block fill-slot="top_slot"
    tal:define="dummy python:request.set('disable_border', 1)" />

    <div metal:fill-slot="main">

        <h1 tal:content="view/title">Progress Heading</h1>
        <h4 tal:content="view/description">Progress Heading</h4>

        <metal:block define-macro="progressbar">

            <div id="progress-bar" 
                style="float: left; width: 1px; height: 17px; background-color: #8CACBB;"></div>
            <div id="progress-bar-message"></div>
            <div style="clear: both;"></div>

            <iframe tal:attributes="src string:${portal_url}/++resource++collective.progressbar-iframe"
                    style="width: 100%; height: 100px; border:0;"></iframe>

        </metal:block>

    </div>

</body>
</html>
