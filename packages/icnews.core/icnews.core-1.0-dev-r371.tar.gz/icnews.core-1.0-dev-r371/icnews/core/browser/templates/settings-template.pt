<metal:page define-macro="admin"
                        i18n:domain="platecom">
  <metal:block use-macro="context/prefs_main_template/macros/master">
    <metal:cssslot fill-slot="css_slot">
      <metal:cssslot define-slot="css_slot" />
    </metal:cssslot>

    <metal:javascriptslot fill-slot="javascript_head_slot">
      <metal:javascriptslot define-slot="javascript_head_slot" />
    </metal:javascriptslot>

    <metal:block fill-slot="prefs_configlet_content">

      <div id="content"  class="documentEditable">

        <ul class="contentViews"
            tal:define="selected string:@@manage-icnews-overview">

          <tal:loop tal:repeat="cview context/@@view_get_menu/icnews_admin">
            <li class="selected"
                tal:condition="python:selected == cview['action']">
              <a href=""
                 tal:attributes="href cview/action"
                 tal:content="cview/title" i18n:translate=""> label </a>

            </li>
            <li tal:condition="python:selected != cview['action']">
              <a href=""
                 tal:attributes="href cview/action"
                 tal:content="cview/title" i18n:translate=""> label </a>

            </li>
          </tal:loop>

        </ul>

        <div class="contentActions">
          &nbsp;
        </div>

        <div id="region-content" class="documentContent">
          <div metal:use-macro="here/global_statusmessage/macros/portal_message">
            Portal status message
          </div>

          <div class="configlet">
            <h1 i18n:translate="heading_platecom_setup">icNews Setup</h1>
			<metal:block define-slot="up_to_parent">
			    <a href=""
			       class="link-parent"
			       tal:attributes="href string: $portal_url/@@manage-icnews-overview"
			       i18n:translate="label_up_to_platecom_setup">
			          Up to icNews Setup
			    </a>
			</metal:block>
          </div>

          <metal:block define-slot="admin_content" tal:content="nothing" i18n:translate="">
            Admin Template
          </metal:block>
        </div>

      </div>

    </metal:block>
  </metal:block>
</metal:page>
