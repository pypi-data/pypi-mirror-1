<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:plone="http://namespaces.plone.org/plone"
    xmlns:five="http://namespaces.zope.org/five"
    i18n_domain="menttes.action.createfolder">

    <include package="plone.contentrules" />
    <include package="plone.contentrules" file="meta.zcml" />
    
    <!-- the createfolder action -->
    <adapter factory=".createfolder.CreatefolderActionExecutor" />

    <browser:page 
      for="plone.app.contentrules.browser.interfaces.IRuleActionAdding"
      name="menttes.action.createfolder.Createfolder"
      class=".createfolder.CreatefolderAddForm"
      permission="cmf.ManagePortal"
      />

    <browser:page 
      for="menttes.action.createfolder.createfolder.ICreatefolderAction"
      name="edit"
      class=".createfolder.CreatefolderEditForm"
      permission="cmf.ManagePortal"
      />

    <plone:ruleAction
        name="menttes.action.createfolder.Createfolder"
        title="Create folder"
        description="A content rule to create a folder automatically"
        for="*"
        event="zope.component.interfaces.IObjectEvent"
        addview="menttes.action.createfolder.Createfolder"
        editview="edit"
        />

</configure>
