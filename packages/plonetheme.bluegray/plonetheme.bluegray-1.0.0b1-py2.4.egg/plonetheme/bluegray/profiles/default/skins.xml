<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Bluegray Theme">

 <object name="plonetheme_bluegray_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.bluegray:skins/plonetheme_bluegray_custom_images"/>
 <object name="plonetheme_bluegray_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.bluegray:skins/plonetheme_bluegray_custom_templates"/>
 <object name="plonetheme_bluegray_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.bluegray:skins/plonetheme_bluegray_styles"/>

 <skin-path name="Bluegray Theme" based-on="Plone Default">
  <layer name="plonetheme_bluegray_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_bluegray_custom_templates"
     insert-after="plonetheme_bluegray_custom_images"/>
  <layer name="plonetheme_bluegray_styles"
     insert-after="plonetheme_bluegray_custom_templates"/>
 </skin-path>

</object>
