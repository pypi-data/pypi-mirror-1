#!/usr/bin/env paster

[DEFAULT]
debug = true
email_to = ${author_email|empty}
smtp_server = localhost
error_email_from = paste@localhost

[server:main]
use = egg:Paste#http
host = 0.0.0.0
port = ${port|empty}

[composite:main]
use = egg:Paste#urlmap
/ = ${project}

set debug = false

[app:${project}]
paste.app_factory = ${package}.factory:factory
