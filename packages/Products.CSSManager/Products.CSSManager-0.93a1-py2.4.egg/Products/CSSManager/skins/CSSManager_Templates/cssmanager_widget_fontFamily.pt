<div metal:define-macro="widget" >
 <input type="text" size="30" 
            tal:attributes="id id; 
                                  name id; 
                                  value value;"  />
 <td>
        <select size="1" tal:attributes="id string:${id}_selector; 
                                      onChange string:set_font_family('${id}')">
          <option value="">Choose a font family...</option>
		  <option  value="'Lucida Grande', Verdana, Lucida, Helvetica, Arial, sans-serif">'Lucida Grande', Verdana, Lucida, Helvetica, Arial, sans-serif</option>
		  <option value="Arial, Helvetica, sans-serif">Arial, Helvetica, sans-serif</option>
		  <option value="Verdana, Geneva, sans-serif">Verdana, Geneva, sans-serif</option>
		  <option value="'Times New Roman', Times, serif">'Times New Roman', Times, serif</option>
		  <option value="'Trebuchet MS', Helvetica, sans-serif">'Trebuchet MS', Helvetica, sans-serif</option>
	   </select>
     </td>
  </div>

<div metal:define-macro="global-stuff" >
	<script type="text/javascript">
		function set_font_family(id)
		{
			var selector = document.getElementById(id + '_selector');
			document.getElementById(id).value = selector.value;
			selector.value = '';  // Set it back to "Choose one...".
		}
	</script>
</div>


