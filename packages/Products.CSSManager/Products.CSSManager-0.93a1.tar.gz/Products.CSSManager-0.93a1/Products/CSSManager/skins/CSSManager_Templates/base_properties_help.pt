<?xml version="1.0"?>

<properties>

<property id="plone_skin" name="Theme name" widget="cssmanager_widget_nochange">
	The theme you are customizing
</property>

<property id="logoName" name="Site logo" widget="cssmanager_widget_fileUploadRename">
	Upload a file from your computer to use as the logo for the site
</property>

<property id="fontFamily" name="Main font" widget="cssmanager_widget_fontFamily">
	The preferred font, and the fall-backs if the preferred font is not available in the user's browser
</property>

<property id="fontBaseSize" name="Default text size" widget="cssmanager_widget_text">
	You can specify this as a % value, or in em, or (not recommended) in pixels
</property>

<property id="fontColor" name="Default text color" widget="cssmanager_widget_color">
	The color for text in the content well of the page. Colors can be specified as words or hex values
</property>

<property id="fontSmallSize" name="Small text size" widget="cssmanager_widget_text">
	If you specify this as a % value, it is a % of the default text size (defined above)
</property>

<property id="backgroundColor" name="Page background color" widget="cssmanager_widget_color">
	Note: it is often hard to read text on a strong color
</property>

<property id="linkColor" name="Unvisited link color" widget="cssmanager_widget_color">
	Make sure this looks different from visited links, even to colorblind people	
</property>

<property id="linkActiveColor" name="Active link color" widget="cssmanager_widget_color">
	When you click on a link in text, it will change color to whatever you specify here
</property>

<property id="linkVisitedColor" name="Visited link color" widget="cssmanager_widget_color">
	Make sure this looks different from unvisited links, even to colorblind people
</property>

<property id="borderWidth" name="Default border width" widget="cssmanager_widget_text">
	You can specify this in pixels (e.g., 2px) or em (e.g., 0.25em)
</property>

<property id="borderStyle" name="Default border style" widget="cssmanager_widget_borderStyle">
	Choose a style, or choose &#34;none&#34; to have no borders at all  
</property>

<property id="borderStyleAnnotations" name="Annotation border style" widget="cssmanager_widget_borderStyle">
	For example, the border around comments made in response to a page 
</property>

<property id="globalBorderColor" name="Default border color" widget="cssmanager_widget_color">
</property>

<property id="globalBackgroundColor" name="Secondary background color" widget="cssmanager_widget_color">
	The background color for the footer, portlet headers and global navigation bar
</property>

<property id="globalFontColor" name="Secondary text color" widget="cssmanager_widget_color">
	The color of the text in the footer, portlet headers and global navigation tabs
</property>

<property id="headingFontFamily" name="Heading font" widget="cssmanager_widget_fontFamily">
	The preferred font, and the fall-backs if the preferred font is not available in the user's browser
</property>

<property id="contentViewBorderColor" name="Logged-in tabs border color" widget="cssmanager_widget_color">
	Applies to the tabs (view, edit, etc) that you may see when logged in
</property>

<property id="contentViewBackgroundColor" name="Logged-in tabs background color" widget="cssmanager_widget_color">
	Applies to the tabs (view, edit, etc) that you may see when logged in
</property>

<property id="contentViewFontColor" name="Logged-in tabs text color" widget="cssmanager_widget_color">
	Applies to the tabs (view, edit, etc) that you may see when logged in
</property>

<property id="inputFontColor" name="Color of input text on forms" widget="cssmanager_widget_color">
	When someone types something into a form, the color of the text they enter
</property>

<property id="textTransform" name="Text transformation" widget="cssmanager_widget_textTransform">
	Regardless of how text is entered, it can be transformed to all lower case, all capitals, etc. Applies to text in global navigation tabs among other things.
</property> 

<property id="evenRowBackgroundColor" name="Even row background color" widget="cssmanager_widget_color">
	Even-numbered rows in certain kinds of tables or lists have this background color
</property>

<property id="oddRowBackgroundColor" name="Odd row background color" widget="cssmanager_widget_color">
	Odd-numbered rows in certain kinds of tables or lists have this background color
</property>

<property id="notifyBorderColor" name="Notification border color" widget="cssmanager_widget_color">
	Applies to notification elements like the status message, the calendar focus	
</property>

<property id="notifyBackgroundColor" name="Notification background color" widget="cssmanager_widget_color">
	Applies to notification elements like the status message, the calendar focus
</property>

<property id="discreetColor" name="Discreet text color" widget="cssmanager_widget_color">
	Applies to explanatory information in forms and other items given class &#34;discreet&#34;
</property>

<property id="helpBackgroundColor" name="Information pop-up background color" widget="cssmanager_widget_color">
	Warning: this is not currently used by Plone, although it is available for you to use if you wish
</property>

<property id="portalMinWidth" name="Site minimum width" widget="cssmanager_widget_text">
	When you resize your browser window, how small can it get before a horizontal scroll bar appears? (Note: does not apply in Internet Explorer)
</property>

<property id="columnOneWidth" name="Column One width" widget="cssmanager_widget_text">
	How wide should the left column be?
</property>

<property id="columnTwoWidth" name="Column Two width" widget="cssmanager_widget_text">
	How wide should the right column be?
</property>

</properties>