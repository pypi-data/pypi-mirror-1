<div metal:define-macro="widget">
    <div tal:on-error="nothing"
         tal:define="image python:getattr(context, context.base_properties[id]);
                      newWidth python:200;
                      newHeight python:newWidth * image.height / image.width"
    >
          
        <img tal:replace="structure python:image.tag(height=newHeight, width=newWidth)" /><br />
        <p class="discreet">Thumbnail</p>
        
    </div>
    <td><input type="file" name="newLogo" value="" tal:attributes="name id" /></td>
</div>