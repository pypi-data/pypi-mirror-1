<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
    <head>
        <title>CSS Manager Font Family</title>
<script type="text/javascript">
 var startValue = window.opener.document.css_edit_form.<dtml-var "REQUEST.form.get('col')">.value;
 function fontChanged() {        
        // This is evil. Don't assume things about the caller unless we document an interface somewhere:
        window.opener.document.css_edit_form.<dtml-var "REQUEST.form.get('col')">.value = document.fontForm.component.value;
    }
function cancelButton() {
	    window.opener.document.css_edit_form.<dtml-var "REQUEST.form.get('col')">.value = startValue;
	    window.close()
	}
</script>
<body>
<div id="para">
<p>You are editing the CSS property &ldquo;<span id="boldz"><dtml-var "REQUEST.form.get('col')">&rdquo;</span>.</p> 
</div>


<FORM action="prefs_cssmanager_form" method="post" name="fontForm" onChange="fontChanged();">
   <P>
   <SELECT  size="5" name="component">
      <OPTION selected value="<dtml-var "REQUEST.form.get('nameValuez')">" ><dtml-var "REQUEST.form.get('nameValuez')"></OPTION>
     <OPTION value="'Lucida Grande', Verdana, Lucida, Helvetica, Arial, sans-serif">'Lucida Grande', Verdana, Lucida, Helvetica, Arial, sans-serif</OPTION>
	  <OPTION value="Arial, Helvetica, sans-serif">Arial, Helvetica, sans-serif</OPTION>
      <OPTION value="Verdana, Geneva, sans-serif">Verdana, Geneva, sans-serif</OPTION>
      <OPTION value="'Times New Roman', Times, serif">'Times New Roman', Times, serif</OPTION>
      <OPTION vale="'Trebuchet MS', Helvetica, sans-serif">'Trebuchet MS', Helvetica, sans-serif</OPTION>
   </SELECT>
   <br />
   <INPUT type="submit" value="Ok" onclick="self.close()" >
   <input type="button" value="Cancel" id="btnReset" onclick="javascript:cancelButton()" /> 
   </P>
</FORM>

</body>
</html>