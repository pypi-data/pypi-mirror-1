<span metal:define-macro="widget" >
<input type="text" tal:attributes="name id; value value;" size="30">
              <td>  <table style="border: solid 1px #006;" tal:attributes="name python:'table_'+id">
                    <tr height="15"><td width="15" tal:define="
                        colorMap python:{'white': '#FFFFFF', 'red': '#FF0000',  'black': '#000000',  'silver': '#C0C0C0',  'gray': '#808080',  'maroon': '#800000',  'purple': '#800080',  'fuchsia': '#FF00FF',  'green': '#008000',  'lime': '#00FF00',  'olive': '#808000',  'yellow': '#FFFF00',  'navy': '#000080',  'blue': '#0000FF', 'teal': '#008080',  'aqua': '#00FFFF'};
                        hexColor python:colorMap.get(value.lower(), value)"
                        tal:attributes="style python:'background-color: %s' % hexColor;
                                        name python:id+'_pre';
                                        id python:id+'_pre';">
                        &nbsp;</td>
                        <td>
                        <a tal:attributes="onclick string:window.open('pick_color2?col=${id}&nameValuez=%23' + get_picker_color('${id}'), 'ColorPicker', 'toolbar=no,location=no,status=no,menubar=no,scrollbars=yes,resizable=yes,width=480,height=480')">
                        <img tal:attributes="src string:${here/portal_url}/css_manager_logo.gif" style="cursor:hand; cursor:pointer;"></a>
                        </td>
                    </tr>
                </table></td>
  
</span>