<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Simplicity">

 <object name="plonetheme_simplicity_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.simplicity:skins/plonetheme_simplicity_custom_images"/>
 <object name="plonetheme_simplicity_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.simplicity:skins/plonetheme_simplicity_custom_templates"/>
 <object name="plonetheme_simplicity_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.simplicity:skins/plonetheme_simplicity_styles"/>

 <skin-path name="Simplicity" based-on="Plone Default">
  <layer name="plonetheme_simplicity_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_simplicity_custom_templates"
     insert-after="plonetheme_simplicity_custom_images"/>
  <layer name="plonetheme_simplicity_styles"
     insert-after="plonetheme_simplicity_custom_templates"/>
 </skin-path>

</object>
