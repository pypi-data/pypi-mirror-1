<ul id="portal-siteactions"
    tal:define="accesskeys python: {'sitemap' : '3', 'accessibility' : '0', 'contact' : '9'};"
    tal:condition="view/site_actions"
    i18n:domain="plone">

    <tal:siteactions tal:repeat="saction view/site_actions">
       <li tal:define="css_class python:repeat['saction'].end and 'last' or None"
           tal:attributes="id string:siteaction-${saction/id};
                           class css_class"><a
           href=""
           tal:define="title saction/title;
                       id saction/id;
                       accesskey python: accesskeys.get(id, '');"
           i18n:attributes="title"
           i18n:translate=""
           tal:content="title"
           tal:attributes="href saction/url;
                           title title;
                           accesskey accesskey;"
           >Site action</a></li>
    </tal:siteactions>
</ul>
