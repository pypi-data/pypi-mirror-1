<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="iqpp.plone.commenting">
    <body>

        <metal:main fill-slot="main"
                    tal:define="comment view/getComment">
                    
            <h1 tal:content="object_title" class="documentFirstHeading">
                Title or id
            </h1>

            <div metal:use-macro="here/document_byline/macros/byline">
                Get the byline - contains details about author and modification date.
            </div>

            <p class="documentDescription"
               tal:content="here/Description"
               tal:condition="here/Description">
                Description
            </p>
        
            <form action="."
                  tal:attributes="action context/absolute_url" 
                  method="post">

               <div>
                    <label for="reply_to" 
                           i18n:translate="reply-to-label"> 
                        Comment ID
                    </label>
                    <br />
                    <div tal:content="comment/id" />
                    <br />
               </div>     

                <div>
                     <label for="reply_to" 
                            i18n:translate="reply-to-label"> 
                        Reply To
                    </label>

                    <div i18n:translate="name-description" 
                         class="formHelp"> Reply to comment with id. </div>

                    <input type="text" 
                           name="reply_to" 
                           value="reply_to"
                           tal:attributes="value comment/reply_to" />                           
                </div>

                <div>
                     <label for="member-id" 
                            i18n:translate="member-id-label"> 
                            Member ID
                    </label>
                    <div i18n:translate="name-description" 
                         class="formHelp"> The member, who has add this comment. </div>
                    
                    <input type="text" 
                           name="member_id" 
                           value="member_id"    
                           tal:attributes="value comment/member_id" />
                           
                </div>
                       
               <div>
                     <label for="name" 
                            i18n:translate="name-label"> 
                            Name
                    </label> 

                    <span title='Required' 
                          class='fieldRequired'> (Required) </span> 

                    <div i18n:translate="name-description" 
                         class="formHelp"> Please enter your name. </div>
                 
                    <input type="text" 
                           name="name" 
                           value="name"
                           tal:attributes="value comment/name" />
                           
                </div>
               <div>
                     <label for="email" 
                            i18n:translate="email-label"> 
                            E-mail
                    </label> 

                    <span title='Required' 
                          class='fieldRequired'> (Required) </span> 

                    <div i18n:translate="email-description" 
                         class="formHelp"> Please enter your email. </div>
                 
                    <input type="text" 
                           name="email" 
                           value="email"
                           tal:attributes="value comment/email" /> 
                           
                </div>
                
                <div>
                
                    <label for="subject" 
                           i18n:translate="subject-label"> 
                           Subject
                    </label> 

                    <span title='Required' 
                          class='fieldRequired'> (Required) </span> 

                    <div i18n:translate="subject-description" 
                         class="formHelp"> Please enter your subject. </div>
                 
                    <input type="text" 
                           name="subject" 
                           value="subject"
                           tal:attributes="value comment/subject" /> 
                           
                </div>
                <div>                
                    <label for="message" 
                           i18n:translate="message-label"> 
                           Message
                    </label> 

                    <span title='Required' 
                          class='fieldRequired'> (Required) </span> 

                    <div i18n:translate="message-description" 
                         class="formHelp"> Please enter your message. </div>
                 
                    <textarea name="message"
                              tal:content="comment/message" />
                           
                </div>
               <div>
                    <label for="message" 
                           i18n:translate="review-state-label"> 
                           Review State
                    </label> 

                    <span title='Required' 
                          class='fieldRequired'> (Required) </span> 

                    <div i18n:translate="message-description" 
                         class="formHelp"> Please enter the review state. </div>
                 
                    <select name="review_state">
                        <tal:block tal:repeat="state view/getReviewStates">
                            <option tal:content="state"
                                    tal:attributes="selected python:comment['review_state'] == state" />
                        </tal:block>
                    </select>       
                </div>
               
               <input type="hidden"
                      name="comment_id"
                      tal:attributes="value comment/id" />

                <input type="hidden"
                       name="action" 
                       value="edit" />
                
                <input class="comment-button"
                       type="submit"
                       value="Save" 
                       name="manage_comment:method"
                       i18n:attributes="value label_save;" />
        
            </form>      
        
        </metal:main>    
        
  </body>
</html>