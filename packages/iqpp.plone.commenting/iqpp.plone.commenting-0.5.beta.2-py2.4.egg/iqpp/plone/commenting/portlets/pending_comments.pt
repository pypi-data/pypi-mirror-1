<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="iqpp.plone.rating">
<body>
<div metal:define-macro="portlet"
     tal:define="objects view/pending_comments"
     tal:condition="objects">

    <dl class="portlet" 
        id="portlet-pending-comments">

        <dt class="portletHeader">
            <span class="portletTopLeft"></span>
                <tal:block tal:content="view/Title">
                    Pending Comments
                </tal:block>
            <span class="portletTopRight"></span>
        </dt>

        <tal:newsitems tal:repeat="obj objects">
            <dd tal:define="oddrow repeat/obj/odd;"
                tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">

                <!--                  
                <a href="."
                   tal:attributes="href string:${obj/object_url}/manage_comment_form?comment_id=${obj/comment_id}">
                   <span tal:content="obj/subject">
                       Title
                   </span> 
                </a>    
                -->
                <a href="."
                   tal:attributes="href string:${obj/object_url}/#${obj/comment_id}">
                   <span tal:content="obj/subject">
                       Title
                   </span> 
                </a>    
            
            </dd>
        </tal:newsitems>
    </dl>

</div>
</body>
</html>
