<tal:block i18n:domain="iqpp.plone.commenting"
           tal:condition="view/available">

    <form tal:condition="view/showAddButton"
          action="."
          tal:attributes="action string:${context/absolute_url}/add_comment_form#form"
          method="post">

        <input type="hidden"
               name="action" 
               value="add" />

        <div class="comment-button">
            <input class="standalone"
                   type="submit"
                   value="Add Comment"
                   i18n:attributes="value add_comment_label;" />
        </div>
    </form>
     
    <form tal:condition="not:view/showAddButton"
          action="."
          tal:attributes="action context/absolute_url"
          method="post">

        <input type="hidden"
               name="action" 
               value="add" />

        <div class="comment-button">       
            <input class="standalone commenting-buttons"
                   type="submit"
                   value="Log in to comment"
                   name="login_form:method"               
                   i18n:attributes="value login_to_comment_label;" />
        </div>
    </form> 

</tal:block>