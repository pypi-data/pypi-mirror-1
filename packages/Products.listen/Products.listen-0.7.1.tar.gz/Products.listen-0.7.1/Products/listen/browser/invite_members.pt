<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
  <body>
    <div metal:fill-slot="main">
      <div metal:define-macro="body">

          <script type="text/javascript">
            var viewTab = document.getElementById('contentview-view');
            var membershipTab = document.getElementById('contentview-manage_membership');
            if (viewTab && membershipTab) {
                viewTab.setAttribute('class', 'plain');
                membershipTab.setAttribute('class', 'selected');
            }
          </script>

        <div i18n:domain="listen">

        <div id="listen-actions" class="selfclear">
            <form name="search" method="get"
                  id="search-form"
                  tal:attributes="action string:${context/absolute_url}/search">
              <input type="text" name="search_text"
                     tal:attributes="value request/search_text|nothing" />
              <input class="context" type="submit" name="submit" value="Search" />
            </form>
        </div>

          <h3>Invite members</h3>
          <!-- invite members -->
          <form name="invite-members" id="invite-members" method="post">

            <div class="field">
              <label for="invitees">To:</label>
              (enter e-mail addresses or usernames; use commas or newlines to separate)
              <div>
                <textarea name="add_email" 
                          rows="1"></textarea>
              </div>
            </div> <!-- invitees field -->

            <div class="field">
              <label for="invite-message">Message:</label>
              <div>
                <textarea name="invite-message"
                          rows="10"><span tal:replace="view/user_subscribe_request"/></textarea>
              </div>
            </div>
            <input class="context" type="submit" name="invite" value="Invite"/>
            <a href="manage_membership">Cancel</a>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>


